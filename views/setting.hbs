<div class="container">
  <div class="row justify-content-md-center">
    {{> left-side}}
    <div class="main col-6">
      <div class="home-page font-lg-dark">
        帳戶設定
      </div>
      <div class="hr-line"></div>
      {{!-- /{{user.id}}/setting?_method=PUT --}}
      <form action="/users/{{user.id}}/setting?_method=PUT" method="POST">
        <div class="form-floating mb-3 bg-light">
          <input type="text" class="form-control bg-light border-0" id="account" placeholder="Account" name="account"
            value="{{user.account}}" required>
          <label for="account">帳號</label>
          <hr style="border:1px solid;">
        </div>

        <div class="form-floating mb-3 bg-light">
          <input type="text" class="form-control bg-light border-0" id="name" placeholder="Name" name="name"
            value="{{user.name}}" required>
          <label for="name">名稱</label>
          <hr style="border:1px solid;">
        </div>

        <div class="form-floating mb-3 bg-light">
          <input type="text" class="form-control bg-light border-0" id="email" placeholder="Email" name="email"
            value="{{user.email}}" required>
          <label for="email">Email</label>
          <hr style="border:1px solid;">
        </div>

        <div class="form-floating mb-3 bg-light">
          <input type="password" class="form-control bg-light border-0" id="password" placeholder="請設定密碼"
            name="password" value="" required>
          <label for="password">密碼</label>
          <hr style="border:1px solid;">
        </div>

        <div class="form-floating mb-3 bg-light">
          <input type="password" class="form-control bg-light border-0" id="checkPassword" placeholder="請設定密碼"
            name="checkPassword" value="" required>
          <label for="checkPassword">密碼再確認</label>
          <hr style="border:1px solid;">
        </div>
        <div class="row justify-content-end mx-3">
          <button class="btn btn-primary btn-block rounded-pill border-0" type="submit"
            style="background-color:#FF6600; width: auto;">儲存</button>
        </div>
      </form>

    </div>
    <div class="col"></div>
  </div>
</div>