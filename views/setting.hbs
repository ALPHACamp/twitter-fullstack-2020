{{!-- {{>left}} --}}
<div class="card col-6 main-feed-container">
  <div class="news-feed-input-group">
    <h2 class="news-feed-titl text-start m-3"><strong class='mr-auto'
        style='color: black;font-size: 20px;'>帳戶設定</strong></h2>
  </div>
  <div class="text-center m-4'">
    <form action="/users/{{ user.id }}/setting?_method=PUT" method="POST">
      <div class="form-body border-top">
        <div class="form-group form-floating m-4">
          <input type="text" name="account" id="account" class="form-control font-weight-bold" placeholder="帳號"
            value="{{user.account}}" style="background-color:#F5F8FA; border-bottom: 2px solid #657786;" required
            autofocus>
          <label for="account">帳號</label>
        </div>
        <div class="form-group form-floating m-4">
          <input type="text" name="account" id="name" class="form-control font-weight-bold" placeholder="名稱"
            value="{{user.name}}" style="background-color:#F5F8FA; border-bottom: 2px solid #657786;" required
            autofocus>
          <label for="name">名稱</label>
        </div>
        <div class="form-group form-floating m-4">
          <input type="text" name="Email" id="Email" class="form-control font-weight-bold" placeholder="Email"
            value="{{user.Email}}" style="background-color:#F5F8FA; border-bottom: 2px solid #657786;" required
            autofocus>
          <label for="Email">Email</label>
        </div>
        <div class="form-group form-floating m-4">
          <input type="text" name="password" id="password" class="form-control font-weight-bold" placeholder="請設定密碼"
            value="{{user.password}}" style="background-color:#F5F8FA; border-bottom: 2px solid #657786;" required
            autofocus>
          <label for="password">密碼</label>
        </div>
        <div class="form-group form-floating m-4">
          <input type="text" name="checkPassword" id="checkPassword" class="form-control font-weight-bold"
            placeholder="密碼再確認" value="{{user.checkPassword}}"
            style="background-color:#F5F8FA; border-bottom: 2px solid #657786;" required autofocus>
          <label for="checkPassword">密碼再確認</label>
        </div>
        <div class="mb-4 text-end">
          <button class="btn col-sm-2 m-4" type="submit"
            style='color: white;background-color:#ff6600;margin-left:60px; border-radius: 20px;'>儲存</button>
        </div>
    </form>
  </div>
</div>
