{{!-- {{>left}} --}}
<div class="card col-6 main-feed-container">
  <div class="news-feed-input-group">
    <h2 class="news-feed-titl text-start m-3"><strong class='mr-auto'
        style='color: black;font-size: 20px;'>帳戶設定</strong></h2>
  </div>
  <div class="d-flex justify-content-center">
    <div class="text-center m-4'">
      <form action="/users/{{ id }}/setting?_method=PUT" method="POST">
        <div class="form-body border-top">
          <div class="form-group form-floating m-4">
            <input type="text" name="account" id="account" class="form-control font-weight-bold" placeholder="帳號"
              value="{{account}}" style="background-color:#F5F8FA; border-bottom: 2px solid #657786;" required
              autofocus>
            <label for="account">帳號</label>
          </div>
          <div class="form-group form-floating m-4">
            <input type="text" name="account" id="name" class="form-control font-weight-bold" placeholder="名稱"
              value="{{name}}" style="background-color:#F5F8FA; border-bottom: 2px solid #657786;" required autofocus>
            <label for="name">名稱</label>
          </div>
          <div class="form-group form-floating m-4">
            <input type="text" name="email" id="email" class="form-control font-weight-bold" placeholder="Email"
              value="{{email}}" style="background-color:#F5F8FA; border-bottom: 2px solid #657786;" required autofocus>
            <label for="Email">Email</label>
          </div>
          <div class="form-group form-floating m-4">
            <input type="password" name="password" id="password" class="form-control font-weight-bold"
              placeholder="請設定密碼" value="{{password}}"
              style="background-color:#F5F8FA; border-bottom: 2px solid #657786;" required autofocus>
            <label for="password">密碼</label>
          </div>
          <div class="form-group form-floating m-4">
            <input type="password" name="checkPassword" id="checkPassword" class="form-control font-weight-bold"
              placeholder="密碼再確認" value="{{checkPassword}}"
              style="background-color:#F5F8FA; border-bottom: 2px solid #657786;" required autofocus>
            <label for="checkPassword">密碼確認</label>
          </div>
          <div class="mb-4 text-end">
            <button class="btn col-sm-2 m-4" type="submit"
              style='color: white;background-color:#ff6600;margin-left:60px; border-radius: 20px;'>儲存</button>
          </div>
      </form>
    </div>
  </div>
</div>
