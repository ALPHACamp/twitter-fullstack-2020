<div class="container-fluid " id="tweets">
    <div class="row flex-nowrap justify-content mr-3">
        <div class="col-auto col-lg-3">
            <a class="d-flex ml-5 py-3 pl-4" href="/">
                <i class="fab fa-twitter-square" style="font-size: 2.5em; color: #FF6600;"></i>
            </a>
            <div class="d-flex flex-column align-items-start ml-5 px-3 pt-2 min-vh-100">
                <ul class="nav flex-column nav-pills pr-5" id="menu" style="width: 100%;">
                    <li class="nav-item px-2 py-1">
                        <a class="nav-link align-middle text-dark " href="/tweets">
                            <i class="fas fa-home a-tomato" style="font-size: 1.2em;"></i>
                            <span class="h5 menu-text home a-tomato">首頁</span>
                        </a>
                    </li>
                    <li class="nav-item px-2 py-1">
                        <a class="nav-link align-middle text-dark h-tomato" href="/users/{{user.id}}">
                            <i class="far fa-user" style="font-size: 1.2em;"></i>
                            <span class="h5 menu-text user">個人資料</span>
                        </a>
                    </li>
                    <li class="nav-item px-2 py-1">
                        <a class="nav-link align-middle text-dark h-tomato" href="/setting">
                            <i class="fas fa-cog" style="font-size: 1.2em;"></i>
                            <span class="h5 menu-text setting">設定</span>
                        </a>
                    </li>
                    <li class="nav-item px-2">
                        <button type="button" class="btn btn-tomato rounded-pill mt-3"
                            style="width: 100%; border-radius: 30px 30px 30px 30px;" data-toggle="modal"
                            data-target="#tweetModal" data-bs-toggle="modal">
                            <span class='tweet-btn'>推文</span>
                        </button>
                    </li>
                </ul>
            </div>
        </div>

        <div class="col-6">
            <div class="img mt-5 mb-2">
                <strong>帳戶設定</strong>
            </div>

            <form action="/users/register" method="POST">

                <div class="form-grou" style="height:54px; weight:540px">
                    <label for="account">帳號</label>
                    <input type="text" class="form-control" id="account">
                </div>

                <div class="form-group mt-3" style="height:54px; weight:540px">
                    <label for="name">名稱</label>
                    <input type="text" class="form-control" id="name">
                </div>

                <div class="form-group mt-2" style="height:54px; weight:540px">
                    <label for="email">Email</label>
                    <input type="email" class="form-control" id="email">
                </div>

                <div class="form-group mt-2" style="height:54px; weight:540px">
                    <label for="password">密碼</label>
                    <input type="password" class="form-control" id="password">
                </div>

                <div class="form-group mt-4" style="height:54px; weight:540px">
                    <label for="passwordConfirmed">密碼確認</label>
                    <input type="password" class="form-control" id="passwordConfirmed">
                </div>

                <div class="d-flex justify-content-end">
                    <button class="test btn btn-primary btn-block mt-4 " style="border-radius:30px; width:100px"
                        type="submit">儲存</button>
                </div>
            </form>
        </div>
    </div>


    <div class="d-flex fixed-bottom mb-3 ml-5 px-3">
        <a href="/signout" class="d-flex">
            <i class="fas fa-sign-out-alt" style="color: #000000; font-size: 1.2em;"></i>
            <span class="h5 logout-text">登出</span>
        </a>
    </div>
</div>