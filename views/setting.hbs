<div class="setting-wrapper border-top-0 pt-4"></div>
<div class="header">
  <h4 class="ms-4 mb-4"><span>帳戶設定</span></h4>
</div>




<form class="setting-form p-4" action="/setting?_method=PUT" method="POST">
  <div class="form-floating">
    <input type="account" class="form-control" id="floatingAccount" value="{{user.account}}" name="account" required>
    <label for="floatingAccount">帳號</label>
  </div>
  <div class="form-floating ">
    <input type="name" class="form-control" id="floatingName" value="{{user.name}}" name="name" required>
    <label for="floatingName">名稱</label>
  </div>
  <div class="form-floating ">
    <input type="email" class="form-control" id="floatingEmail" value="{{user.email}}" name="email" required>
    <label for="floatingEmail">Email</label>
  </div>
  <div class="form-floating">
    <input type="password" class="form-control" id="floatingPassword" value="" name="password" required>
    <label for="floatingPassword">密碼</label>
  </div>
  <div class="form-floating ">
    <input type="password" class="form-control" id="floatingConfirmPassword" value="" name="confirmpassword" required>
    <label for="floatingConfirmPassword">密碼再確認</label>
  </div>
  <button type="submit" class="btn btn-primary">儲存</button>
</form>