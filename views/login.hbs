<form class="form-regist m-3" action="{{#if adminLogin}}/admin/signin{{else}}/signin{{/if}}" method="POST" style="width: 100%;">
  <div>
    <img class="logo img-fluid mx-auto d-block"
      src="/images/Icon.svg">
    <h1 class="mt-3 text-center h3 font-weight-normal">{{#if adminLogin}}Alphitter 後台登入{{else}}登入 Alphitter{{/if}}</h1>
  </div>
  <br>
  <div class="col-6 mx-auto">
    {{>message}}
    <div class="form-label-group m-3">
      <input type="text" name="account" class="form-control" placeholder="帳戶" required autofocus>
    </div>
    <div class="form-label-group m-3">
      <input type="password" name="password" class="form-control" placeholder="密碼" required>
    </div>

    <button class="btn btn-block rounded-pill mt-3 btn-orange" type="submit">登入</button>
    <div class="d-flex m-3 justify-content-end">
      {{#if adminLogin}}
        <p><a href="/signin">前台登入</a></p>
      {{else}}
        <p class="mr-1"><a href="/signup">註冊Alphitter</a></p>
        <p class="mr-1">·</p>
        <p><a href="/admin/signin">後台登入</a></p>
      {{/if}}
      
    </div>
  </div>

  <p class="mt-5 mb-3 text-muted text-center">© 2021</p>
</form>