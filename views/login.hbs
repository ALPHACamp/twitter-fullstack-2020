<form class="form-regist m-3" action="{{#if adminLogin}}/admin{{else}}/login{{/if}}" method="POST" style="width: 100%;">
  <div>
    <img class="logo img-fluid mx-auto d-block"
      src="https://uploads-ssl.webflow.com/5d3a7aed4e11722bc1d46f10/5d3e6d42b1eba491c41fc0a9_AC%20nav%20logo.png">
    <h1 class="mt-3 text-center h3 font-weight-normal">{{#if adminLogin}}Simple Twitter 後台登入{{else}}登入 Alphitter{{/if}}</h1>
  </div>
  <br>
  <div class="col-6 mx-auto">
    {{>message}}
    <div class="form-label-group m-3">
      <input type="text" name="email" class="form-control" placeholder="Email" required autofocus>
    </div>
    <div class="form-label-group m-3">
      <input type="password" name="password" class="form-control" placeholder="密碼" required>
    </div>

    <br />
    <button class="btn btn-block rounded-pill mt-3 btn-warning text-dark" type="submit">登入</button>
    <div class="d-flex m-3 justify-content-end">
      {{#if adminLogin}}
        <p><a href="/login">前台登入</a></p>
      {{else}}
        <p class="mr-1"><a href="/regist">註冊Alphitter</a></p>
        <p class="mr-1">·</p>
        <p><a href="/admin">後台登入</a></p>
      {{/if}}
      
    </div>
  </div>

  <p class="mt-5 mb-3 text-muted text-center">© 2021</p>
</form>