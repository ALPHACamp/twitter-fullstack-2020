<div class="container-fluid m-0">
  <div class="row">
    {{!-- 左側 --}}
    {{>leftColumnUser}}
    <div class="col-3 border m-0 p-0 d-flex flex-column flex-nowrap">
      {{!-- title --}}
      <div class="title py-2 px-3 border-bottom font-weight-bold" style="width: 100%;">上線使用者()</div>
      {{!-- 使用者清單 --}}
      <div class="user border-bottom d-flex flex-nowrap align-items-center p-2" style="width: 100%;">
        <img class="rounded-circle" style="object-fit: cover;"
          src="https://s3.amazonaws.com/uifaces/faces/twitter/Shriiiiimp/128.jpg" alt="avatar" width="60px;">
        <div class="ml-2"><span class="font-weight-bold">Apple</span><span class="text-muted ml-1">@apple</span></div>
      </div>
    </div>
    <div class="col-6 m-0 p-0 d-flex flex-column flex-nowrap">
      <div class="title py-2 px-3 border-bottom font-weight-bold" style="width: 100%;">公開聊天室</div>
      {{!-- 聊天區塊 --}}
      <div class="chat border">
        <ul class="message-list" id="message-list">

        </ul>
        <form action="" class="p-1">
          <div class="row m-0">
            <div class="col-10 p-0 mr-1">
              <input type="text" id="message" name="message" autocomplete="off" class="form-control rounded-pill"
                placeholder="輸入訊息..." aria-label="message" style="background-color:#c5c0c0; width:100%">
            </div>
            <div class="col-auto p-0">
              <button id="send-message" type="submit" class="btn btn-warning rounded-pill mx-auto">傳送</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>