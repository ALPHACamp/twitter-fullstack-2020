{{> left-sidebar }}
<div class="setting-container">
  <div class="header">
    <h4>帳戶設定</h4>
  </div>
  <div class=" d-flex justify-content">
    <form action="/users/{{user.id}}/account?_method=PUT" method="POST">
      {{!-- 帳號 --}}
      <div class="form-group form-floating m-4">
        <input type="text" name="account" id="account" class="form-control" placeholder="請輸入帳號" value="{{user.account}}"
          style="background-color:#F5F8FA; border-bottom:2px solid #657786; width:593px; height:54px" required>
        <label for="account" style="color:#696974">帳號</label>
      </div>
      {{!-- 名稱 --}}
      <div class="form-group form-floating m-4">
        <input type="text" name="name" id="name" class="form-control" placeholder="請輸入使用者名稱" value="{{user.name}}"
          style="background-color:#F5F8FA; border-bottom:2px solid #657786; width:593px; height:54px" required>
        <label for="name" style="color:#696974">名稱</label>
      </div>
      {{!-- Email --}}
      <div class="form-group form-floating m-4">
        <input type="email" name="email" id="email" class="form-control" placeholder="請輸入 Email" value="{{user.email}}"
          style="background-color:#F5F8FA; border-bottom:2px solid #657786; width:593px; height:54px" required>
        <label for="email" style="color:#696974">Email</label>
      </div>
      {{!-- 密碼 --}}
      <div class="form-group form-floating m-4">
        <input type="password" name="password" id="password" class="form-control" placeholder="請設定密碼"
          style="background-color:#F5F8FA; border-bottom:2px solid #657786; width:593px; height:54px" required>
        <label for="password" style="color: #696974">密碼</label>
      </div>
      {{!-- 密碼確認 --}}
      <div class="form-group form-floating m-4">
        <input type="password" name="checkPassword" id="checkPassword" class="form-control" placeholder="請再次輸入密碼"
          style="background-color:#F5F8FA; border-bottom:2px solid #657786; width:593px; height:54px" required>
        <label for="password" style="color: #696974">密碼確認</label>
      </div>
      {{!-- 儲存 button --}}
      <div class="me-3 text-end">
        <button class="btn col-2 m-2" type="submit"
          style="color:white; background-color:#FF6600; font-size: 20px; border-radius:50px; width:88px; height:46px">
          儲存
        </button>
      </div>
    </form>
  </div>
</div>
<div class="space-box"></div>
