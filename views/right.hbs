<div class="row">

  <div class="col-3">
    {{!-- left --}}
  </div>

  <div class="col-6">
    {{!-- middle --}}
  </div>

{{!-- 推薦跟隨 --}}
  <div class="col-3" style="background-color:#FAFAFB; border-radius:16px; margin:16px 80px auto auto;">

    <div style="font-size: 26px; font-weight: bold; margin: 24px auto auto 24px; height: 48px;">推薦跟隨</div>
    <hr style="width:100%; background-color:#E6ECF0;">
    <ul class="list-group-flush">

      {{#each users}}
        <li class="list-group-item bg-light mt-2" style="border-bottom: none">
          <div class="row justify-content-around align-items-center">
            <div class="col-2 d-flex justify-content-center align-items-center" style="padding-left: 20px;">
              <a href="/users/{{this.id}}/tweets">
                <img src="{{this.avatar}}"
                  alt="user-avatar" width="50" height="50" class="rounded-circle">
              </a>
            </div>

            <div class="col-6 pt-3 d-flex flex-column align-items-start">
              <h5 style="line-height: 18px; width:inherit;">{{this.name}}</h5>
              <p class="text-muted" style="line-height: 16px; width:inherit;">@{{this.account}}</p>
            </div>
            {{!-- 追蹤鈕 --}}
            <div class="col-4 d-flex justify-content-center">

              {{#if this.isFollowed}}
                <form action="/followships/{{this.id}}?_method=DELETE" method="POST" style="display: contents;">
                  <button type="submit" class="btn btn-primary" style="font-size: 15px; border-radius: 50px; background-color: #FF6600; border:none;" >正在跟隨</button>
                </form>
              {{else}}
                <form action="/followships/{{this.id}}" method="POST" style="display: contents;">
                  <button type="submit" class="btn btn-outline-light btn-block" style="weight:64px;height:40px; font-size: 15px; border-radius: 50px;font-weight: bold; border-color: #FF6600;"><font color="#FF6600">跟隨</font></button>
                </form>
              {{/if}}
            </div>

          </div>
        </li>
      {{/each}}
    </ul>
  </div>
{{!-- 推薦跟隨 --}}
</div>