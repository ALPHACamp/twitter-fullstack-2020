<div class="row">
  <div class="col-3"></div>
  <div class="col-5">
    <div class="row justify-content-center" id="tweet-detail" style="border: 1px solid black;">
      <div class="col-auto" id="person-img">
        <img style="width: 50px;height:50px" src="{{tweet.User.avatar}}" alt="pic">
      </div>
      <div class="col" id="person-indo">
        <div class="row">
          <div class="col-12">{{tweet.User.name}}</div>
          <div class="col-12">{{tweet.User.account}}</div>
        </div>
      </div>
      <p>
        {{tweet.description}}
      </p>
      <small class="mr-auto">
        {{tweet.createdAt}}
      </small>
    </div>
    <button class="btn btn-primary" data-toggle="modal" data-target="#replyTweet">留言</button>
    <a href="" class="btn btn-outline-danger">Like</a>

    <div class="row" id="reply-list">
      {{#each replies}}
      <div class="row w-100" style="border: 1px solid grey;">
        <div class="col-1">
          <img src="{{this.User.avatar}}" alt="" style="width: 50px;height:50px">
        </div>
        <div class="col-11">
          <div class="row">
            <div class="col">{{this.User.name}} <small class="ml-3">{{this.User.account}}</small></div>
            {{#ifEqual this.User.id ../currentUserId}}
            <form action="/tweets/{{this.id}}?_method=DELETE" method="post" class=" ml-auto">
              <button class="btn btn-outline-danger pull-right" type="submit">&times;</button>
            </form>
            {{/ifEqual}}
          </div>
          <div class="col-12">回覆{{../tweet.User.account}}</div>
          <div class="col-12">{{this.comment}}</div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
  <div class="col-4"></div>
</div>


<!-- Modal -->
<div class="modal fade" id="replyTweet" tabindex="-1" role="dialog" aria-labelledby="replyTweet" aria-hidden="true">
  <form action="/tweets/{{tweet.id}}/reply" method="post">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="replyTweetLabel">回覆</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <div class="row justify-content-center" id="tweet-detail">
            <div class="col-auto" id="person-img">
              <img style="width: 50px;height:50px" src="{{tweet.User.avatar}}" alt="pic">
            </div>
            <div class="col" id="person-indo">
              <div class="row">
                <div class="col-12">{{tweet.User.name}}</div>
                <div class="col-12">{{tweet.User.account}}</div>
              </div>
            </div>
            <p>
              {{tweet.description}}
            </p>
            <small class="mr-auto">
              回覆給 {{tweet.User.account}}
            </small>
          </div>
          <hr>
          <div class="row w-100">
            <textarea name="reply" id="" cols="30" rows="10">回覆的內容</textarea>
          </div>
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-primary">回覆</button>
        </div>
      </div>
    </div>
  </form>
</div>