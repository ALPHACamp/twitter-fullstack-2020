<!--left bar-->
<div class="container d-flex">
  <div class="col-2 nav">
    {{> nav userPage=repiles}}
  </div>

  <!--middle bar-->
  <div class="col-7 user-profile">
    <div class="tweets-container"
      style="width: 639px;height:100%;border-right:1px solid #C4C4C4; border-left:1px solid #C4C4C4;">
      <!--head-->
      <div class="card-header col-12 row m-0" style="max-height: 55px;">
        <a href="javascript:history.back()" style="color: #000000; text-decoration: none;"
          class="col-auto d-flex align-items-center">
          <i class="fas fa-arrow-left" style="font-size: 1.8em;"></i>
        </a>
        <a href="/users/{{users.id}}/tweets"
          class="col-auto d-flex flex-column align-items-start justify-content-center link-dark"
          style="text-decoration: none;">
          <span class="h5"
            style="line-height: 15px; color: #000000; font-size: 19px; font-weight: 700;">{{users.name}}</span>
          <span style="color: #657786; font-size: 13px; line-height: 15px;">{{user.Tweets.length}}推文</span>
        </a>
      </div>

      <!--cover & avatar & Edit button-->
      <div class="card-body col-12 m-0 p-0 position-relative">
        <div class="bg-holder" style="height: 280px;">
          <img src="{{#if users.cover}}{{users.cover}}{{else}}https://loremflickr.com/800/550/landscape{{/if}}"
            class="card-img-top" alt="..." class="img-fluid" id="bgImage"
            style="height:100%;width:100%;object-fit:cover">
        </div>

        <img src="{{#if users.avatar}}{{users.avatar}}{{else}}https://loremflickr.com/800/550/landscape{{/if}}"
          class="rounded-circle" alt="user_Aavtor" height="130px" width="130px"
          style="border: 2px solid white; position: absolute; object-fit: cover; top: 63%; left: 3%;">

        <div class="card-body col-12 d-flex justify-content-end">
          <button type="submit" class="btn user-edit-button" data-bs-toggle="modal" data-bs-target="#editModal"
            style="background: #FFFFFF; border-radius: 100px; border:1px solid #FF6600;">
            <span style="color: #FF6600;">編輯個人資料</span></button>
        </div>
      </div>

      <!--profile-->
      <div class="card-body col-12">
        <div class="card-text ps-2">
          <h4 style="font-weight: 900; line-height: 18px">{{users.name}}</h4>
          <span class="text-muted" style="font-size: 0.93em; line-height: 18px;">@{{users.account}}</span>
          <p class="my-2" style="font-size: 0.96em; line-height: 25px">{{#if
            users.introduction}}{{users.introduction}}{{else}}Lorem example text example text for AC simple twitter
            project practice{{/if}}</p>
          <a href="/users/1{{users.id}}/followers" style="text-decoration:none;">
            <span class="fw-bold text-dark">{{user.Followers.length}}</span><span
              class="text-muted text-dark me-3">跟隨中</span>
          </a>
          <a href="/users/1{{users.id}}/followings" style="text-decoration:none;">
            <span class="fw-bold text-dark">{{user.Followings.length}}</span><span class="text-muted">跟隨者</span>
          </a>
        </div>
      </div>

      <!--profile nav-->
      <div class="profile-head col-12">
      <nav>
        <div class="nav nav-tabs " id="nav-tab" role="tablist">
          <a class="nav-link active" id="nav-home-tab" data-toggle="tab" href="/users/{{user.id}}"
            style="color: #657786; border: none;" role="tab" aria-controls="nav-home" aria-selected="true">推文 </a>
          <a class="nav-link" id="nav-profile-tab" data-toggle="tab" href="/reply/{{user.id}}"
            style="color: #FF6600; border: none; border-bottom: 1px solid #ff6600;"
            role="tab" aria-controls="nav-profile" aria-selected="false">回覆</a>
          <a class="nav-link" id="nav-contact-tab" data-toggle="tab" href="/likes/{{user.id}} "
            style="color: #657786; border: none;" role="tab" aria-controls="nav-contact"
            aria-selected="false">喜歡的內容</a>
        </div>
      </nav>
      </div>

      <!--tweet reply likeContent-->
      <div class="tweets-container">
        <!-- reply likeContent-->
        {{#each repiles }} 
        <div class="tweets d-flex mt-3" style="border-bottom: 1px solid #C4C4C4;">
          <div class="avatar ps-3">
            <a href="/users/{{this.Tweet.User.id}}" style="text-decoration:none;">
              <img src="{{this.Tweet.User.avatar}}" class="rounded-circle me-3"
                style="width: 50px;height: 50px;background: #C4C4C4;">
            </a>
          </div>
          <div class="tweet-content">
            <div class="name">
              <span style="font-size: 16px;font-weight:700;">{{this.Tweet.User.name}}</span>
              <span
                style="font-size: 14px;color:#C4C4C4">@{{this.Tweet.User.account}}．{{relativeTimeFromNow this.createdAt}}</span>
            </div>
            <div class="reply-to mt-3">
              <p style="color: #657786;">回覆給<strong style="color:#FF6600;">@{{this.Tweet.User.name}}</strong></p>
            </div>
            <div class="content mt-3 mb-3">
              {{this.Tweet.description}}
            </div>
          </div>
        </div>
        {{/each}} 
      </div>

      <!--Edit modal-->
      <div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <!--修改的PUT先寫來放-->
            <form action="/users/{{user.id}}/edit?_method=PUT" method="post" enctype="multipart/form-data">
              <div class="modal-header">
                <div class="d-flex align-items-center">
                  <button type="button" class="btn" data-bs-dismiss="modal" aria-label="Close" style="color: #FF6600;">
                    <i class="fas fa-times"></i>
                  </button>
                  <span class="modal-title h5 fw-bold ps-3" id="ModalLabel">編輯個人資料</span>
                </div>
                <button type="submit" class="badge btn rounded-pill" style="font-size:1.0rem; background: #FF6600;">
                  <span style="color: #FFFFFF;">儲存</span>
                </button>
              </div>
      
              <div class="modal-body row">
                <div class="col-12 m-0 p-0 position-relative mb-5">
                  <div class="bg-holder" style="height: 170px;">
                    <img src="{{#if users.cover}}{{users.cover}}{{else}}https://loremflickr.com/800/550/landscape{{/if}}"
                      class="card-img-top" alt="..." class="img-fluid" id="bgImage"
                      style="height:100%;width:100%;object-fit:cover">
                  </div>
                  <label for="cover" class="btn cover-uploader">
                    <input class="d-none" type="file" id="cover" name="cover" accept="image/*">
                    <i class="fas fa-came" style="font-size: 1.5em; color: white"></i>
                  </label>
                  <div class="avatar-holder">
                    <img src="{{#if users.avatar}}{{users.avatar}}{{else}}https://loremflickr.com/300/300/avator{{/if}}"
                      class="rounded-circle" alt="user_Aavtor" height="140px" width="140px"
                      style="border: 2px solid white; position: absolute; object-fit: cover; top: 40%; left: 3%;">
                  </div>
                  <label for="avatar" class="btn avator-uploader">
                    <input class="d-none" type="file" id="avatar" name="avatar" accept="image/*">
                    <i class="fas fa-camera" style="color: white;"></i>
                  </label>
                </div>
                <div class="col-12" style="background-color:#f4f8fb;">
                  <label for="name" style="margin-bottom: -30px; margin-left: 8px; font-size: 0.8em">名稱</label>
                  <input type="text" class="form-control" id="name" name="name" maxlength="50"
                    style="border:none; border-bottom:1px solid rgb(75, 82, 85); outline: none; background-color:#f4f8fb; font-size:0.8em"
                    aria-describedby="nameHelp" value="{{users.name}}" />
                  <p class="text-end text-muted now1" style="font-size: 0.8em;">0/50</p>
                </div>
                <div class="col-12 mb-3 mt-4" style="background-color:#f4f8fb;">
                  <label for="introduction" style="margin-left: 8px; font-size: 0.8em;">自我介紹</label>
                  <textarea class="form-control" id="introduction" name="introduction"
                    style="border:none; border-bottom:1px solid rgb(75, 82, 85); outline: none; background-color:#f4f8fb; font-size:0.8em;"
                    maxlength="160"
                    aria-describedby="descriptionHelp">{{users.introduction}}.</textarea>
                  <p class="text-end text-muted now2" style="font-size: 0.8em;">0/160</p>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>

    </div>
  </div>

  <!--right bar-->
  <div class="col-3 followship">
    {{> followship}}
  </div>
</div>