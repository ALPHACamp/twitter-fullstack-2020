<div class="container-fluid">
  <div class="row">
    <div class="col-2">
      {{> navigationBar}}
    </div>
    <div class="col-7">
      {{!-- 分頁列 --}}
      <ul class="nav nav-tabs">
        <li class="nav-item">
          <a class="nav-link custom-tab {{#isEqual pathName 'tweets'}}custom-tab-active{{/isEqual}}"
            href="/users/{{ userId }}/tweets">推文</a>
        </li>
        <li class="nav-item">
          <a class="nav-link custom-tab {{#isEqual pathName 'replies'}}custom-tab-active{{/isEqual}}"
            href="/users/{{ userId }}/replies">推文與回覆</a>
        </li>
        <li class="nav-item">
          <a class="nav-link custom-tab {{#isEqual pathName 'likes'}}custom-tab-active{{/isEqual}}"
            href="/users/{{ userId }}/likes">喜歡的內容</a>
        </li>
      </ul>
      {{!-- tweets --}}
      {{#isEqual pathName 'tweets'}}
      <div class="mt-3">
        {{#each tweets}}
        {{> tweetList isUserPage=../isUserPage}}
        {{/each}}
      </div>
      {{/isEqual}}

      {{!-- replies --}}
      {{#isEqual pathName 'replies'}}
      <h3>未設計畫面</h3>
      {{/isEqual}}

      {{!-- likesTweets --}}
      {{#isEqual pathName 'likes'}}
      <div class="mt-3">
        {{#each tweets}}
        {{> tweetList isUserPage=../isUserPage}}
        {{/each}}
      </div>
      {{/isEqual}}

    </div>
    <div class="col-3">
      {{> topUser}}
    </div>
  </div>
</div>