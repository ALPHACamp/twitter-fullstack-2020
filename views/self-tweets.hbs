{{> left-sidebar }}

<div class="user-main">
  {{> user-self-info }}
  {{> user-self-tab }}
  <div class="user-tweets">
    {{#each tweet}}
    <div class="user-tweet">
      <div class="admin-tweet-left">
        <img class="rounded-circle" src="/images/acIcon.png" alt="avatar" title="avatar" width="50px" height="50px">
      </div>
      <div class="admin-tweet-right">
        <div class="admin-tweet-right-up">
          <span class="name">{{this.userName}}</span>
          <span class="account">&nbsp;{{this.account}}<b> â€¢</b>&nbsp;{{relativeTimeFromNow this.createdAt}}</span>
        </div>
        <p class="user-content">{{this.description}}</p>
        <div class="d-flex">
          <div class="replies">
            <img src="/images/replyIcon.png" alt="">
            {{this.repliesCount}}
          </div>
          <div class="likes">
            <img src="/images/likeIcon.png" alt="">
            {{this.likesCount}}
          </div>
        </div>
      </div>

    </div>
    {{/each}}
  </div>
</div>

