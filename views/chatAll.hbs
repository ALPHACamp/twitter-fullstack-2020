<h5 id="chat-user-id" style="display: none;">{{user.id}}</h5>
<h5 id="chat-user-name" style="display: none;">{{user.name}}</h5>
<h5 id="chat-user-avatar" style="display: none;">{{user.avatar}}</h5>

<div class="col-4   sticky-top">
  <div id="online-user-list" class="sticky-top">
    <p class="fw-bolder border-bottom p-1 m-0">上線使用者 (5)</p>
    {{!-- 上線使用者區 --}}
  </div>
</div>
<div class="col-8 border-start border-end d-flex flex-column">
  <p class="fw-bolder border-bottom p-1 m-0 sticky-top" style="background-color:white">公開聊天室</p>
  <div id="messages">
    <div id="record" class="flex-fill d-flex flex-column justify-content-end">
      {{!-- 歷史對話記錄 --}}
    </div>
    <div id="broadcast">
      {{!-- 即時對話紀錄 --}}
    </div>
  </div>
  <div id="message-box" class="border-top">
    <form id="form" action="">
      <input id="input" type="text" autocomplete="off">
      <button type="submit">
        <svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 0 24 24" width="24px" fill="#000000">
          <path
            d="M4.01 6.03l7.51 3.22-7.52-1 .01-2.22m7.5 8.72L4 17.97v-2.22l7.51-1M2.01 3L2 10l15 2-15 2 .01 7L23 12 2.01 3z" />
        </svg>
      </button>
    </form>
  </div>
</div>
<script src="/socket.io/socket.io.js"></script>
<script src="/javascripts/chatAll.js"></script>