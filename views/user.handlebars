{{> nav}}
<div class="flex-column" style="min-width: 600px; border: 1px solid #E6ECF0">
  {{> message}}

  <div class="d-flex header" style="height: 55px;">
    <div class="mt-2 ml-3" style="margin-right: 43px;">
      <a href="javascript:history.back()" style="text-decoration: none; color: black">
        <i class="fas fa-arrow-left"></i>
      </a>
    </div>

    <div class="d-flex flex-column">
      <span style="font-weight: 900; font-size: 19px; color: #1C1C1C;">{{tweets.1.userName}}</span>
      <span style="font-weight: 500; font-size: 13px; color: #657786;">{{tweets.1.TweetsCount}} 推文</span>
    </div>

  </div>

  <hr class="m-0">

  <div class="user-info" style="height: 375px; position: relative;">
    <div class="cover-photo" style="height: 200px;">
      <img src="{{tweets.1.userCover}}" style="object-fit: cover;width: 100%; height: 100%" alt="...">
    </div>

    <div class="photo">
      <img src="{{tweets.1.userAvatar}}"
        style="width: 140px; height: 140px; border: 4px solid #FFFFFF; border-radius: 50%; position: absolute; top: 124px; left: 14px"
        alt="">
    </div>

    <div class="text-right" style="margin-top: 10px; margin-right: 15px">
      {{#ifCond tweets.1.userId user.id}}
      <button type="submit" class="btn" data-toggle="modal" data-target="#exampleModal"
        style="border: 1px solid #FF6600; border-radius: 100px; color: #FF6600; width: 120px; height: 40px; font-weight: bold; font-size: 15px; line-height: 15px;">編輯個人資料</button>
      {{else}}
      {{#if isFollowed}}
      <form class="" action="/followships/{{tweets.1.userId}}?_method=DELETE" method="POST">

        <button type="submit" class="btn"
          style="background: #FF6600; border-radius: 100px; color: white; width: 120px; height: 40px; font-weight: bold; font-size: 15px; line-height: 15px;">正在跟隨</button>

      </form>
      {{else}}
      <form action="/followships/" method="POST">
        <input type="hidden" name="id" value="{{tweets.1.userId}}">
        <button type="submit" class="btn"
          style="border: 1px solid #FF6600; border-radius: 100px; color: #FF6600; width: 120px; font-weight: bold; height: 40px; font-size: 15px; line-height: 15px;">跟隨</button>
      </form>
      {{/if}}
      {{/ifCond}}
    </div>

    <div class="d-flex flex-column" style="margin-top: 19px; margin-left: 15px">
      <span style="font-weight: 900; font-size: 19px; color: #1C1C1C;">{{tweets.1.userName}}</span>
      <span style="font-weight: 500; font-size: 15px; color: #657786;">{{tweets.1.userAccount}}</span>
    </div>

    <div style="margin-top: 10px; margin-left: 15px;">
      <span>{{tweets.1.userIntroduction}}</span>
    </div>

    <div class="d-flex" style="margin-top: 10px; margin-left: 15px; font-weight: 500;font-size: 14px;">
      <div>
        <a href="/users/{{tweets.1.userId}}/followings" style="text-decoration: none;">
          <span style="color: #1C1C1C">{{tweets.1.FollowingCount}}</span> <span style="color: #657786;">個跟隨中</span>
        </a>
      </div>
      <div style="margin-left: 20px;">
        <a href="/users/{{tweets.1.userId}}/followers" style="text-decoration: none;">
          <span style="color: #1C1C1C">{{tweets.1.FollowerCount}}</span> <span style="color: #657786;">位跟隨者</span>
        </a>
      </div>
    </div>
  </div>

  <div class="tabs d-flex"
    style="height: 54px; margin-left: 51px; margin-top: 36px;font-weight: bold; font-size: 15px; color: #657786;">
    <div>
      <a class="p-0 nav-link active" href="/users/{{tweets.1.userId}}/tweets">推文</a>
    </div>

    <div style="margin-right: 55px; margin-left: 77px;">
      <a class="p-0 nav-link" href="/users/{{tweets.1.userId}}/replies">推文與回覆</a>
    </div>

    <div>
      <a class="p-0 nav-link" href="/users/{{tweets.1.userId}}/likes">喜歡的內容</a>
    </div>
  </div>

  <div class="" style="max-height: 680px; overflow: auto; overflow-x: hidden;">
    {{#each tweets}}
    <div class="card" style="min-height: 136px;border-radius: 0; border: 1px solid #E6ECF0">
      <div class="row no-gutters">

        <div class="col-md-1 ml-3" style="margin-top: 10px; margin-right: 10px">
          <img src="{{this.userAvatar}}" alt="..." style="width: 50px;
          height: 50px; border-radius: 50%">
        </div>

        <div class="col-md" style="margin-top: 10px;">
          <a href="/tweets/{{this.id}}/replies" style="text-decoration: none;color: black">
            <div class="card-body p-0" style="width: 507px">
              <div class="card-text">
                <span style="color: #1C1C1C">{{this.userName}}</span>
                <span style="color: #657786;">{{this.userAccount}} ‧ {{moment_fromNow this.createdAt}}</span>
                {{!-- --}}
                <p>{{this.description}}</p>
              </div>
            </div>
          </a>

          <div class="row">
            <button class="ml-2" type="submit" style="border: none; background: none;" data-toggle="modal"
              data-target="#reply{{this.id}}">
              <i class="far fa-comment"></i>
              <span>{{this.totalReplies}}</span>
            </button>

            {{#if this.isLiked}}
            <form action="/tweets/{{this.id}}/unlike" method="POST">
              <button type="submit" style="border: none; background: none;">
                <i class="fas fa-heart" style="color: red;"></i>
                <span>{{this.totalLikes}}</span>
              </button>
            </form>
            {{else}}
            <form action="/tweets/{{this.id}}/like" method="POST">
              <button type="submit" style="border: none; background: none;">
                <i class="far fa-heart" style="color: red;"></i>
                <span>{{this.totalLikes}}</span>
              </button>
            </form>
            {{/if}}
          </div>

        </div>

      </div>
    </div>
    {{/each}}
  </div>

</div>
<!--icon-->

<!--================= 跟隨 ================= -->
{{> follower}}


<!--Modal--->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header d-flex justify-content-between">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">X</button>
        <h5 class="modal-title" id="exampleModalLabel">編輯個人資料</h5>
        <form action="/users/{{user.id}}/edit" method="POST" enctype="multipart/form-data">
          <button type="submit" class="btn btn-primary">儲存</button>
      </div>
      <div class="modal-body">
        <div class="card" style="width: 18rem;">
          <img class="card-img-top" src="{{user.cover}}" alt="Card image cap">
          <input type="file" name="cover"> cover
        </div>
        <div class="card" style="width: 18rem;">
          <img class="card-img-top" src="{{user.avatar}}" alt="Card image cap">
          <input type="file" name="avatar"> avatar
        </div>
        <div class="form-group">
          <label for="recipient-name" class="col-form-label">名稱:</label>
          <input type="text" class="form-control" id="recipient-name" name="name" value="{{user.name}}">
        </div>
        <div class="form-group">
          <label for="message-text" class="col-form-label">自我介紹:</label>
          <textarea class="form-control" id="message-text" name="introduction"></textarea>
        </div>
        </form>
      </div>
    </div>
  </div>
</div>

<!--================= 側邊欄推文 Modal ================= -->
<div class="modal fade" id="postTweet" tabindex="-1" aria-labelledby="postTweetModalLabel" aria-hidden="true">
  <form action="/tweets" method="post">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>

        <div class="modal-body">
          <div class="row no-gutters">
            <div class="col-md-1 mr-2">
              <img src="{{user.avatar}}" style="width: 50px;
              height: 50px; border-radius: 50%" alt="">
            </div>

            <div class="col-md ml-2">
              <textarea name="description" placeholder="有什麼新鮮事..."
                style="width: 380px;height: 80px; overflow-y: hidden; resize: none; outline: none; wrap:off; border-color: transparent;"></textarea>
              <div class="card-text text-right">
                <button class="btn" style="background: #FF6600;
                border-radius: 100px; color: white" type="submit">推文</button>
              </div>
            </div>
          </div>
        </div>

      </div>
    </div>
  </form>
</div>

<!--================= 回覆 Modal ================= -->
{{#each tweets}}
<div class="modal fade" id="reply{{this.id}}" tabindex="-1" aria-labelledby="postTweetModalLabel" aria-hidden="true">
  <form action="/tweets/{{this.id}}/replies" method="post">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <div class="modal-title">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
        </div>

        <div class="modal-body">
          <div class="card" style="border-color:transparent;">
            <div class="row no-gutters">

              <div class="col-md-1 mr-2">
                <img src="{{this.userAvatar}}" style="width: 50px;
                height: 50px; border-radius: 50%" alt="">
              </div>

              <div class="col-md ml-2" style="width: 409px;">

                <span style="font-size: 15px; color: #1C1C1C">{{this.userName}}</span>
                <span style="font-size: 15px; color: #657786;">{{this.userAccount}} ‧ {{moment_fromNow
                  this.createdAt}}</span>

                <p>{{this.description}}</p>
                <p style="font-size: 13px;">回覆給 {{this.userAccount}}</p>
              </div>
            </div>


            {{!-- 使用者個人圖片 --}}
            <div class="row no-gutters">
              <div class="col-md-1 mr-2">
                <img src="{{../user.avatar}}" style="width: 50px;
                height: 50px; border-radius: 50%" alt="">
              </div>

              <div class="col-md ml-2">
                <textarea name="comment" placeholder="有什麼新鮮事..."
                  style="width: 409px;height: 80px; overflow-y: hidden; resize: none; outline: none; wrap:off; border-color: transparent;"></textarea>
                <div class="card-text text-right">
                  <button class="btn" style="background: #FF6600;
                  border-radius: 100px; color: white" type="submit">回覆</button>
                </div>
              </div>
            </div>

          </div>
        </div>

      </div>
    </div>
  </form>
</div>
{{/each}}