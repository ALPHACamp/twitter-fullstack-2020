<!--================= 側邊欄推文 Modal ================= -->
<div class="modal fade" id="postTweet" tabindex="-1" aria-labelledby="postTweetModalLabel" aria-hidden="true">
  <form action="/tweets" method="post">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <div class="modal-title">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
        </div>

        <div class="modal-body">
          <div class="row no-gutters">
            <div class="col-md-1 mr-2">
              <img src="{{user.avatar}}" style="width: 50px;
              height: 50px; border-radius: 50%" alt="">
            </div>

            <div class="col-md ml-2">
              <textarea name="description" placeholder="有什麼新鮮事..."
                style="width: 380px;height: 80px; overflow-y: hidden; resize: none; outline: none; wrap:off; border-color: transparent;"></textarea>
              <div class="card-text text-right">
                <button class="btn" style="background: #FF6600;
                border-radius: 100px; color: white" type="submit">推文</button>
              </div>
            </div>
          </div>
        </div>

      </div>
    </div>
  </form>
</div>

<!--================= 回覆 Modal ================= -->
{{#each userView.Tweets}}
<div class="modal fade" id="reply{{this.id}}" tabindex="-1" aria-labelledby="postTweetModalLabel" aria-hidden="true">
  <form action="/tweets/{{this.id}}/replies" method="post">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <div class="modal-title">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
        </div>

        <div class="modal-body">
          <div class="card" style="border-color:transparent;">
            <div class="row no-gutters">

              <div class="col-md-1 mr-2">
                <img src="{{../userView.avatar}}" style="width: 50px;
                height: 50px; border-radius: 50%" alt="">
              </div>

              <div class="col-md ml-2" style="width: 409px;">

                <span style="font-size: 15px; color: #1C1C1C">{{../userView.name}}</span>
                <span style="font-size: 15px; color: #657786;">{{../userView.account}} ‧ {{moment_fromNow
                  this.createdAt}}</span>

                <p>{{this.description}}</p>
                <p style="font-size: 13px;">回覆給 {{../userView.account}}</p>
              </div>
            </div>


            {{!-- 使用者個人圖片 --}}
            <div class="row no-gutters">
              <div class="col-md-1 mr-2">
                <img src="{{../user.avatar}}" style="width: 50px;
                height: 50px; border-radius: 50%" alt="">
              </div>

              <div class="col-md ml-2">
                <textarea name="comment" placeholder="推你的回覆"
                  style="width: 409px;height: 80px; overflow-y: hidden; resize: none; outline: none; wrap:off; border-color: transparent;"></textarea>
                <div class="card-text text-right">
                  <button class="btn" style="background: #FF6600;
                  border-radius: 100px; color: white" type="submit">回覆</button>
                </div>
              </div>
            </div>

          </div>
        </div>

      </div>
    </div>
  </form>
</div>
{{/each}}

<script>
  const button = document.querySelector('#editUser')
  const cover = document.querySelector('#cover')
  const avatar = document.querySelector('#avatar')
  const name = document.querySelector('#name')
  const introduction = document.querySelector('#introduction')
  const id = window.location.search.slice(1)
  button.addEventListener('click', (event) => {
    axios.get(`/api/users/${id}`)
      .then((res) => {
        cover.innerHTML = `          <img class="card-img-top" src="${res.data.cover}" alt="Card image cap">
          <input type="file" name="cover" id="inputCover"> cover`
        avatar.innerHTML = `          <img class="card-img-top" src="${res.data.avatar}" alt="Card image cap">
          <input type="file" name="avatar" id="inputAvatar"> avatar
        `
        name.innerHTML = `          <label for="inputName" class="col-form-label">名稱:</label>
          <input type="text" class="form-control" name="name" value="${res.data.name}" id="inputName">`
        introduction.innerHTML = `
          <label for="inputIntroduction" class="col-form-label">自我介紹:</label>
          <textarea class="form-control" id="inputIntroduction" name="introduction">${res.data.introduction}</textarea>`
      })
      .catch((error) => {
        console.log(error)
      })
  })
  const save = document.querySelector('#save')
  save.addEventListener('click', (event) => {
    const inputCover = document.querySelector('#inputCover').files[0]
    const inputAvatar = document.querySelector('#inputAvatar').files[0]
    const inputName = document.querySelector('#inputName').value
    const inputIntro = document.querySelector('#inputIntroduction').value
    const dataForm = new FormData()
    dataForm.append('cover', inputCover)
    dataForm.append('avatar', inputAvatar)
    dataForm.append('name', inputName)
    dataForm.append('introduction', inputIntro)
    let config = {
      headers: { "Content-Type": "multipart/form-data" }
    }
    axios.post(`/api/users/${id}`, dataForm, config)
      .then((res) => {
        console.log(res)
      })
      .catch((err) => {
        console.log(err)
      })
  })

</script>