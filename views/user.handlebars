<div class="d-block justify-content-center" style="margin-left: 17rem;">
  <div class="contener" style="width: 30rem; height:3rem; border-top: thin solid #e6ecf0;">
    <div class="d-flex justify-content-start">
      <div class="fs-2 mx-2 pt-2">
        <i class="bi bi-arrow-left-short"></i>
      </div>
      <div class="">
        <p class="my-0" style="font-weight: bold;">{{user.name}}</p>
        <small>{{user.tweetsCount}} 推文</small>
      </div>

    </div>
  </div>

  <!--User 頭像&背景-->
  <div class="contener" style="width: 30rem; height:12rem; border-top: thin solid #e6ecf0;">
    <div class="user-profile-card d-flex flex-column justify-content-start text-center">
      {{> message}}
      <img class="user-profile-cover" src="{{user.cover}}" alt="no pic">
      <img class="user-profile-avatar" src="{{user.avatar}}" alt="no pic">
      <div class="d-flex justify-content-end m-1">
        <a href="/user/{{user.id}}/edit"><button class="btn user-profile-btn">編輯個人資訊</button></a>
      </div>
    </div>
  </div>

  <!--User 基本資料-->
  <div class="contener" style="width: 30rem; height:10rem; border-top: thin solid #e6ecf0;">
    <div class="mx-2 pt-2">
      <p class="m-0" style="font-weight: bold;">{{user.name}}</p>
      <small>@{{user.account}}</small>
      <div class="py-2">
        <p>{{user.introduction}}</p>
      </div>
      <div>
        <span class="mr-2">{{user.FollowingsCount}} 個追蹤中</span>
        <span>{{user.FollowersCount}} 位追蹤者</span>
      </div>
    </div>
  </div>

  <!--Navs-->
  <div class="contener" style="width: 30rem; height:3rem; border-top: thin solid #e6ecf0;">
    <nav class="nav">
      <a class="nav-link active" href="/user/{{user.id}}">推文</a>
      <a class="nav-link" href="/user/{{user.id}}/replies">推文與回覆</a>
      <a class="nav-link" href="//user/{{user.id}}/likes">喜歡的內容</a>
    </nav>
  </div>

  <!--Tweets-->
  {{#each tweets}}
  <div class="contener" style="width: 30rem; height:10rem; border-top: thin solid #e6ecf0;">
    <div class="card-body">
      <div class="row">
        <div class="col-2">
          <img class="user-profile-tweets-avatar" src="{{../user.avatar}}" alt="no pic">
        </div>
        <div class="col-10">
          <h5 class="card-title" style="display: inline-block;">{{../user.name}}</h5>
          <a href="{{this.Userid}}" class="card-link" style="display: inline-block;">@{{../user.account}}</a>
          <p class="card-text" style="display: inline-block;">·<small class="text-muted">{{this.elapsedTime}}</small>
          </p>
          <p class="card-text">{{this.description}}</p>
        </div>
      </div>
    </div>
  </div>
  {{/each}}

</div>