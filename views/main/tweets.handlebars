{{!-- 首頁表頭 --}}
<div class="partial-title p-4">
  <div class="d-flex gap-3 p-0 m-0 h-26px justify-content-start align-items-center">
      <div class="d-flex flex-column m-0 p-0 gap-0">
          <p class="fw-bold m-0 p-0 align-bottom fs-4 ln-height-26px">首頁</p>
      </div>
  </div>
</div>

{{!--最上面的有什麼新鮮事?欄位--}}
<div class="post-tweet-area link-unstyled m-0 pb-0 pt-3 px-4" data-bs-toggle="modal" data-bs-target="#tweet-model">
  <div class="m-0 gap-2 d-flex align-items-center ">
    <div class="tweet-user-icon flex-shrink-0  p-0">
      <a href="#" class="overflow-hidden  rounded-circle link-unstyled  child-img-center w-100 h-100 p-0">
        <img src="/images/icons/ac_icon.svg" alt="" class="w-100 h-100">
      </a>
    </div>
    <p class="p-0 m-0 text-secondary fw-bold">有什麼新鮮事？</p>
  </div>
  <button type="" class="btn btn-primary rounded-pill">回覆</button>
</div>

{{!-- 分隔線 --}}
<div class="division"></div>

<div class="container main-tweets-area d-flex flex-column gap-3 p-0 pt-3 m-0 scrollbar-hidden">
  {{#each tweets}}
    <div class="tweet-card card  shadow-none  py-0 px-4 m-0 rounded-0  border-1px border-bottom-1 border-top-0 border-start-0 border-end-0">
      <div class="card-body m-0 p-0 pb-3 d-flex gap-2">

        <div class="tweet-user-icon flex-shrink-0  p-0">
          <a href="/api/users/{{this.User.id}}" class="overflow-hidden  rounded-circle link-unstyled  child-img-center w-100 h-100 p-0">
            <img src="{{this.User.avatar}}" alt="" class="w-100 h-100">
          </a>
        </div>
        <div class="tweet-card-content d-flex flex-column gap-2">
          <div class="tweet-user-horizontal">
            <a href="/api/users/{{this.User.id}}" class=" d-flex gap-2 link-unstyled align-items-center">
              <p class="fw-bold">{{this.User.name}}</p>
              <p class="font-size-sm text-secondary">@{{this.User.account}}・{{relativeTimeFromNow this.createdAt}}</p>
            </a>
          </div>
            <p class="m-0">
              {{this.description}}
            </p>

            <div class="tweet-user-action d-flex justify-content-between">
              <button type="button" class="btn border-0 btn-outline-light d-flex align-items-center gap-2 link-unstyled p-0 m-0" data-bs-toggle="modal" data-bs-target="#reply-model">
                <img src="/images/icons/icon_reply_outlined.svg" alt="" class="img-fluid center tweet-action-icon">
                <p class="font-size-sm m-0 text-secondary">{{this.replies}}</p>
              </button>
              <a href="#" class="d-flex align-items-center gap-2 link-unstyled">
                <img src="/images/icons/icon_like_outlined.svg" alt="" class="img-fluid center tweet-action-icon">
                <p class="font-size-sm m-0 text-secondary">{{this.likes}}</p>
              </a>
            </div>
        </div>
      </div>
    </div>
  {{/each}}
</div>