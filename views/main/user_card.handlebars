      <div class="modal fade" id="user-setting-modal" tabindex="-1" aria-labelledby="userSettingModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header border-0 d-flex justify-content-start align-items-center p-0 m-3 gap-4">
                <button type="button" class="btn btn-outline-light modal-close-btn m-0 d-flex justify-content-start align-items-center" data-bs-dismiss="modal" aria-label="Close">
                    <img src="/images/icons/close_outlined.svg" alt="" class="filter-main-color">
                </button>
