<div class="col-2 nav-left">
  {{> nav-left}}
</div>

<div class="col-8 nav-body" style="font-family: 'Noto Sans TC'; font-style: normal;">
  <ul class="list-group">

    {{>profile-following-header route='following'}}

    {{#each userData.Followings}}
    <li class="list-group-item" style="border:#E6ECF0 solid 1px;">
      <div class="row">
        <div class="col-1">
          <a href="/users/{{this.id}}" style="text-decoration: none;">
            <img class="" src="{{this.avatar}}" alt="追隨者頭像"
              style="width:50px; height:50px; border:#E6ECF0; border-radius:50%">
          </a>
        </div>
        <div class="col-8">
          <a href="/users/{{this.id}}" style="text-decoration: none; color:black; width:50px;">
            <p class="pt-2" style="font-weight: 700;font-size: 16px;line-height:26px;">
              {{this.name}}
            </p>
          </a>
        </div>
        {{#if this.Followship.match}}
        <div class="col-2">
          <form action="/followships/{{this.id}}?_method=DELETE" method="POST" class="rol-10">
            <button type="submit" name="id" value="{{this.id}}" class="btn btn-primary rounded-pill ms-5"
              style="background-color: #FF6600;   width:96px; border:#E6ECF0 solid 1px;">正在跟隨</button>
          </form>
        </div>
        {{else}}
        <div class="col-1">
          <form action="/followships" method="POST">
            <button type="submit" name="id" value="{{this.id}}" class="btn btn-primary rounded-pill ms-5"
              style="background-color: #FFFFFF; color:#FF6600; border:#FF6600 solid 1px;  width:64px;">跟隨</button>
          </form>
        </div>
        {{/if}}
        
      </div>
      <div class="m-3 p-0">
        <p class="ms-5" style="word-wrap:break-word; width:700px;">{{this.introduction}}</p>
      </div>
    </li>
    {{/each}}
  </ul>
</div>

<div class="col-2 nav-right">
  {{> nav-right}}
</div>