<div class="container">
  <div class="wrapper d-flex align-items-stretch">
    <nav id="sidebar">
      <div>
        {{> leftColumn}}
      </div>
    </nav>

    <div class="center-content d-flex" id="tweet-content">
      <div class="head justify-content-between">
        <div class="row">
          <div class="col-4">
            <ul class="list-group">
              <li class="list-group-item right-zone-header" style="
                          border-top: 1px solid #F5F5F5;
                          border-right: 1px solid #F5F5F5;
                          border-left: 1px solid #F5F5F5;
                          color: #000000;
                          font-weight: bold">
                <span>上線使用者&ensp;(5)</span>
              </li>

              <li class="list-group-item">
                <a href="/users/{{this.User.id}}/tweets">
                  <div class="row">
                    <div class="col-2">
                      <img src="{{this.User.avatar}}" alt="user avatar" class="user-avatar"
                        style="border-radius: 50%; height:50px; width: 50px">
                    </div>
                    <div class="col-10">
                      <span>Hello</span>
                      <span style="color:gray;">&ensp;@123</span>
                    </div>
                  </div>
                </a>
              </li>

            </ul>
          </div>
          <div class="col-8">
            <ul class="list-group chat-container">
              <li class="list-group-item right-zone-header" style="
                          border-top: 1px solid #F5F5F5;
                          border-right: 1px solid #F5F5F5;
                          border-left: 1px solid #F5F5F5;
                          color: #000000;
                          font-weight: bold">
                <span>公開聊天室</span>
              </li>

              <li class="system-info">
