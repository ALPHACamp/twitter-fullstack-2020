<div class="row mt-3">
    <div class="col-md-2 pl-0">
        {{>left}}
    </div>

    <div class="col-md-4 px-3 border-left border-right">
        <h2>上線使用者</h2>
        <div class="online-user-column">
        </div>
    </div>

    <div class="col-md-6 px-3 ">
        <h2>公開聊天室</h2>
        <div class="chat-main">
            <!--output-->
            <div id="output">
                <div class="chat-message">
                    <div class="chat-avatar" style="background: url(),#C4C4C4; background-position:center;background-size:cover;">
                    </div>
                    <div class="column">
                        <div class="chat-text">
                            <span>carey : </span>
                            Nobis repellat non dolorem est rerum repellendus cum officiis. Accusaorem est rerum
                            repellendus cum officiis. Accusantium aut
                        </div>
                        <div class="chat-time">下午10:20</div>
                    </div>
                </div>
                <div class="self-message">
                    <div class="self-text">sllo</div>
                    <div class="chat-time">下午10:20</div>
                </div>
                <div class="broadcast">
                </div>
            </div>
        </div>
        <!--input-->
        <div class="chat-footer">
            <div class="typing"></div>
            <form id="chat-form" action="">
                <input id="input" autocomplete="off" placeholder="輸入訊息..." autofocus />
                <button class="button"><i class="far fa-paper-plane"></i></button>
            </form>
        </div>
    </div>
</div>
<script src="/socket.io/socket.io.js"></script>
<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
<script src="/js/socket.js"></script>