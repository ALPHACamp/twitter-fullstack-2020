{{> left-sidebar}}

<div class="user-main">
  {{> user-self-info}}
  {{> user-self-tab}}
  <div class="user-tweets">
    {{#each replies}}
    <div class="user-tweet">
      <div class="admin-tweet-left">
        <img class="rounded-circle" src="/images/acIcon.png" alt="avatar" title="avatar" width="50px" height="50px">
      </div>
      <div class="admin-tweet-right">
        <div class="admin-tweet-right-up">
          <span class="name">{{this.userName}}</span>
          <span class="account">&nbsp;@{{this.userAccount}}<b> •</b>&nbsp;{{relativeTimeFromNow this.createdAt}}</span>
        </div>
        <div class="d-flex">
          <div class="body-14-regular secondary"><a href="" style="color: #6C757D;">回覆</a></div>
          <div class="body-14-regular secondary"><a href="" style="color: #FF6600;">@{{this.tweetOwner}}</a></div>
        </div>
        <p class="user-content">{{this.comment}}</p>
      </div>

    </div>
    {{/each}}

  </div>
</div>
{{> right-sidebar}}
{{> user-edit-modal}}
{{> post-tweet-modal}}