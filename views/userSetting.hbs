<div class="container-fluid" style="height: 100vh;">
  <div class="row">
    <div class="col-3">
      {{> navigationBar}}
    </div>
    <div class="tweets-center col-6">
      <div class="tweets-title">
        帳戶設定
      </div>
      <div class="container">
        <form class="" action="/users/setting?_method=PUT" method="POST">
          <div class="w-100 mt-2 ml-4">
            {{> message}}
          </div>

          <div class="w-100 mt-2 ml-4" style="position: relative;">
            <p style="position: absolute;color:#657786;" class="small">帳號</p>
            <input type="text" name="account" class="form-control"
              style="outline: none;border: none;background-color:#F5F8FA;border-radius:0px; border-bottom: 2px solid black; padding-top: 16px; height:50px;"
              value="{{result.account}}" autofocus maxlength="30">
          </div>

          <div class="w-100 mt-4 ml-4" style="position: relative;">
            <p style="position: absolute;color:#657786;" class="small">名稱</p>
            <input type="text" name="name" class="form-control"
              style="outline: none;border: none;background-color:#F5F8FA;border-radius:0px; border-bottom: 2px solid black; padding-top: 16px; height:50px;"
              value="{{result.name}}" required maxlength="30">
          </div>

          <div class="w-100 mt-4 ml-4" style="position: relative;">
            <p style="position: absolute;color:#657786;" class="small">Email</p>
            <input type="email" name="email" class="form-control"
              style="outline: none;border: none;background-color:#F5F8FA;border-radius:0px; border-bottom: 2px solid black; padding-top: 16px; height:50px;"
              value="{{result.email}}" required maxlength="30">
          </div>

          <div>Change Password</div>

          <div class="w-100 mt-4 ml-4" style="position: relative;">
            <p style="position: absolute;color:#657786;" class="small">Old Password</p>
            <input type="password" name="oldPassword" class="form-control"
              style="outline: none;border: none;background-color:#F5F8FA;border-radius:0px; border-bottom: 2px solid black; padding-top: 16px; height:50px;"
              maxlength="30">
          </div>

          <div class="w-100 mt-4 ml-4" style="position: relative;">
            <p style="position: absolute;color:#657786;" class="small">New Password</p>
            <input type="password" name="newPassword" class="form-control"
              style="outline: none;border: none;background-color:#F5F8FA;border-radius:0px; border-bottom: 2px solid black; padding-top: 16px; height:50px;"
              maxlength="30">
          </div>

          <div class="w-100 mt-4 ml-4" style="position: relative;">
            <p style="position: absolute;color:#657786;" class="small">Confirm New Password</p>
            <input type="password" name="checkNewPassword" class="form-control"
              style="outline: none;border: none;background-color:#F5F8FA;border-radius:0px; border-bottom: 2px solid black; padding-top: 16px; height:50px;"
              maxlength="30">
          </div>

          <div class="d-flex justify-content-end w-100">
            <button class="btn btn-lg btn-primary btn-block mt-4 w-25" type="submit"
              style="border-radius: 30px;background-color:#FF6600;border-color: #fff;">儲存</button>
          </div>

        </form>
      </div>
    </div>
  </div>
</div>