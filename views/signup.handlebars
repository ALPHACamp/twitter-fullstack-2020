<div style="flex-direction: column;justify-content:center;width:inherit">
  <div style="margin-bottom:100px">
    <img src="https://avatars.githubusercontent.com/u/8667311?s=200&v=4" alt="" style="padding: 15px;margin-left:41%">
    <h1 style="padding: 15px;margin-left:41%;font-weight:bolder">註冊您的帳號 </h1>
  </div>
  <form class="form-signin" action="/signup" method="POST" style="width: 100%;">
    <div class="text-center mb-4">
      {{> message}}
    </div>
    <div class="form-label-group">
      <label for="inputAccount">Account</label>
      <input type="text" name="account" class="form-control" placeholder="Account" required autofocus>
    </div>
    <div class="form-label-group">
      <label for="inputName">Name</label>
      <input type="text" name="name" class="form-control" placeholder="Name" required autofocus>
    </div>
    <div class="form-label-group">
      <label for="inputEmail">Email</label>
      <input type="text" name="email" class="form-control" placeholder="Email" required autofocus>
    </div>
    <div class="form-label-group">
      <label for="inputPassword">Password</label>
      <input type="password" name="password" class="form-control" placeholder="Password" required>
    </div>
    <div class="form-label-group">
      <label for="inputPasswordCheck">Password Check</label>
      <input type="password" name="passwordCheck" class="form-control" placeholder="Password Check" required>
    </div>
    <br />
    <button class="btn btn-lg btn-primary btn-block" type="submit"
      style="border-radius: 15px; background-color:rgb(248, 101, 47);font-weight:bolder">註冊</button>
    <div class="text-center mb-4">
      <p style="display: flex; justify-content:flex-end; margin:revert;"><a href="/signin">回到登入頁</a></p>
    </div>
    <p class="mt-5 mb-3 text-muted text-center">© 2017-2018</p>
  </form>
</div>