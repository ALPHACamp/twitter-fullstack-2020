<main class="container">
  <div class="row">
    {{>sidebar route='user'}}

    <div class="col-md-6 p-0" style="border: 1px #E6ECF0 solid; max-width:639px; margin-left: 278px">
      {{>user-header}}
      {{>profile}}
      {{>user-tabs route='replies'}}
      {{#each replies}}
        <div class="d-flex flex-column flex-wrap justify-content-center mb-2"
          style="border-bottom: 1px #E6ECF0 solid; max-width:639px; margin: 0px 12px 0px 0px;">
          <div class="d-inline-flex">
            <a href="/users/{{user.id}}/tweets" style="text-decoration:none;">
              <img src="https://i.imgur.com/hpSLhnx.png" title="source: imgur.com" style="width: 50px;height: 50px;"
                class="ms-4 mt-2">
            </a>
            <div class="d-inline-flex flex-wrap pt-3 ms-3">
              <h5 style="color: #171725;">{{../user.name}}</h5>
              <span class="ms-1" style="color: #6C757D;">@{{../user.account}}· {{relativeTimeFromNow this.createdAt}}</span>
            </div>
          </div>
        
          <div class="d-flex flex-column align-self-start">
            <div class="pe-2" style="margin-left:88px;">
              <span style="color:#6C757D">回覆</span>
              <a href="/users/{{this.Tweet.UserId}}/tweets" style="text-decoration:none;">
                <span style="color:#FF6600">@{{this.Tweet.User.account}}</span>
              </a>
              <p class="mt-2 text-break">
                {{this.comment}}
              </p>
            </div>

          </div>
        </div>
      {{/each}}

    </div>
    {{>right}}
  </div>
</main>