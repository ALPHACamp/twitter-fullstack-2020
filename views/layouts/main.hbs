<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Simple Twitter</title>
  <link rel="stylesheet" href="/stylesheets/icon.css">
  <link rel="stylesheet" href="/stylesheets/layout.css">
</head>

<body>
  {{!-- Content --}}
  {{{body}}}

  {{#if success_messages}}
  <div class="flash">
    <span class="text">{{success_messages}}</span>
    <i class="success"></i>
  </div>
  <script type="text/javascript">
    setTimeout(() => { document.querySelector('.flash').classList.add('cb'); setTimeout(() => { document.querySelector('.flash').classList.remove('cb') }, 2800) }, 500);
  </script>
  {{/if}}

  {{#if error_messages}}
  <div class="flash">
    <span class="text">{{error_messages}}</span>
    <i class="warning"></i>
  </div>
  <script type="text/javascript">
    setTimeout(() => { document.querySelector('.flash').classList.add('cb'); setTimeout(() => { document.querySelector('.flash').classList.remove('cb') }, 2800) }, 500);
  </script>
  {{/if}}

  {{#if errors.length}}
  <div class="flash cb">
    <div>
      {{#each errors}}
      <div class="text">{{this.message}}</div>
      {{/each}}
    </div>
    <i class="warning"></i>
  </div>
  <script type="text/javascript">
    setTimeout(() => { document.querySelector('.flash').classList.add('cb'); setTimeout(() => { document.querySelector('.flash').classList.remove('cb') }, 2800) }, 500);
  </script>
  {{/if}}

  <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
  <script src="/javascripts/layout.js"></script>
</body>

</html>