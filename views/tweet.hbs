<div class="d-flex" style="height: 1200px;width:1400px;margin: 0 auto;">
  <div style="height: 1200px;width:332px">
    <div id="left-section">
      <img id="logo" src="/images/icons/logo.png">
      <ul id="left-navs" class="nav flex-column">
        <li class="nav-item">
          <a href="/tweet" class="nav-item-content">
            <img src="/images/icons/filled-home.png" class="base-icon">
            <span class="word" style="color: #FF6600;">首頁</span>
          </a>
        </li>
        <li class="nav-item">
          <a href="/users/{{user.id}}/tweets" class="nav-item-content">
            <img src="/images/icons/outlined-user.png" class="base-icon">
            <span class="word">個人資料</span>
          </a>
        </li>
        <li class="nav-item">
          <a href="/settings" class="nav-item-content">
            <img src="/images/icons/outlined-cog.png" class="base-icon">
            <span class="word">設定</span>
          </a>
        </li>
        <li class="nav-item d-flex justify-content-center" style="height: 46px;">
          <button type="button" class="btn btn-primary"
            style="border-radius:50px; width:100%; background:#FF6600; border-color:#FF6600;font-size:20px;font-weight:400"
            data-bs-toggle="modal" data-bs-target="#post-modal">推文</button>
        </li>
      </ul>
      <div id="logout">
        <a href="/logout" style="margin-top:1.585vh; text-decoration: none; align-items: center; display:flex">
          <img src="/images/icons/outlined-logout.png" style="height:24px; margin-left:16px;">
          <span style="margin-left:16px; font-weight:700; font-size:18px; color:#44444F">登出</span>
        </a>
      </div>
    </div>
  </div>
  <div class="d-flex flex-column" style="width:641px; border-left: 1px solid #e6ecf0; border-right: 1px solid #e6ecf0">
    <div class="d-flex" style="height:74px;border-bottom: 1px solid #e6ecf0;">
      <a href="javascript:history.back()">
        <img src="/images/icons/outlined-back.png" style="height:24px; margin-top:24px; margin-left:28px">
      </a>
      <div style="margin-left:16px;margin-top: 24px;padding: 0;">
        <span
          style="width: 48px;height: 26px;font-weight: 700;font-size: 24px;line-height: 26px;color: #171725;margin-top: 0;padding: 0;">推文</span>
      </div>
    </div>
    <div class="d-flex tweet" style="height: 335px; width: 639px;margin-top: 16px;border-bottom: 1px solid #e6ecf0;">
      <div class="d-flex" style="padding: 0;margin: 0 21px 16px 16px;width: 602px;height: 335px;">
        <div id="single-tweets-icon">
          <a href="#">
            <img src="images/icons/logo2.png" alt="" width="50px" height="50px" class="rounded-circle" />
          </a>
        </div>
        <div id="single-tweets-top">
          <a href="/users/{{this.id}}/tweets">
            <div class="popular-name">apple</div>
            <small class="small-account">@apple</small>
          </a>
          <div style="width: 578px;margin: 8px 45px 0 -58px;">
            <p id="single-tweets-content-word">
              Nulla Lorem mollot cupidatat irure. Laborum magna nulla duis ullamco cillum dolor. Voluptate exercitation
              incididunt aliquip deserunt.
            </p>
          </div>
          <div style="width: 602px;height: 22px;margin: 8px 45px 8px -58px;">
            <p id="single-tweets-time">
              上午 10:05‧2021年11月10日
            </p>
          </div>
          <div id="statu">
            <p
              style="color:#000000;margin-top: 16px;margin-bottom: 16px;border-bottom: 1px solid #e6ecf0;padding-bottom: 16px;">
              34
              <span style="color:#6C757D;margin-right: 24px;"> 回覆</span><span style="color:#000000;">808
                <span style="color:#6C757D;"> 喜歡次數</span>
              </span>
            </p>
          </div>
          <div style="width: 600px;height: 36px; margin: 32px 434.13px 16px -58px;">
            <a href="#" style="margin-right: 110px;">
              <img src="images/icons/outlined-reply.png" alt="" width="30px" height="30px" />
            </a>
            <a href="#">
              <img src="images/icons/outlined-like.png" alt="" width="30px" height="30px" style="" />
            </a>
          </div>
        </div>
      </div>
    </div>
    {{!-- replies --}}
