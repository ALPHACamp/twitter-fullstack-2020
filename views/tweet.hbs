<div class="col mt-2 mx-0 px-0" style="max-height: 100hv; overflow-y: auto; overflow-x: hidden;">
    <div class="d-flex align-items-center justify-content-start my-0" style="height:40px; border-bottom: 1px solid #A39480;">
        <a href="javascript:history.back()" style="color:black;"><i class="fas fa-arrow-left"></i></a>
        <h6 class="fw-bolder my-0 mx-3 py-0">推文</h6>
    </div>

    <div class="d-flex mx-auto mt-3">
        <a class="mx-2" href="/user/{{user.id}}">
            <img src="{{user.avatar}}" alt=""
                style="height: 40px; width: 40px; border-radius: 50%;">
        </a>
        <div class="mx-1">
            <div class="row">
                <h6 class="fw-bolder" style="margin:0;">{{user.name}}</h6>
                <h6 style="margin:0; color:#A39480;">{{user.email}}</h6>
            </div>  
        </div>      
    </div>

    <div>
        {{tweet.description}}
    </div>    

    <div style="margin:0; color:#A39480;">
        {{tweet.updateAt}}
    </div>    

    <div class="d-flex mx-auto pb-2" style="border-bottom:1px solid #A39480;">

        <div class="col-md-12 d-flex mt-2">
            {{#ifcond tweet.Replies.length "===" "0"}}
            <div style="color:#A39480;">
                <a href="/tweets/{{this.id}}" class="ms-3 me-1" style="color:#C0C0C0;"><i
                        class="far fa-comment"></i></a> {{tc tweet.Replies.length}}
            </div>
            {{else}}
            <div style="color:#2F4F4F;">
                <a href="/tweets/{{tweet.id}}" class="ms-3 me-1" style="color:#7AC5CD;"><i
                        class="far fa-comment-dots"></i></a> {{tc tweet.Replies.length}}
            </div>
            {{/ifcond}}

            {{#ifcond tweet.tweetLiked "===" 0}}
            <div style="color:#A39480;">
                <form action="/tweets/{{tweet.id}}/thumbs_up" method="POST">
                    <button type="submit" class="btn btn-link m-0 p-0 ms-3"
                        style="color:#C0C0C0;text-decoration:none;">
                        <i class="far fa-thumbs-up"></i>　{{tc tweet.tweetLiked}}
                    </button>
                </form>
            </div>
            {{else}}
            <div style="color:#2F4F4F;">
                <form action="/tweets/{{tweet.id}}/thumbs_up" method="POST">
                    <button type="submit" class="btn btn-link m-0 p-0 ms-3"
                        style="color:#0000FF;text-decoration:none;">
                        <i class="far fa-thumbs-up"></i>　{{tc tweet.tweetLiked}}
                    </button>
                </form>
            </div>
            {{/ifcond}}

            {{#ifcond tweet.tweetDisliked "===" 0}}
            <div style="color:#A39480;">
                <form action="/tweets/{{tweet.id}}/thumbs_down" method="POST">
                    <button type="submit" class="btn btn-link m-0 p-0 ms-3"
                        style="color:#C0C0C0;text-decoration:none;">
                        <i class="far fa-thumbs-down"></i>　{{tc tweet.tweetDisliked}}
                    </button>
                </form>
            </div>
            {{else}}
            <div style="color:#2F4F4F;">
                <form action="/tweets/{{tweet.id}}/thumbs_down" method="POST">
                    <button type="submit" class="btn btn-link m-0 p-0 ms-3"
                        style="color:#CD5C5C;text-decoration:none;">
                        <i class="far fa-thumbs-down"></i>　{{tc tweet.tweetDisliked}}
                    </button>
                </form>
            </div>
            {{/ifcond}}

        </div>
    </div>

    <div>
        {{#each tweet.Replies}}
        <div class="d-flex py-2" style="border-bottom: 1px solid #C0C0C0;">
            <a class="mx-2" href="/user/{{this.User.dataValues.id}}">
                <img src="{{this.User.dataValues.avatar}}" alt=""
                    style="height: 40px; width: 40px; border-radius: 50%;">
            </a>
            <div class="mx-2">
                <div class="row">
                    <h6 class="fw-bolder mr-2" style="margin:0;">{{this.User.dataValues.name}}</h6>
                    <h6 style="margin:0; color:#A39480;">
                        {{this.User.dataValues.email}}．{{moment this.User.dataValues.updatedAt}}</h6>
                </div>
                <div style="margin-left:0;height: 54px;line-height: 18px;text-overflow: ellipsis;overflow: hidden;">
                    {{this.dataValues.comment}}
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>