<div class="container-fluid">
  <div class="row flex-nowrap ps-xl-4 ps-md-3">
    <div class="col-auto col-md-4 col-xl-3 px-sm-2 px-0">
      <div class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-2 min-vh-100">
        <a class="d-flex align-items-center mb-3 mb-md-0 me-md-auto ps-3" href="/">
          <img src="https://cdn4.iconfinder.com/data/icons/social-media-icons-the-circle-set/48/twitter_circle-8192.png"
            alt="" class="img-fluid my-3" style="display: block; width: 50px;" />
        </a>
        <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start" id="menu">
          <li class="nav-item p-2">
            <a class="nav-link align-middle" href="/tweets">
              <i class="fas fa-home fa-lg"></i>
              　<span class="d-none d-sm-inline h4"><strong>推文清單</strong></span>
            </a>
          </li>
          <li class="nav-item p-2">
            <a href="#usermenu" data-bs-toggle="collapse" class="nav-link align-middle">
              <i class="fas fa-list-ul fa-lg"></i>
              <span class="ps-1 d-none d-sm-inline h4"><strong>使用者列表</strong></span>
            </a>
            <ul class="collapse show nav flex-column ms-4" id="usermenu" data-bs-parent="#menu">
              <li class="w-100">
                <a href="/users" class="nav-link px-0">
                  <span class="d-none d-sm-inline">所有使用者</span>
                  <i class="fas fa-users"></i>
                </a>
              </li>
            </ul>
          </li>
        </ul>
        <hr />
        <div class="dropdown pb-4">
          <a href="#" class="d-flex align-items-center text-decoration-none dropdown-toggle" id="dropdownA"
            data-bs-toggle="dropdown" aria-expanded="false">
            <img src="{{user.img}}" alt="Admin" width="40" height="40" class="rounded-circle" />
            <span class="d-none d-sm-inline mx-1 ps-1">{{user.name}}</span>
          </a>
          <ul class="dropdown-menu dropdown-menu-dark text-small shadow" aria-labelledby="dropdownA">
            <li><a class="dropdown-item my-2" href="/profile">
                <i class="fas fa-user-circle"></i>
                　個人資料
              </a></li>
            <li>
            <li><a class="dropdown-item mb-2" href="/signup">
                <i class="fas fa-user-plus"></i>
                　新增管理員
              </a></li>
            <li>
              <hr class="dropdown-divider" />
            </li>
            <li><a class="dropdown-item" href="/signout">
                <i class="fas fa-sign-out-alt"></i>
                　<strong>登出</strong>
              </a></li>
          </ul>
        </div>
      </div>
    </div>
    <div class="col py-3">
      <div class="card">
        <div class="card-header">
          <span class="h5" style="font-weight: bold;">單一推文</span>
        </div>
      </div>
      {{> message}}
      <div class="card-body">
        <div class="row justify-content-around mb-1">
          <div class="row col-11">
            <div class="card-image col-1 d-flex justify-content-center align-items-center">
              <a href="/users/{{tweet.UserId}}" class="h5 text-dark text-decoration-none">
              <img src="{{tweet.User.img}}" class="rounded-circle p-md-0 p-1" style="width: 50px; height: 50px" alt="A user" /></a>
            </div>
            <div class="col-11 align-self-center px-md-2 px-4">
              <a href="/users/{{tweet.UserId}}" class="h5 text-dark text-decoration-none">{{tweet.User.name}}</a>
              <span style="color: #6c757d; font-size: 0.875em">@{{tweet.User.account}}．{{moment tweet.createdAt}}</span>
              <p class="mt-2">{{tweet.content}} </p>
              <div class="col-2 d-flex align-items-center justify-content-center ">
                {{#if this.isLiked }}
                <form action="/like/{{tweet.id}}?_method=DELETE" method="POST">
                  <button type="submit" class="btn" style="width: 60px; height: 30px">
                    <i class="fas fa-heart"> {{ tweet.likes }}</i>
                  </button>
                </form>
                {{else}}
                <form action="/like/{{tweet.id}}" method="POST">
                  <button type="submit" class="btn" style="width: 60px; height: 30px">
                    <i class="far fa-heart"> {{ tweet.likes }}</i>
                  </button>
                </form>
                {{/if}}
              
          
                {{#if tweet.replyCount}}
                  <button class="btn" style="width: 60px; height: 30px">
                    <i class="fas fa-comment"> {{ tweet.replyCount }}</i>
                  </button>
                {{else}}
                <button class="btn" style="width: 60px; height: 30px">
                  <i class="far fa-comment"></i>
                </button>
                {{/if}}
              </div>
            </div>
          </div>
          {{#ifCond user.id tweet.UserId}}
          <div class="col-1 d-flex align-items-center justify-content-center">
            
            <form action="/tweets/{{this.id}}?_method=DELETE" method="post" onsubmit="return deleteConfirm()">
              <button type="submit" class="btn">
                <i class="fas fa-times"></i>
              </button>
            </form>
          </div>
          {{/ifCond}}
        </div>
      <hr>

      

      <div class="card-body">
        {{#each tweet.Replies}}
        <div class="row justify-content-around mb-1">
          <div class="row col-11">
            <div class="card-image col-1 d-flex justify-content-center align-items-center">
              <img src="{{this.User.img}}" class="rounded-circle p-md-0 p-1" style="width: 50px; height: 50px"
                alt="A user" />
            </div>
            <div class="col-11 align-self-center px-md-2 px-4">
              <a href="/users/{{this.UserId}}" class="h5 text-dark text-decoration-none">{{this.User.name}}</a>
              <span style="color: #6c757d; font-size: 0.875em">@{{this.User.account}}．{{moment this.createdAt}}</span>
              <p class="mt-2">{{this.content}} </p>
            </div>
          </div>
          {{#ifCond this.User.id ../user.id}}
          <div class="col-1 d-flex align-items-center justify-content-center">
            <form action="/replies/{{this.id}}?_method=DELETE" method="post" onsubmit="return deleteConfirm()">
              <button type="submit" class="btn">
                <i class="fas fa-times"></i>
              </button>
            </form>
          </div>
          {{/ifCond}}
        </div>
        <hr />
        {{/each}}
      </div>
      <form action="/replies" method="POST" class="mt-5">
        <div class="form-group">
          <label for="text">留下評論：</label>
          <textarea class="form-control" id="content" name="content" rows="3" 
          maxlength="140"
            required
            ></textarea>
        </div>
        <input type="hidden" name="TweetId" value="{{tweet.id}}" />
        <button type="submit" class="btn btn-primary mb-4">Submit</button>
      </form>
      
      <a href="javascript:history.back()">回上一頁</a>
    </div>
   
  </div>
</div>
