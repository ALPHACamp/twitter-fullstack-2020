<div class="row">
  {{> left-column}}
  <div class="center-section col-6 ">
    {{> message}}
    <div class="tweetPage">
      <div class="title text-left font-weight-bold mt-1 py-3 pl-2"
        style="font-size: 18px;line-height: 26px;color: #1C1C1C;border: #E6ECF0 1px solid;"> <a
          onclick="history.back()"><i class="btn fas fa-arrow-left ml-1 mr-4"></i></a>推文
      </div>

      <div class="tweet px-3 py-2" style="border: #E6ECF0 1px solid;">
        <div class="post-user-info d-flex justify-content-start">
          <div class="post-user-avatar mr-2">
            <img class="mt-2" {{#if tweet.User.avatar}}src={{tweet.User.avatar}}{{/if}}
              style=" background: #C4C4C4; border-radius: 100%; width: 50px; height: 50px">
          </div>


          <div class="post-user-account mt-2">
            <div class="post-user font-weight-bold mr-1" style="color: #1C1C1C;font-size: 15px;
                    ">{{tweet.User.name}}</div><span class="post-account mr-1"
              style="font-size: 15px;color: #657786;font-weight: 500;">@{{tweet.User.account}}</span>
          </div>
        </div>
        <div class="content mt-1 mb-2" style="font-weight: 500;
font-size: 23px;color: #1C1C1C">{{tweet.description}}</div>
        <div class="post-time" style="font-weight: 500;
font-size: 15px;color: #657786;font-weight: 500;">{{moment
tweet.createdAt}}</div>
      </div>
      <div class="tweet-counts px-3 py-3  d-flex justify-content-start" style="border: #E6ECF0 1px solid;">
        <div class="replies"><span class="replies-count mr-1 font-weight-bold" style="font-size: 19px;">34</span><span
            class="reply mr-3 font-weight-bold" style="font-size: 19px;color: #657786">回覆</span></div>
        <div class="likes"><span class="likes-count mr-1 font-weight-bold" style="font-size: 19px;">808</span><span
            class="like font-weight-bold" style="font-size: 19px;color: #657786">喜歡次數</span>
        </div>
      </div>
      <div class="tweet-feedback px-3 py-3 d-flex justify-content-start" style="border: #E6ECF0 1px solid;">
        <i class="btn far fa-comment  mr-5" data-toggle="modal" data-target="#replyModal{{tweet.id}}"
          style="color: #657786;font-size: 24px; "></i>
        <i class="btn far fa-heart ml-5" style="color: #657786;font-size:25px;"></i>
      </div>
    </div>
    {{> replies}}
  </div>

  <div class="col-3" style="width: 350px;">
    {{> right-column}}
  </div>
</div>
{{!-- reply modal --}}
<div class="modal fade" id="replyModal{{tweet.id}}" tabindex="-1" aria-labelledby="exampleModalLabel"
  aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close ml-0" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-title">
        <div class="reply-target-section d-flex justify-content-start px-3 ">
          <div class="reply-target-avatar mr-1">
            <img class="mt-2" {{#if tweet.User.avatar}}src={{tweet.User.avatar}}{{/if}}
              style="background: #C4C4C4; border-radius: 100%; width: 50px; height: 50px">
            <div class="diver ml-4 mt-2" style="width: 2px;height: 80px;background: #CCD6DD;"></div>
          </div>
          <div class="post ml-1 mt-2">
            <div class="post-info d-flex justify-content-start">
              <div class="post-user font-weight-bold mr-1" style="color: #1C1C1C;font-size: 15px;
          ">{{this.User.name}}</div><span class="post-account mr-1"
                style="font-size: 15px;color: #657786;font-weight: 500;">@{{tweet.User.account}}</span
                style="font-size: 15px;color: #657786;"><span
                style="font-size: 15px;color: #657786;font-weight: 500;">·</span>
              <span class="post-time ml-1" style="font-size: 15px;color: #657786;font-weight: 500;">{{moment
                tweet.createdAt}}</span>
            </div>
            <div class="post-content my-2" style="font-weight: 500;
          font-size: 15px;color: #1C1C1C;">{{tweet.description}}</div>
            <div class="reply-target"><span class="mr-1"
                style="font-weight: 500; font-size: 15px;color: #657786;">回覆給</span><span class="reply-target-account"
                style="font-weight: 500; font-size: 15px;color: #FF6600;">@{{tweet.User.account}}</span></div>
          </div>
        </div>
      </div>
      <div class="modal-body pt-0" class="d-flex">
        <form method="POST" action="/tweets/{{tweet.User.id}}/replies">
          <div class="reply-user-section d-flex justify-content-start">
            <div class="reply-user-avatar mr-1">
              <img class="mt-2" {{#if @root.user.avatar}}src={{ @root.user.avatar}}{{/if}}
                style="background: #C4C4C4; border-radius: 100%; width: 50px; height: 50px">
            </div>
            <div class="reply-user-content">
              <textarea class="form-control my-3 ml-1" name="description" id="description" style="width: 350px;
          height: 65px;" placeholder="推你的回覆"></textarea>
            </div>
          </div>
          <div class="d-flex flex-row-reverse ">
            <button type="submit" class="btn  btn-block "
              style="border-radius: 100px; background:#FF6600;font-size: 18px;color: #FFFFFF;width: 64px;">回覆</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>