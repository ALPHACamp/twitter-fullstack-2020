<div class="d-flex flex-row p-auto m-auto">

  {{!-- home bar --}}
  <div class="d-flex flex-column flex-shrink-0 p-3" style="width: 300px;margin:2vw">
    <a class="navbar-brand" href="#"></a>
    <br>
    <br>

    <ul class="nav flex-column p-2" style="position: fixed;">
      <li class="nav-item">
        <a class="nav-link active" href="/tweets" style="color: black;font-weight:800">
          <i class="fas fa-home" style="font-size: x-large;margin-right:15px"></i>
          首頁</a>
      </li>
      <li class="nav-item" style="font-size:large">
        <a class="nav-link" href="/users/self/{{user.id}}" style="color: black;font-weight:800">
          <i class="far fa-user" style="font-size: x-large;margin-right:15px"></i>
          個人資料</a>
      </li>
      <li class="nav-item" style="font-size:large">
        <a class="nav-link" href="#" style="color: black;font-weight:800">
          <i class="fas fa-cog " style="font-size: x-large;margin-right:15px"></i>
          設定</a>
      </li>
      <li class="nav-item" style="font-size:large">
        <button type="submit" class="btn btn-primary btn-lg rounded-pill mt-3" style="width:220px;">推文</button>
      </li>
      <li class="nav-item" style="font-size:large">
        <a href="/signout" class="btn d-flex" style="margin-top:10px;">
          <h5 class="m-2">登出<i class="fas fa-sign-out-alt fa-1x" style="margin:1vw"></i>
          </h5>
        </a>
      </li>
    </ul>
  </div>

  {{!-- middle bar --}}

  <div class="card" style="width: 800px;">

    <div class="row mt-2" style="width: 10%;">
      <a href="" style="color:black" class="col-1 mx-auto" style="margin: auto;">
        <i class="fas fa-arrow-left fa-2x"></i>
      </a>
      <a href="/" class="d-flex align-items-center pb-3 mb-3 link-dark text-decoration-none col-3">
        <span class="fs-5 fw-semibold">{{user.name}}</span>
      </a>
    </div>

    <div class="bg-holder" style="height: 250px;">
      <img src="{{users.bg_img}}" class="card-img-top" alt="..." class="img-fluid" id="bgImage"
        style="height:100%;width:100%;object-fit:cover">
    </div>

    <div class="col" style="position: absolute;"></div>
    <div class="avatar-holder">
      <div class="avator">
        <img src="{{users.img}}" class="rounded-circle" alt="user_Aavtor" height="150px" width="150px"
          style="border:1rem">
      </div>
    </div>

    <div class=" card-body">
      <div class="icon d-flex justify-content-end">
        <a href="mailto:{{users.email}}" class="border rounded-circle m-1" style="color:tomato;">
          <i class="far fa-envelope fa-2x m-2"></i>
          {{#if users.isNoticed}}
        </a>
        <a href="/users/other/noti/{{users.id}}" class="border rounded-circle m-1" style="color:tomato;">
          <i class="fas fa-bell fa-2x m-2"></i>
        </a>
        {{else}}
        <a href="/users/other/noti/{{users.id}}" class="border rounded-circle m-1" style="color:tomato;">
          <i class="far fa-bell fa-2x m-2"></i>
        </a>
        {{/if}}
        <form action="" method="get">
          <botton type="submit" class="btn btn-outline-success rounded-pill m-2">跟隨</botton>
          <botton type="submit" class="btn btn-success rounded-pill m-2">正在跟隨</botton>
        </form>
      </div>

      <div class="card-text">
        <h4><strong>{{users.name}}</strong></h4>
        <small class="text-muted">@users</small>
        <p class="m-2">{{users.description}}
        </p>
      </div>
      <div class="card-text">
        <span class="small">{{followingscount}}個 <small class="text-muted">跟隨中</small></span>
        <span class="small">{{followerscount}}個 <small class="text-muted">跟隨者</small></span>
      </div>

    </div>

    <div class="profile-head">
      <nav>
        <div class="nav nav-tabs" id="nav-tab" role="tablist">

          <a class="nav-link active" id="nav-home-tab" data-bs-toggle="tab" href="#nav-home" role="tab"
            aria-controls="nav-home" aria-selected="true"> 推文 </a>
          <a class="nav-link" id="nav-profile-tab" data-bs-toggle="tab" href="#nav-profile" role="tab"
            aria-controls="nav-profile" aria-selected="false">推文與回覆</a>
          <a class="nav-link" id="nav-contact-tab" data-bs-toggle="tab" href="#nav-contact" role="tab"
            aria-controls="nav-contact" aria-selected="false">喜歡的內容</a>
        </div>
      </nav>
    </div>


    <div class="tab-content" id="nav-tabContent">
      <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
        <ul class="list-group list-group-flush">
          {{#each users.Tweets}}
          <li class="list-group-item">
            <div class="row g-0">

              <div class="col-md-1">
                <a href="/users/other/{{../users.id}}" class="text-center">
                  <img src="{{../users.img}}" alt="" width="75" height="75"
                    class="rounded-circle me-2 rounded mt-2 d-block"> </a>
              </div>
              <div class="col-md-10">
                <div class="card-body" style="margin-left:1vw">
                  <div class="card-title">
                    <span class="card-title h6" style="margin-right:2px">{{../users.name}}</span>
                    <span class="text-muted"> @{{../users.account}}</span>
                    <span class="small text-muted">・{{moment this.createdAt}}</span>
                  </div>
                  <div class="card-text" style="margin-top:1vw">
                    <p class="h6">{{this.content}}</p>
                  </div>
                  <div class="icon d-flex justify-content-between" style="width: 50%;margin-top:1vw">
                    <i class="far fa-comment text-muted small"> {{../Replies}}</i>
                    <i class="far fa-heart text-muted small"> {{../likes}}</i>
                  </div>
                </div>
              </div>

            </div>
          </li>
          {{/each}}
        </ul>
      </div>

      <div class="tab-pane fade" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab">
        <h2>推文與回覆</h2>
      </div>

      <div class="tab-pane fade" id="nav-contact" role="tabpanel" aria-labelledby="nav-contact-tab">

        <ul class="list-group list-group-flush">
          {{#each likeTweets}}
          <li class="list-group-item">
            <div class="row g-0">

              <div class="col-md-1">
                <a href="/users/other/{{this.id}}" class="text-center">
                  <img src="{{this.img}}" alt="" width="75" height="75"
                    class="rounded-circle me-2 rounded mt-2 d-block">
                </a>
              </div>
              <div class="col-md-10">
                <div class="card-body" style="margin-left:1vw">
                  <div class="card-title">
                    <span class="card-title h6" style="margin-right:2px">{{this.name}}</span>
                    <span class="text-muted"> @{{this.account}}</span>
                    <span class="small text-muted">・{{moment this.createdAt}}</span>
                  </div>
                  <div class="card-text" style="margin-top:1vw">
                    <p class="h6">{{this.content}}</p>
                  </div>
                  <div class="icon d-flex justify-content-between" style="width: 50%;margin-top:1vw">
                    <i class="far fa-comment text-muted small"> {{../replyCount}}</i>
                    <i class="far fa-heart text-muted small"> {{this.likes}}</i>
                  </div>
                </div>
              </div>

            </div>
          </li>
          {{/each}}
        </ul>
      </div>
    </div>

  </div>

  {{!-- follower bar --}}

  <div class="d-flex flex-column flex-shrink-0 p-3" style="width: 350px;">
    <div class="card" style="width: 22rem;border:none;position:fixed">
      <ul class="list-group list-group">
        <li class="list-group-item bg-light"
          style="height: 50px;font-size:large;border-left: none;border-right: none;border-top: none">
          跟隨誰
        </li>
        {{#each followship}}
        <li class="list-group-item bg-light" style="border-left: none;border-right: none">
          <div class="row">
            <div class="col-2">
              <a href="/users/other/{{this.id}}" class="text-center">
                <img src="{{this.img}}" alt="" width="65" height="65" class="rounded-circle rounded"> </a>
            </div>

            <div class="col-5" style="margin-top:auto;margin-botton:auto;margin-left:1vw">
              <p>{{this.name}} <br>
                <small class="text-muted"> @{{this.account}}</small>
              </p>
            </div>

            <div class="col-4" style="margin:auto">
              {{#if this.isFollowed}}
              <form action="/followships/{{this.id}}?_method=DELETE" method="POST" style="display: contents;">
                <button type="submit" class="btn btn-success" name="{{user.id}}">正在跟隨</button>
              </form>
              {{else}}
              <form action="/followships/{{this.id}}" method="POST" style="display: contents;">
                <button type="submit" class="btn btn-outline-success" name="{{user.id}}">跟隨</button>
              </form>
              {{/if}}
            </div>
          </div>
        </li>
        {{/each}}
        <li class="list-group-item bg-light" style="border-left: none;border-right: none;border-bottom: none">
          <a href=" /users/{{userId}}/follower" class="bg-light" style="text-decoration: none;color:tomato">顯示更多</a>
        </li>
      </ul>
    </div>
  </div>


</div>