<main class="container">
  <div class="row mt-3">
    {{>sidebar}}
  
  
    <div class="col-md-6" style="border: 1px #E6ECF0 solid; height:1200px;">
      {{!-- {{>message}} --}}
      <div class="m-5">
        <h2><strong>帳戶設定</strong></h2>
      </div>
  
      <hr class="mb-2">
  
      <form class="px-3 border-left mt-5" action="/users/{{user.id}}?_method=PUT" method="POST">
  
        <div class="form-group mt-3" style="height:78px; weight:593px">
          <div style="background-color:#F5F8FA">
            <label for="account" class="ms-3">
              <font color="#696974">帳號</font>
            </label>
            <input type="text" class="form-control" id="account" name="account"
              style="border:none; border-bottom:2px solid #657786; outline: none;background-color:#F5F8FA"
              value="{{user.account}}" />
          </div>
        </div>
  
        <div class="form-group mt-2" style="height:78px; weight:593px">
          <div style="background-color:#F5F8FA">
            <label for="name" class="ms-3">
              <font color="#696974">名稱</font>
            </label>
            <input type="text" class="form-control" id="name" name="name"
              style="border:none; border-bottom:2px solid #657786; outline: none;background-color:#F5F8FA"
              value="{{user.name}}" />
          </div>
        </div>
  
        <div class="form-group mt-2" style="height:78px; weight:593px">
          <div style="background-color:#F5F8FA">
            <label for="email" class="ms-3">
              <font color="#696974">Email</font>
            </label>
            <input type="text" class="form-control" id="email" name="email"
              style="border:none; border-bottom:2px solid #657786; outline: none;background-color:#F5F8FA"
              value="{{user.email}}" />
          </div>
        </div>
  
        <div class="form-group mt-2" style="height:78px; weight:593px">
          <div style="background-color:#F5F8FA">
            <label for="password" class="ms-3">
              <font color="#696974">密碼</font>
            </label>
            <input type="text" class="form-control" id="password" name="password"
              style="border:none; border-bottom:2px solid #657786; outline: none;background-color:#F5F8FA" />
          </div>
        </div>
  
        <div class="form-group mt-2" style="height:78px; weight:593px">
          <div style="background-color:#F5F8FA">
            <label for="passwordCheck" class="ms-3">
              <font color="#696974">密碼再確認</font>
            </label>
            <input type="text" class="form-control" id="passwordCheck" name="passwordCheck"
              style="border:none; border-bottom:2px solid #657786; outline: none;background-color:#F5F8FA" />
          </div>
        </div>
  
  
        <div class="d-flex justify-content-end mt-3">
          <button class="btn btn-primary btn-block"
            style="border-radius:50px; width:88px; height:46px;padding:8px 24px 8px 24px; background-color: #FF6600; border:none"
            type="submit"><strong>
              <font size="4">儲存</font>
            </strong></button>
        </div>
  
      </form>
    </div>
  
  </div>
</main>

