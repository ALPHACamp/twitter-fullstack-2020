<div class="user-homepage">
  {{>leftSideBar user}}
  <div class="central">
    <h4 class="central-title">首頁</h4>
    <form action="/tweets" method="post" class="central-input">
      <div class="central-input-upper">
        <div>
          <a href="/users/{{getId user}}">
            <img src="{{getAvatar user}}" alt="user avatar" class="tweets-img">
          </a>
        </div>
        <input type="text" maxlength="140" placeholder="有什麼新鮮事?" class="user-tweet-input">
      </div>
      <button type="submit">推文</button>
    </form>
    <div class="tweets">
      {{#each sortTweets}}
       {{>tweet this}}
      {{/each}}
    </div>
  </div>
  <div class="rightSideBar" data-userid="{{getId user}}">
    {{>top10Twitter}}
  </div>
</div>