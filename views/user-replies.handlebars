<div class="container-fluid">
  {{> left-content}}
  {{> modal}}

  <div class="main-content">
    <div class="main-title row">
      <a href="/tweets"><img src="/images/icon-back.png" alt=""></a>
      <div class="column">
        <div>{{pageUser.name}}</div>
        <span>{{pageUser.Tweets.length}} 推文</span>
      </div>
    </div>

    <div class="user-page-cover"
      style="background: url({{pageUser.cover}}),#C4C4C4; background-position:center;background-size:cover;">
    </div>

    <div class="user-page-top">
      <div class="avatar"
        style="background: url({{pageUser.avatar}}),#C4C4C4; background-position:center;background-size:cover;"></div>
      <div class="feature-link">
        {{#ifEqual user.id pageUser.id}}
        <button type="button" class="button profile-button" data-toggle="modal"
          data-target="#editProfileModal">編輯個人資訊</button>
        {{else}}
        <div class="icon-circle">
          <i class="fac fa-cus-email"></i>
        </div>
        <div class="icon-circle">
          <i class="fac fa-cus-bells"></i>
        </div>
        {{!-- <div class="icon-circle-fill">
              <i class="fac fa-cus-bells-check"></i>
            </div> --}}
        {{#if pageUser.isFollowed}}
        <form action="/followships/{{pageUser.id}}?_method=DELETE" method="POST">
          <button class="ml-1 mr-2 unfollow-button">正在跟隨</button>
        </form>
        {{else}}
        <form action="/followships/{{pageUser.id}}" method="POST">
          <button class="ml-4 mr-2 follow-button">跟隨</button>
        </form>
        {{/if}}
        {{/ifEqual}}
      </div>
    </div>

    <div class="user-page-imformation">
      <div class="user-name">
        {{pageUser.name}}
      </div>
      <div class="user-account">
        @{{pageUser.account}}
      </div>
      <div class="user-introduction">
        <p>{{pageUser.introduction}}</p>
      </div>
      <div class="user-follow-link">
        <div>
          <a href="/users/{{pageUser.id}}/followers">{{pageUser.Followers.length}}個<span>跟隨者</span></a>
        </div>
        <div>
          <a href="/users/{{pageUser.id}}/followings"> {{pageUser.Followings.length}}位<span>跟隨中</span></a>
        </div>
      </div>
    </div>

    <nav class="user-page-nav navbar-expand-lg navbar-light">
      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav user-navbar">
          <a class="nav-link" href="/users/{{pageUser.id}}/tweets">推文</a>
          <a class="nav-link active" href="#">推文與回覆</a>
          <a class="nav-link" href="/users/{{pageUser.id}}/likes">喜歡的內容</a>
        </div>
      </div>
    </nav>

    <div class="user-page-replies-list w-100">
      {{#each replies}}
      <div class="tweet-box" onclick="location.href='/tweets/{{this.Tweet.id}}'">
        <div class="reply-item">
          <!--推文-->
          <div class="user-page-reply-tweet row">
            <div class="left">
              <div class="avatar"
                style="background: url({{this.Tweet.User.avatar}}),#C4C4C4; background-position:center;background-size:cover;">
              </div>
              <div class="extention-line"></div>
            </div>
            <div class="right">
              <div class="user-name-account">
                <span class="user-name">{{this.Tweet.User.name}}</span><span
                  class="user-account">@{{this.Tweet.User.account}}．{{moment this.Tweet.createdAt}}</span>
              </div>
              <div class="reply-tweet-text">
                {{this.Tweet.description}}
              </div>
            </div>
          </div>
          <!--回覆-->
          <div class="user-page-reply-comment row">
            <div class="left">
              <div class="avatar"
                style="background: url({{../pageUser.avatar}}),#C4C4C4; background-position:center;background-size:cover;">
              </div>
            </div>
            <div class="right">
              <div class="user-name-account">
                <span class="user-name">{{../pageUser.name}}</span><span
                  class="user-account">@{{../pageUser.account}}．{{moment this.createdAt}}</span>
              </div>
              <div class="user-page-reply-comment-text">
                {{this.comment}}
              </div>
            </div>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>

  {{> right-content}}
</div>