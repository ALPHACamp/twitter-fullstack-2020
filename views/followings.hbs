{{!-- test passing --}}
{{#each followings}}
<div>
  <div>
    <a href="/users/{{this.id}}/tweets">
      <img src="{{this.avatar}}" alt="avatar">
      <p>{{this.name}}</p>
    </a>
    {{#if isFollowed}}
    <form action="/followships/{{this.id}}?_method=DELETE" method="POST">
      <button type="submit">正在跟隨</button>
    </form>
    {{else}}
    <form action="/followships" method="POST">
      <button type="submit" name="id" value={{this.id}}>跟隨</button>
    </form>
    {{/if}}
  </div>
  <p>{{this.introduction}}</p>
</div>
{{/each}}
