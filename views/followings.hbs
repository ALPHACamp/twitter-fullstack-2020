{{!-- {{> messages}} --}}
<div class="d-flex" style="height: 1200px;width:1400px;margin: 0 auto;">
  <div style="height: 1200px;width:332px">
    <div id="left-section">
      <img id="logo" src="/images/icons/logo.png">
      <ul id="left-navs" class="nav flex-column">
        <li class="nav-item">
          <a href="/tweet" class="nav-item-content">
            <img src="/images/icons/outlined-home.png" class="base-icon">
            <span class="word">首頁</span>
          </a>
        </li>
        <li class="nav-item">
          <a href="/users/{{user.id}}/tweets" class="nav-item-content">
            <img src="/images/icons/outlined-user.png" class="base-icon">
            <span class="word">個人資料</span>
          </a>
        </li>
        <li class="nav-item">
          <a href="/settings" class="nav-item-content">
            <img src="/images/icons/outlined-cog.png" class="base-icon">
            <span class="word">設定</span>
          </a>
        </li>
        <li class="nav-item d-flex justify-content-center" style="height: 46px;">
          <button type="button" class="btn btn-primary"
            style="border-radius:50px; width:100%; background:#FF6600; border-color:#FF6600;font-size:20px;font-weight:400"
            data-bs-toggle="modal" data-bs-target="#post-modal">推文</button>
        </li>
      </ul>
      <div id="logout">
        <a href="/logout" style="margin-top:1.585vh; text-decoration: none; align-items: center; display:flex">
          <img src="/images/icons/outlined-logout.png" style="height:24px; margin-left:16px;">
          <span style="margin-left:16px; font-weight:700; font-size:18px; color:#44444F">登出</span>
        </a>
      </div>
    </div>
  </div>

  <div class="d-flex flex-column" style="width:641px; border-left: 1px solid #e6ecf0; border-right: 1px solid #e6ecf0">
    {{!-- header --}}
    <div class="d-flex" style="height:74px;border-bottom: 1px solid #e6ecf0;">
      <a href="javascript:history.back()">
        <img src="/images/icons/outlined-back.png" style="height:24px; margin-top:24px; margin-left:28px">
      </a>
      <div class="d-flex flex-column" style="margin-left:19px;margin-top: 16px;margin-bottom: 0;">
        <span style="line-height: 26px; font-weight:700; font-size:18px">John Doe</span>
        <span style="line-height: 19px; font-weight:500; font-size:13px;margin-bottom: 16px;">25 推文</span>
      </div>
    </div>
    {{!-- tab --}}
    <div class="following-tab" style="height: 52px; width: 639px;margin-top: 0;">
      <ul class="nav nav-tabs">
        <li class="nav-item">
          <a class="nav-link {{#ifCond route " followings"}}active{{/ifCond}}" href="/users/followings">追隨者</a>
        </li>
        <li class="nav-item">
          <a class="nav-link {{#ifCond route " followers"}}active{{/ifCond}}" href="/users/followers">正在追隨</a>
        </li>
      </ul>
    </div>
    {{!-- users --}}
    <div class="d-flex flex-column" style="width: 641px;">
      <div id="single-follow-user">
        <div id="d-flex single-user">
          <div class="d-flex tweet">
            <div class="d-flex" style="padding: 0;width: 641px;height: 143px;border-bottom: 1px solid #e6ecf0;">
              <div id="follow-icon">
                <a href="#">
                  <img src="images/icons/logo2.png" alt="" width="50px" height="50px" class="rounded-circle" />
                </a>
              </div>
              <div id="follow-user-top">
                <a href="#">
                  <div class="d-flex justify-content-between follow-user-name"
                    style="width: 530px;height: 40px;font-weight: 700;font-size: 16px;line-height: 26px;color: #171725;margin-top: 7px;">Apple
                    <span>
                      <form action="#" method="POST">
                        <button type="submit" class="following-user-btn">正在跟隨</button>
                      </form>
                    </span>
                  </div>
                </a>
                <div style="width: 528px;margin: 8px 30px 16px 0;">
                  <p id="follow-user-info">
                    Nulla Lorem mollit cupidatat irure. Laborum magna nulla duis ullamco cillum dolor. Voluptate exercitation incididunt
                    aliquip deserunt reprehenderit elit laborum.
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="d-flex flex-column" style="width: 641px;">
      <div id="single-follow-user">
        <div id="d-flex single-user">
          <div class="d-flex tweet">
            <div class="d-flex" style="padding: 0;width: 641px;height: 143px;border-bottom: 1px solid #e6ecf0;">
              <div id="follow-icon">
                <a href="#">
                  <img src="images/icons/logo2.png" alt="" width="50px" height="50px" class="rounded-circle" />
                </a>
              </div>
              <div id="follow-user-top">
                <a href="#">
                  <div class="d-flex justify-content-between follow-user-name"
                    style="width: 530px;height: 40px;font-weight: 700;font-size: 16px;line-height: 26px;color: #171725;margin-top: 7px;">
                    Apple
                    <span>
                      <form action="#" method="POST">
                        <button type="submit" class="nofollow-user-btn">跟隨</button>
                      </form>
                    </span>
                  </div>
                </a>
                <div style="width: 528px;margin: 8px 30px 16px 0;">
                  <p id="follow-user-info">
                    Nulla Lorem mollit cupidatat irure. Laborum magna nulla duis ullamco cillum dolor. Voluptate
                    exercitation incididunt
                    aliquip deserunt reprehenderit elit laborum.
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  {{>popular}}
</div>
