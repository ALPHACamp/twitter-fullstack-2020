<div class="row">

  <div class="col-md-8">
    <div class="" style="">
      <img class="rounded-top" src="{{user.cover}}" style="width:100%; height: 200px;">
    </div>
    <div class="row">
      <div class="col-md-8 mb-4 ">
        <img class="rounded-circle" src="{{user.avatar}}" style="width:50%; margin-top:-60px;">
      </div>
      <div class="col-md-4 d-flex align-items-center">
        <a class="btn btn-primary" href="/api/users/{{user.id}}/edit">
          編輯個人資料
        </a>
      </div>
    </div>
    <h6>{{user.name}}</h6>
    <small>{{user.email}}</small>
    <p>{{user.introduction}}</p>
    <p>?個跟隨中 ?位跟隨者</p>

    <ul class="nav nav-tabs bt-4">
      <li class="nav-item">
        <a class="nav-link active" href="/">推文</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/">推文與回覆</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/">喜歡的內容</a>
      </li>
    </ul>
    <br />
    <br />
    <div class="row">
      {{!-- {{#each tweets}}

      {{/each}} --}}
    </div>
  </div>

  {{!-- Top 10 user list --}}
  <div class="col-md-4">
    <ul class="list-group">
      <li class="list-group-item">跟隨誰</li>
      {{#each users}}
      <li class="list-group-item">
        <div class="row">
          <div class="col-3">
            <a href="/api/users/{{this.id}}">
              <img class="rounded-circle w-100" src="{{this.avatar}}" />
            </a>
          </div>
          <div class="col-4">
            <p>{{this.name}}</p>
          </div>
          <div class="col-4">
            {{#if this.isFollowed }}
            <form action="/followships/{{this.id}}?_method=DELETE" method="POST" style="display: contents;"><button
                type="submit" class="btn btn-secondary">取消跟隨</button></form>
            {{else}}
            <form action="/followships/{{this.id}}" method="POST" style="display: contents;"><button type="submit"
                class="btn btn-primary">跟隨</button></form>
            {{/if}}
          </div>
        </div>
      </li>
      {{/each}}
      <li class="list-group-item">
        <a class="link" href="/users/:id/followings">顯示更多</a>
      </li>
    </ul>
  </div>
  <hr>
</div>
<br />
<br />