<div class="row justify-content-center">
  <div class="col">
    {{>columnLeft}}
  </div>
  {{>modalPost}}
  {{>modalIndex}}
  {{>modalProfile}}
  <div class="profile-container">
    <div class="mainpost-nav">
      <div class="row justify-content-start">
        <div class="col1"><i class="bi bi-arrow-left nav-bold"></i></div>
        <div class="col2">
          <p class="nav-bold">{{profile.name}}</p><small>{{tweetsCount}}推文</small>
        </div>
      </div>
    </div>
    {{>upperCenter ppChoice=true}}
    <div class="col flex-direction-column">
      <!--start::list of 推文-->
      {{#if isPost}}
      {{#each tweets}}
      <div class="post">
        <div class="post-card1">
          <div class="avatar profile-avatar"><img src="{{../profile.avatar}}" alt="avatar-img" /></div>
        </div>
        <div class="post-card2">
          <h5 class="d-inline-block">{{../profile.name}}&nbsp;<span class="post-sub-info">{{../profile.account}}
              &#x2027;
              {{moment this.createdAt}}</span></h5>
          <p>{{this.description}}</p>
          <p class="post-sub-info"><span class="post-icon-block"><i class="bi bi-chat"></i>{{ReplyCount}}</span><span
              class="post-icon-block"><i class="bi bi-heart"></i>{{LikedCount}}</span></p>
        </div>
      </div>
      {{/each}}
      {{/if}}
      <!--end::list of 推文-->
      <!--start::comment-->
      {{#if isComment}}
      {{#each profile.Replies}}
      <div class="col-12 flex-direction-column">
        <div class="post">
          <div class="post-card1">
            <div class="avatar profile-avatar"><img src="{{../profile.avatar}}" alt="avatar-img" /></div>
          </div>
          <div class="post-card2">
            <h5 class="d-inline-block profile-nav-header post-title">{{../profile.name}}&nbsp;<span
                class="post-sub-info">{{../profile.account}}
                &#x2027; {{moment this.createdAt}}</span></h5>
            {{!-- <p>Lorem ipsum dolor sit, amet consectetur adipisicing elit.</p> --}}
            <span class="post-sub-info">回覆 <span class="orange-text">{{this.Tweet.User.account}}</span></span>
            <p>{{this.comment}}</p>
          </div>
        </div>
      </div>
      {{/each}}
      {{/if}}
      <!--start::comment-->
      <!--start::list of 喜歡的內容-->
      {{#if isLikedPosts}}
      {{#each tweets}}
      <div class="post">
        <div class="post-card1">
          <div class="avatar profile-avatar"><img src="{{this.Tweet.User.avatar}}" alt="avatar-img" /></div>
        </div>
        <div class="post-card2">
          <h5 class="d-inline-block">{{this.Tweet.User.name}}&nbsp;<span class="post-sub-info">@{{this.Tweet.User.account}} &#x2027;
              {{moment this.createdAt}}</span></h5>
          <p>
            {{this.Tweet.description}}
          </p>

          <h3 class="post-sub-info">
            <span class="post-icon-block">
              <button id="myInput" data-bs-toggle="modal" data-bs-target="#postModel" class="heart-button btn">
                <i class="bi bi-chat"></i>{{this.ReplyCount}}
                </button>
            </span>
            <span class="post-icon-block">              
              <form action="posts/{{this.id}}/like?_method=PUT" method="POST" class="heart-form">                
                 <button type="submit" class="bi bi-heart-fill btn"></button><span class="likedText">{{this.LikedCount}}</span>
              </form>
            </span>
          </h3>

        </div>
      </div>
      {{/each}}
      {{/if}}
      <!--end::list of 推文-->

      <!--end::list of 推文-->

    </div>
  </div>

  <div class="col">
    {{>columnRight}}
  </div>
</div>