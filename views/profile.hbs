<div class="card my-3 mx-auto" style="max-width: 540px;">
  <div class="row no-gutters">
    <div class="col-4">
      <img src="{{#if user.image}}{{user.image}}{{else}}https://i.imgur.com/TmLy5dw.png{{/if}}"
        style="width: 150px; height: 150px">
    </div>
    <div class="col-8 d-flex align-items-center">
      <div class="card-body d-flex justify-content-between align-items-center">
        <div>
          <h5 class="card-title">{{user.name}}</h5>
          <p class="card-text">{{user.email}}</p>
          <p><strong>{{user.Comments.length}}</strong> 已評論餐廳</p>
          <p><strong>{{user.FavoritedRestaurants.length}}</strong> 收藏的餐廳</p>
          <p><strong>{{user.Followings.length}}</strong> followings</p>
          <p><strong>{{user.Followers.length}}</strong> followers</p>
        </div>
        {{#ifCond this.id ../userId}}
        <div class="pr-2">
          <a href="/users/{{ user.id }}/edit" class="btn btn-primary">Edit</a>
        </div>
        {{/ifCond}}
      </div>
    </div>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-4">
    <div class="card ">
      <div class="card-header">
        <p class="m-0"><strong>{{user.Followings.length}}</strong> followings</p>
      </div>
      <div class="card-body d-flex">
        {{#each user.Followings}}
        <div class="media">
          <a href="/users/{{this.id}}"><img src="{{this.image}}" class="mr-3" alt="..." style="width: 64px;"></a>
        </div>
        {{/each}}
      </div>
    </div>
  </div>

  <div class="col-md-8">
    <div class="card ">
      <div class="card-header">
        <p class="m-0"><strong>{{user.Comments.length}}</strong> 已評論餐廳</p>
      </div>
      <div class="card-body d-flex">
        {{#each user.Comments}}
        <div class="media">
          <a href="/restaurants/{{this.Restaurant.id}}"><img src="{{this.Restaurant.image}}" class="mr-3" alt="..."
              style="width: 64px;"></a>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>

