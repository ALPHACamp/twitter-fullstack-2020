<div class="col-3"></div>
<div class="col-6">
    {{> msg}}
    <div class="card row mb-2">
        <ul class="list-group list-group-flush ">
            <li class="list-group-item"><strong>
                    <h4>首頁</h4>
                </strong></li>
            <li class="list-group-item">
                <form action="/tweets" method="POST">
                    <div class="row mt-3">
                        <div class="col-2">
                            <img class="rounded-circle" src="{{user.avatar}}" alt="" width="50px" height="50px">
                        </div>
                        <div class="col-10">
                            <textarea name="description" id="description" 
                                style="resize:none; border: 0px;" placeholder="推你的回覆"></textarea>
                        </div>
                    </div>
                    <div class="d-flex justify-content-end">
                        <button class="btn btn-primary rounded-pill" type="submit">推文</button>
                    </div>
                </form>
            </li>
        </ul>
    </div>
    {{> tweets}}
</div>
<div class="col-3"></div>