<div class="row d-flex justify-content-start">
  {{!-- header --}}
  <div class="col-8" style="outline: 1px solid #E6ECF0;">
    <div class="row">
      <a href="/tweets" class="btn d-flex my-2">
        <h4 class="navbar-brand mb-0">首頁</h4>
      </a>
      <hr>
    </div>
    {{!-- tweet --}}
    <div class="row my-2 d-flex justify-content-between">
      <div class="col-2 d-flex flex-row-reverse">
        <img src="{{user.avatar}}" alt="avatar" style="height: 50px ;width: 50px; border-radius: 50px;">
      </div>
      <div class="col-10" data-bs-toggle="modal" data-bs-target="#tweetModal">
        <h5 class="mt-3" style="color: #6C757D;">有什麼新鮮事？</h5>
        <div class="d-flex flex-row-reverse mt-3 mx-3">
          <button type="submit" class="text-white fw-bold"
            style="height: 40px; width:64px; border-radius: 50px; background: #FF6600; border:#FF6600;">推文</button>
        </div>
      </div>
    </div>
    {{!-- line --}}
    <div class="mt-2" style="height: 10px; width: 651px; background: #E6ECF0; position: relative; left: -12px "></div>
    {{!-- tweets --}}
    {{#each tweets}} 
    <div class="row mt-2">
      <div class="col-2 d-flex flex-row-reverse">
        <img src="{{this.User.avatar}}" alt="avatar" style="height: 50px ;width: 50px; border-radius: 50px;"> 
      </div>
      <div class="col-10">
        <div class="d-flex flex-row align-items-center">
          <p style="font-size: 16px; margin: 0 0;">{{this.User.name}}</p>
          <p style="font-size: 14px; margin: 0 8px; color: #6C757D;">@{{this.User.account}}．{{relativeTimeFromNow this.createdAt}}</p> 
        </div>
        <a href="/tweets/{{this.userId}}" style="color:#000000;text-decoration: none"> 
          <div class="mt-2">
            <p>{{this.description}}</p> 
          </div>
        </a>
        <div>
          <i class="far fa-comment me-3">
            <span class="ms-2">666</span> {{! tweet's replies (pending)}}
          </i>
          <i class="far fa-heart mx-3">
            <span class="ms-2">777</span> {{! tweet's likes (pending)}}
          </i>
        </div>
      </div>
      <hr class="mt-3">
    </div>
    {{/each}}
  </div>

  {{!-- 追隨者Top10 的使用者 --}}
  <div class="container col-3 mt-2 mx-3" style="padding: 0 0;width: 250px;">
    <div class="bg-light">
      <div class="container d-flex align-items-center mt-3">
        <h4 class="fw-bold mt-4">跟隨誰</h4>
      </div>
      <div class="mt-3" style="height: 1px; width: auto; border-radius: 0px; background: #E6ECF0;"></div>

      {{#each users}}
      <div class="d-flex flex-row align-items-center mt-2 py-2">
        <div class="d-flex align-items-center mx-0">
          <img src="{{this.avatar}}" alt="avatar" style="height: 40px ;width: 40px; border-radius: 50px;">
        </div>
        <div class="mx-2">
          <p class="fw-bold" style="font-size: 16px; margin: 0 0;">{{this.name}}</p>
          <p class="text-muted" style="font-size: 14px; margin: 0 0;">{{this.account}}</p>
        </div>
        <div class="d-flex align-items-center">
          {{#if this.isFollowed }}
          <form action="/followships/{{this.id}}_method=DELETE" method="POST" style="display: contents;">
            <button type="submit" class="text-white"
              style="margin: 0 0; height: 40px; width: 96px; left: 0px; top: 0px; border-radius: 50px; padding: 8px, 16px, 8px, 16px; background: #FF6600; border:#E6ECF0">正在跟隨</button>
          </form>
          {{else}}
          <form action="/followships" method="POST" style="display: contents;">
            <button type="submit" class="ms-3"
              style="color:#FF6600; margin: 0 0; height: 40px; width: 76px; left: 0px; top: 0px; border-radius: 50px; padding: 8px, 16px, 8px, 16px; background:white; border:#FF6600; border-width:1px; border-style:solid;">跟隨</button>
          </form>
          {{/if}}
        </div>
      </div>
      {{!-- <div class="d-flex flex-row align-items-center mt-2 py-2">
        <div class="d-flex align-items-center mx-0">
          <img src="/images/logo.png" alt="avatar" style="height: 40px ;width: 40px;">
        </div>
        <div class="mx-2">
          <p class="fw-bold" style="font-size: 16px; margin: 0 0;">User Name</p>
          <p class="text-muted" style="font-size: 14px; margin: 0 0;">@account</p>
        </div>
        <div class="d-flex align-items-center">
          {{#if isFavorited }}
          <form action="/followships" method="POST" style="display: contents;">
            <button type="submit" class="ms-3"
              style="color:#FF6600; margin: 0 0; height: 40px; width: 76px; left: 0px; top: 0px; border-radius: 50px; padding: 8px, 16px, 8px, 16px; background:white; border:#FF6600; border-width:1px; border-style:solid;">跟隨</button>
          </form>
          {{else}}
          <form action="/followships/:userId?_method=DELETE" method="POST" style="display: contents;">
            <button type="submit" class="text-white"
              style="margin: 0 0; height: 40px; width: 96px; left: 0px; top: 0px; border-radius: 50px; padding: 8px, 16px, 8px, 16px; background: #FF6600; border:#E6ECF0">正在跟隨</button>
          </form>
  
          {{/if}}
        </div>
      </div> --}}
      {{/each}}
    </div>
  </div>
</div>

{{!-- tweets modal --}}
<div class="modal fade" id="tweetModal" tabindex="-1" aria-labelledby="tweetModalLabel" aria-hidden="true">
  <div class="modal-dialog" style="max-width: 600px">
    <div class="modal-content" style="border-radius: 15px">
      <button type="button" class="btn-close" data-dismiss="modal" aria-label="Close"
        style="margin: 15px 0px 0px 15px;"></button>
      <hr>

      <form action="/tweets" method="POST">
        <div class="row" style="">
          <div class="col-2 ms-3" style="width: 60px;">
            <a href="/users/:id">
              <img src="/images/logo.png" alt="avatar" style="height: 50px ;width: 50px; border-radius: 50%;">
            </a>
          </div>
          <div class="col-9 mb-3 ">
            <textarea type="text" class="form-control" id="tweetModal" name="tweet" rows="5" placeholder="有什麼新鮮事？"
              style="width: 480px; border: none; background-color: white; word-wrap: break-word;"></textarea>
          </div>
        </div>
      </form>

      <div class="d-flex flex-row-reverse me-3 mb-3">
        <button type="submit" class="btn btn-primary" id="modal-send-button"
          style="height: 40px; width: 64px; border-radius: 50px; background: #FF6600;">推文</button>
      </div>

    </div>
  </div>
</div>

{{!-- reply modal --}}
<div class="modal fade" id="replyModal" tabindex="-1" aria-labelledby="replyModalLabel" aria-hidden="true">
  <div class="modal-dialog" style="max-width: 600px">
    <div class="modal-content" style="border-radius: 15px">
      <button type="button" class="btn-close" data-dismiss="modal" aria-label="Close"
        style="margin: 15px 0px 0px 15px;"></button>
      <hr>

      <form action="/tweets" method="POST">
        <div class="row" style="">
          <div class="col-2 ms-3" style="width: 60px;">
            <a href="/users/:id">
              <img src="/images/logo.png" alt="avatar" style="height: 50px ;width: 50px; border-radius: 50%;">
            </a>
          </div>
          <div class="col-9 mb-3 ">
            <textarea type="text" class="form-control" id="replyModal" name="reply" rows="5" placeholder="有什麼新鮮事？"
              style="width: 480px; border: none; background-color: white; word-wrap: break-word;"></textarea>
          </div>
        </div>
      </form>

      <div class="d-flex flex-row-reverse me-3 mb-3">
        <button type="submit" class="btn btn-primary" id="modal-send-button"
          style="height: 40px; width: 64px; border-radius: 50px; background: #FF6600;">推文</button>
      </div>

    </div>
  </div>
</div>