    <div class="col-6 mt-2 border-right">
      <div class="row row-cols-1">
        <div class="col">
          <a href="/tweets">首頁</a>
        </div>
        <form action="/tweets" method="POST">
          <div class="col mt-2 border-top">
            <div class="input-group mb-3">
              <a href="/api/users/{{user.id}}">
                <img class="mt-2" style="width: 50px;height: 50px;left: 393px;top: 63px;border-radius: 50%;margin-right: 8px;" src="{{user.avatar}}" />
              </a>
              <input style="display: inline;border-radius: 100px;" type="text" class="form-control mt-3 border-0" placeholder="有甚麼新鮮事" name="description" id="description" value="{{tweets.description}}">
            </div>
            <div class="d-flex flex-row-reverse bd-highlight">
            <button style="border-radius: 100px" type="submit" class="btn btn-primary">推文</button>
            </div>
          </div>
        </form>
      </div>
      <!-- Modal -->
      <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <form action="/tweets" method="POST">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">有甚麼新鮮事</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                <img style="width: 50px;height: 50px;left: 393px;top: 63px;border-radius: 50%;margin-right: 8px;" src="https://loremflickr.com/320/240?random=1" />
                <input class="form-control border-0" type="text" name="description" id="description" placeholder="有甚麼新鮮事" style="width: 400px;display: inline;border-radius: 100px;"></input>
              </div>
              <div class="modal-footer">
                <button type="submit" class="btn btn-primary" style="border-radius: 100px">推文</button>
              </div>
            </div>
          </div>
        </form>
      </div>
      <div class="row mt-3 ">
        <div class="col">
          {{#each tweets}}
            <div class="border-top">
              <h6 class="card-title">
                <a href="/api/users/{{this.UserId}}">
                  <img class="mt-2" style="width: 50px;height: 50px;left: 393px;top: 63px;border-radius: 50%;margin-right: 8px;" src="{{this.User.avatar}}" />
                  {{this.User.name}}
                </a> 
                <small class="text-muted">{{this.User.account}} ◆ {{moment this.createdAt}}</small>
              </h6>
            </div>
            <div class="text-break" style="display: inline;">
              <a href="/tweets/{{this.id}}">
                <p class="card-text">{{this.description}}</p>
              </a>
              <p class="card-text">
                <div class="row justify-content-around">
                  <div class="col">
                    <small class="text-muted">
                      <i class="far fa-comment"> {{this.Replies.length}}</i>
                    </small>
                  </div>
                  <div class="col">
                    <small class="text-muted">
                      <i class="far fa-heart" style="color: red;"> {{this.LikedUsers.length}}</i>
                    </small>
                  </div>
                </div>
              </p>
            </div>
          {{/each}}
        </div>
      </div>
    </div>
    <div class="col-3 md-4">
      <ul class="list-group">
      <li class="list-group-item">跟隨誰</li>
      {{#each users}}
      <li class="list-group-item">
        <div class="row">
          <div class="col-3">
            <a href="/api/users/{{this.id}}">
              <img class="rounded-circle w-100" src="{{this.avatar}}" />
            </a>
          </div>
          <div class="col-4">
            <p>{{this.name}}</p>
          </div>
          <div class="col-4">
            {{#ifNotCond ../loginUserId this.id}}
            {{#if this.isFollowed }}
            <form action="/followships/{{this.id}}?_method=DELETE" method="POST" style="display: contents;"><button
                type="submit" class="btn btn-primary" style="font-size:1px; margin:0px; padding:1px;">正在跟隨</button>
            </form>
            {{else}}
            <form action="/followships/{{this.id}}" method="POST" style="display: contents;"><button type="submit"
                class="btn btn-outline-primary" style="font-size:1px; margin:0px; padding:1px;">跟隨</button></form>
            {{/if}}
            {{/ifNotCond}}
          </div>
        </div>
      </li>
      {{/each}}
      <li class="list-group-item">
        <a class="link" href="/users/{{user.id}}/followers">顯示更多</a>
      </li>
    </ul>
    </div>
  </div>
