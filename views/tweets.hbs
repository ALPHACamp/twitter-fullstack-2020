<div class="container">
  <div class="row">
    <div class="col-3 mt-2 border-right ">
      <img style="width: 50px;height: 50PX;left: 103px;top: 4px;" src="https://i.imgur.com/5wAep0e.png" alt="">
        <nav class="nav flex-column">
          <div class="row row-cols-1">
            <div class="col mt-4">
              <i class="fas fa-home fa-2x"></i>
              <a class="nav-link active" style="display: inline;" href="/tweets">
                <h4 style="display: inline;">首頁</h4>
              </a>
            </div>
            <div class="col mt-4">
              <i class="fas fa-user fa-2x"></i>
              <a class="nav-link" style="display: inline;" href="/users/{{user.id}}">
                <h4 style="display: inline;">個人資料</h4>
              </a>
            </div>
            <div class="col mt-4">
              <i class="fas fa-cog fa-2x"></i>
              <a class="nav-link" style="display: inline;" href="#">
                <h4 style="display: inline;">設定</h4>
              </a>
            </div>
            <div class="col mt-4">
              <a class="nav-link" href="#">
                <button style="border-radius: 100px;" type="button" class="btn btn-primary btn-block" data-toggle="modal" data-target="#exampleModal">推文</button>
              </a>
            </div>
            <div class="col mt-4">
              <i class="fas fa-sign-out-alt fa-2x"></i>
              <a class="nav-link" style="display: inline;" href="#">
                <h4 style="display: inline;">登出</h4>
              </a>
            </div>
          </div>
        </nav>
    </div>
    <div class="col-6 mt-2 border-right">
      <div class="row row-cols-1">
        <div class="col">
          <a href="/tweets">首頁</a>
        </div>
        <form action="/tweets" method="POST">
          <div class="col mt-2 border-top">
            <div class="input-group mb-3">
              <a href="/users/{{user.id}}">
                <img class="mt-2" style="width: 50px;height: 50px;left: 393px;top: 63px;border-radius: 50%;margin-right: 8px;" src="https://loremflickr.com/320/240?random=1" />
              </a>
              <input style="display: inline;border-radius: 100px;" type="text" class="form-control mt-3 border-0" placeholder="有甚麼新鮮事" name="description" id="description" value="{{tweets.description}}">
            </div>
            <button style="border-radius: 100px" type="submit" class="btn btn-primary">推文</button>
          </div>
        </form>
      </div>
      <!-- Modal -->
      <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <form action="/tweets" method="POST">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">有甚麼新鮮事</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                <img style="width: 50px;height: 50px;left: 393px;top: 63px;border-radius: 50%;margin-right: 8px;" src="https://loremflickr.com/320/240?random=1" />
                <input class="form-control border-0" type="text" name="description" id="description" placeholder="有甚麼新鮮事" style="width: 400px;display: inline;border-radius: 100px;"></input>
              </div>
              <div class="modal-footer">
                <button type="submit" class="btn btn-primary" style="border-radius: 100px">推文</button>
              </div>
            </div>
          </div>
        </form>
      </div>
      <div class="row mt-3 ">
        <div class="col">
          {{#each tweets}}
            <div class="border-top">
              <h6 class="card-title">
                <a href="/users/{{user.id}}">
                  <img class="mt-2" style="width: 50px;height: 50px;left: 393px;top: 63px;border-radius: 50%;margin-right: 8px;" src="https://loremflickr.com/320/240?random=1" />
                  this.name
                </a> 
                <small class="text-muted">@帳號。{{moment this.createdAt}}</small>
              </h6>
            </div>
            <div class="text-break" style="display: inline;">
              <a href="/tweets/{{this.id}}">
                <p class="card-text">{{this.description}}</p>
              </a>
              <p class="card-text">
                <div class="row justify-content-around">
                  <div class="col">
                    <small class="text-muted">
                      <i class="far fa-comment"> {{this.Replies.length}}</i>
                    </small>
                  </div>
                  <div class="col">
                    <small class="text-muted">
                      <i class="far fa-heart"> {{this.likedUsers.length}}</i>
                    </small>
                  </div>
                </div>
              </p>
            </div>
          {{/each}}
        </div>
      </div>
    </div>
    <div class="col-3">
      跟隨誰
    </div>
  </div>
</div>

