<div class="container">
  <div class="card">
    <div class="border-bottom">
      {{> nav}}
    </div>
    <div class="card-body">
      <div class="media">
        <img src="https://fakeimg.pl/64/" class="mr-3 rounded-circle" alt="...">
        <div class="media-body">
          <form action="/tweets" method="post" class="needs-validation" novalidate>
            <textarea class="w-100 form-control" name="description" id="description" rows="3" cols="10"
              style="resize: none" placeholder="有什麼新鮮事?" required></textarea>
            <div class="invalid-feedback">
              推文不得為空
            </div>
            <div class="text-right mt-2">
              <button type="submit" class="btn btn-primary rounded">推文</button>
            </div>
          </form>
        </div>
      </div>

    </div>
  </div>

  {{!-- tweets --}}
  <div class="mt-3">
    {{#each tweets}}
    {{> tweetList isUserPage=../isUserPage}}
    {{/each}}
  </div>
</div>