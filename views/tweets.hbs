<div class="container">
  <div class="card">
    <div class="border-bottom">
      {{> nav}}
    </div>
    <div class="card-body">
      <div class="media">
        <img src="https://fakeimg.pl/64/" class="mr-3 rounded-circle" alt="...">
        <div class="media-body">
          <form action="/tweets/new" method="post">
            <textarea class="w-100 border-0 form-control" name="tweet" id="tweet" rows="3" cols="10"
              style="resize: none" placeholder="有什麼新鮮事?"></textarea>
          </form>
        </div>
      </div>
      <div class="text-right mt-2">
        <button class="btn btn-primary rounded">推文</button>
      </div>
    </div>
  </div>

  {{!-- tweets --}}
  <div class="mt-3">
    {{#each tweets}}
    {{> tweetList isUserPage=../isUserPage}}
    {{/each}}
  </div>
</div>