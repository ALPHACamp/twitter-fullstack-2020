<div class="wrapper d-flex">

  {{>left-content}}

  <div class="container"
    style="margin:0px; padding:0px;  border-left: 1px solid rgb(209, 203, 203); border-right: 1px solid rgb(209, 203, 203); max-width:90%;">
    <div>
      <h4 class="fw-bold" style="padding:15px; border-bottom:1px solid rgb(209, 203, 203)"><a href="/tweets"
          style="text-decoration: none; color: inherit;">首頁</a></h4>
      <div class="mb-3" style="border-bottom:8px solid rgb(209, 203, 203)">
        <label for="exampleFormControlTextarea1" class="form-label"></label>
        <img src="{{user.avatar}}" alt="avatar" style="position:relative;">
        <textarea class="form-control" placeholder="有什麼新鮮事 ?" style="height:100px; resize: none;"></textarea>
        {{!-- todo: 跳出modal --}}
        <h4>
          <a href="/tweets/modal" class="badge rounded-pill text-bg-warning"
            style="text-decoration: none; color: #FFFFFF; background: #FF6600; border-radius: 50px;">推文</a>
        </h4>
      </div>
      <table class="table align-middle">
        <tbody>
          {{#each tweets}}
          <tr>
            <td>icon</td>
            <td>使用者名稱{{user.name}}
              <small>@帳號{{user.account}}．{{relativeTimeFromNow this.createdAt}}</small>
              <p>{{this.description}}</p>
              <div>
                <small>{{replies.length}}xx回應</small>
                <small>{{likes.length}}xx喜歡</small>
              </div>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>

  {{>right-content}}

</div>