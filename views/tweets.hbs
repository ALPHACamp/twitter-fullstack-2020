{{> leftbar}}

<div class="middle right-line-2 left-line-2">
  <div>
    <p class="middle-title">首頁</p>
  </div>
  <div class="tweetbox top-line-2 rel">
    <form action="/tweets" method="POST">
      <img class="avatar-img m16-8-0-27 fl" src="/images/avatar@2x.png" alt="">
      <span>
        <textarea class="modal-input-tweets mt-3" type="description" name="description" id="description" cols="30"
          rows="10" placeholder="有什麼新鮮事?" maxlength="140" required></textarea>
        <input type="hidden" name="UserId" value="{{tweets.User.id}}" />
      </span>
      <button class="tweetbtn-s abs" type="submit">推文</button>
    </form>
  </div>
  <div class="bottom-line-16 m-0 p-0"></div>

  {{#each tweets}}
  {{!-- 推文 start--}}
  <div>
    <div class="fl">
      <a href="/users/{{this.User.id}}"><img class="ac-img" src="/images/img@2x.png" alt=""></a>
    </div>
        <div class="tweet-flow-text fl" onclick="location.href='/tweets/{{this.id}}/replies';">
      <a href="/users/{{this.User.id}}" class="text-decoration-n">
        <span class="twitterbox-name">{{this.User.name}}</span>
      </a>
      <span class="twitterbox-time">@{{this.User.name}} ‧ {{relativetimeFromNNow this.createdAt}} </span>
      <p class="twitterbox-text">
        {{this.description}}
      </p>
      <span class="twitterbox-time mx-40"><img class="tweet-flow-img" src="/images/reply@2x.png" alt=""data-bs-target="#replyBackdrop" data-bs-toggle="modal">13</span>

      {{!-- isLiked --}}
      {{#if isLiked}}
      <form action="/tweets/{{this.id}}/unlike" method="POST" style="display: contents;">
        <span class="twitterbox-time">
          <button type="submit" class="btn">
            <img class="tweet-flow-img" src="/images/like@2x.png" alt="">
            {{this.Likes.length}}
          </button>
        </span>
      </form>
      {{else}}
      <form action="/tweets/{{this.id}}/like" method="POST" style="display: contents;">
        <span class="twitterbox-time">
          <button type="submit" class="btn">
            <img class="tweet-flow-img" src="/images/unlike@2x.png" alt="">
            {{this.Likes.length}}
          </button>
        </span>
      </form>
      {{/if}}

      <div class="bottom-line-f"></div>
    </div>
  </div>
  {{!-- 推文 end--}}
  <!-- Reply Modal -->
  <div class="modal fade" id="replyBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
    aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content" style="height:500px">
        <div class="modal-header">
          <div class=" fl">
            <button type="button font-color-or" class="btn-close btn-close-re" data-bs-dismiss="modal"
              aria-label="Close"></button>
          </div>
        </div>
        <div class="modal-body">
          {{!-- 要留言的推文 --}}
          {{!-- 留言 start--}}
          <div class="d-flex">
            <div>
              <a href="/users/{{this.User.id}}"><img class="ac-img" src="/images/img@2x.png" alt=""></a>
            </div>
            <div class="tweet-flow-text fl">
              <a href="/users/{{this.User.id}}" class="text-decoration-n">
                <span class="twitterbox-name">{{this.User.name}}</span>
              </a>
              <span class="twitterbox-time">@{{this.User.account}} ‧ {{relativetimeFromNNow this.createdAt}} </span>
              <p class="twitterbox-text">
                {{this.description}}
              </p>
              <div class="mt-1">
                <span class="twitterbox-time">回覆給 <span style="color: #FF6600">@ {{this.User.account}}</span></span>
              </div>
            </div>
          </div>
          {{!-- 貼文 end--}}
          <div class="strip"></div>
          {{!-- 留言 --}}
          <form action="/tweets/{{this.id}}/replies" method="POST" class="mt-3" method="POST">
            <div class="d-flex align-items-center">
              <img class="ac-img fl" src="/images/avatar@2x.png" alt="">
              <div class="mt-3 ms-2">
                <textarea class="modal-input-tweets reply" type="description" name="comment" id="comment" cols="30"
                  rows="10" placeholder="推你的回覆" maxlength="528px" required></textarea>
                <input type="hidden" name="TweetId" value="{{this.id}}" />
              </div>
            </div>
            <span class="hint abs" style="color: #FC5A5A;right:101px; bottom:27px"></span>
            <button class="tweetbtn-s abs reply-button" type="submit">回覆</button>
          </form>
          </form>
        </div>
      </div>
    </div>
  {{/each}}
  <!-- Modal -->
  <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
    aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <div class=" fl">
            <button type="button font-color-or" class="btn-close btn-close-re" data-bs-dismiss="modal"
              aria-label="Close"></button>
          </div>
        </div>
        <form action="/tweets" method="POST"></form>
        <div class="modal-body">
          <form action="/tweets" method="POST">
            <img class="avatar-img fl" src="/images/avatar@2x.png" alt="">
            <span>
              <textarea class="modal-input-tweets mt-3 mb-3" type="description" name="description" id="description"
                cols="30" rows="10" placeholder="有什麼新鮮事?" maxlength="140" required></textarea>
              <input type="hidden" name="UserId" value="{{tweets.User.id}}" />
            </span>
            <button class="tweetbtn-s abs" type="submit">推文</button>
          </form>
          </form>
        </div>
      </div>
    </div>
  </div>
  {{> rightbar}}

<script>
  const replyButton = document.querySelector('.reply-button')
  const reply = document.querySelector('.reply')
  const hint = document.querySelector('.hint')
  replyButton.addEventListener('click', (e) => {
    if (reply.innerText === '') {
      e.preventDefault()
      hint.innerText = '內容不可空白'
    }
  })
</script>
