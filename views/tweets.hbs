<div class="container d-flex">
  <div class="col-2 nav">
    {{> nav}}
  </div>
  <div class="col-7 tweets">
    <div class="tweets-container" style="width: 639px;height:1200px;border:1px solid #C4C4C4;">
      <h4 class="pt-3 ps-3" style="font-weight: 700;">首頁</h4>
      <hr>
      <div class="mytweet d-flex flex-column p-3" style="border-bottom: 10px solid #C4C4C4;">
        <div class="avatar">
          <a href="/tweets/{{user.id}}" style="text-decoration:none;">
            <img src="{{user.avatar}}" class="rounded-circle me-3"
              style="width: 50px;height: 50px;background: #C4C4C4;">
          </a>
          <button type="button" class="btn" style="width: 526px;
height: 26px;text-align:start;color:#C4C4C4" data-bs-toggle="modal" data-bs-target="#tweetModal">
            有什麼新鮮事?
          </button>
        </div>
        <div class="button d-flex justify-content-end">
          <button type="submit" class="btn tweet-button" style="background: #FF6600;border-radius: 100px;">
            <span style="color: #FFFFFF;">推文</span></button>
        </div>
      </div>
      <div class="tweets-container">
        {{#each tweets}}
        <div class="tweets d-flex mt-3" style="border-bottom: 1px solid #C4C4C4;">
          <div class="avatar ps-3">
            <a href="/tweets/{{user.id}}" style="text-decoration:none;">
              <img src="{{user.avatar}}" class="rounded-circle me-3"
                style="width: 50px;height: 50px;background: #C4C4C4;">
            </a>
          </div>
          <div class="tweet-content">
            <div class="name">
              <span style="font-size: 16px;font-weight:700;">{{this.User.name}}</span>
              <span
                style="font-size: 14px;color:#C4C4C4">@{{this.User.account}}．3小時{{comments.times}}</span>
            </div>
            <div class="content mt-3">
              <a href="/tweets/{{this.id}}" style="text-decoration:none;color:#171725;">{{this.description}}</a>
            </div>
            <div class="footer d-flex">
              <div class="replies d-flex align-items-center">
                <button type="button" class="mt-4 mb-4 btn" data-bs-toggle="modal" data-bs-target="#replyModal{{this.id}}">
                  <i class="far fa-comment"></i>&ensp;10{{this.Replies.length}}
                </button>
              </div>
              <div class="likes d-flex align-items-center">
                <form action="/likes" method="post">
                  <button type="submit" class="btn"><i
                      class="fa-regular fa-heart">&ensp;66{{this.likes.length}}</i></button>
                </form>
              </div>
            </div>
          </div>
        </div>
        {{!-- modal --}}
        <div class="modal fade" id="replyModal{{this.id}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <div class="tweet-title btn"><button type="button" class="btn-close" data-bs-dismiss="modal"
                    aria-label="Close" style="color: #FF6600;"></button></div>
              </div>
              <div class="tweets d-flex mt-3">
                <div class="avatar ps-3">
                  <a href="/tweets/{{user.id}}" style="text-decoration:none;">
                    <img src="{{user.avatar}}" class="rounded-circle me-3"
                      style="width: 50px;height: 50px;background: #C4C4C4;">
                  </a>
                </div>
                <div class="tweet-content">
                  <div class="name">
                    <span style="font-size: 16px;font-weight:700;">{{this.User.name}}</span>
                    <span
                      style="font-size: 14px;color:#C4C4C4">@{{this.User.account}}．3小時{{comments.times}}</span>
                  </div>
                  <div class="content mt-3 mb-2">
                    {{this.description}}
                  </div>
                  <p>回覆給<strong style="color:##6C757D;">@{{this.User.account}}</strong></p>
                </div>
              </div>
              <div class="modal-body" class="d-flex">
                <div class="body-avatar d-flex align-items-stretch">
                  <div class="left">
                    <a href="/tweets/{{user.id}}">
                      <img src="{{user.avatar}}" class="rounded-circle me-3"
                        style="width: 50px;height: 50px;background: #C4C4C4;">
                    </a>
                  </div>
                  <div class="right" class="d-flex">
                    <form method="POST" action="/tweets/{{this.user.id}}">
                      <textarea name="description" cols="40" rows="10"
                        style="background: #FFFFFF;border: 0px solid #E6ECF0;box-sizing: border-box;"
                        placeholder="推你的回覆"></textarea>
                      <div class="button d-flex justify-content-end">
                        <button type="submit" class="btn" style="background: #FF6600;border-radius: 50px;">
                          <span style="color: #FFFFFF;">推文</span>
                        </button>
                      </div>
                    </form>
                  </div>
                </div>

              </div>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
  <div class="col-3 followship">
    {{> followship}}
  </div>
</div>