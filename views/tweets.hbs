<div class="container-fluid">
  <div class="row">
    <div class="col-2">
      {{> navigationBar}}
    </div>

    <div class="col-7">
      <div class="card">
        <div class="border-bottom">
          {{> nav}}
        </div>
        <div class="card-body">
          <div class="media">
            <img src="{{ user.avatar }}" class="mr-3 rounded-circle" alt="..." width="50" height="50">
            <div class="media-body">
              {{> addNewTweet}}
            </div>
          </div>

        </div>
      </div>

      {{!-- tweets --}}
      <div class="mt-3">
        {{#each tweets}}
        {{> tweetList isUserPage=../isUserPage}}
        {{/each}}
      </div>
    </div>

    <div class="col-3">
      {{> topUser}}
    </div>
  </div>
  {{!-- addTweet modal --}}
  <div class="modal fade" id="addTweetModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close ml-0 pl-0" style="outline: none;" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <div class="media">
            <img src="{{ user.avatar }}" class="mr-3 rounded-circle" alt="..." width="50" height="50">
            <div class="media-body" id="tweets-popup"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>