<div class="container">
  <div class="card">
    {{!-- 可抽出作為 component --}}
    <h5 class="border-bottom p-3">首頁</h5>
    <div class="card-body">
      <div class="media">
        <img src="https://fakeimg.pl/64/" class="mr-3 rounded-circle" alt="...">
        <div class="media-body">
          <form action="/tweets/new" method="post">
            <textarea class="w-100 border-0 form-control" name="tweet" id="tweet" rows="3" cols="10"
              style="resize: none" placeholder="有什麼新鮮事?"></textarea>
          </form>
        </div>
      </div>
      <div class="text-right mt-2">
        <button class="btn btn-primary rounded">推文</button>
      </div>
    </div>
  </div>
  {{!-- tweets --}}
  <div class="mt-3">
    {{#each tweets}}
    <div class="card">
      <div class="card-body">
        <div class="media">
          <div class="media">
            <img src="https://fakeimg.pl/64/" class="mr-3 rounded-circle" alt="...">
            <div class="media-body">
              <div class="d-flex">
                <h5>UserName {{this.UserId}}</h5>
                <p class="ml-2 text-secondary">@Account &bull; {{moment this.createdAt}}</p>
              </div>
              <p>
                {{this.description}}
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>