<div class="row">
  <div class="col-md-3">
    <div class="card">
      <div class="card-body">
        <div>
          <div>
            <h4>
              <a class="nav-link" href="/tweets">首頁</a>
            </h4>
          </div>
          <div>
            <h4>
              <a class="nav-link" href="/users/{{user.id}}">個人介面</a>
            </h4>
          </div>
          <div>
            <h4>
              <a class="nav-link" href="/users/setting">設定</a>
            </h4>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-9">
    <div class="card">
      <div class="card-header">
        推文清單
      </div>
      <div class="card-body">
        <form action="/tweets" method="POST" class="mt-5">
          <div class="form-group">
            <label for="text">留下評論：</label>
            <textarea class="form-control" id="content" name="content" rows="3" placeholder="tweet一下你的心情" required></textarea>
          </div>
          <button type="submit" class="btn btn-primary mb-4">Submit</button>
        </form>
      </div>
      <div class="card-body">
        <tbody>
          {{#each tweets}}
          <tr>
            <td>
              <h4>
                <a href="/tweets/{{this.id}}">{{this.User.name}}</a>
              </h4>
            </td>
            <td>
              <p>{{this.content}}</p>
            </td>
            <td>
              {{moment this.createdAt}}
            </td>
            <hr>
          </tr>
          {{/each}}
        </tbody>
      </div>
    </div>
  </div>
</div>