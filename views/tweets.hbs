<div class="row">
  {{> left-column}}
  <div class="center-section col-6 ">
    <div class="homepage">
      <div class="title text-left font-weight-bold mt-1 py-3 pl-2"
        style="font-size: 18px;line-height: 26px;color: #1C1C1C;border: #E6ECF0 1px solid;">首頁
      </div>
      <div class="post-tweet px-3 py-2" style="border: #E6ECF0 1px solid;">
        <form method="POST" action="/tweets">
          <div class="row">
            <div class="col-2 ">
              <img {{#if user.avatar}}src={{user.avatar}}{{/if}}
                style="background: #C4C4C4; border-radius: 100%; width: 50px; height: 50px">
            </div>
            <div class="col-10">
              <textarea class="form-control mb-2" name="description" id="description" cols="25" rows="3"
                placeholder="有什麼新鮮事？"></textarea>
            </div>
          </div>
          <div class="d-flex flex-row-reverse">
            <button type="submit" class="btn  btn-block "
              style="border-radius: 100px; background:#FF6600;font-size: 18px;color: #FFFFFF;width: 64px;">推文</button>
          </div>
        </form>
      </div>
      </div>
      <div class="col" style="padding: 0px;">
        <div class="tweet-list mt-3">
          {{#each tweets}}
          <div class="tweet" style="border: #E6ECF0 1px solid;">
            <div class="d-flex align-items-stretch">
              <div class="tweet-item-left">
                <a href="/user/{{ this.User.id }}/tweets">
                  <img src="{{this.User.avatar}}" class="rounded-circle" style="max-width: 50px; background-color: gray;">
                </a>
              </div>
              <div class="tweet-item-right ml-3">
                <div class="tweet-item-title">
                  <span class="user-name mt-1"><a href="/user/{{ this.User.id }}/tweets">{{this.User.name}}</a></span>
                  <span class="user-account">
                    @{{this.User.account}}．{{moment this.createdAt}}
                  </span>
                </div>
                <div class="tweet-text">
                  {{this.description}}
                </div>
                <div class="tweet-footer d-flex">
                  <a href="/tweets/{{this.id}}" class="mr-5">
                    <i class="far fa-comment"></i> {{this.replyNum}}
                                  </a>
                                  {{!-- add like button --}}
                                  {{#if this.isLiked }}
                                  <form action="/like/{{this.id}}?_method=DELETE" method="POST">
                                    <button type="submit">
                                      <i class="fas fa-heart like"></i>
                                      {{else}}
                                      <form action="/like/{{this.id}}" method="POST">
                                        <button type="submit">
                                          <i class="far fa-heart"></i>
                                          {{/if}}
                                          {{this.LikeUsers.length}}
                                        </button>
                                      </form>
                                      </div>
                                      </div>
                                      </div>
                                      </div>
                                      {{/each}}
        </div>
      </div>
  </div>

  {{#if user}}
  <span style="margin-right: 10px;">Hi, {{user.name}}</span>
  <a href="/users/{{user.id}}" style="margin-right: 10px;">Profile</a>
  {{/if}}
  {{#each tweets}}
  <div>
    {{this.UserId}}
    {{this.description}}
  </div>
  {{/each}}

  {{#each user}}
  <div>
    {{this.name}}
    {{this.email}}
  </div>
  {{/each}}







</div>

<div class="col-3" style="width: 350px;">
  {{> right-column}}
</div>
</div>