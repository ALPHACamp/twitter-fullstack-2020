<div class="container-fluid">
  <div class="row flex-nowrap ps-xl-4 ps-md-3">
    <div class="col-3 col-lg-3 col-md-2 px-sm-2 px-0">
      <div class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-2 min-vh-100"
        style="position: fixed;">
        <a class="d-flex align-items-center mb-3 mb-md-0 me-md-auto ps-3" href="/">
          <img src="https://cdn4.iconfinder.com/data/icons/social-media-icons-the-circle-set/48/twitter_circle-8192.png"
            alt="" class="img-fluid my-3" style="display: block; width: 50px;" />
        </a>
        <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start" id="menu" style="width: 100%;">
          <li class="nav-item p-2">
            <a class="nav-link align-middle text-dark h-tomato" href="/tweets">
              <i class="fas fa-home a-tomato" style="font-size: 1.2em;"></i>
                <span class="d-none d-sm-inline h5 ps-3 a-tomato fw-bold">首頁</span>
            </a>
          </li>
          <li class="nav-item p-2">
            <a class="nav-link align-middle text-dark h-tomato" href="/users/self/{{user.id}}">
              <i class="far fa-user" style="font-size: 1.2em;"></i>
                <span class="d-none d-sm-inline h5 ps-3 fw-bold">個人資料</span>
            </a>
          </li>
          <li class="nav-item p-2">
            <a class="nav-link align-middle text-dark h-tomato" href="/setting">
              <i class="fas fa-cog" style="font-size: 1.2em;"></i>
                <span class="d-none d-sm-inline h5 ps-3 fw-bold">設定</span>
            </a>
          </li>
          <li class="nav-item p-2" style="width: inherit;">
            
              <button type="submit" class="btn btn-tomato rounded-pill mt-3" style="width: 100%;" data-bs-toggle="modal" data-bs-target="#tweetModal">
                <span class='h5 fw-bold d-none d-sm-inline'>推文</span>
                <i class="fas fa-feather-alt d-sm-none"></i>
              </button>            
          </li>
        </ul>
        <hr />
        <div class="dropdown p-2 pb-4">
          <a href="/signout" class="d-flex align-middle text-decoration-none text-dark">
            <i class="fas fa-sign-out-alt" style="font-size: 1.2em;"></i>
            <span class="d-none d-sm-inline h5 ps-2 fw-bold">登出</span>
          </a>
        </div>
      </div>
    </div>
    <div class="row col-9 col-lg-6 col-md-7 col-sm-8 py-2">
      <div class="card-header col-12">
        <span class="h5" style="font-weight: bold;">首頁</span>
      </div>
      
      {{> message}}
      <div class="card-body col-12">
        <form action="/tweets" method="POST" class="mt-5">
          <div class="form-group">
            <label for="text">留下評論：</label>
            <textarea class="form-control" id="content" name="content" rows="3" placeholder="tweet一下你的心情"
              required></textarea>
          </div>
          <br>
          <button type="submit" class="btn btn-primary mb-4">Submit</button>
        </form>
      </div>
      <div class="card-body col-12">
        {{#each tweets}}
        <div class="row justify-content-around mb-1">
          <div class="row col-11">
            <div class="card-image col-1 d-flex justify-content-center align-items-center">
              <img src="{{this.User.img}}" class="rounded-circle p-md-0 p-1" style="width: 50px; height: 50px"
                alt="A user" />
            </div>
            <div class="col-11 align-self-center px-md-2 px-4">
              <a href="/users/{{this.UserId}}" class="h5 text-dark text-decoration-none">{{this.User.name}}</a>
              <span style="color: #6c757d; font-size: 0.875em">@{{this.User.account}}．{{moment this.createdAt}}</span>
              <p class="mt-2">{{this.content}} <a href="/tweets/{{this.id}}">...more</a></p>
              <div class="col-2 d-flex align-items-center justify-content-center">
                {{#if this.isLiked }}
                <form action="/like/{{this.id}}?_method=DELETE" method="POST">
                  <button type="submit" class="btn btn-danger">
                    <i class="fas fa-heart w-100 like"> {{ this.likes }}</i>
                  </button>
                </form>
                {{else}}
                <form action="/like/{{this.id}}" method="POST">
                  <button type="submit" class="btn btn-primary">
                    <i class="far fa-heart"> {{ this.likes}}</i>
                  </button>
                </form>
                {{/if}}


                {{#if this.replyCount}}
                <button class="btn btn-danger ">
                  <i class="far fa-comment"> {{ this.replyCount }}</i>
                </button>
                {{else}}
                <button class="btn btn-secondary">
                  <i class="far fa-comment"> {{ this.replyCount }}
                  </i>
                </button>
                {{/if}}
              </div>
            </div>
          </div>
          {{#ifCond this.User.id ../user.id}}
          <div class="col-1 d-flex align-items-center justify-content-center">
            <form action="/tweets/{{this.id}}?_method=DELETE" method="post" onsubmit="return deleteConfirm()">
              <button type="submit" class="btn">
                <i class="fas fa-times"></i>
              </button>
            </form>
          </div>
          {{/ifCond}}
        </div>
        <hr />
        {{/each}}
      </div>
    </div>

    <div class="col-auto col-lg-3 col-md-2">
      <div class="d-none d-sm-flex flex-column flex-shrink-0 p-3" style="width: 350px;">
        <div class="card" style="width: 22rem;border:none;position:fixed">
          <ul class="list-group list-group">
            <li class="list-group-item bg-light"
              style="height: 50px;font-size:large;border-left: none;border-right: none;border-top: none">
              跟隨誰
            </li>
            {{#each followship}}
            <li class="list-group-item bg-light" style="border-left: none;border-right: none">
              <div class="row">
                <div class="col-2">
                  <a href="/users/other/{{this.id}}" class="text-center">
                    <img src="{{this.img}}" alt="" width="65" height="65" class="rounded-circle rounded"> </a>
                </div>

                <div class="col-5" style="margin-top:auto;margin-botton:auto;margin-left:1vw">
                  <p>{{this.name}} <br>
                    <small class="text-muted"> @{{this.account}}</small>
                  </p>
                </div>

                <div class="col-4" style="margin:auto">
                  {{#if this.isFollowed}}
                  <button type=" submit" class="btn btn-success btn-sm rounded-pill">正在跟隨</button>
                  {{else}}
                  <button type="submit" class="btn btn-outline-success btn-sm rounded-pill">跟隨</button>
                  {{/if}}
                </div>
              </div>
            </li>
            {{/each}}
            <li class="list-group-item bg-light" style="border-left: none;border-right: none;border-bottom: none">
              <a href="/users/{{user.id}}/follower" class="bg-light" style="text-decoration: none;color:tomato">顯示更多</a>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>


<nav aria-label="Page navigation" class="{{pages}}">
  <ul class="pagination justify-content-center">
    <li class="page-item">
      <a class="page-link" href="/tweets?page={{prev}}" aria-label="Previous">
        <span aria-hidden="true">&laquo;</span>
      </a>
    </li>
    {{#each totalPage}}
    {{#ifCond this ../page}}
    <li class="page-item active"><a class="page-link" href="#">{{this}}</a></li>
    {{else}}
    <li class="page-item">
      <a class="page-link" href="/tweets?page={{this}}">{{this}}</a>
    </li>
    {{/ifCond}}
    {{/each}}
    <li class="page-item">
      <a class="page-link" href="/tweets?page={{next}}" aria-label="Next">
        <span aria-hidden="true">&raquo;</span>
      </a>
    </li>
  </ul>
</nav>