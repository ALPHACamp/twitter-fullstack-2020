<div>
  <form action="/tweets" method="POST" class="border">
    <h5 class="m-0 py-2 border-bottom">首頁</h5>
    <div class="container">
      <div class="row">

        <div class="col-auto px-1">
          {{#if user.avatar}}
          <img src="{{user.avatar}}">
          {{else}}
          <img class="rounded-circle" src="https://i.imgur.com/3P9xRqb.jpg" style="max-width: 50px;max-height: 50px;">
          {{/if}}
        </div>

        <div class="col px-1" style="min-height: 100px;">
          <textarea class="border-0 w-100" name="description" rows="5" style="resize: none;"></textarea>
        </div>
        {{!-- cols="30" rows="10" --}}

        <div class="col-auto px-1 d-flex align-items-end">
          <button class="btn btn-regular rounded-pill float-right" type="submit">推文</button>
        </div>

      </div>
    </div>
  </form>

  {{#each tweets}}
  <div class="border">
    <a href="/tweets/{{this.id}}">第 {{this.id}} 個 tweet:</a>
    <p>作者名稱: {{this.User.name}}</p>
    <p>作者照片:{{this.User.avatar}}</p>
    <p>內容:{{this.description}}</p>
    <p>時間: {{moment this.createdAt}}</p>
  </div>
  {{/each}}
</div>

<!-- Modal -->
<div class="modal" tabindex="-1" role="dialog" id="post-tweet-modal">
  <div class="modal-dialog">
    <div class="modal-content">

      <div class="modal-header p-1">
        <button type="button" class="btn btn-warning btn-sm" data-dismiss="modal">X</button>
      </div>

      <div class="modal-body">
        <form action="/tweets" method="POST">
          <div class="row">
            <div class="col-auto p-0">
              {{#if user.avatar}}
              <img src="{{user.avatar}}" class="img-flid" style="max-width: 50px; border-radius: 50%">
              {{else}}
              <img src="https://i.imgur.com/3P9xRqb.jpg" alt="" style="max-width: 50px; border-radius: 50%">
              {{/if}}
            </div>
            <div class="col">
              <textarea name="description" class="form-control" aria-label="With textarea"
                placeholder="有什麼新鮮事？"></textarea>
            </div>
            <div class="col-12">
              <button class="btn btn-regular rounded-pill float-end mt-2" type="submit">推文</button>
            </div>
          </div>
        </form>

      </div>

    </div>
  </div>
</div>