<div class="row" style="width:100%;">
  {{!-- navbar --}}
  <div class="col-3">
    <img class="mb-4 pl-2" src="/images/logo.png">
    <div class="nav-ul-wrapper">
      <ul class="nav flex-column">
        <li class="nav-item py-2">
          <a class="nav-link active" href="/">
            <i class="fas fa-home"></i>
            <span class="ml-3">首頁</span>
          </a>
        </li>
        <li class="nav-item py-2">
          <a class="nav-link" href="/users/{{ user.id }}/tweets">
            <i class="far fa-user"></i>
            <span class="ml-3">個人資料</span>
          </a>
        </li>
        <li class="nav-item py-2">
          <a class="nav-link" href="/users/{{ user.id}}/setting/edit">
            <i class="fas fa-cog"></i>
            <span class="ml-3">設定</span>
          </a>
        </li>
        <li class="nav-item py-2">
          <button type="button" class="btn" data-toggle="modal" data-target="#exampleModal">推文</button>
        </li>
      </ul>
      <ul class="nav flex-column">
        <li class="nav-item">
          <a class="nav-link" href="/logout">
            <i class="fas fa-sign-out-alt"></i>
            <span class="ml-3">登出</span>
          </a>
        </li>
      </ul>
    </div>
  </div>

  {{!-- content --}}
  <div class="col-5 content-container">
    <div class="card border-light mb-3 ">
      <div class="card-header"><span class="header1">首頁</span></div>
      <div class="card-body d-flex">
        <a href="/users/{{user.id}}/tweets">
          <img class="avatar small mr-3" src="{{user.avatar}}">
        </a>
        <form action="/tweets" method="POST" style="width:100%;">
          <div class="form-group">
            <label for="tweet"></label>
            <textarea type="text" class="post-content form-control " id="description" name="description"
              placeholder="有什麼新鮮事?" rows="5" cols="47"></textarea>
          </div>
          <button type="submit" class="btn" id="btn">推文</button>
        </form>
      </div>
    </div>

    {{!-- tweets --}}
    <div class="card">
      {{#each tweets}}
      <div class="card-body d-flex">
        <img class="avatar small mr-3" src="{{this.tweetsUserAvatar}}">
        <div>
          <p class="card-title">{{this.tweetsUserName}}
            <span class="atAccount">@{{this.tweetsUserAccount}}•{{moment
              this.tweetsCreatedAt}}</span>
          </p>
          <a href="/tweets/{{this.tweetsId}}/replies" class="text-muted">
            <p class="post-text">{{this.tweetsContent}}</p>
          </a>
          <div class="d-flex">
            <div class="reply" id="reply" data-toggle="modal" data-target="#exampleModal-reply">
              <i class="far fa-comment"></i>
              <span class="ml-2">30</span>
            </div>
            <div class="likeBtn">
              {{!-- unlike tweet --}}
              {{#if this.isLiked}}
              <form action='/tweets/{{this.tweetsId}}/unlike' method="POST">
                <button class="" type="submit">
                  <i class="far fa-heart"></i>
                  <span class="ml-2">{{this.likeTotal}}</span>
                </button>
              </form>
              {{else}}
              {{!-- Like tweet --}}
              <form action='/tweets/{{this.tweetsId}}/like' method="POST">
                <button class="btn" type="submit">
                  <i class="far fa-heart"></i>
                  <span class="ml-2">{{this.likeTotal}}</span>
                </button>
              </form>
              {{/if}}
            </div>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
  {{!-- popular --}}
  <div class="col-4">
    <div class="card border-light popular">
      <div class="card-header">
        Popular
      </div>
      <ul class="list-group list-group-flush">
        {{#each users}}
        <li class="list-group-item d-flex">
          <div class="mr-2">
            <img class="avatar small" src="{{this.topUserAvatar}}">
          </div>
          <div class="mr-5">
            <p class="mb-0">{{this.topUserName}}</p>
            <p class="atAccount">@{{this.topUserAccount}}</p>
          </div>
          <div class="pt-2">
            {{#if this.isFollowed}}
            <form action="/followships/{{this.id}}?_method=DELETE" method="POST">
              <button type="submit" class="btn py-2">正在跟隨</button>
            </form>
            {{else}}
            <form action="/followships" method="POST">
              <button type="submit" class="btn py-2">跟隨</button>
              <input type="hidden" name="id" value="{{this.id}}">
            </form>
            {{/if}}
          </div>
        </li>
        {{/each}}
      </ul>
    </div>
  </div>
</div>




{{!-- tweetModal --}}
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="reply-tweet"
  style="display: none;" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content d-flex">
      <button type="button" class="btn-dismiss close d-flex justify-content-start ml-3 mt-2"
        data-dismiss="modal">x</button>
      <hr />
      <form action="/tweets" method="POST">
        <div class="type-area d-flex">
          <div class="avatar">
            <a href="/users/{{user.id}}/tweets">
              <img src="{{user.avatar}}" class="avatar small ml-1">
            </a>
          </div>
          <div class="type-text">
            <textarea type="text" class="post-content form-control mb-2 ml-2" id="description-modal" name="description"
              placeholder="有什麼新鮮事?" rows="5" cols="47"></textarea>
            <div class="invalid-feedback" id="add-tweet"></div>
          </div>
        </div>
        <div class="add-button d-flex justify-content-end mr-2">
          <button type="submit" class="btn mb-2" id="modal-post-button">推文</button>
        </div>
      </form>
    </div>
  </div>
</div>

{{!-- replyModal --}}
<div class="modal fade" id="exampleModal-reply" tabindex="-1" role="dialog" aria-labelledby="reply-tweet"
  style="display: none;" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content d-flex">
      <button type="button" class="btn-dismiss close d-flex justify-content-start ml-3 mt-2"
        data-dismiss="modal">x</button>
      <hr />
      <div class="reply-tweet">
        <div class="reply-modal-tweet d-flex">
          <div class="mt-2" style="padding: 0%;">
            <div>
              <a href="/users/{{tweet.User.id}}/tweets">
                <img src="{{tweet.User.avatar}}" class="avatar small ml-1">
              </a>
            </div>
            <div class="headerDivider"></div>
          </div>
          <div class="mt-2" style="flex-grow: 1; position:relative">
            <div class="account-info d-flex" style="flex:auto">
              <a href="/users/{{tweet.User.id}}/tweets">
                <div class="modal-name ml-3">{{tweet.User.name}}</div>
              </a>
              <div class="atAccount modal-info ml-2">@{{tweet.User.account}}•{{moment
                this.createdAt}}</div>
            </div>
            <p class="modal-description d-flex ml-3" style="flex: auto">
              {{tweet.description}}
            </p>
            <div class="reply d-flex" style="margin-left">
              <div class="reply-text ml-3 mb-2">回覆給</div>
              <a href="/users/{{user.id}}/tweets">
                <div class="reply-account ml-2">@{{user.account}}</div>
              </a>
            </div>
          </div>
        </div>
      </div>
      <form action="/tweets/{{this.TweetId}}/replies" method="POST">
        <div class="type-area d-flex">
          <div>
            <a href="/users/{{user.id}}/tweets">
              <img src="{{user.avatar}}" class="avatar small ml-1">
            </a>
          </div>
          <div class="type-text form-group">
            <input type="hidden" name="TweetId" value="{{tweet.id}}">
            <textarea class="form-control new-post-content is-invalid ml-2" name="comment" id="comment"
              placeholder="推你的回覆" rows="5" cols="47" maxlength="140"></textarea>
            <div class="invalid-feedback" id="reply-tweet"></div>
          </div>
        </div>
        <div class="add-button  d-flex justify-content-end mr-2">
          <button type="submit" class="btn mb-2" id="reply">回覆</button>
        </div>
      </form>
    </div>
  </div>
</div>