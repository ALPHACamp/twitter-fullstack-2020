<div>
  <h1>this is Tweets Page ( views / tweets.hbs )</h1>

  {{#each tweets}}
  <hr>
  <a href="/tweets/{{this.id}}">第 {{this.id}} 個 tweet:</a>
  <p>作者名稱: {{this.User.name}}</p>
  <p>作者照片:{{this.User.avatar}}</p>
  <p>內容:{{this.description}}</p>
  <p>時間: {{moment this.createdAt}}</p>
  {{/each}}
</div>