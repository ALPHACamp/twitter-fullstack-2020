<div class="d-flex flex-row p-auto m-auto">

  {{!-- home bar --}}
  <div class="d-flex flex-column flex-shrink-0 p-3 bg-light" style="width: 280px;">
    <a class="navbar-brand" href="#">
      <img src="/docs/4.2/assets/brand/bootstrap-solid.svg" width="30" height="30" alt="">
    </a>
    <br>
    <br>


    <ul class="nav nav-tabs flex-column" id="myTab" role="tablist">
      <li class="nav-item mt-2">
        <a class="nav-link active" id="home-tab" data-toggle="tab" href="/" role="tab" aria-controls="home"
          aria-selected="true">首頁</a>
      </li>
      <li class="nav-item mt-2">
        <a class="nav-link" id="profile-tab" data-toggle="tab" href="/followings" role="tab" aria-controls="profile"
          aria-selected="false">個人資料</a>
      </li>
      <li class="nav-item mt-2">
        <a class="nav-link" id="settings-tab" data-toggle="tab" href="#" role="tab" aria-controls="settings"
          aria-selected="false" style="text-decoration-line: none;">設定</a>
      </li>
    </ul>

    <button type="submit" class="btn btn-primary btn-lg rounded-pill mt-3">推文</button>
    <div class="d-flex mt-5">
      <a href="/signout" class="btn">
        <h5 class="m-2">登出<i class="fas fa-sign-out-alt fa-1x"></i>
        </h5>
      </a>
    </div>

  </div>

  {{!-- middle bar --}}
  <div class="list-group list-group-flush scrollarea bg-light flex-shrink- p-3" style="width: 800px;">

    <div class="row m-2">
      <a href="/back" style="color:black" class="col-1"><i class="fas fa-arrow-left fa-2x"></i></a>

      <a href="/" class="d-flex align-items-center pb-3 mb-3 link-dark text-decoration-none col-3">
        <span class="fs-5 fw-semibold">{{user.name}}</span>
      </a>
    </div>


    <ul class="nav nav-tabs" id="myTab" role="tablist">
      <li class="nav-item">
        <a class="nav-link" id="message-tab" data-toggle="tab" href="/followership" role="tab" aria-controls="home"
          aria-selected="true">跟隨者</a>
      </li>
      <li class="nav-item">
        <a class="nav-link active" id="profile-tab" data-toggle="tab" href="/followingship" role="tab"
          aria-controls="profile" aria-selected="false">正在跟隨</a>
      </li>
    </ul>


    <br>
    <div class="tab-content">


      <div class="tab-pane" id="profile" role="tabpanel" aria-labelledby="profile-tab">
        <ul class="list-group list-group-flush">

          <li class="list-group-item">
            <div class="row g-0">
              <div class="col-md-2">
                <a href="#" class="text-center">
                  <img src="{{this.img}}" alt="" width="75" height="75"
                    class="rounded-circle me-2 rounded mt-2 d-block">
                </a>
              </div>
              <div class="col-md-10">
                <div class="card-body">
                  <div class="row">
                    <div class="col-9">
                      <h6 class="card-title w-50">{{this.name}}
                        <p class="text-muted">@{{this.account}}</p>
                      </h6>
                    </div>
                    <div class="col-3">

                      <form action="/following/{{this.id}}?_method=DELETE" method="POST" style="display: contents;">
                        <a href="#profile"><button type="submit" class="btn btn-success"
                            name="{{this.id}}">正在跟隨</button></a>
                      </form>

                      <form action="/following/{{this.id}}" method="POST" style="display: contents;">
                        <a href="#profile"><button type="submit" class="btn btn-outline-success"
                            name="{{this.id}}">跟隨</button></a>
                      </form>

                    </div>
                  </div>
                  <h6 class="card-text">{{this.description}}</h6>
                </div>
              </div>
            </div>
          </li>

        </ul>
      </div>
    </div>
  </div>


  {{!-- follower bar --}}

  <div class="col-3">
    <div class="d-flex flex-column flex-shrink-0 p-3 bg-light" style="width: 280px;">

      <div class="list-group list-group-flush border-bottom scrollarea rounded">

        <div class="card" style="width: 18rem;">
          <div class="d-flex justify-content-center align-items-center" style="height: 50px;font-size:large">
            跟隨誰</div>
          <ul class="list-group list-group">
            <li class="list-group-item d-flex justify-content-between align-items-start">
              <div class="ms-2 me-auto">
                <div class="fw-bold">Subheading</div>
                Cras justo odio
              </div>
              <button type="submit" class="btn btn-success">跟隨</button>
            </li>

            <li class="list-group-item d-flex justify-content-between align-items-start">
              <a href="/followership" style="text-decoration: none;color:chocolate">顯示更多</a>
            </li>
          </ul>

        </div>
      </div>
    </div>
  </div>


</div>