{{> leftbar}}
{{!-- user-nav --}}
<div class="follower-list d-flex flex-column">
  <div>
    {{> user-nav}}
  </div>
  <div>
    
  </div>
{{!-- follower cards --}}
<div class="d-flex flex-column">
  {{#each followings}}
  <div class="follower-card d-flex justify-content-between align-items-center">
    <div class="d-flex">
      <img class="follower-avatar" src="{{this.avatar}}" width="50px" height="50px" onload="this.style.opacity=1;">
      <div>
        <div class="follower-name">{{this.name}}</div>
      </div>
      </div>
      {{#if this.isFollowed}}
        <form action="/followships/{{this.id}}?_method=DELETE" method="POST" style="display: contents;">
        <button type="submit" class="btn unFollow-button">正在跟隨</button>
      </form>
      {{else}}
        <form action="/followships" method="POST" style="display: contents;">
          <input type="hidden" name="id" value="{{this.id}}" />
          <button type="submit" class="follow-button">跟隨</button>
        </form>
      {{/if}}
      </div>
      <div>{{this.introduction}}</div>
  {{/each}}
      </div>
  </div>
{{> topFollower}}
{{> rightbar}}