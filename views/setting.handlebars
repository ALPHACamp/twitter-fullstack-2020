{{#if error}}
  {{#each error}}
    <div class="alert alert-danger" role="alert" style="margin: 30px">
      {{this.message}}
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
  {{/each}}
{{/if}}
{{#if success}}
  {{#each success}}
    <div class="alert alert-success" role="alert" style="margin: 30px">
      {{this.message}}
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
  {{/each}}
{{/if}}
<div class="container">
  <div class="wrapper d-flex align-items-stretch">
    <nav id="sidebar">
      <div>
        {{> leftColumn}}
      </div>
    </nav>
    {{> postTweet}}
    <div class="center-content d-flex" id="tweet-content">
      <div class="head justify-content-between ">
        <form class="d-flex justify-content-center" action="/api/users/{{user.id}}" method="POST" style="width: 100%;">
          <div class="text-center m-5 ">
            <h1 class="h3 mb-3 font-weight-normal">帳戶設定</h1>
          </div>
          <div class="col-md-7 m-5">
            <div class="form-label-group">
              <label for="inputEmail">帳號</label>
              <input type="text" name="account" class="form-control" placeholder="
              {{$user.account}}" value="{{user.account}}" required autofocus>
            </div>
            <div class="form-label-group">
              <label for="inputPassword">名稱</label>
              <input type="name" name="name" class="form-control" placeholder="
              {{$user.name}}" value="{{user.name}}" required>
            </div>
            <div class="form-label-group">
              <label for="inputPassword">Email</label>
              <input type="email" name="email" class="form-control" placeholder="
                  " value="{{user.email}}" required>
            </div>
            <div class="form-label-group">
              <label for="inputPassword">密碼</label>
              <input type="password" name="password" class="form-control" placeholder=" password" required>
            </div>
            <div class="form-label-group">
              <label for="checkPassword">密碼確認</label>
              <input type="password" name="checkPassword" class="form-control" placeholder="請確認密碼" required>
            </div>
            <br />
            <button type="submit" class="btn"
              style="background: #FF6600; min-width:33%;width:170px; border-radius: 30px 30px 30px 30px">
              <span style="color: #FFFFFF;">儲存</span>
            </button>
            </br>
          </div>
        </form>
      </div>
    </div>
    <div class="right-content">
    </div>
  </div>
</div>