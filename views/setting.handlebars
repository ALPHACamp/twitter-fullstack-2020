<div class='setting-main-content'>
  <div class='header'>
    <div class='headerItem'><span>帳戶設定</span></div>
  </div>
  <div class='register'>

    <form class='form-signin' action='/users/setting/{{user.id}}?_method=PUT' method='POST' style='width: 100%;'>
      <div class='form-label-group'>
        <label for='inputName'>
          <input type='text' name='name' class='form-control' placeholder='Name' required autofocus />
          <span>帳號</span>
        </label>
      </div>
      <div class='form-label-group'>
        <label for='inputAccount'></label>
        <input type='text' name='account' class='form-control' placeholder='account' required autofocus />
        <span>名稱</span>
      </div>
      <div class='form-label-group'>
        <label for='inputEmail'></label>
        <input type='text' name='email' class='form-control' placeholder='Email' required autofocus />
        <span>Email</span>

      </div>
      <div class='form-label-group'>
        <label for='inputPassword'></label>
        <input type='password' name='password' class='form-control' placeholder='Password' required />
        <span>密碼</span>

      </div>
      <div class='form-label-group'>
        <label for='inputPasswordCheck'></label>
        <input type='password' name='passwordCheck' class='form-control' placeholder='Password Check' required />
        <span>密碼確認</span>

      </div>
      <br />
      <div class='setting-save-button'>
        <button class='btn btn-lg btn-primary btn-block' type='submit'>儲存</button>
      </div>

    </form>
  </div>
</div>
