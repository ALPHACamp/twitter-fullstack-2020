<div class="d-flex justify-content-center mt-2">
  <form action="/users/setting/{{ user.id }}" method="POST" style="width: 500px;">
    <div class="mb-4">
      <p class="fw-bold" style="font-family: 'Noto Sans TC', sans-serif;">帳戶設定</p>
    </div>
    <div class="form-group">
      <p class="mb-0 rounded-top"
        style="background-color: #F5F8FA; font-size: 10px;font-family: 'Noto Sans TC', sans-serif;">帳號</p>
      <input class="border-0 rounded-0" type="text" name="account" class="form-control"
        style="background-color: #F5F8FA; width: 500px;" value="{{ user.account }}">
      <hr class="mt-0">
    </div>
    <div class="form-group">
      <p class="mb-0 rounded-top"
        style="background-color: #F5F8FA; font-size: 10px;font-family: 'Noto Sans TC', sans-serif;">名稱</p>
      <input class="border-0 rounded-0" type="text" name="name" class="form-control"
        style="background-color: #F5F8FA; width: 500px;" value="{{ user.name }}">
      <hr class="mt-0">
    </div>
    <div class="form-group">
      <p class="mb-0 rounded-top"
        style="background-color: #F5F8FA; font-size: 10px; font-family: 'Noto Sans TC', sans-serif;">email</p>
      <input class="border-0 rounded-0" type="text" name="email" class="form-control"
        style="background-color: #F5F8FA; width: 500px;" value="{{ user.email }}">
      <hr class="mt-0">
    </div>
    <div class="form-group">
      <p class="mb-0 rounded-top"
        style="background-color: #F5F8FA; font-size: 10px;font-family: 'Noto Sans TC', sans-serif;">密碼</p>
      <input class="border-0 rounded-0" type="password" name="password" class="form-control"
        style="background-color: #F5F8FA; width: 500px;">
      <hr class="mt-0">
    </div>
    <div class="form-group">
      <p class="mb-0 rounded-top"
        style="background-color: #F5F8FA; font-size: 10px;font-family: 'Noto Sans TC', sans-serif;">確認密碼</p>
      <input class="border-0 rounded-0" type="password" name="confirmPassword" class="form-control"
        style="background-color: #F5F8FA; width: 500px;">
      <hr class="mt-0">
    </div>
    <div class="d-flex justify-content-end">
      <button class="btn btn-block rounded-pill mt-3" style="background-color: #FF6600; width: 100px; color:white"
        type="submit">儲存</button>
    </div>
  </form>
</div>