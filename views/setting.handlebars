<div class="row mt-5">
  <div class="col-md-3 pl-0">

    <div class="left-zone">
      <div class="AC-icon">
        <img src="https://meethub.bnext.com.tw/wp-content/uploads/2019/03/medium_alpha-logo-square-89-300x300.png"
          style="width:75px">
      </div>

      </br>
      </br>

      <div class="home" name="home">
        <a class="left-zone-items" href="/tweets" style="text-decoration: none"><i class="fas fa-home"></i>&ensp;首頁</a>
      </div>

      </br>
      </br>

      <div class="profile" name="profile">
        <a class="left-zone-items" href="/user/self" style="text-decoration: none"><i
            class="far fa-user"></i>&ensp;個人資料</a>
      </div>

      </br>
      </br>

      <div class="setting" name="setting">
        <a class="left-zone-items" href="/setting" style="text-decoration: none"><i class="fas fa-cog"></i>&ensp;設定</a>
      </div>

      </br>
      </br>

      <form action="/user/tweets">
        <button type="submit" class="left-zone-btn">
          推文</button>
      </form>


      <a href="/logout" class="logout" style="text-decoration: none"><i class="fas fa-sign-out-alt"></i>&ensp;LogOut</a>

    </div>

  </div>
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mt-3">帳號設定</h1>
      <form action="/setting?_method=PUT" method="POST">
        <div class="form-group">
          <label for="account">Account</label>
          <input type="text" id="account" name="account" class="form-control" placeholder="Enter Account"
            value="{{user.account}}">
        </div>
        <div class="form-group">
          <label for="name">Name</label>
          <input type="text" id="name" name="name" class="form-control" placeholder="Enter Name" value="{{user.name}}">
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email"
            value="{{user.email}}">
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" id="password" name="password" class="form-control" placeholder="Enter Password"
            value="">
        </div>
        <div class="form-group">
          <label for="passwordCheck">passwordCheck</label>
          <input type="password" id="passwordCheck" name="passwordCheck" class="form-control"
            placeholder="Password Check">
        </div>
        <button type="submit" class="btn btn-primary btn-block">submit</button>
      </form>

    </div>
  </div>
</div>