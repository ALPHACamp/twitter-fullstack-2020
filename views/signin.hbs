<div style="width: 70%;margin-left:50px">
  {{#if success_messages}}
  <div class="alert alert-success text-center" role="alert">
    {{success_messages}}
  </div>
  {{/if}}

  {{#if error_messages}}
  <div class="alert alert-danger" role="alert">
    {{error_messages}}
  </div>

  {{/if}}
  <form class="form-signin" action="/signin" method="POST">
    <div class="card text-center mb-5 mt-4" style="border-radius: 10px;">
      <div>
        <img src="https://i.pinimg.com/564x/d3/c6/67/d3c6675cfa80704b24f154c61cd83dc1.jpg" alt="logo"
          style="width: 200px;border-radius:50%" class="mt-5">
      </div>
      <div class="card-body" style="padding: 0 150px 50px">
        <div class="form-label-group">
          <label for="inputEmail"></label>
          <input type="text" name="email" class="form-control" placeholder="Email" autofocus required>
        </div>

        <div class="form-label-group">
          <label for="inputPassword"></label>
          <input type="password" name="password" class="form-control" placeholder="密碼" required>
        </div>

        <br />

        <button class="btn btn-lg btn-block"
          style="width: 100%;background:#ffd472;color:white;border-radius:5px;padding:3px" type="submit">登入</button>
      </div>
      <div class="card-footer mb-5" style="background-color: white;border: none">
        <div class="d-flex justify-content-center align-items-center">
          <i class="fas fa-space-shuttle me-5"></i>
          <a href="/signup" style="color: #313c4b;text-decoration:none;">註冊</a>
          <p class="mx-4"></p>
          <a href="/admin/signin" style="color: #313c4b;text-decoration:none;">後台登入</a>
          <i class="fas fa-space-shuttle ms-5" style="transform:scaleX(-1)"></i>
        </div>
      </div>
    </div>
  </form>
</div>