<form class="form-signin" action="/signin" method="POST" style="width: 100%;">
  <div class="sign-logo text-center">
    <i class="logo fas fa-cus-logo"></i>
  </div>
  <div class="text-center mb-4">
    <h1 class="h3 mb-3 font-weight-bold">登入 Alphitter</h1>
  </div>

  <div class="form-label-group">
    <label for="account" class="sign-label-text">帳號</label>
    <input type="text" name="account" class="form-control shadow-none border-none" required autofocus>
  </div>
  <div class="form-label-group">
    <label for="password" class="sign-label-text">密碼</label>
    <input type="password" name="password" class="form-control" required>
  </div>

  <br />
  <button class="btn btn-lg  btn-block " id="submit" type="submit">登入</button>
  <div class="text-center mb-4">
    <p id="link"><a href="/signup">註冊 Alphitter</a>
      <span>·</span>
      <a href="/admin/signin">後台登入</a>
    </p>

  </div>
</form>