<div class="col-3 container mt-5" style="background-color:white">
  {{!-- Logo --}}
  <div class="text-center">
    <img src="/images/logo.svg" alt="logo">
  </div>
  {{!-- Title --}}
  <div class="m-4 text-center">
    <h3 class="fw-bold" style="color:black; font-size:28px;  font-family:'Noto Sans TC'">
      登入 Alphitter
    </h3>
  </div>
  {{!-- Form --}}
  <div class=" d-flex justify-content-center">
    <form action="/signin" method="POST">
      <div class="form-group form-floating m-4">
        <input type="text" name="account" id="account" class="form-control" placeholder="請輸入帳號" value="{{account}}"
          style="background-color:#F5F8FA; border-bottom:2px solid #657786; width:356px; height:54px" required>
        <label for="account" style="color:#696974">帳號</label>
      </div>
      <div class="form-group form-floating m-4">
        <input type="password" name="password" id="password" class="form-control" placeholder="請輸入密碼"
          value="{{password}}"
          style="background-color:#F5F8FA; border-bottom:2px solid #657786; width:356px; height:54px" required>
        <label for="password" style="color: #696974">密碼</label>
      </div>
      <div class="mb-3 text-center">
        <button class="btn col-2 m-2" type="submit"
          style="color:white; background-color:#FF6600; font-size: 20px; border-radius:50px; width:356px; height:45px">登入</button>
      </div>
    </form>
  </div>
  {{!-- Link --}}
  <div class="mb-4 text-end">
    <a href="/signup" class="m-1" style="font-size: 16px">註冊</a>
    <span>•</span>
    <a href="/admin/signin" class="m-1" style="font-size: 16px">後台登入</a>
  </div>
</div>