<form class="form-signin mx-auto" action="/signin" method="POST" style="width: 100%;">

  <div class="text-center mb-4">
    <img class="mb-2" src="https://i.imgur.com/5wAep0e.png" style="width:50px; height:50px">
    <h1 class="h3 mb-3 font-weight-normal"><strong>登入 Simple-Twitter</strong></h1>
  </div>

  <div class="form-label-group mb-2 md-form">
    <input type="text" id="inputAccount" name="account" class="form-control" required autofocus>
    <label for="inputAccount">Account</label>
  </div>

  <div class="form-label-group mb-2 md-form">
    <input type="password" id="inputPassword" name="password" class="form-control" required>
    <label for="inputPassword">Password</label>
  </div>

  <br />

  <button class="btn btn-lg btn-primary btn-block mb-3" type="submit">Submit</button>

  <div class="text-center mb-4">
    <p><a href="/signup">No account? Sign Up</a></p>
    <p><a href="/admin/signin">Admin Sign In</a></p>
  </div>

</form>