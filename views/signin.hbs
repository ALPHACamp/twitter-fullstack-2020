<div class="row justify-content-center" style="margin-right:5px">
  <img class="m-3" src="images/logo.png" alt="" style="width: 70px; height:50px;">
</div>
<div class=" text-center">
  <h1 class="" style="font-family: 'Noto Sans TC';font-style: normal;font-weight: 700;
font-size: 28px;">登入 Alphitter</h1>
</div>
<div class="row ">
  <div class="col-md-4 m-auto">
    <div class="card border-light card-body m-1">
      <form action="signin" method="POST">
        <div class="mb-3 signin-signup-page-input-change-backgroundcolor" style="max-width: 356px;">
          <label class="form-label" for="account"
            style="margin-left: 10px; margin-bottom:-5px"><small>帳號</small></label>
          <input type="text" id="account" name="account" class="form-control only-underline-input" placeholder="請輸入帳號"
            style="" required autofocus>
        </div>
        <div class="mb-3 signin-signup-page-input-change-backgroundcolor" style="max-width: 356px;">
          <label class="form-label" for="password"
            style="margin-left: 10px; margin-bottom:-5px"><small>密碼</small></label>
          <input type="password" id="password" name="password" class="form-control only-underline-input"
            placeholder="請輸入密碼" required>
        </div>
        <div class="row text-center m-0 mt-5" style="max-width: 356px;">
          <button type="submit" class="text-center btn btn-primary btn-lg btn-block"
            style="background-color: #FF6600; border-radius: 50px; border:none">登入</button>
        </div>
      </form>
      <div class="mt-3 text-end" style="margin-right:10px ;">
        <a href="/signup">註冊</a> &nbsp・&nbsp <a href="/admin/signin">後台登入</a>
      </div>
    </div>
  </div>
</div>