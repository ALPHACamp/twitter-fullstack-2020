<div class="mt-5">
	<form class="form-style form-signin" action="/signin" method="POST">
		{{!-- logo --}}
		<div class="logo text-center">
			<img src="https://meethub.bnext.com.tw/wp-content/uploads/2019/03/medium_alpha-logo-square-89.png" alt="" />
		</div>
		{{!-- 後台登入 --}}
		<div class="tittle-text mb-4 text-center">
			<h1 class="h3 font-weight-normal mb-4">登入Alphitter</h1>
		</div>
		{{!-- 帳號 --}}
		<div class="form-content mb-3 row align-content-end">
			<label class="form-label mb-0 p-2 pb-0" for="account">帳號</label>
			<input class="form-control-style p-2 pb-0 pt-0" id="account" type="text" name="account" placeholder="請輸入帳號"
				required autofocus>
		</div>
		{{!-- 密碼 --}}
		<div class="form-content mb-0 row align-content-end">
			<label class="form-label mb-0 p-2 pb-0" for="password">密碼</label>
			<input class="form-control-style p-2 pb-0 pt-0" id="password" type="password" name="password" placeholder="請輸入密碼"
				required>
		</div>
		{{!-- 登入 --}}
		<button class="submit btn btn-primary btn-block " type="submit">登入</button>

		{{!-- 註冊 後台 --}}
		<div class="sub-login m-3 text-end">
			<p><a href="/signup" class="m-2">註冊</a> • <a href="/admin/signin" class="m-2">後台登入</a></p>
		</div>
	</form>
</div>