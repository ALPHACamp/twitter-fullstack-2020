<div class="container d-flex justify-content-center bg-white">
  <div class="col-5">
    <div class="mt-2 mb-5 text-center">
      <img class="sign-icon" src="/images/orangeACLogo.png" alt="AC icon"
        style="height: 10%; width: 10%; border-radius: 0px;">
      <h2 class="h3 font-weight-normal mt-3 mb-3 fw-bold">登入 Alphitter</h2>
    </div>
    <form action="/signin" method="POST" style='width: 100%;'>
      <div class="form-row" style="background: #F5F8FA;">
        <label for="account" style="margin:0; padding-left:15px;">帳號</label>
        <input type="text" class="form-control" id="account" name="account" placeholder="請輸入帳號"
        style="background: #F5F8FA; border: 0; border-bottom: 2px solid #657786; border-radius:0;" required autofocus>
      </div>
      <div class="form-row mt-4" style="background: #F5F8FA;">
        <label for="password" style="margin:0; padding-left:15px;">密碼</label>
        <input type="password" class="form-control" id="password" name="password" placeholder="請輸入密碼" style="background: #F5F8FA; border: 0; border-bottom: 2px solid #657786; border-radius:0;" required>
      </div>
      <div class="mt-4 mb-4 text-center">
        <button class="btn col-12 n-button" style="color: #FFFFFF; background: #FF6600; border-radius: 50px;" type="submit">登入</button>
      </div>
      <div class="login-link text-end">
        <p>
          <a class="me-2" style="text-decoration: underline; font-size: 16px; color: #0062FF;" href=" /signup">註冊</a>
          •
          <a class="ms-2" style="text-decoration: underline; font-size: 16px; color: #0062FF;" href=" /admin/signin">後台登入</a>
        </p>
      </div>
    </form>
  </div>
</div>