<div class="container">
  {{!-- /user/self --}}
  <div class="card mb-3">
    <img src="https://loremflickr.com/639/200/nature" class="card-img-top" alt="...">
    <div class="card-body">
      <div class="title col-12 d-flex">
        <div class="col-4 card-title-left">
          <h5 class="card-title">Card title</h5>
        </div>
        <div class="col-8 card-title-right">
          <i class="email-icon">Email icon</i>
          <i class="subscription-icon">subscription icon icon</i>
          <a href="" class="user-following-btn">正在跟隨</a>
        </div>
      </div>
      
      <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content.
        This
        content is a little bit longer.</p>
      <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
    </div>
  </div>
  <ul class="nav nav-tabs profile-tabs">
    <li class="nav-item">
      <a class="nav-link" href="">推文</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" href="">回覆</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" href="">喜歡的內容</a>
    </li>
  </ul>
</div>


<!-- 如果是推文 -->
