<div class="d-flex" style="height: 1200px;width:1400px;margin: 0 auto;">
  {{!-- sidebar --}}
  <div style="height: 1200px;width:332px">
    <div id="left-section">
      <img id="logo" src="/images/icons/logo.png">
      <ul id="left-navs" class="nav flex-column">
        <li class="nav-item">
          <a href="/tweets" class="nav-item-content">
            <img src="/images/icons/outlined-home.png" class="base-icon">
            <span class="word">首頁</span>
          </a>
        </li>
        <li class="nav-item">
          <a href="/users/{{user.id}}/tweets" class="nav-item-content">
            <img src="/images/icons/outlined-user.png" class="base-icon">
            <span class="word">個人資料</span>
          </a>
        </li>
        <li class="nav-item">
          <a href="/settings" class="nav-item-content">
            <img src="/images/icons/orange-setting.png" class="base-icon">
            <span class="word-click">設定</span>
          </a>
        </li>
        <li class="nav-item d-flex justify-content-center" style="height: 46px;">
          <button type="button" class="btn btn-primary"
            style="border-radius:50px; width:100%; background:#FF6600; border-color:#FF6600;font-size:20px;font-weight:400"
            data-bs-toggle="modal" data-bs-target="#post-modal">推文</button>
        </li>
      </ul>
      <div id="logout">
        <a href="/logout" style="margin-top:1.585vh; text-decoration: none; align-items: center; display:flex">
          <img src="/images/icons/outlined-logout.png" style="height:24px; margin-left:16px;">
          <span style="margin-left:16px; font-weight:700; font-size:18px; color:#44444F">登出</span>
        </a>
      </div>
    </div>
  </div>
{{!-- 帳戶設定 --}}
  <div style="height: 1200px;width:641px">
    <div class="setting-container">
      <div class="setting-title">
        <h4>帳戶設定</h4>
      </div>
      <form class="form-setting" action="/settings?_method=PUT" method="POST">
        <div class="input-setting top">
          <label class="label" for="account">帳號</label>
          <input class="setting-input" id="account" type="text" name="account" placeholder="請輸入帳號" value="{{account}}" required>
        </div>
        <div class="input-setting">
          <label class="label" for="name">名稱</label>
          <input class="setting-input" id="name" type="text" name="name" placeholder="請輸入使用者名稱" value="{{name}}" required>
        </div>
        <div class="input-setting">
          <label class="label" for="email">Email</label>
          <input class="setting-input" id="email" type="email" name="email" placeholder="請輸入 Email" value="{{email}}" required>
        </div>
        <div class="input-setting">
          <label class="label" for="password">密碼</label>
          <input class="setting-input" id="password" type="password" name="password" placeholder="請輸入密碼" required>
        </div>
        <div class="input-setting">
          <label class="label" for="checkPassword">密碼確認</label>
          <input class="setting-input" id="checkPassword" type="password" name="checkPassword" placeholder="請再次輸入密碼" required>
        </div>
        <button class="setting-btn" type="submit">儲存</button>
      </form>
      {{> messages}}
    </div>
  </div>
  {{!-- {{>popular}} --}}
</div>

