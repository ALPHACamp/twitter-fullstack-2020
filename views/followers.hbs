<div class="row">
    <div class="col">{{> left-nav}}</div>
    <div class="col-7 border-start border-end px-0" id="middle" style="overflow:overlay;">
        <div class="row mx-1">
            <div class="col-1 ">
                <a class="fs-5" style="color: black" href="/users/{{data.id}}/tweets" ><i class="fas fa-arrow-left"></i></a>
            </div>
            <div class="col">
                <span class="fw-bold">{{data.name}}</span><br/>
                <small>{{tweetsCounts}} 推文</small>
            </div>
        </div>
        <hr/>
        {{> followships-nav}}
        <hr/>
        <div style="overflow:auto;height:600px">
            {{#each data.Followers}}
                <div class="row">
                    <div class="col-2">
                        <img src="{{this.avatar}}" class="rounded-circle" style="width:50px;height:50px;">
                    </div>
                    <div class="col">
                        <div>
                            <p class="col fw-bold">{{this.name}}</p>
                            <button class="btn rounded-pill" style="background-color: #FF6600;" type="submit">正在跟隨</button>
                        </div>
                        <div>
                            {{this.introduction}}
                        </div>
                    </div>
                </div>
                <hr/>
            {{/each}}
        </div>
    </div>
    <div class="col">{{> right-nav}}</div>  
</div>
<script>
    document.getElementById("middle").style.height =  window.innerHeight+'px';
</script>