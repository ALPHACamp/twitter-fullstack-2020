<div class="reply d-flex">
  <a href="/users/{{this.UserId}}/tweets">
    <img src="{{checkAvatar this.User.avatar}}" class="rounded-circle reply-avatar">
  </a>
  <div>
    <div class="reply-secondary">
      <a href="/users/{{this.UserId}}/tweets" style="text-decoration:none;">
        <span class="fw-bold reply-name">{{this.User.name}}</span>
      </a>
      <span>@{{this.User.account}}．{{relativeTimeFromNow this.createdAt}}</span>
    </div>
    <div class="reply-secondary">
      <span>回覆</span>
      <a href="/users/{{this.Tweet.User.id}}/tweets"
        class="text-decoration-none reply-account">@{{this.Tweet.User.account}}</a>
    </div>
    <p class="reply-comment">{{this.comment}}</p>
  </div>
</div>