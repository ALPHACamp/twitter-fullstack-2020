<div class='user-container m-0 p-0'>
  {{!-- header --}}
  {{> header route = 'settings'}}

  <div class='user-edit-container'>
    {{> message}}
    <form class='' action='/users/{{user.id}}?_method=PUT' method='POST'>
      <div class='form-row box'>
        <label class='form-label' for='account'>帳號</label>
        <input class='form-control account-input' id='account' type='text' name='account' placeholder='請輸入帳號'
          value="{{user.account}}" required autofocus />
      </div>
      <div class='form-row box'>
        <label class='form-label password-label' for='name'>名稱</label>
        <input class='form-control password-input' id='name' type='text' name='name' placeholder='請輸入使用者名稱(最多50字)'
          value="{{user.name}}" required autofocus />
      </div>
      <div class='form-row box'>
        <label class='form-label password-label' for='email'>Email</label>
        <input class='form-control password-input' id='email' type='text' name='email' placeholder='請輸入 Email'
          value="{{user.email}}" required autofocus />
      </div>
      <div class='form-row box'>
        <label class='form-label password-label' for='password'>密碼</label>
        <input class='form-control password-input' id='password' type='password' name='password' class='form-control'
          placeholder='請輸入密碼' required autofocus />
      </div>
      <div class='form-row box'>
        <label class='form-label password-label' for='passwordCheck'>密碼確認</label>
        <input class='form-control password-input' id='passwordCheck' type='password' name='passwordCheck'
          class='form-control' placeholder='請再次輸入密碼' required autofocus />
      </div>
      <div class='save-btn'>
        <button class='btn' type='submit'>儲存</button>
      </div>
    </form>
  </div>
</div>