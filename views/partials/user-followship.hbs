{{#each users}}
<div class="tweet border-bottom d-flex">
  {{!-- left --}}
  <div class="avatar pt-3 ps-4 pe-2">
    <a href="/users/{{this.id}}/tweets"><img width="50" height="50" src="{{this.avatar}}" alt=""></a>
  </div>
  {{!-- right --}}
  <div class="d-flex flex-column py-3 pe-3 h-100 w-100">
    {{!-- up --}}
    <div class="name d-flex mb-2">
      <span class="name me-2">{{this.name}}</span>
      <div class="button ms-1 ms-auto {{#if this.isFollowed}}followed{{/if}}" onclick="follow(this)" id="{{this.id}}">
        <button class="isFollowed ">正在跟隨</button>
        <button class="notFollowed ">跟隨</button>
      </div>
    </div>
    {{!-- middle --}}
      <div class="introduction  mb-2">
        <span>{{this.introduction}}</span>
      </div>
    {{!-- bottom --}}
  </div>
</div>
{{/each}}
