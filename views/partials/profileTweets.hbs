<div class="back-arror-header">
  <a><i class='back-arror'></i></a>
  <div class="header-text">
    <span class="name">{{user.name}}</span>
    <span class="post-count">{{user.tweetCount}} 推文</span>
  </div>
</div>
<div class="banner">
  <img src="{{user.cover}}" alt="cover" class="cover">
  <img src="{{user.avatar}}" alt="avatar" class="avatar">
  <div class="buttons">
    {{#ifCond loginUser.id user.id}}
    <button type="button" class="btn-outline sm"
      onclick="document.querySelector('#modal-edit').classList.remove('d-none');">編輯個人資料</button>
    {{else}}
    <a><i class='btn-message'></i></a>
    <a><i class='btn-noti'></i></a>
    {{#if this.user.isFollowed}}
    <form action="/followships/{{this.user.id}}?_method=DELETE" method="POST">
      <button type="submit" class="btn-fill sm">正在追蹤</button>
    </form>
    {{else}}
    <form action="/followships" method="POST">
      <input type="hidden" name="id" value="{{this.user.id}}">
      <button type="submit" class="btn-outline sm">跟隨</button>
    </form>
    {{/if}}
    {{/ifCond}}
  </div>
</div>
<div class="information">
  <span class="name">{{user.name}}</span>
  <span class="at-name">@{{user.account}}</span>
  <span class="introduction">{{user.introduction}}</span>
  <div class="followship">
    <span class="following">{{user.followingCount}} 個<a href="/users/{{user.id}}/followings">跟隨中</a></span>
    <span class="follower">{{user.followerCount}} 位<a href="/users/{{user.id}}/followers">跟隨者</a></span>
  </div>
</div>
<div class="paginator">
  <a class="active" href="/users/{{user.id}}/tweets">推文</a>
  <a class="" href="/users/{{user.id}}/replies">推文與回覆</a>
  <a class="" href="/users/{{user.id}}/likes">喜歡的內容</a>
</div>
<div class="tweets">

  {{#each tweets}}
  <div class="tweet">
    <a href="/users/{{../user.id}}/tweets">
      <img class="thumbnail" src="{{../user.avatar}}" alt="">
    </a>
    <div class="postcontent">
      <a class="postuser" href="/users/{{../user.id}}/tweets">
        <span class="name ellipsis">{{../user.name}}</span>
        <span class="at-name ellipsis">@{{this.account}}</span>
        <span class="timer ellipsis">{{moment this.createdAt}}</span>
      </a>
      <a href="/tweets/{{this.id}}" class="content" id="content">
        {{this.description}}
      </a>
      <div class="action">
        <button type="button" class="commenting" data-tweetid="{{this.id}}">
          <i class='comment commenting'></i>
          {{this.replyCount}}
        </button>
        {{#if this.isLiked}}
        <form action="/tweets/{{this.id}}/unlike" method="POST">
          <button type="submit" class="liking">
            <i class='like active'></i>
            {{this.likeCount}}
          </button>
        </form>
        {{else}}
        <form action="/tweets/{{this.id}}/like" method="POST">
          <button type="submit" class="liking">
            <i class='like'></i>
            {{this.likeCount}}
          </button>
        </form>
        {{/if}}
      </div>
    </div>
  </div>
  {{/each}}

</div>