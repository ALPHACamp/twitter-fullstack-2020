<div class="row mx-0 px-0 blockstyle py-3"  onclick="location.href='/tweets/{{tweet.id}}/replies';">
    <div class="col-1">
        <a href="/users/{{User.id}}/tweets"><img src="{{User.avatar}}" class="rounded-circle" style="width:50px;height:50px"></a>
    </div>
    <div class="col">
        <p>
            <span class="fw-bold">{{User.name}}</span> 
            <small>@{{User.account}} ‧ {{relativeTimeFromNow this.updatedAt}}</small>
            <br/>  
            <small >回覆 <a href="/users/{{tweet.User.id}}/tweets" style="color:#FF6600;text-decoration:none;">@{{tweet.User.name}}</a></small>
        </p>
        <p>{{this.comment}}</p>
        <div class="d-flex">
            <div class="col-1"><i class="far fa-comment"></i></div>
            <div class="col-1"><i class="far fa-heart"></i></div>
        </div>
    </div>
</div>
<hr class="my-0"/>
