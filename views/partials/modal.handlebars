<!-- 編輯個人資料Modal-->
<div class="modal" tabindex="-1" role="dialog" id="editProfileModal">
  <div class="modal-dialog" role="document">
    <div class="modal-content">

      <div class="edit-modal">
        <div class="edit-modal-header">
          <button type="button" data-dismiss="modal" aria-label="Close" class="close-button mr-3">
            &times;
          </button> 編輯個人資料
        </div>

        <div class="edit-modal-body">
          <form action="POST">

            <div class="edit-modal-cover" style="background: url();">
              <label for="cover" class="cover-upload"><img src="/images/icon-upload.png" alt=""></label>
              <input type="file" name="" id="cover">
              <form action="POST">
                <button type="submit" class="button cover-delete"><img src="/images/icon-delete.png" alt=""></button>
              </form>
            </div>

            <div class="edit-modal-avtar">
              <img src="" alt="" class="profile-avtar">
              <label for="avtar" class="avtar-upload"><img src="/images/icon-upload.png" alt=""></label>
              <input type="file" id="avtar">
            </div>

            <label for="username"></label>
            <input class="username-input" type="text" id="username" placeholder="名稱" value="" onkeyup="nameWordCount()"
              maxlength="50">
            <div class="word-count">
              <span class="username-input-count">0</span>/50
            </div>

            <label for="brief"></label>
            <textarea class="brief-input" name="" id="brief" cols="30" rows="10" placeholder="自我介紹"
              onkeyup="briefWordCount()" maxlength="160"></textarea>
            <div class="word-count">
              <span class="brief-input-count">0</span>/160
            </div>

            <button type="submit" class="modal-button profile-save-button">儲存</button>
          </form>
        </div>

      </div>

    </div>
  </div>
</div>
<!-- 推文或回覆錯誤Modal-->
<div class="modal fade" id="postError" tabindex="-1" role="dialog" aria-labelledby="postError" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <p class="text-center m-0">要輸入內容才可以推文唷！
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true" style="font-size: 30px;">&times;</span>
        </button>
      </p>
    </div>
  </div>
</div>