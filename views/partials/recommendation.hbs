<section class="recom-wrapper" style="position:sticky; top:0; height:100vh">
  <div class="card m-3" style="width: 20rem; max-height:731px; border:none">
    <div class="card-header" style="background-color:#FAFAFB">
      <h2
        class="m-2"
        style="font-weight:700; line-height:26px; font-size:24px"
      >推薦跟隨</h2>
    </div>
    <div
      class="card-body d-flex flex-column justify-content-around"
      style="background-color:#FAFAFB"
    >
      {{#each recommend}}
        <div
          class="person-container d-flex justify-content-around align-items-center m-3"
        >
          <div
            class="avatar"
            style="width:50px; height:50px; border-radius:50%; background-color:gray"
          >
            <img src="" alt="" />
          </div>
          <div
            class="user-name d-flex flex-column justify-content-center"
            style="height:47px; width:88px"
          >
            <p class="m-0" style="font-weight:700">{{this.account}}</p>
            <p class="m-0" style="color:#92929D">@ {{this.name}}</p>
          </div>
          <div class="follow">
            {{!-- {{#if isFollowed}} --}}
            {{! <form action="/users/:id/follow?_method=DELETE" method="post">
          <button
            type="submit"
            style="border: none; background: none; padding: 0; margin: 0px; cursor: pointer; background-color:#FF6600; width:96px; height:40px; border-radius:50px; color:white"
          >正在跟隨</button>
        </form> }}
            {{!-- {{else}} --}}
            <form action="/users/{{this.id}}/follow" method="post">
              <button
                type="submit"
                style="border: none; background: none; padding: 0; margin: 0px; cursor: pointer; color:#FF6600; border:1px solid #FF6600; width:64px; height:40px; border-radius:50px;"
              >跟隨</button>
            </form>
            {{!-- {{/if}} --}}
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</section>