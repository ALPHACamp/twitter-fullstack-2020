<div class="row w-100 m-0 p-1">
  <div class="col-12 title"><strong>使用者列表</strong></div>
</div>
<div class="row mx-1 overflow-auto">
  {{#each users}}
    <div class="col-sm-3 card-group user-card mt-3">
      <div class="card mb-3">
        <img src="{{this.cover}}" class="card-img-top bg-light" loading="lazy">
        <div class="d-flex justify-content-center avatar-wrap">
          <img class="avatar img-fluid rounded-circle bg-light" src="{{this.avatar}}" loading="lazy" alt="">
        </div>
        <div class="card-body d-flex flex-column pt-0">
          <p class="d-flex flex-column justify-content-center text-center">
            <strong>{{this.name}}</strong>@{{this.account}}
          </p>
          <div class="d-flex justify-content-center"></div>
          <p class="item-other d-flex justify-content-center">
            <span class="mr-3 text-dark"><i class="far fa-comment pr-2 text-lightgrey"></i>{{this.tweetCount}}</span>
            <span class="text-dark"><i class="far fa-heart pr-2 text-lightgrey"></i>{{this.likeCount}}</span>
          </p>
          <p class="item-other d-flex justify-content-center">
            <span class="mr-3 text-dark">{{this.followingCount}} 位<span class="text-lightgrey">追蹤中</span></span>
            <span class="text-dark">{{this.followerCount}} 位<span class="text-lightgrey">跟隨者</span></span>
          </p>
        </div>
      </div>
    </div>
  {{/each}}
</div>