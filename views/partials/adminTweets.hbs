<div class="title">
  <span>推文清單</span>
</div>
<div class="tweets">
  {{#each tweets}}
  <div class="tweet">

    <img class="thumbnail" {{#if this.User.avatar}} src="{{this.User.avatar}}" alt="{{this.User.name}} avatar" {{/if}}>

    <div class="postcontent">
      <div class="postuser">
        <span class="name">{{this.User.name}}</span>
        <span class="at-name">@{{this.User.account}}</span>
        <span class="timer">{{moment this.createdAt}}</span>
      </div>
      <div class="content">
        {{this.description}}...
      </div>
    </div>

    {{!-- 刪除button --}}
    <span class="del-btn">
      <form action="/admin/tweets/{{this.id}}?_method=DELETE" method="POST">
        <button type="submit"><i class="X-gray"></i></button>
      </form>
    </span>

  </div>
  {{/each}}

</div>