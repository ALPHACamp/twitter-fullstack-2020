<div class="form-floating mb-3">
  <input type="text" id="account" name="account" class="form-control" maxlength="50" placeholder="請輸入帳號" required
    autocomplete="new-password" value="{{#if user}}{{ user.account }}{{else}}{{ account }}{{/if}}">
  <label for="account">帳號</label>
  {{>current-word-count max=50}}
</div>
<div class="form-floating mb-3">
  <input type="text" id="name" name="name" class="form-control" maxlength="50" placeholder="請輸入名稱" required
    autocomplete="new-password" value="{{#if user}}{{ user.name }}{{else}}{{ name }}{{/if}}">
  <label for="name">名稱</label>
  {{>current-word-count max=50}}
</div>
<div class="form-floating mb-3">
  <input type="email" id="email" name="email" class="form-control" placeholder="請輸入Email" required
    value="{{#if user}}{{ user.email }}{{else}}{{ email }}{{/if}}">
  <label for="email">Email</label>
</div>
<div class="form-floating mb-3">
  <input type="password" id="password" name="password" class="form-control" placeholder="請輸入密碼"
    autocomplete="new-password">
  <label for="password">密碼</label>
</div>
<div class="form-floating mb-3">
  <input type="password" id="checkPassword" name="checkPassword" class="form-control" placeholder="請再次確認密碼"
    autocomplete="new-password">
  <label for="checkPassword">密碼確認</label>
</div>