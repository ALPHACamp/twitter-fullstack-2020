<div class="">
  <div class="my-2">
    {{> nav}}
  </div>
  <div class="card w-100">
    <img src="{{ profileUser.cover }}" class="resize card-img-top" alt="..." style="max-height: 30vh;">
    <div class="d-flex justify-content-between">
      <img class="rounded-circle ml-3 userinfo-avatar" src="{{ profileUser.avatar }}" alt="" width="120" height="120">
      <div class="d-flex mt-2 mr-3 h-50 align-items-center">
        {{#if isSelf}}
        <button type="button" class="btn btn-outline-primary rounded-pill" data-toggle="modal"
          data-target="#user-info-Modal">
          編輯個人資料
        </button>
        {{else}}
        <a href="#" class="btn p-2 border rounded-circle custom-button mr-2">
          <i class="far fa-envelope"></i>
        </a>
        <a href="#" class="btn p-2 border rounded-circle custom-button mr-2">
          <i class="far fa-bell"></i>
        </a>
        {{#if isFollowed}}
        <form action="/users/{{userId}}/follow?_method=DELETE" method="POST">
          <button class="btn btn-outline-warning btn-sm mr-2 text-white font-weight-bold active"
            style="border-radius: 50px;" aria-pressed="true">正在追蹤</button>
        </form>
        {{else}}
        <form action="/users/{{userId}}/follow" method="POST">
          <button class="btn btn-outline-warning btn-sm mr-2 font-weight-bold" style="border-radius: 50px;">追蹤</button>
        </form>
        {{/if}}
        {{/if}}
      </div>
    </div>

    <div class="card-body">
      <h5 class="mb-0">{{ profileUser.name }}</h5>
      <div class="text-secondary">@{{ profileUser.account }}</div>
      <p class="card-text my-2">
        {{ profileUser.introduction }}
      </p>
      <div class="mt-3">
        <span class="mr-3">
          <span class="font-weight-bold">{{ followingNumber }}個</span><a
            href="/users/{{profileUser.id}}/followings">跟隨中</a>
        </span>
        <span>
          <span class="font-weight-bold">{{ followerNumber }}位</span><a
            href="/users/{{profileUser.id}}/followers">跟隨者</a>
        </span>
      </div>
    </div>
  </div>
</div>

{{> userEdit}}