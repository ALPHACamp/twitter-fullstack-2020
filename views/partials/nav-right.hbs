<div class="card border-light container mt-3 sticky-top"
  style="width: 18rem; font-family: 'Noto Sans TC'; font-style: normal; border-radius: 16px;">
  <div class="card-header border-light">
    <h5 class="mt-2" style="font-weight: bold; font-family:'Noto Sans TC', sans-serif;">推薦跟隨</h5>
  </div>

  <ul class="list-group list-group-flush " style="border:none;">

    {{#each users}}
    <li class="list-group-item border-light" style="height: 70px; background-color:#FAFAFB;">
      <div class="d-flex">
        
        {{!-- 頭像 --}}
        <a href="/users/{{this.id}}" style="text-decoration: none;">
          {{#if this.avatar}}
          <div class="border border-light border-3 rounded-circle me-3" style="width: 50px; height: 50px; background: url('{{this.avatar}}'); background-size: cover; background-position: center;"></div>
          {{!-- <img class="d-inline-block mb-4 " src="{{this.avatar}}" alt="" style="width: 45px; height:45px" class="me-3"> --}}
          {{else}}
          <div class="border border-light border-3 rounded-circle me-3" style="width: 50px; height: 50px; background: url('/images/img.png'); background-size: cover; background-position: center;"></div>
          {{!-- <img class="d-inline-block mb-4 " src="/images/img.png" alt="" style="width: 45px; height:45px" class="me-3"> --}}
          {{/if}}
        </a>

        {{!-- 名字 --}}
        <div style="flex-grow: 1">
          <div class="d-flex flex-column ">
            <a href="/users/{{this.id}}" style="text-decoration: none; color:black;">
              <span style="font-weight: 700; font-size: 16px; line-height: 26px;">{{this.name}}</span>
            </a>
            <span style="font-weight: 500; font-size: 14px; line-height: 22px; color: #92929D">@{{this.account}}</span>
          </div>
        </div>

        {{!-- 追蹤按鈕 --}}
        <div>
          {{#if this.isFollowed }}
          <form action="/followships/{{this.id}}?_method=DELETE" method="POST" style="display: contents;">
            <button type="submit" name="id" value="{{this.id}}"
              class="btn btn-primary border border-light rounded-pill mb-4"
              style="background-color: #FF6600;">正在跟隨</button>
          </form>
          {{else}}
          <form action="/followships" method="POST" style="display: contents;">
            <button type="submit" name="id" value="{{this.id}}" class="btn btn-primary rounded-pill mb-4"
              style="background-color: #FFFFFF; color:#FF6600; border:#FF6600 solid 1px; margin-left:30px;">跟隨</button>
          </form>
          {{/if}}
        </div>

      </div>
    </li>
    {{/each}}

  </ul>
</div>
