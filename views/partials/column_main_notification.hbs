    {{#each notificationsArray}}  
    <div class="d-flex flex-column align-items-star pointer tweet-gray w-100 p-2">
      <div class="pt-2">
        <img class="profile-img img-fluid rounded-circle" src="{{this.user.avatar}}" alt="" style="max-height: 70px;">
      </div>
            {{#ifEqual this.type "Tweet"}}
                {{!-- <a href="/users/{{}}/tweets"> --}}
              <div class="tweet-notify">
