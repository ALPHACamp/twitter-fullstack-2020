                <div class="item-desc">
                  {{this.data.description}}
                </div>
              </div>
            {{/ifEqual}}
            {{#ifEqual this.type "Reply"}}
              <div class="reply-notify">
                <strong>{{this.user.name}} 有新的回覆</strong>
                <div class="item-desc">
                {{this.data.description}}
                </div>
              </div>
            {{/ifEqual}}
            {{#ifEqual this.type "Followship"}}
              
              <div class="follow-notify">
                <strong>{{this.user.name}} 開始追蹤你</strong>
              </div>
            {{/ifEqual}}
              
            {{#ifEqual this.type "Like"}}
              <div class="like-notify">
                <strong>{{this.user.name}} 喜歡你的貼文</strong>
              </div>
