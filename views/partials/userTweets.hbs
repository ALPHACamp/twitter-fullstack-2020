{{!-- 路由/users/id/tweets模組 --}}
{{#each userData.userTweets}}
<div class="tweet">
  <div class="twitter-avatar">
    <a href="/users/{{../userData.id}}">
      <img src="{{../userData.avatar}}" alt="" class="tweets-img">
    </a>
  </div>
  <div class="tweet-content-box">
    <div class="twitter-info">
      <a href="/tweets/{{this.id}}/replies" class="reply-link">
        <span class="twitter-name">{{../userData.name}}</span>
        <span class="twitter-account">{{../userData.account}}</span>
        <span class="twitter-dot">。</span>
        <span class="twitter-createdAt">{{moment this.createdAt}}</span>
      </a>
    </div>
    <div class="tweet-content">{{this.description}}</div>
    <div class="tweet-feedback">
      {{!-- 判斷是否被like過 --}}
      {{#checkLike ../user this.likes}}
      <form action="/tweets/{{this.id}}/unlike" method="post">
        <button type="button" class="goto-comment" data-tweetid="{{this.id}}" data-avatar="{{../userData.avatar}}"
          data-name="{{../userData.name}}" data-accountname="{{../userData.account}}"
          data-createtime="{{moment this.createdAt}}" data-tweetcontent="{{this.description}}"
          data-useravatar="{{getAvatar ../user}}">
          {{#checkReply ../user this.replies}}
          <i class="fas fa-comment comment-icon"></i>
          {{else}}
          <i class="far fa-comment comment-icon"></i>
          {{/checkReply}}
          <span class="reply-sum comment-icon">{{countNum this.replies}}</span>
        </button>
        <button type="submit" class="post-like">
          <i class="fas fa-heart like-heart"></i>
          <span class="like-sum">{{countNum this.likes}}</span>
        </button>
      </form>
      {{else}}
      <form action="/tweets/{{this.id}}/like" method="post">
        <button type="button" class="goto-comment" data-tweetid="{{this.id}}" data-avatar="{{../userData.avatar}}"
          data-name="{{../userData.name}}" data-accountname="{{../userData.account}}"
          data-createtime="{{moment this.createdAt}}" data-tweetcontent="{{this.description}}"
          data-useravatar="{{getAvatar ../user}}">
          {{#checkReply ../user this.replies}}
          <i class="fas fa-comment comment-icon"></i>
          {{else}}
          <i class="far fa-comment comment-icon"></i>
          {{/checkReply}}
          <span class="reply-sum comment-icon">{{countNum this.replies}}</span>
        </button>
        <button type="submit" class="post-like">
          {{#checkIfBeLiked this.likes}}
          <i class="fas fa-heart like-heart"></i>
          {{else}}
          <i class="far fa-heart normal"></i>
          {{/checkIfBeLiked}}
          <span class="like-sum">{{countNum this.likes}}</span>
        </button>
      </form>
      {{/checkLike}}
    </div>
  </div>
</div>
{{/each}}