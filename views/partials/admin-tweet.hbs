{{#each tweets}}
<div class="admin-tweet border-bottom d-flex"> 
  {{!-- left --}}
  <div class="avatar pt-3 ps-4 pe-2">    
      <a href="/users/{{this.User.id}}/tweets"><img width="50" height="50" src="{{this.User.avatar}}" alt=""></a>
  </div>
  {{!-- right --}}
    <div class="d-flex flex-column py-3 pe-5 h-100 w-100">
      {{!-- up --}}
      <div class="name-account  mb-2">
        <span class="name me-2">{{this.User.name}}</span>
        <span class="account">@{{this.User.account}}ãƒ»{{this.createdAt.fromNow}}</span>
        <button class="ms auto"></button>
      </div>
      {{!-- middle --}}
        <div class="description  mb-2">
          <span>{{this.description}}</span>
        </div>
    </div>
</div>
{{/each}}