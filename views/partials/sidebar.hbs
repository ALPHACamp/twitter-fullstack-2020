<div class="col-md-3 ms-5" style="width: 178px; position:fixed;margin-left:60px;">
  <div class="d-flex flex-column mb-2">
    <img src="https://i.imgur.com/T5IhY8x.png" title="source: imgur.com" style="width: 50px;" class="mt-3 mb-4" />

    <div class="d-flex mb-5">
      <a href="/tweets" style="text-decoration:none;">
        <img src="{{#ifCond route 'tweets'}}https://i.imgur.com/56xY3VM.png{{/ifCond}}https://i.imgur.com/HF6w9TJ.jpg" title="source: imgur.com" style="width: 24px; height: 24px"
          class="ms-2 me-3" />
        <h5 class="fs-5" style="color: #44444F;{{#ifCond route 'tweets'}}color: #FF6600;{{/ifCond}} font-weight: 700; display:inline;">首頁</h5>
      </a>
    </div>
    {{!-- 個人資料 --}}
    <div class="d-flex mb-5">
      <a href="/users/{{currentUserId}}/tweets" style="text-decoration:none;">
        <img src="{{#ifCond route 'user'}}https://i.imgur.com/iCNEmii.jpg{{/ifCond}}https://i.imgur.com/6P4UnEV.png" title="source: imgur.com" style="width: 24px; height: 24px"
          class="ms-2 me-3" />
        <h5 class="fs-5" style="color: #44444F;{{#ifCond route 'user'}}color: #FF6600;{{/ifCond}} font-weight: 600; display:inline;" >個人資料</h5>
      </a>
    </div>
    {{!-- 設定 --}}
    <div class="d-flex mb-5">
      <a href="/users/{{currentUserId}}/setting" style="text-decoration:none;">
        <img src="{{#ifCond route 'setting'}}https://i.imgur.com/hYvK20x.png{{/ifCond}}https://i.imgur.com/qDyxMOX.png" title="source: imgur.com" style="width:26px; height: 26px"
          class="ms-2 me-3"/>
        <h5 class="fs-5" style="color: #44444F; {{#ifCond route 'setting'}}color: #FF6600;{{/ifCond}}font-weight: 600; display:inline;">設定</h5>
      </a>
    </div>
    <button class="btn btn-default"
      style="background-color: #FF6600;border-radius: 23px; color: white; width:178px; height: 46px;" data-bs-toggle="modal" data-bs-target="#postTweet">推文</button>
    {{!-- logout --}}
    <div class="d-flex mb-4" style="margin-top: 160px;">
      <a href="/logout" style="text-decoration:none;">
        <i class="fa-solid fa-arrow-right-from-bracket" style="color: #44444f; display:inline;"></i>
        <h5 class="fs-5 ms-3" style="color: #44444F; font-weight: 600; display:inline;">登出</h5>
      </a>
    </div>
  </div>
</div>