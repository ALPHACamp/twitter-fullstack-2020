<div class="most-followed mt-3 pt-4">
  <div class="ms-4 mb-3 title">推薦跟隨</div>
  <hr>
  <div style="overflow-y:scroll; height: 85vh;">
    {{#each topTenFollowed}}
    <div class="d-flex top-ten-window p-4">
      <div class=" avatar">
        <a href="/users/{{this.id}}/tweets"><img width="50" height="50" src="{{this.avatar}}" alt=""></a>
      </div>
      <div class="name ms-2">
        <span class="name">{{this.name}}</span>
        <span class="account">@{{this.account}}</span>
      </div>
      {{#if this.notSelf}}
      <div class="button ms-1 my-auto {{#if this.isFollowed}}followed{{/if}}" onclick="follow(this)" id="{{this.id}}">
        <button class="isFollowed">正在跟隨</button>
        <button class="notFollowed ms-auto">跟隨</button>
      </div>
      {{/if}}

    </div>
    {{/each}}
  </div>

</div>