<div class="col-3">
  <div class="card mx-1 my-2">
    <div class="card-top">
      <img class="card-cover"
        src="https://media.gettyimages.com/photos/hot-air-balloons-flying-over-the-botan-canyon-in-turkey-picture-id1297349747?k=20&m=1297349747&s=612x612&w=0&h=ki4CX5eS8qtXUzQyYZJxZXG0pNyRIlE0FHYFtaJ0p0I="
        alt="card-cover">
    </div>

    <div class="card-middle">
      <div class="card-avatar-part">
        <img class="card-avatar"
          src="https://assets-lighthouse.alphacamp.co/uploads/user/photo/8265/medium____2022-02-16___5.15.27.png"
          alt="card-avatar">
      </div>
      <div>
        <p class="card-name">Andy Chien</p>
        <p class="card-account">@andychienn</p>
      </div>

    </div>
    <div class="card-bottom">
      <div class="card-tweet-like">
        <form action="/tweets/{{this.id}}/like" method="POST">
          <div class="tweets-counts">
            <button type="submit">
              <img src="../images/icons/feather.png" alt="tweets-counts">
            </button>
            <div class="card-num">50</div>
          </div>
        </form>
        <form action="/tweets/{{this.id}}/like" method="POST">
          <div class="likes-counts">
            <button type="submit">
              <img src="../images/icons/like-w.png" alt="likes-counts">
            </button>
            <div class="card-num">50</div>
          </div>
        </form>
      </div>
      <div class="card-followship">
        <div class="card-following">
          20 個跟隨中
        </div>
        <div class="card-follower">
          20 個跟隨者
        </div>
      </div>
    </div>
  </div>
</div>