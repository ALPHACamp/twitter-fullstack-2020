<div class="py-3 blockstyle" onclick="location.href='/users/{{this.id}}/tweets';">
    <div class="row mx-0 px-0 ">
        <div class="col-1">
            <img src="{{this.avatar}}" class="rounded-circle" style="width:50px;height:50px;">
        </div>
        <div class="col-1 px-0 py-2">
            <span class="col fw-bold align-middle my-0 fs-6">{{this.name}}</span>
        </div>
        <div class="col text-end">
            {{#ifCond this.id logInUser.id}}
            {{else}}
                {{#if this.isFollowed}}
                    <form method="POST" action="/followships/{{this.id}}?_method=DELETE">
                        <button class="btn rounded-pill text-light" style="background-color: #FF6600;" type="submit">正在跟隨</button>
                    </form>
                {{else}}
                    <form method="POST" action="/followships">
                        <input name="id" style="display: none;" value="{{this.id}}">
                        <button class="btn rounded-pill" style="color:#FF6600;border-color:#FF6600" type="submit">跟隨</button>
                    </form>
                {{/if}}
            {{/ifCond}}
        </div>
    </div>
    <div class="row">
        <div class="col-1"></div>
        <div class="col">{{this.introduction}}</div>
    </div>
</div>
<hr class="my-0"/>