<div class="row mx-0 px-0" onclick="location.href='/users/{{this.id}}/tweets';">
    <div class="col-1">
        <img src="{{this.avatar}}" class="rounded-circle" style="width:50px;height:50px;">
    </div>
    <div class="col-1 py-2">
        <a href="/users/{{this.id}}/tweets" style="text-decoration:none; color:black;"><span class="col fw-bold align-middle my-0 fs-6">{{this.name}}</span></a>
    </div>
    <div class="col text-end">
    {{#if this.isFollowed}}
        <form method="POST" action="/followships/{{this.id}}?method=DELETE">
            <button class="btn rounded-pill text-light" style="background-color: #FF6600;" type="submit">正在跟隨</button>
        </form>
    {{else}}
        <form method="POST" action="/followships">
            <input name="id" style="display: none;" value="{{this.id}}">
            <button class="btn rounded-pill" style="color:#FF6600;border-color:#FF6600" type="submit">跟隨</button>
        </form>
    {{/if}}
    </div>
</div>
<div class="row">
    <div class="col-1"></div>
    <div class="col">
        {{this.introduction}}
    </div>
</div>
<hr/>