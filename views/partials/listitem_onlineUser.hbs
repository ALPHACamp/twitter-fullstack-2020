{{#if (isdefined usersInteracted)}}
<div id="private-message-list" class="d-flex align-items-start flex-column w-100">
  {{#each usersInteracted}}
   <div class="d-flex flex-row align-items-center pointer tweet-gray w-100 p-2">
    <a class="profile-img mr-3" href="/chat/private/{{this.id}}">
      <img class="profile-img img-fluid rounded-circle" src="{{this.avatar}}" alt="">
    </a>
    <div class="private-message-content d-flex flex-column w-100">
      <a href="/chat/private/{{this.id}}" class="text-dark text-decoration-none">
       <div class="d-flex flex-row w-100 align-items-center">
          <div class="sender-name name d-flex flex-wrap">
            <span>{{this.name}}</span>
          </div>
          <div class="sender-account text-lightgrey pl-1">
            <span class="username">@{{this.account}}</span>
          </div>
          <div class="message-posttime text-lightgrey ml-auto ms-auto">
            <span class="posttime chat-createdAt">{{moment this.createdAt}}</span>
          </div>  
      </div>
        <div class="message-text text-lightgrey d-flex flex-wrap py-1 w-100">
        1231212313212313123123123....
        </div>
      </a>
    </div>
    </div>
  {{/each}}
  </div>
{{else}}
  <div id="public-chat-user-list" class="d-flex align-items-start flex-column" style="min-height: 100px;">
