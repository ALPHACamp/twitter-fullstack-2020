{{! side-bar-right }}
<div id='sidebar-right'>
  <div class="popular-message-box flash" >
    {{> message}}
  </div>
  <div class='popular'>
    <div class='title'>Popular</div>
    <div class='popular-top'></div>
    <div class='card-wrapper'>
      {{#each recommendedList}}
      <div class='card'>
        <a href="/users/{{this.id}}/tweets">
          <img
            class='avatar'
            src='{{this.avatar}}'
            alt='avatar'
            width='50'
            height='50'
          />
        </a>
        <div class='people'>
          <a href="/users/{{this.id}}/tweets">
            <p class='name'>{{this.name}}</p>
            <p class='account'>@{{this.account}}</span>
          </a>
        </div>
        
        {{#if this.isFollowed}}
        <form action="/followships/{{this.id}}?_method=DELETE" method="POST">
          <button type="submit" class="followed">正在跟隨</button>
        </form>
        {{else}}
          {{#ifCond UserId this.id}}
          {{else}}
          <form action="/followships" method="POST">
            <button class="tofollow-button" name="id" value="{{this.id}}">跟隨</button>
          </form>
          {{/ifCond}}
        {{/if}}
      </div>
      {{/each}}
    </div>
  </div>
</div>