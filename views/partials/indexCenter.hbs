<div class="container m-auto" style="">
    <a class="navbar-brand" href="/" style="font-weight:bold; color:black;">首頁</a>
    <hr>
     {{!-- ================新增推文區域================================================= --}}
     <div class="row row-cols-2 border p-2" style="">
            <div class="cols text-center" style=" width:15%">
                <form class="">
                    <img src="{{user.avatar}}" style=" width:60PX;height:60px; border-radius:100%;"></img>
                </form>
            </div>

            <div class="cols " style=" width:85%;">
                <form action="/tweets" method="POST">
                <textarea class="wishContent"   placeholder="有什麼新鮮事?" style=" min-height:60px; width:100%; border:0px; resize : none; outline : 0; overflow:hidden;"></textarea >
                <div class="" style=" text-align:right;">
                    <button class="btn " type="submit" style="background-color: orangered;border-radius:40px; color:white; font-weight:bold; ">推文</button>
                </div>
                </form>
            </div>
        </div>
 {{!-- =====================推文列表============================================ --}}       
   {{#each users}}     
        <div class="row row-cols-2 border p-2" style="">
            <div class="cols text-center" style=" width:15%">
                <img src="{{this.avatar}}" style=" width:60PX;height:60px; border-radius:100%;"></img>
            </div>

            <div class="cols" style=" width:85%">
                <div class="row ml-1">
                    <div class="cols" style=""><p>{{this.name}}</p></div>
                    <div class="cols ml-1" style="color:gray"><p>@{{this.account}}</p></div>
                    <div class="cols mx-1" style="color:gray"><p>•</p></div>
                    <div class="cols" style="color:gray"><p>{{this.createdAt}}</p></div>
                    <div class="cols" style=""><p>...</p></div>
                </div>

                <p>{{this.description}}</p>

                <div class="">
                    <form id="repliesButton" action="" method="post" style="float:left;">
                        <button  type="submit" style="border:0px; background:inherit;" ><i class="far fa-comment"></i></button>
                    </form>                    
                    <p style="float:left;">{{user.reply.length}}</p>
                    {{#if isLiked}}
                    <form id="likeButton" action="/tweets/{{user.id}}/unlike" method="post" style="float:left;">
                        <button  type="submit" style="border:0px; background:inherit;"><i class="fas fa-heart"></i></button>
                     </form>
                    {{else}}
                    <form id="likeButton" action="/tweets/{{user.id}}/like" method="post" style="float:left;">
                        <button  type="submit" style="border:0px; background:inherit;"><i class="far fa-heart"></i></button>
                    </form>
                    {{/if}}
                    <p style="float:left;">{{user.liked.length}}</p>  
                </div>
              
            </div>
        </div>
    {{/each}}
{{!-- ================================================================= --}}
</div>