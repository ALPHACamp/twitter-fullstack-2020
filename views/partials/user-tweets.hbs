<div class='user-container m-0 p-0'>
  {{> user-profile route = 'tweets'}}

  <!-- each tweets -->
  <ul class='list-group home-list'>
    {{#each tweets}}
    <li class='mt-2 tweet-list'>
      <div class='d-flex align-items-start'>
        <div class='flex-shrink-1 p-0 icon'>
          <img src='/images/profile-img.svg' alt='' class='tweet-user-img' />
        </div>
        <div class='tweet-text flex-grow-1'>
          <span class='user-name'>{{this.User.name}} </span>
          <span class='user-account'>@{{this.User.account}}</span>
          <span class='user-account'>ãƒ»{{formatRelativeTime this.createdAt}}</span>
          <p class='text-content'>{{this.description}}</p>
          <div>
            <a class='tweet-interact-btn' href='#'>
              <img class='tweet-list-icon' src='/images/reply_outlined.svg' alt='reply'>
              <span class="interact-counts-text">{{this.repliesCount}}</span>
            </a>
            <a class='tweet-interact-btn' href='#'>
              <img class='tweet-list-icon' src='/images/like_outlined.svg' alt='like'>
              <span class="interact-counts-text">{{this.likesCount}}</span>
            </a>
          </div>
        </div>
      </div>
    </li>
    {{/each}}
  </ul>
</div>