<script id="tweet-template" type="text/x-handlebars-template">
              <div class="avatar d-flex flex-column pt-3 ps-4 pe-2 ">
                <a href=""><img width="50" height="50" src="{{this.User.avatar}}" alt=""></a>
                <div class="connect-line mt-3 mx-auto"></div>
              </div>
      
      
              <div class="d-flex flex-column py-3 pe-3 h-100 w-100">
      
                <div class="name-account  mb-2">
                  <span class="name me-2">{{tweet.User.name}}</span>
                  <span class="account">{{tweet.User.account}}・{{tweet.createdAt.fromNow}}</span>
                </div>
      
                <div class="description  mb-2" id="{{tweet.id}}">
                  <span>{{tweet.description}}</span>
                </div>
      
                <div class="reply-to  mt-auto mb-4">
                  回覆給 <span class="account">@{{tweet.User.account}}</span>
                </div>
              </div>
              </script>
