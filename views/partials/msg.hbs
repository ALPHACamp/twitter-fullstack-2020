{{#if error_msg}}
<div class="alert alert-warning alert-dismissible col-md-8 mx-auto" role="alert">
  {{error_msg}}
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{{/if}}

{{#if success_msg}}
<div class="alert alert-success alert-dismissible col-md-8 mx-auto" role="alert">
  {{success_msg}}
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{{/if}}

{{#each errors}}
<div class="alert alert-warning alert-dismissible col-md-8 mx-auto" role="alert">
  {{this.message}}
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{{/each}}