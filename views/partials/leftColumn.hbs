<div class="navigation d-flex flex-column justify-content-between">
  <a href='/tweets'><img class='logo' alt='logo' src='/images/twitter_2022_logo.svg' /></a>
  <a class="{{#ifCond leftColTab 'userHome'}}active{{/ifCond}}" href='/tweets'><i class="home"></i>首頁</a>
  <a class="{{#ifCond leftColTab 'userInfo'}}active{{/ifCond}}" href='/users/{{user.id}}/tweets'><i class="info"></i>個人資料</a>
  <a class="{{#ifCond leftColTab 'userSetting'}}active{{/ifCond}}" href='/users/{{user.id}}/setting'><i class="setting"></i>設定</a>
  <button type="button" class="btn btn-primary" data-bs-toggle='modal' data-bs-target='#postModal'>推文</button>
</div>
<div class="footer">
  <a href="/logout"><i class="logout"></i>登出</a>
</div>

{{! 以下為推文modal }}
<div class='modal fade' id='postModal' tabindex='-1' aria-labelledby='postModalLabel' aria-hidden='true'>
  <div class='modal-dialog'>
    <div class='modal-content'>
      <div class='modal-header'>
        <a class='btn-close' data-bs-dismiss='modal' aria-label='Close'></a>
      </div>
      <div class='modal-body'>
        <form action='/tweets' method='POST' class="d-flex flex-column justify-content-between mb-0">
          <div class="d-flex align-items-start">
            <a href="/users/{{user.id}}/tweets">
              <img class="avatar" src='{{user.avatar}}' alt='{{user.name}}\' s avatar'>
            </a>
            <textarea class='text-count-area' id='description' name='description' placeholder='有什麼新鮮事？' maxlength='140'></textarea>
          </div>
          <div class="d-flex justify-content-end align-items-center">
            <span class="secondary-text"><span class="text-count-number">0</span>/140</span>
            <span class="alert-text">字數不可超過 140 字</span>
            <button class="btn btn-primary side-post-btn text-count-btn" type='submit' data-bs-toggle='modal' data-bs-target='#postModal' disabled>推文</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

