<div class="w-25 d-flex justify-content-center">
  <div class="w-50 d-flex flex-column justify-content-between fs-5">
    {{!-- Vertical Nav Column --}}
    <nav class="navbar mb-5">
      <ul class="navbar-nav w-100">
        <a href="/tweets" class="my-4">
          <img src="/images/logo.png" style="width: 50px">
        </a>
        <li class="nav-item my-2">
          <a class="nav-link fw-bolder {{#ifCond route 'tweets'}}active{{/ifCond}}" href="/tweets">
            <i class="fa-solid fa-house fa-fw me-2"></i>
            <span>首頁</span>
          </a>
        </li>
        <li class="nav-item my-2">
          <a class="nav-link fw-bold {{#ifCond route 'user'}}active{{/ifCond}}" href="/users/{{user.id}}/tweets">
            <i class="fa-solid fa-user fa-fw me-2"></i>
            <span>個人資料</span>
          </a>
        </li>
        <li class="nav-item my-2">
          <a class="nav-link fw-bold {{#ifCond route 'setting'}}active{{/ifCond}}" href="/api/users/{{user.id}}">
            <i class="fa-solid fa-gear fa-fw me-2"></i>
            <span>設定</span>
          </a>
        </li>
        <button type="button" class="btn btn-primary my-4 rounded-pill w-100" data-bs-toggle="modal"
         data-bs-target="#tweetModal-{{user.id}}">推文</button>
      </ul>
    </nav>
    {{!-- Logout Button --}}
    <a href="/logout" class="mb-5">
      <i class="fa-solid fa-right-from-bracket me-2"></i>
      <span>登出</span>
    </a>
  </div>

  {{!-- Tweet Modal --}}
  <div class="modal fade" id="tweetModal-{{user.id}}" tabindex="-1" aria-labelledby="tweettModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-body">
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"
            style="margin-left: 0px;"></button>
          <div>
            <form action="/tweets" method="POST" class="w-100 my-3">
              <div>
                <div class="form-row d-flex">
                  {{#if user.avatar}}
                    <div><img src="{{user.avatar}}" width="50px" height="50px" class="rounded-circle"></div>
                  {{else}}
                    <div><img src="https://via.placeholder.com/50" width="50px" height="50px" class="rounded-circle" /></div>
                  {{/if}}
                  <textarea class="form-control border-0" name="content" id="content" cols="30" rows="6"
                    placeholder="有什麼新鮮事" maxlength="140"></textarea>
                </div>
                <div class="form-row d-flex justify-content-end align-items-center mb-2">
                  <div class="contentWordCount counter text-danger mt-3 me-4"></div>
                  <button class="btn btn-primary mt-3 btn-block rounded-pill" type="submit">推文</button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>