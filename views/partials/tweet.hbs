<form class="tweet-card" action="/tweets/{{this.userId}}/replies" method="GET">
  <a href="/users/{{this.userId}}/tweets">
    <img class="me-auto rounded-circle" src="{{this.User.avatar}}" alt="avatar">
  </a>
  <a class="tweet-card-name" href="/users/{{this.userId}}/tweets">
    <span class="font-name">{{this.User.name}}</span>
    <span class="font-account">@{{this.User.account}}</span>
  </a>
  <div class="text-box">
    <span>{{this.description}}
      <form action="/tweets/{{this.userId}}/like" method="POST">
        <div class="speech-bubble">
          <button type="submit">
            <img src="https://upload.cc/i1/2022/07/26/rKCiDo.png" alt="reply">
          </button>
          <div class="font-account">50</div>
        </div>
      </form>
      <form action="/tweets/{{this.userId}}/unlike" method="POST">
        <div class="like-w">
          <button type="submit">
            <img src="https://upload.cc/i1/2022/07/26/ZdBEx9.png" alt="like">
          </button>
          <div class="font-account">50</div>
        </div>
      </form>
    </span>
  </div>
</form>