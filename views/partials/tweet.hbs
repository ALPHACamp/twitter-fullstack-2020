<div class="tweet-card">
  <a href="/users/{{this.User.id}}/tweets">
    <img class="me-auto rounded-circle" src="{{this.User.avatar}}" alt="avatar">
  </a>
  <a class="tweet-card-name" href="/users/{{this.User.id}}/tweets">
    <span class="font-name">{{this.User.name}}</span>
    <span class="font-account">@{{this.User.account}}ãƒ»{{relativeTimeFromNow this.createdAt}}</span>
  </a>
  <div class="text-box">
    <span>{{#ifCond route 'tweets'}}{{this.description}}{{/ifCond}}
      {{#ifCond route 'replies'}}{{this.comment}}{{/ifCond}}
      {{#ifCond route 'likes'}}{{this.Tweet.description}}{{/ifCond}}
      <form action="/tweets/{{this.id}}/like" method="POST">
        <div class="speech-bubble">
          <button type="submit">
            <img src="/images/icons/speech-bubble.png" alt="reply">
          </button>
          <div class="font-account">50</div>
        </div>
      </form>

      {{#if this.Likes.id}}
      <form action="/tweets/{{this.id}}/unlike" method="POST">
        <div class="like-w">
          <button type="submit">
            <img src="/images/icons/like.png" alt="like">
          </button>
          <div class="font-account">50</div>
        </div>
      </form>
      {{else}}
      <form action="/tweets/{{this.id}}/like" method="POST">
        <div class="like-w">
          <button type="submit">
            <img src="/images/icons/like-w.png" alt="like">
          </button>
          <div class="font-account">50</div>
        </div>
      </form>
      {{/if}}

    </span>
  </div>
</div>