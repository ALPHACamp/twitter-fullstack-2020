{{#each tweets}}
<div class="tweet row border-bottom g-0">
  {{!-- left --}}
  <div class="avatar col-2"> 
    <div class="mt-3 ms-4 me-2">
      <img width="50" height="50" src="{{this.User.avatar}}" alt="">
    </div>
  </div>
  {{!-- right --}}
  <div class="content col py-3 ">
    <div class="row row-cols-1 g-0 h-100">
      {{!-- up --}}
      <div class="name-account col mb-2">
        <span class="name me-2">{{this.User.name}}</span>
        <span class="account">@{{this.User.account}}</span>
      </div>
      {{!-- middle --}}
      <div class="description col mb-2">
        <span>{{this.description}}</span>
      </div>
      {{!-- bottom --}}
      <div class="reply-like col">
        <div class="reply m-0">
          {{>reply}}
          <span>100</span>
        </div>
        <div class="like m-0">
          {{>like}}<span>100</span>
        </div>
      </div>
    </div>
  </div>
</div>
{{/each}}
