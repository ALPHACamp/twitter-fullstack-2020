<div class="modal fade"id="replyListModal"tabindex="-1"aria-labelledby="exampleModalLabel"ariahidden="true">
  <div class="modal-dialog">
    <div class="modal-content" style="width:634px;border-radius:14px;">
      <div class=" d-flex justify-content-start modal-head">
        <button
          type="button"
          class="reply-modal-xmark"
          data-bs-dismiss="modal"
          aria-label="Close">X
        </button>
      </div>
      <form action="/tweets/{{tweet.id}}/replies" method="POST">  
        <div class="d-flex flex-column" style="padding:0px 16px">
          <div class="d-flex flex-row mb-3" >
            <div>
              {{#if tweet.User.avatar}}
              <img src="{{tweet.User.avatar}}" width="50px" ;height="50px"
                style="display:inline-block;border-radius:100%;margin:auto 8px auto 24px" alt="avatar">
              {{else}}
              <img src="https://i.imgur.com/mhXz6z9.png?1" width="50px" ;height="50px"
                style="display:inline-block;border-radius:100%;margin:auto 8px auto 24px" alt="avatar">
              {{/if}}
            </div>
            <div class="d-flex flex-column reply-modal">
              <div class="d-flex justify-content-start">
                <span class="name">{{tweet.User.name}}</span>
                <span class="account">&nbsp;@{{tweet.User.account}}</span>
                <span class="time"><b> •</b>&nbsp;{{relativeTimeFromNow tweet.createdAt}}</span>
              </div>
              <p class="content mt-0 pt-0">{{tweet.description}} </p>
              <div class="reply-to d-flex" style="color: #6C757D;">回覆給
                <p class="ms-1" style="color: #FF6600;">@{{tweet.User.account}}</p>
              </div>
            </div>
          </div>
          <div class="form-row d-flex flex-row mb-3" style="display:inline-block">
            <div>
                <img src="{{user.avatar}}" width="50px" ;height="50px"
                  style="display:inline-block;border-radius:100%;margin:auto 8px auto 24px" alt="avatar">
             </div>
            <textarea class="form-control" id="comment" style="border:none;padding:0px;resize: none" name="comment" rows="7" cols="20" maxlength="140" minlength="1"  placeholder="推你的回覆"></textarea>
          </div>
        </div>
        <div class="d-flex justify-content-end" >
  
          <p class="warnig-meg" style="font-size:15px;color:#FC5A5A;margin:0;display: flex;align-items: center">內容不可空白</p>
          <input class="form-control" type="hidden" name="tweetId" value="{{tweet.id}}" />
          <button type="submit" class="btn btn-primary m-1" style="color:#FFFFFF;width:64px;
        height:40px;border:none;background:#FF6600;border-radius:50px">推文</button>
        </div> 
      </form>   
    </div>
  </div>
</div>