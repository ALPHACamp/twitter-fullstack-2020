<div class="back-arror-header">
  <a><i class='back-arror'></i></a>
  <div class="header-text">
    <span class="name">{{user.name}}</span>
    <span class="post-count">{{user.tweetCount}}萬 推文</span>
  </div>
</div>
<div class="banner">
  <img src="{{user.cover}}" alt="" class="cover">
  <img src="{{user.avatar}}" alt="" class="avatar">
  <div class="buttons">
    {{#ifCond loginUser.id user.id}}
    <button type="button" class="btn-outline sm"
      onclick="document.querySelector('#modal-edit').classList.remove('d-none');">編輯個人資料</button>
    {{else}}
    <a><i class='btn-message'></i></a>
    <a><i class='btn-noti'></i></a>
    <button type="button" class="btn-fill sm">正在跟隨</button>
    {{/ifCond}}
  </div>
</div>
<div class="information">
  <span class="name">{{user.name}}</span>
  <span class="at-name">{{user.account}}</span>
  <span class="introduction">{{user.introduction}}</span>
  <div class="followship">
    <span class="following">{{user.followingCount}} 個
      <a href="/users/{{user.id}}/followings">跟隨中</a>
    </span>
    <span class="follower">{{user.followerCount}}萬 位
      <a href="/users/{{user.id}}/followers">跟隨者</a>
    </span>
  </div>
</div>
<div class="paginator">
  <a class="" href="/users/{{user.id}}/tweets">推文</a>
  <a class="" href="/users/{{user.id}}/replies">推文與回覆</a>
  <a class="active" href="/users/{{user.id}}/likes">喜歡的內容</a>
</div>
<div class="tweets">

  {{#each tweets}}
  <div class="tweet">
    <a>
      <img class="thumbnail" src="/icons/avatar.svg" alt="">
    </a>
    <div class="postcontent">
      <a class="postuser">
        <span class="name ellipsis">{{../user.name}}</span>
        <span class="at-name ellipsis">{{../user.account}}</span>
        <span class="timer ellipsis">{{../user.createdAt}}</span>
      </a>
      <button type="button" class="content" id="content">
        {{this.description}}
      </button>
      <div class="action">
        <button type="button" class="commenting" data-userId="{{../user.id}}">
          <i class='comment'></i>
          {{this.replyCount}}
        </button>
        <button type="button" class="liking active">
          <i class='like lg active'></i>
          {{this.likeCount}}
        </button>
      </div>
    </div>
  </div>
  {{/each}}

</div>