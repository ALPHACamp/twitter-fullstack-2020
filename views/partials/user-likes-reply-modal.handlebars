<div class="modal fade" id="replyModal-{{this.Tweet.id}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content reply-modal">
      <div class="modal-header">
        <button type="button" class="btn btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="card reply-tweet-lg">
          <a href="/tweets/{{this.Tweet.id}}/replies" class="tweet-href" id="tweetHref"></a>
          <div class="reply-avatar">
            <div class="avatar">
              <a href="/users/{{this.Tweet.UserId}}/tweets" class="primary-anchor" id="tweetUserHref">
                {{#if this.Tweet.User.avatar}}
                <img src="{{ this.Tweet.User.avatar }}" alt="avatar" class="logo" id="tweetUserAvater">
                {{else}}
                <img src="/stylesheets/icons/avatar.png" alt="avatar" class="logo">
                {{/if}}
              </a>
            </div>
            <div class="reply-line">
              <div class="vertical-line"></div>
            </div>
          </div>
          <div class="card-text">
            <div class="card-text-info">
              <a href="/users/{{ this.Tweet.UserId }}/tweets" class="primary-anchor" id="tweetUserHref">
                <span class="card-name" id="tweetUserName">{{this.Tweet.User.name}}</span>
              </a>
              <a href="/users/{{ this.Tweet.UserId }}/tweets" class="primary-anchor" id="tweetUserHref">
                <span class="card-account" id="tweetUserAccount">{{this.Tweet.User.account}}</span>
              </a>
              <span class="card-dot">·</span>
              <span class="card-datetime" id="tweetDate">{{relativeTimeFromNow this.Tweet.createdAt}}</span>
            </div>
            <p class="card-description" id="tweetDescription">{{this.Tweet.description}}</p>
            <div class="reply-to-part">
              <span class="reply-to">回覆</span>
              <a href="/users/{{ this.Tweet.UserId }}/tweets" class="primary-anchor" id="tweetUserHref">
                <span class="card-account reply-account" id="tweetUserAccount">@{{this.Tweet.User.account}}</span>
              </a>
            </div>
          </div>
        </div>
        <div class="main-create-bar">
          <div class="avatar">
            <a href="/users/{{this.loginUserId}}/tweets">
              {{#if this.loginUserAvatar }}
              <img src="{{ this.loginUserAvatar }}" alt="avatar" class="logo">
              {{else}}
              <img src="/stylesheets/icons/avatar.png" alt="avatar" class="logo">
              {{/if}}
            </a>
          </div>
          <form action="/tweets/{{this.Tweet.id}}/replies" method="POST" class="create-reply-form reply-content" name="comment" id="tweetReply">
            <textarea name="comment" id="reply" cols="30" rows="10" class="reply-create-input"
              placeholder="推你的回覆"></textarea>
        </div>
      </div>
      <div class="modal-footer">
        <div>
          <h6 class="tweetTips">內容不可以空白</h6>
        </div>
          <button type="submit" class="btn btn-info">回覆</button>
        </form>
      </div>
    </div>
  </div>
</div>
