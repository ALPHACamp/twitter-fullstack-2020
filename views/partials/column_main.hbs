<div id="mainblock-header" class="position-sticky d-flex align-items-center w-100 bg-white header-block p-3">
  {{!-- TODO: 如果不是主頁就需要顯示那個頁面的標題 --}}
  {{#if notMain}}
  <i class="fas fa-arrow-left pr-2"></i>
  {{title}}
  {{else}}
  首頁
  {{/if}}
</div>

<div id="mainblock-main" class="w-100">
  {{!-- TODO: 按照UX設計去抓的話，這邊是主要內容，像是new tweet block還有tweet info block --}}
  {{#if tweets}}
    <div id="add-tweet-block" class="d-flex align-items-start p-3">
      <img class="img-fluid rounded-circle mr-3" src="{{me.avatar}}" alt="" style=" max-height: 70px;">
      <form action="/" method="POST" class="w-100">
        <textarea class="w-100" name="description" rows="3" cols="90" placeholder="有什麼新鮮事? (字數限制140字)"></textarea>
        <div class="textarea-util d-flex justify-content-between">
          <div class="text-counter text-lightgrey">0/140</div>
          <button type="submit" class="btn btn-sm btn-orange rounded-pill" style="float:right">推文</button>
        </div>
      </form>
    </div>
  {{/if}}
  {{#if (isdefined likedTweets)}}
    {{>column_main_user}}
  {{/if}}
</div>

<div id="mainblock-list" class="overflow-auto w-100">
  {{!-- TODO: 把reply items還有tweet items包裝成一樣的命名，例如 image, name, username, content, replyCount, likeCount --}}
  {{#if tweets}}
    {{#each tweets}}
      {{>listitem_tweet}}
    {{/each}}
  {{/if}}
  {{#if likedTweets}}
    {{#each likedTweets}}
      {{>listitem_tweet}}
    {{/each}}
  {{/if}}
  {{#if (isdefined likedTweets)}}
    {{>listitem_noitem}}
  {{/if}}
</div>
