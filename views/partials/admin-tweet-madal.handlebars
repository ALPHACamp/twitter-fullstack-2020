<div class="modal fade" id="adminTweetModal-{{this.id}}" tabindex="-1" aria-labelledby="exampleModalLabel"
  aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content reply-modal" style="height:250px">
      <div class="modal-header">
        <button type="button" class="btn btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="card reply-tweet-lg">
          <a class="tweet-href" id="tweetHref"></a>
          <div class="reply-avatar">
            <div class="avatar">
              <a class="primary-anchor" id="tweetUserHref">
                <img src="{{this.User.avatar}}" alt="avatar" class="logo">
              </a>
            </div>
          </div>
          <div class="card-text">
            <div class="card-text-info">
              <a class="primary-anchor" id="tweetUserHref">
                <span class="card-name" id="tweetUserName">{{this.User.name}}</span>
              </a>
              <a class="primary-anchor" id="tweetUserHref">
                <span class="card-account" id="tweetUserAccount">{{this.User.account}}</span>
              </a>
              <span class="card-dot">Â·</span>
              <span class="card-datetime" id="tweetDate">{{relativeTimeFromNow this.createdAt}}</span>
            </div>
            <p class="card-description" id="tweetDescription">{{this.description}}</p>
            <div class="reply-to-part">
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="/javascripts/admin.js"></script>