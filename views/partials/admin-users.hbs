{{!-- header --}}
<li class="list-group-item tweet-list p-4 d-flex align-items-center">
  <h4 class="">使用者列表</h4>
</li>

<div class="admin-users-page">
  <li class="d-flex justify-content-start flex-wrap list-group-item tweet-list p-2">
    {{#each userData}}
    <a href="" class="admin-user-info">
      <div class="position-relative card admin-user-card m-2">
        <div class="admin-user-card-cover">
          <img src="{{this.cover}}" class="card-img-top" alt="...">
        </div>
        <div class="admin-user-avatar">
          <img src="{{this.avatar}}" class="card-img-top" alt="...">
        </div>
        <div class="d-flex flex-column align-items-center">
          <div class="admin-user-info-name fw-bold">{{this.name}}</div>
          <div class="admin-user-info-account mb-3">@{{this.account}}</div>
          <div class="d-flex flex-row">
            <div class="admin-user-info-count mb-2">
              <img src="/images/post_dark80.svg" class="me-2" alt=""><i class="me-3 admin-interact-text">{{this.tweetsCount}}</i>
              <img src="/images/like_secondary.svg" class="me-2" alt=""><i class="admin-interact-text">{{this.likeCount}}</i>
            </div>
          </div>
          <div class="admin-user-info-follower">
            <i class="ms-1 me-1">{{this.followingsCount}}</i><i>個</i><i class="secondary-color me-2">跟隨中</i>
            <i class="me-1">{{this.followersCount}}</i><i>位</i><i class="secondary-color">跟隨者</i>
          </div>
        </div>
      </div>
    </a>
    {{/each}}
  </li>
</div>