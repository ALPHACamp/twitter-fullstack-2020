{{! edit modal }}
<div class='modal fade user-edit-modal' id='edit-modal' data-bs-backdrop='static' tabindex='-1' aria-labelledby='editModalLabel' aria-hidden='true'>
  <div class='modal-dialog'>
    <div class='modal-content'>
      <form class='input-form validated' action='/users/{{user.id}}?_method=PUT' method='POST' enctype='multipart/form-data' novalidate>
        <div class='modal-header'>
          <button type='button' class='modal-close-btn' data-bs-dismiss='modal' aria-label='Close'>
            <img class='close-btn' src='/images/message/message_danger.svg' alt='' />
          </button>
          <h5 class='modal-title flex-grow-1' id='editModalLabel'>編輯個人資料</h5>
          <button type='submit' class='btn btn-primary btn-edit'>儲存</button>
        </div>
        <div class='modal-body p-0'>
          <div class='cover-edit'>
            <img src='' class='card-img-top cover-img' alt='cover' />
            <div class='cover'>
              <label class='form-label' for='cover'>
                <img src='/images/profile/cover_edit.svg' alt='cover' />
              </label>
              <input class='form-control' type='file' class='form-control-file' id='cover' name='cover' />
              <label class='form-label cover-delete' for='cover-delete'>
                <img src='/images/close_white.svg' alt='' />
              </label>
              <input class='form-control' type='radio' class='form-control-file' id='cover-delete' name='coverDelete' />
            </div>
          </div>
          <div class='avatar-edit'>
            <img src='' class='avatar-img profile-user-img' onerror="this.style.display='block' " />
            <div class='avatar'>
              <label class='form-label' for='avatar'>
                <img src='/images/profile/cover_edit.svg' alt='cover' />
              </label>
              <input class='form-control' type='file' class='form-control-file' id='avatar' name='avatar' />
            </div>
          </div>

          <div class='form-text'>
            <div class='name edit-box'>
              <label class='form-label edit-label' for='name'>名稱</label>
              <input class='form-control edit-input input-name' type='text' name='name' id='name' value='' placeholder='暱稱' />
              <div class='invalid-feedback'>字數超過上限 !</div>
            </div>
            <div class='name-amount'>/50</div>
            <div class='introduction edit-box'>
              <label class='form-label edit-label' for='introduction'>自我介紹</label>
              <textarea class='form-control edit-input input-introduction' id='introduction' name='introduction' rows='3'></textarea>
              <div class='invalid-feedback'>字數超過上限 !</div>
            </div>
            <div class='introduction-amount'></div>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>