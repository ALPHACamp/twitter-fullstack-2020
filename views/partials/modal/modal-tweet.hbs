{{! tweet modal }}
<div
  class='modal fade'
  id='tweet-modal'
  data-bs-backdrop='static'
  data-bs-keyboard='false'
  tabindex='-1'
  aria-labelledby='tweetModalLabel'
  aria-hidden='true'
>
  <div class='modal-dialog'>
    <div class='modal-content'>
      <div class='modal-header'>
        <button type='button' class='modal-close-btn' data-bs-dismiss='modal' aria-label='Close' id='tweet-close'>
          <img src='/images/message/message_danger.svg' alt='' />
        </button>
      </div>
      <div class='modal-body d-flex'>
        <!-- form -->
        <div class='flex-shrink-0 p-0'>
          <img src='{{user.avatar}}' alt='' class='tweet-user-img' />
        </div>
        <div class="d-flex flex-column flex-grow-1 modal-body-content">
          <form action="/tweets" method="POST" class="m-0" id="tweet-form" novalidate>
            <div class="form-group">
                <textarea class="col-md-12 invalid-message" name="description" id="description" placeholder="有什麼新鮮事？"></textarea>
                <div class="col-md-12 d-flex justify-content-end align-items-center invalid-parent">
                  <div class="invalid-feedback tweet-feedback text-end mt-0 me-4"></div>
                  <button type="submit" class="btn btn-primary" id="tweet-submit-button">推文</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>