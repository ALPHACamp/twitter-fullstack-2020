{{!-- tweet modal --}}
<div class="modal fade" id="tweet-modal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
  aria-labelledby="tweetModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="modal-close-btn" data-bs-dismiss="modal" aria-label="Close">
          <img src="/images/message/message_danger.svg" alt="">
        </button>
      </div>
      <div class="modal-body d-flex">
        <!-- form -->
        <div class="flex-shrink-0 p-0">
          <img src="{{user.avatar}}" alt="" class="tweet-user-img">
        </div>
        <div class="d-flex flex-column flex-grow-1 modal-body-content">
          <form action="/user/tweets" method="POST" class="m-0">
            <div class="form-group">
              <div class="row">
                <div class="col-md-12">
                  <textarea id="description" name="description" placeholder="有什麼新鮮事？"></textarea>
                </div>
                <div class="col-md-12 d-flex justify-content-end">
                  <button type="submit" class="btn btn-primary">推文</button>
                </div>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>