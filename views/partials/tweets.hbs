<div class="header">首頁</div>
<div class="postarea">
  <a href="/users/{{loginUser.id}}/tweets">
    <img class="thumbnail" src="{{loginUser.avatar}}" alt="{{loginUser.name}} avatar">
  </a>
  <form action="/tweets" method="post" id="tweets-post-form" novalidate>
    <input type="hidden" name="userId" value="{{loginUser.id}}">
    <textarea name="description" maxlength="140" cols="48" rows="2" placeholder="有什麼新鮮事？" id="tweets-post-form-textarea"
      required></textarea>
    <div class="foot">
      <span class="d-none">內容不可空白</span><button type="submit" class="btn-fill">推文</button>
    </div>
  </form>
</div>
<hr>
<div class="tweets">
  {{#each tweets}}
  <div class="tweet">
    <a href="/users/{{this.User.id}}/tweets">
      <img class="thumbnail" src="{{this.User.avatar}}" alt="{{this.User.name}} avatar">
    </a>
    <div class="postcontent">
      <a class="postuser" href="/users/{{this.User.id}}/tweets">
        <span class="name ellipsis">{{this.User.name}}</span>
        <span class="at-name ellipsis">@{{this.User.account}}</span>
        <span class="timer ellipsis">{{moment this.createdAt}}</span>
      </a>
      <a href="/tweets/{{this.id}}" class="content">
        {{this.description}}
      </a>
      <div class="action">
        <button type="button" class="commenting" data-userid="{{loginUser.id}}" data-tweetid="{{this.id}}">
          <i class='comment commenting'></i>
          {{this.replyCount}}
        </button>

        {{#if this.isLiked}}
        <form action="/tweets/{{this.id}}/unlike" method="post">
          <button type="submit" class="liking">
            <i class='like active'></i>
            {{this.likeCount}}
          </button>
        </form>
        {{else}}
        <form action="/tweets/{{this.id}}/like" method="post">
          <button type="submit" class="liking">
            <i class='like'></i>
            {{this.likeCount}}
          </button>
        </form>
        {{/if}}

      </div>
    </div>
  </div>
  {{/each}}
</div>