<div class="col">
  <div class="left-side d-flex flex-column bd-highlight mb-3 ps-5">
    <a href="/tweets">
      <img class="logo mb-2" src="/images/icons/alphitter-logo.png" alt="alphitter-logo">
    </a>
    <div class="m-2 p-2 bd-highlight">
      <a href="/tweets">
        <h5 style="color:{{#ifCond route 'tweets'}}#FF6600;{{else}}black{{/ifCond}}">
          <img src="/images/icons/house.png" alt="home-page">首頁
        </h5>
      </a>
    </div>
    <div class="m-2 p-2 bd-highlight">
      <a href="/users/{{user.id}}/tweets">
        <h5 style="color:{{#ifCond route 'profile'}}#FF6600;{{else}}black{{/ifCond}}">
          <img src="/images/icons/person.png" alt="personal-page">個人資料
        </h5>
      </a>
    </div>
    <div class="m-2 p-2 bd-highlight">
      <a href="/users/{{user.id}}/setting">
        <h5 style="color:{{#ifCond route 'setting'}}#FF6600;{{else}}black{{/ifCond}}">
          <img src="/images/icons/setting.png" alt="setting-page">設定
        </h5>
      </a>
    </div>
    <a type="button" class="tweet-btn-lg ms-3" data-bs-toggle="modal" data-bs-target="#tweetInput">
      <span>推文</span>
    </a>
    <a class="logout" href="/logout">
      <h5><img src="/images/icons/exit.png" alt="logout">登出</h5>
    </a>
  </div>

  <!-- Modal -->
  <div class="modal fade" id="tweetInput" tabindex="-1" aria-labelledby="tweetInputLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header p-2">
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <form class="tweet-post" action="/tweets" method="POST">
          <a href="/users/{{user.id}}/tweets">
            <img class="ms-2 rounded-circle" src="{{user.avatar}}" alt="avatar">
          </a>
          <div class="text-box">
            <textarea type="text" name="description" placeholder="有什麼新鮮事？" rows="4" cols="45" maxlength="140"
              required></textarea>
          </div>
          <div class="bd-highlight">
            <button type="submit" class="tweet-btn">
              推文
            </button>
          </div>
        </form>

      </div>
    </div>
  </div>
</div>