<div class="card border-light popular">
  <div class="card-header">
    Popular
  </div>
  <ul class="list-group list-group-flush">
    {{#each popularUsers}}
    <li class="list-group-item d-flex justify-content-between">
      <div class="d-flex">
        <div class="mr-2">
          <a href="/users/{{ this.id }}/tweets" class="text-muted">
            {{#if this.avatar}}
            <img class="avatar small" src="{{ this.avatar }}">
            {{else}}
            <div class="avatar-none-small" id="current-avatar"></div>
            {{/if}}
          </a>
        </div>
        <div>
          <p class="mb-0">{{ this.name }}</p>
          <p class="atAccount">{{ this.account }}</p>
        </div>
      </div>
      <div class="pt-2 mx-3">
        {{#if this.isFollowed}}
        <form action="/followships/{{this.id}}?_method=DELETE" method="POST">
          <button type="submit" class="btn followings-button">正在跟隨</button>
        </form>
        {{else}}
        <form action="/followships" method="POST">
          <button type="submit" class="btn btn-outline followers-button">跟隨</button>
          <input type="hidden" name="id" value="{{this.id}}">
        </form>
        {{/if}}
      </div>
    </li>
    {{/each}}
  </ul>
</div>