{{#if user}}
<!-- 左邊導覽選單區塊 -->
<div class="left-content">
  <div class="left-column">
    {{!-- <img class="logo" src="/images/icon.svg" alt=""> --}}
    <i class="sign-icon fac fa-cus-ac-logo"></i>
    <div class="nav">
      <div class="nav-item">
        <a href="/tweets">
          <img class="home-icon" src="/images/icon-home.svg" alt="">首頁
        </a>
      </div>
      <div class="nav-item">
        <a href="/users/{{user.id}}/tweets">
          <img class="pr-1" src="/images/icon-user.svg" alt="">
          個人資料
        </a>
      </div>
      <div class="nav-item">
        <a href="/users/{{user.id}}/edit">
          <img src="/images/icon-setting.svg" alt="">
          設定
        </a>
      </div>
    </div>
    <button type="button" class="tweet-button" data-toggle="modal" data-target="#tweetModal">
      推文
    </button>
  </div>
  <div class="logout">
    <a href="/logout">
      <img class="logout-icon" src="/images/icon-logout.svg" alt="">登出
    </a>
  </div>
</div>
{{/if}}