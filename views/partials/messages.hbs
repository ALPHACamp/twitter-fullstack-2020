{{#if error_messages}}
<div class="alert alert-danger alert-dismissible fade show border-bottom m-0" role="alert">
  <div class="container">
    <strong>{{error_messages}}</strong>
  </div>
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
{{/if}}

{{#if success_messages}}
<div class="alert alert-success alert-dismissible fade show border-bottom m-0" role="alert">
  <div class="container">
    <strong>{{success_messages}}</strong>
  </div>
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
{{/if}}