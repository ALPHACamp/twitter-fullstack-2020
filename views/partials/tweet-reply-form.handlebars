<div class="modal-body row">
  <div class="col-1 me-1">
    <img src="{{checkAvatar this.User.avatar}}" style="border-radius: 50px; width: 50px; height: 50px;">
  </div>
  <div class="col-10">
    {{#ifCond path "/tweets" }}
      <textarea class="form-control" type="text" id="description" name="description" rows="3" style="border: none"
      placeholder="有什麼新鮮事？" maxlength="140" required></textarea>
    {{else}}
      <textarea class="form-control" type="text" id="comment" name="comment" rows="3" style="border: none"
      placeholder="推你的回覆" maxlength="140" required></textarea>
    {{/ifCond}}
  </div>
</div>
<div class="modal-footer py-0">
  <button type="submit" class="submit-btn" style="width: 70px">
    {{#ifCond path "/tweets" }}推文{{else}}回覆{{/ifCond}}
  </button>
</div>