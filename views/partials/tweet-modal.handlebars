<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content tweet-modal">
      <div class="modal-header">
        <button type="button" class="btn btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="main-create-bar">
          <div class="avatar">
            <a href="/users/{{loginUserId}}/tweets">
              {{#if loginUserAvatar }}
              <img src="{{ loginUserAvatar }}" alt="avatar" class="logo">
              {{else}}
              <img src="/stylesheets/icons/avatar.png" alt="avatar" class="logo">
              {{/if}}
            </a>
          </div>
          <form action="/tweets" method="POST" class="create-tweet-form">
            <textarea name="description" id="textareaInput" cols="30" rows="10" class="main-create-input"
              placeholder="有什麼新鮮事？"></textarea>
          {{!-- </form> --}}
        </div>
      </div>
      <div class="modal-footer">
        <div>
          <h6 id="errorMsg" class="tweetTips"></h6>
        </div>
        {{!-- <form action="/tweets" method="POST"> --}}
        <button id="submitBtn" type="submit" class="btn btn-info" disabled>推文</button>
          </form>
      </div>
    </div>
  </div>
</div>

<script src="/javascripts/tweets.js"></script>