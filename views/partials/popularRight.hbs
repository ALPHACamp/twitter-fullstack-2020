<div class="card m-2" style="border-radius:10px; background-color:#F5F8FA">
    <div class="card-body py-0 px-0 mt-1 ml-2" style="font-weight:bold; font-size: 18px">
        Popular
    </div>

    {{#each users}}
    <hr class="m-2">
    <div class="card-body py-1" >
        <div class="row "style="padding-left:11px; padding-right:5px">
 
            <div class="col-2 text-center" style="padding-left:0px">
                <a href="/users/{{user.id}}/tweets">
                    <img src="{{this.avatar}}" style=" width:50px;height:50px; border-radius:100%;"></img>
                </a>
            </div>

            <div class="col-6 " style=" padding-left:6px">
                <a href="/users/{{this.id}}/tweets">
                    <p class="m-0" style="font-size:18px;color: black; font-weight:bold;">{{this.name}}</p>
                </a>
                <p class="m-0" style="font-size:18px;font-weight:500;color:gray;">@{{this.account}}</p>
            </div>
            
            {{#if isFollowed}}
            <div class="col-4 my-1 d-flex flex-row-reverse align-items-center" style="text-align:right; margin:0px; padding:0px;">
                <form action="/followships/{{this.id}}?_method=DELETE" method="POST" style="margin: 0px;padding:0px;">
                    <button class="btn" style="width:100px; background-color: #FF6600;border-radius:40px; color:white; font-weight:bold; ">正在跟隨</button>      
                </form>
            </div>
            {{else}}
            <div class="col-4 my-1 d-flex flex-row-reverse align-items-center" style="text-align:right; margin:0px; padding:0px;">
                <form action="/followships" method="POST" style="display: contents;">
                    <button type="submit" class="btn" name="id" value="{{this.id}}" style="width:60px; border-radius:40px; border-color:#FF6600; color:#FF6600;font-weight:bold;">跟隨</button>
                </form>
            </div>
            {{/if}}
        </div>
    </div>
    {{/each}}
</div>
