<div class="modal fade" id="indexModel" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        >
          <i class="bi bi-x-lg"></i>
        </button>
      </div>
      <div class="modal-body">
        <div class="profile-container">
          <div class="profile-messageboard">
            <div class="profile-avatar-container">
              <div class="avatar profile-avatar">
                <img
                  src="https://d5nunyagcicgy.cloudfront.net/external_assets/hero_examples/hair_beach_v391182663/original.jpeg"
                  alt="avatar-img"
                />
              </div>
            </div>
            <form action="/tweets/add" method="POST">
              <div class="profile-textarea-container">
                <textarea
                  name="description"
                  class="form-control form-control-lg"
                  id="post"
                  placeholder="有什麼新鮮事?"
                  rows="3"
                  maxlength="140"
                  required
                ></textarea>
              </div>

              <button type="submit" class="btn btn-twitter">
                <span>推文</span></button>
            </form>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>