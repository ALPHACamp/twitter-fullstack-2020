<div class="modal fade" id="user-info-Modal" aria-labelledby="exampleModalLabel"
  aria-hidden="true">
  <div class="modal-dialog modal-md">
    <div class="modal-content" style="border-radius: 15px;">

      <form method="POST" enctype="multipart/form-data"
        action="/users/{{ user.id }}/edit?_method=PUT">

        <!-- modal header -->
        <div class="modal-header">
          <button type="button" data-dismiss="modal" aria-label="Close"
            class="modal-btn-close">
            <span aria-hidden="true">&times;</span>
          </button>
          <p class="modal-title">編輯個人資料</p>
          <button type="submit" class="btn modal-btn">儲存</button>
        </div>

        <!-- cover input -->
        <div class="user-cover">
          <img src="{{ profileUser.cover }}" alt="{{ profileUser.name }}"
            class="user-cover-img">
          <div class="user-cover-update">
            <label for="cover" class="user-cover-label">
              <i class="fas fa-camera"></i>
            </label>
            <input type="file" class="form-file-control" id="cover"
              name="cover">
          </div>
        </div>

        <!-- avatar input -->
        <div class="user-avatar">
          <img src="{{ profileUser.avatar }}" alt="{{ profileUser.name }}"
            class="user-avatar-img">
          <div class="user-avatar-update">
            <label for="avatar" class="user-avatar-label">
              <i class="fas fa-camera"></i>
            </label>
            <input type="file" class="form-file-control" id="avatar"
              name="avatar">
          </div>
        </div>

        <!-- modal body -->
        <div class="modal-body">

          <!-- name input -->
          <div class="form-label-group">
            <label for="name">名稱</label>
            <input type="text" name="name" id="name" class="form-control"
              value="{{ profileUser.name }}">
          </div>

          <!-- introduction textarea -->
          <div class="form-label-textarea-group">
            <label for="introduction">自我介紹</label>
            <textarea name="introduction" cols="30"
              class="form-textarea-control">
              {{ profileUser.introduction }}
            </textarea>
          </div>

        </div>

      </form>

    </div>
  </div>
</div>
