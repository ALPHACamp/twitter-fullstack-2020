<div class="sidebar-right">
  <div class="sidebar-header">
    <h4>推薦跟隨</h4>
  </div>

  {{#each topFollowers }}
  <div class="follow-card">
    <img src="{{this.avatar}}" alt="">
    <div class="follow-card-user">
      <h5>{{this.name}}</h5>
      <p>@{{this.account}}</p>
    </div>
    {{#if this.isFollowed}}
    <form action="/followships/{{this.id}}" method="post"><button class="following" type="submit">正在跟隨</button></form>
    {{#else}}
      <form action="/followships/{{this.id}}?_method=DELETE" method="post"><button class="following" type="submit">跟隨</button></form>
    {{/if}}
  </div>

</div>