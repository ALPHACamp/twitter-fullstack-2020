<div class="container p-0 my-0 mx-auto">
  <div class="row gx-0">
    <div class="left col-2 position-sticky vh-100">
      <div class="nav nav-pills flex-column vh-100" role="tablist">
        {{>logo}}
        <a class="nav-link active" data-bs-toggle="tab" href="/home" role="tab">{{>home}}首頁</a>
        <a class="nav-link " data-bs-toggle="tab" href="/profile" role="tab">{{>user}}個人資料</a>
        <a class="nav-link" data-bs-toggle="tab" href="/setting" role="tab"> {{>setting}}設定</a>
        <button type="button" class="btn btn-primary">推文</button>
        <a class="nav-link mt-auto">{{>logout}}登出</a>
      </div>
    </div>










    <div class="col-7 overflow-auto border mx-4">

      {{!-- tweet --}}

      {{!-- {{#each tweets}} --}}
      <div class="tweet row border-bottom g-0">
        <div class="avatar col-2">
          <div class="mt-3 ms-4 me-2">
            <img width="50" height="50" src="{{tweet.User.avatar}}" alt="">
          </div>
        </div>
        <div class="content col py-3 ">
          <div class="row row-cols-1 g-0 h-100">
            <div class="name-account col mb-2">
              <span class="name me-2">{{tweet.User.name}}</span>
              <span class="account">@{{tweet.User.account}}</span>
            </div>
            <div class="description col mb-2">
              <span>{{tweet.description}}</span>
            </div>
            <div class="reply-like col">
              <div class="reply m-0">
                {{>reply}}
                <span>100</span>
              </div>
              <div class="like m-0">
                {{>like}}<span>100</span>
              </div>
            </div>
          </div>
        </div>
      </div>
      {{!-- {{/each}} --}}
      {{!-- tweet --}}



    </div>












    <div class="col-3 position-sticky">
      Content for right column
    </div>
  </div>
</div>