<link rel='stylesheet' href='/stylesheets/sidebar.css'>
<div class="right-sidebar-anchor">
  {{!-- header --}}
  <div class="col bg-light right-sidebar-content">
    <div class="container d-flex align-items-center mt-2">
      <h4 class="fw-bold mt-4">跟隨誰</h4>
    </div>
    <hr>
    {{#each users}}
      {{#ifCond this.id ../loginUser.id}}
        <div class="right-bar">
          <div class="row my-2 py-1 ps-3">
            {{!-- avatar --}}
            <div class="col-lg-3 mx-0 px-0">
              <a href="/users/{{this.id}}" class="mx-0">
                <img src="{{this.avatar}}" class="avatar" alt="avatar">
              </a>
            </div>
            {{!-- name --}}
            <div class="col-lg-4 mx-0 px-0 text-truncate">
              <a href="/users/{{this.id}}" class="fw-bold right-user-name">{{this.name}}</a>
              <p class="text-muted right-user-account">{{this.account}}</p>
            </div>
          </div>
        </div>
      {{else}}
        <div class="right-bar">
          <div class="d-flex flex-column my-2 py-1 ps-3">
            {{!-- avatar --}}
            <div class="col-lg-3 mx-0 px-0">
              <a href="/users/{{this.id}}" class="mx-0">
                <img src="{{this.avatar}}" class="avatar" alt="avatar">
              </a>
            </div>
            {{!-- name --}}
            <div class="col-lg-4 mx-0 px-0 text-truncate">
              <a href="/users/{{this.id}}" class="fw-bold right-user-name">{{this.name}}</a>
              <p class="text-muted right-user-account">{{this.account}}</p>
            </div>
            {{!-- follow btn --}}
            <div class="col-lg-4 mx-0 px-0 follow-btn">
              {{#if this.isFollowed}}
              <form action="/followships/{{this.id}}?_method=DELETE" method="POST" style="display: contents;">
                <button type="submit" class="following-button text-white">正在跟隨</button>
              </form>
              {{else}}
              <form action="/followships" method="POST" style="display: contents;">
                <button type="submit" class="follower-button" name="id" value="{{this.id}}">跟隨</button>
              </form>
              {{/if}}
            </div>
          </div>
        </div>
      {{/ifCond}}
    {{/each}}
  </div>
</div>