<div class="right-sidebar-anchor">
  {{!-- header --}}
  <div class="d-flex flex-column bg-light right-sidebar-content">
    <div class="container d-flex align-items-center mt-2 pb-2 following-header">
      <h4 class="fw-bold mt-2">跟隨誰</h4>
    </div>
    {{#each users}}
    {{#ifCond this.id ../loginUser.id}}

    <div class="d-flex my-1 py-1">
      {{!-- avatar --}}
      <div class="ms-2 px-0">
        <a href="/users/{{this.id}}" class="mx-0">
          <img src="{{this.avatar}}" class="avatar" alt="avatar">
        </a>
      </div>
      {{!-- name --}}
      <div class="ms-2 px-0 text-truncate right-bar-name">
        <a href="/users/{{this.id}}" class="fw-bold right-user-name">{{this.name}}</a>
        <p class="text-muted right-user-account">{{this.account}}</p>
      </div>
    </div>

    {{else}}
    <div class="d-flex justify-content-between my-1 py-1">
      {{!-- avatar --}}
      <div class="ms-2 px-0">
        <a href="/users/{{this.id}}" class="mx-0">
          <img src="{{this.avatar}}" class="avatar" alt="avatar">
        </a>
      </div>
      {{!-- name --}}
      <div class="ms-2 px-0 text-truncate right-bar-name">
        <a href="/users/{{this.id}}" class="fw-bold right-user-name">{{this.name}}</a>
        <p class="text-muted right-user-account">{{this.account}}</p>
      </div>
      {{!-- follow btn --}}
      <div class="d-flex btn-content justify-content-end align-items-center mx-0 px-0">
        {{#if this.isFollowed}}
        <form action="/followships/{{this.id}}?_method=DELETE" method="POST" style="display: contents;">
          <button type="submit" class="following-button text-white">正在跟隨</button>
        </form>
        {{else}}
        <form action="/followships" method="POST" style="display: contents;">
            <button type="submit" class="follower-button" name="id" value="{{this.id}}">跟隨</button>
        </form>
        {{/if}}
      </div>
    </div>
    {{/ifCond}}
    {{/each}}
  </div>
</div>