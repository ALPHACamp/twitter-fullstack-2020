<div class='sidebar-right'>
  <div class='sidebar-header'>
    <h4>推薦跟隨</h4>
  </div>

  {{#each topFollowers}}
    <div class='follow-card'>
      <a href='/users/{{this.id}}/tweets'>
        {{#if this.avatar}}
          <img class='rounded-circle' src='{{this.avatar}}' alt='avatar' />
        {{else}}
          <img class='rounded-circle' src='https://i.imgur.com/mhXz6z9.png?1' alt='avatar' />
        {{/if}}
        <div class='follow-card-user'>
          <h5>{{this.name}}</h5>
          <p>@{{this.account}}</p>
        </div>
      </a>
      
      {{#if this.isFollowed}}
        <form action='/followships/{{this.id}}?_method=DELETE' method='post'>
          <input
            class='form-control'
            type='hidden'
            name='id'
            value='{{this.id}}'
          />
          <button class='following' style="margin-left: 0" type='submit'>正在跟隨</button>
        </form>
      {{else}}
        <form action='/followships' method='post'>
          <button
            class='follow'
            type='submit'
            {{#ifCond this.id ../userId }}  disabled="disabled"  {{/ifCond}}
          >跟隨</button>
          <input
            class='form-control'
            type='hidden'
            name='id'
            value='{{this.id}}'
          />
        </form>
      {{/if}}
    </div>
  {{/each}}

</div>