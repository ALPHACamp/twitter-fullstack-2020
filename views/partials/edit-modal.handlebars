{{!------------- edit profile modal -------------}}
<div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="btn btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        <h5 class="edit-profile-header">編輯個人資料</h5>
      </div>
      <div class="edit-profile-modal-body">
        <form action="/api/users/{{ user.id }}" method="post" enctype="multipart/form-data" class="needs-validation"
          id="form" novalidate>
          {{!-- profile --}}
          <div class="profile-wrapper">

            {{#if user.cover}}
            <img src="{{ user.cover }}" alt="cover" class="profile-cover background-image" id="cover-image">
            {{else}}
            <div class="profile-cover background-image"></div>
            {{/if}}

            <label for="cover" class="file-input-label">
              <span class="edit-camera-icon background-image"></span>
              <input type="file" accept="image/*" id="cover" name="cover" style="display: none;">
            </label>
            <span class="edit-x-icon background-image"></span>

            <div class="profile-avatar">
              {{#if user.avatar }}
              <img src="{{ user.avatar }}" alt="avatar" class="logo" id="avatar-image">
              {{else}}
              <img src="/stylesheets/icons/avatar.png" alt="avatar" class="logo">
              {{/if}}

              <label for="avatar" class="file-input-label-avatar">
                <span class="edit-camera-icon-avatar background-image"></span>
                <input type="file" accept="image/*" id="avatar" name="avatar" style="display: none;">
              </label>
            </div>
          </div>

          <div class="main-create-bar">
            <div class="create-tweet-form ">

              {{!-- Name --}}
              <div class="bg-form-gray">
                <label for="name" class="form-label">名稱</label>
                <input type="text" id="edit-name" name="name" placeholder="請輸入名稱" class="form-input"
                  value="{{ user.name }}" required>
                <div class="invalid-feedback">請輸入50個字以內</div>
                <div class="input-minmax"></div>
              </div>

              {{!-- introduction --}}
              <div class="bg-form-gray bg-form-gray-textarea">
                <label for="introduction" class="form-label">自我介紹</label>
                <textarea id="intro" name="introduction" placeholder="請輸入自我介紹" class="form-textarea"
                  required>{{ user.introduction }}</textarea>
                <div class="invalid-feedback">請輸入160個字以內</div>
                <div class="textarea-minmax"></div>
              </div>

              <div class="modal-footer">
                <button class="btn btn-info btn-submit-profile" id="submit">儲存</button>
              </div>
            </div>
          </div>
        </form>
        <div class="spinning-background"></div>
      </div>
    </div>
  </div>
  <div class="spinner-border text-info" role="status">
    <span class="visually-hidden"></span>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/axios@1.1.2/dist/axios.min.js"></script>
<script src="/javascripts/edit-profile.js"></script>