{{!-- followship --}}
<section class="followship">
  <h4 class="followship-title">推薦跟隨</h4>
  <div class="followship-card-wrapper">

    {{!-- card 1 --}}
    <div class="followship-card">
      <div class="avatar">
        <a href="/users/{{user.id}}">
          <img src="/stylesheets/icons/avatar.png" alt="avatar" class="logo">
        </a>
      </div>
      <div class="card-text-info">
        <a href="/users/{{user.id}}" class="primary-anchor">
          <span class="card-name followship-name ellipsis">McDonald</span>
        </a>
        <a href="/users/{{user.id}}" class="primary-anchor">
          <span class="card-account followship-account ellipsis">@McDonaldddd</span>
        </a>
      </div>
      <form action="/followships/{{user.id}}?_method=DELETE" method="post">
        <input type="hidden" name="loginUserId" value="{{loginUser.id}}" />
        <div class="follow-button-wrapper">
          <button type="submit" class="btn btn-info">正在跟隨</button>
        </div>
      </form>
    </div>

    {{!-- card 2 --}}
    <div class="followship-card">
      <div class="avatar">
        <a href="/users/{{user.id}}">
          <img src="/stylesheets/icons/avatar.png" alt="avatar" class="logo">
        </a>
      </div>
      <div class="card-text-info">
        <a href="/users/{{user.id}}" class="primary-anchor">
          <span class="card-name followship-name ellipsis">abcdefghi</span>
        </a>
        <a href="/users/{{user.id}}" class="primary-anchor">
          <span class="card-account followship-account ellipsis">@abcdefghi</span>
        </a>
      </div>

      <form action="/followships" method="post">
        <input type="hidden" name="userId" value="{{user.id}}" />
        <input type="hidden" name="loginUserId" value="{{loginUser.id}}" />
        <div class="follow-button-wrapper">
          <button type="submit" class="btn btn-outline-info btn-follow">跟隨</button>
        </div>
      </form>
    </div>

  </div>
</section>