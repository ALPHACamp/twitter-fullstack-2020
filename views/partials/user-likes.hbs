<div class='user-container m-0 p-0 home-page'>
  {{> user-profile route = 'likes'}}
  
  <!-- each like tweets -->
  <ul class='tweet-list'>
  {{#each tweets}}
    <li class='mt-2'>
      <a href='/tweets/{{this.id}}/replies' class='text-decoration-none'>
        <div class='d-flex align-items-start'>
          <div class='flex-shrink-1 p-0 icon'>
            <img src='/images/profile-img.svg' alt='' class='recommend-followings-img' />
          </div>
          <div class='tweet-text flex-grow-1'>
            <span class='tweet-name'>{{this.User.name}} </span>
            <span class='tweet-account'>@{{this.User.account}}</span>
            <span class='tweet-account'>ãƒ»{{formatRelativeTime this.Like.createdAt}}</span>
            <p class='tweet-description' style='white-space:break-spaces;'>{{this.description}}</p>
            <div>
              <span class='count'>
                <img src="/images/reply_outlined.svg" class='reply-icon' alt="" type="button" data-bs-toggle="modal" data-bs-target="#reply-modal"/>
                <span>{{this.repliesCount}}</span>
              </span>
              {{#ifCond ../loginUser.id this.id}}
                <form class='count' action="/tweets/{{this.id}}/unlike" method="POST" style="display: contents;" >
                  <input type="image" src="/images/like_filled.svg" alt="like" class="like-icon">
                  <span>{{this.likesCount}}</span>
                </form>
              {{else}}
                <span class='count'>
                  <img src="/images/like_filled.svg" class='reply-icon' alt="" type="button" data-bs-toggle="modal" data-bs-target="#reply-modal"/>
                  <span>{{this.repliesCount}}</span>
                </span>
              {{/ifCond}}
            </div>
          </div>
        </div>
      </a>
      <hr />
    </li>
  {{/each}}
  </ul>
  {{#if pagination.hasManyPages}}
    {{> pagination route = route }}
  {{/if}}
</div>