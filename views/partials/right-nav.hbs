<div class="mt-1 ">
    <ul class="list-group" >
        <li class="list-group-item list-group-item-secondary">
            <span>跟隨誰</span>
        </li>
        {{#each topUsers}}
            <li class="list-group-item list-group-item-secondary d-flex">
                <div class="row">
                    <div class="col-5">
                        <a href="/users/{{this.id}}/tweets"><img src="{{this.avatar}}"class="rounded-circle" style="width:50px;height:50px;"></a>
                    </div>
                    <div class="col">
                        <a href="/users/{{this.id}}/tweets" style="text-decoration:none; color:black;">
                          {{this.name}}
                        </a>
                        <br/>
                        <small>@{{this.account}}</small>
                    </div>
                </div>
                {{#if isFollowed}}
                    <form class="ms-auto mt-1" method="POST" action="/followships/{{this.id}}?_method=DELETE">
                        <button class="btn rounded-pill text-light" style="background-color: #FF6600;" type="submit">正在跟隨</button>
                    </form>
                {{else}}
                    <form class="ms-auto mt-1" method="POST" action="/followships">
                        <input name="id" value="{{this.id}}" style="display:none">
                        <button class="btn rounded-pill" style="color:#FF6600;border-color:#FF6600;background-color:rgb(249, 249, 249)" type="submit">跟隨</button>
                    </form>
                {{/if}}
            </li>
        {{/each}}
    </ul>
</div>