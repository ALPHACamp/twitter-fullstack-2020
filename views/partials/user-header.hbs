{{#ifCond route 'profile'}}
 <div class="row back-bar m-3">
  <div class="col-6 col-sm-1 back-image">
   <a href="/" style="text-decoration: none;color:black;">
    <img src="/images/back.png" alt="back" style="width:17px;height:14px">
   </a>
  </div>
  <div class="header-name name col-6 col-sm-1 back-user" style="width:100px;height:50px;">
   <p class=" m-0" id="header-name" style="color: #171725;font-size: 18px;">
    <strong>{{user.name}}</strong>
   </p>
   <p class="user-name m-0" style="color: #6C757D;font-size: 13px;">{{tweets.length}}推文</p>
  </div>
 </div>
{{/ifCond}}