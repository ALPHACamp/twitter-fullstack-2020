<div class="container">
  <div class="row justify-content-md-center">
    {{> left-side}}
    <div class="main col-6">
      <div class="row">
        <div class="d-flex m-2">
          <a href="">
            <h3 class="my-2 fw-normal" onclick="history.back()">←</h3>
          </a>
          <div class="col ms-0 ps-2">
            <span class="my-0 py-0 fw-bold">{{data.name}}</span><br />
            <small class="my-0 py-0 text-secondary">{{tweetsCounts}}推文</small>
          </div>
        </div>
      </div>
      <div class="hr-line-b"></div>
      <div class="py-3">

        <ul class="nav nav-tabs mx-0 px-0mb-4;">
          <li class="nav-item px-2">
            <a class="col text-center pb-2" href="/users/{{user.id}}/followers"
              style="text-decoration:none;color:#FF6600;border-bottom:solid;border-color:#FF6600;">
              追隨者
            </a>
          </li>
          <li class="nav-item px-2">
            <a class="col text-center pb-2 " href="/users/{{user.id}}/followings"
              style="text-decoration:none;color:black">
              正在追隨
            </a>
          </li>
        </ul>
      </div>
      {{#each data.Followers}}
      <div class="tweet-card">
        <a href="/users/{{this.id}}/tweets">
          <img class="me-auto rounded-circle" src="{{this.avatar}}" alt="avatar">
        </a>
        <a class="tweet-card-name" href="/users/{{this.id}}/tweets">
          <span class="font-name">{{this.name}}</span>
        </a>
        <div class="col text-end">
          {{#if this.isFollowed}}
          <form method="POST" action="/followships/{{this.id}}?_method=DELETE">
            <button class="btn rounded-pill myBtn" type="submit">正在跟隨</button>
          </form>
          {{else}}
          <form method="POST" action="/followships">
            <input name="id" style="display: none;" value="{{this.id}}">
            <button class="btn rounded-pill myOutlineBtn" type="submit">跟隨</button>
          </form>
          {{/if}}
        </div>
      </div>
      <div class="row">
        <div class="col-1"></div>
        <div class="col px-3">{{this.description}}</div>
      </div>
    </div>
    {{/each}}

  </div>
  {{> right-side}}
</div>
</div>