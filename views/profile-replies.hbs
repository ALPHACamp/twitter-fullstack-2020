<div class="col-2 nav-left">
  {{> nav-left}}
</div>

<div class="col-8 nav-body" style="font-family: 'Noto Sans TC'; font-style: normal;">
  <ul class="list-group">
    {{>profile-header route='replies'}}
    {{!-- 回覆版--}}
    {{#each userData.Replies}}
    <li class="list-group-item d-flex align-items-start" style="border:#E6ECF0 solid 1px;">
      <a href="/users/{{this.Tweet.User.id}}/replies">
        <img src="{{this.Tweet.User.avatar}}" alt="回覆人頭像"
          style="width:50px; height:50px; border:#E6ECF0; border-radius:50%" class="me-3">
      </a>
      <div>
        <a href="/users/{{this.Tweet.User.id}}/replies" style="text-decoration:none;">
          <p class="d-inline" style="font-weight: 700;font-size: 16px;line-height: 26px;color:#171725;">
            {{this.Tweet.User.name}}</p>
        </a>
        <small class="m-2" style="color:#6C757D;">@{{this.Tweet.User.account}}・
          <a href="/tweets/{{this.Tweet.id}}/replies"
            style="text-decoration:none;color:#6C757D;font-weight: 400;font-size: 14px;line-height: 22px;">
            {{relativeTimeFromNow this.createdAt}}
          </a>
        </small>
        <span class="d-block mt-1 mb-1" style="font-weight: 400;font-size: 14px;line-height: 22px; color:#6C757D;">回覆
          <small style="color:#FF6600;margin-left:2px;">@{{this.User.account}}</small>

        </span>
        <a href="/tweets/{{this.Tweet.id}}/replies" style="text-decoration:none;">
          <p
            style="font-weight: 400;font-size: 16px;line-height: 26px; color: #171725;word-wrap:break-word; width:700px;">
            {{this.comment}}
          </p>
        </a>
      </div>
    </li>
    {{/each}}
  </ul>
</div>

<div class="col-2 nav-right">
  {{> nav-right}}
</div>