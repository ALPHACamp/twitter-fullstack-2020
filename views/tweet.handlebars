<div class="d-block justify-content-center" style="margin-left: 17rem;">
    <div>
        <h4 style="padding: 1rem;"><a href="/tweets" style="color: black;">&#8592; </a>推文</h4>
    </div>
    <div class="contener"
        style="width: 30rem; height:auto; border-top: thin solid #e6ecf0; border-right: thin solid #e6ecf0;">
        <div class="card-body">
            <div class="row">
                <div class="col-2">
                    <i class="bi bi-person-square"></i>
                </div>
                <div class="col-10">
                    <h5 class="card-title" style="margin-bottom: 0;">{{tweet.User.name}}</h5>
                    <a href="/users/{{tweet.User.id}}" class="text-muted">@{{tweet.User.account}}</a>
                </div>
            </div>
            <p class="card-text" style="margin-top: .5rem; ">{{tweet.description}}</p>
            <p class="card-text"><small class="text-muted">{{time}}</small>
            </p>
        </div>
    </div>
    {{#each replies}}
    <div class="contener"
        style="width: 30rem; height:7rem; border-top: thin solid #e6ecf0; border-right: thin solid #e6ecf0;">
        <div class="card-body">
            <div class="row">
                <div class="col-2">
                    <i class="bi bi-person-square"></i>
                </div>
                <div class="col-10">
                    <h5 class="card-title" style="display: inline-block;">{{this.User.name}}</h5>
                    &nbsp;
                    <a href="/users/{{this.User.id}}" class="card-link"
                        style="display: inline-block;">@{{this.User.account}}</a>
                    &nbsp;
                    <p class="card-text" style="display: inline-block;"><small class="text-muted">{{this.time}}</small>
                    </p>
                    <p class="card-text">{{this.comment}}</p>
                </div>
            </div>

        </div>
    </div>
    {{/each}}
</div>

{{> message}}