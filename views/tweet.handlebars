<!-- Modal -->
<div class="modal fade" id="newTwitModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <button type="button" class="btn-close m-3" data-bs-dismiss="modal" aria-label="Close"></button>
      <div class="createTweet border">
        <div class="d-flex">
          <a href="" class="avatar m-2">
            <img src="{{noImage user.image}}" alt="" class="rounded-circle userImage">
          </a>
          <textarea class="whathtNew" id="description" name="description" placeholder="有甚麼新鮮事?"></textarea>
        </div>
        <div class="d-flex justify-content-end">
          <div class="round m-3">
            <button type="button" class="orange btn text-white round" data-bs-toggle="modal"
              data-bs-target="#newTwitModal">推文</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


<div class="row grid">

  <div>
    <nav class="userSidebar fixed">
      <div class="logo">
        <img src="https://i.imgur.com/ZUJriDp.png" alt="" id="ac-logo">
      </div>
      <div class="buttonList mt-5">
        <div class="navItem index d-flex mb-4 ">
          <div class="icon d-flex align-items-center color-orange">
            <i class="fas fa-home my-auto"></i>
          </div>
          <a href="/tweets" class="btn sidebarItem">
            <span class="fs-5 fw-bolder">首頁</span>
          </a>
        </div>
        <div class="navItem userProfile d-flex mb-4 ">
          <div class="icon d-flex align-items-center">
            <i class="fas fa-users"></i>
          </div>
          <a href="/userProfile" class="btn sidebarItem">
            <span class="fs-5 fw-bolder">個人資料</span>
          </a>
        </div>
        <div class="navItem setting d-flex mb-4">
          <div class="icon d-flex align-items-center">
            <i class="fas fa-cog"></i>
          </div>
          <a href="/setting" class="btn sidebarItem">
            <span class="sidebar-item fs-5 fw-bolder">設定</span>
          </a>
        </div>
      </div>
      <div class="d-grid gap-2 col-9 round">
        <button type="button" class="orange btn text-white round" data-bs-toggle="modal"
          data-bs-target="#newTwitModal">推文</button>
      </div>
      <div class="logout d-flex">
        <div class="logoutLogo me-3 d-flex align-items-center">
          <i class="fas fa-sign-out-alt"></i>
        </div>
        <a href="/logout" class="btn">
          <span class="fs-5 fw-bolder">登出</span>
        </a>
      </div>
    </nav>
  </div>




  <div class="mainSection">
    <div class="title border d-flex">
      <a href="/home" class="arrow me-3 d-flex align-items-center btn">
        <i class="fas fa-arrow-left fs-4"></i>
      </a> 
      <h5 class="fw-bolder m-3">推文</h5>
    </div>
    <div class="tweet border">
      <div class="d-flex">
        <span class="avatar m-2">
          <img src="{{noImage tweet.avatar}}" alt="" class="rounded-circle userImage">
        </span>
        <div class="name ">
          <p class="text-secondary m-0 mt-3 fw-bolder">{{tweet.User.name}}</p>
          <p class="text-secondary m-0">@{{tweet.User.account}}</p>
        </div>
      </div>
      <div class="tweetContent m-3">
        <p>{{tweet.description}}</p>
      </div>
      <div class="time m-3">
        <div>{{momentFormat tweet.created_at}}</div>
      </div>
    </div>
    <div class="border">
      <div class="d-flex m-3">
        <div class="replies me-5 d-flex">
          <div class="repliesAmount fw-bolder me-2">34</div>
          <div>回覆</div>
        </div>
        <div class="likes d-flex">
          <div class="likesAmount fw-bolder me-2">808</div>
          <div>喜歡次數</div>
        </div>
      </div>
    </div>
    <div class="border">
      <div class="d-flex">
        <div class="commentIcon btn me-5">
          <i class="far fa-comment fs-3 text-secondary"></i>
        </div>
        <div class="likeIcon btn">
          <i class="far fa-heart fs-3 text-secondary"></i>
        </div>
      </div>
    </div>
    <div class="commentsList">
      <div class="comment d-flex border">
        <div class="avatar m-3">
          <img src="{{noImage tweet.reply.avatar}}" alt="" class="rounded-circle userImage">
        </div>
        <div>
          <div class="d-flex">
            <div class="name m-1 fw-bolder">Mary Jane</div>
            <div class="account m-1">@mjjane</div>
            <div class="timefrom m-1">13小時</div>
          </div>
          <div>
            <div class="d-flex">
              <div class="m-1">回覆</div>
              <div class="m-1">@apple</div>
            </div>
            <div>
              <p>Great</p>
            </div>
          </div>
        </div>
      </div>
      <div class="comment d-flex border">
        <div class="avatar m-3">
          <img src="{{noImage tweet.reply.avatar}}" alt="" class="rounded-circle userImage">
        </div>
        <div>
          <div class="d-flex">
            <div class="name m-1 fw-bolder">Squishy</div>
            <div class="account m-1">@apple</div>
            <div class="timefrom m-1">13小時</div>
          </div>
          <div>
            <div class="d-flex">
              <div class="m-1">回覆</div>
              <div class="m-1">@apple</div>
            </div>
            <div>
              <p>Good Job!</p>
            </div>
          </div>
        </div>
      </div>
    </div>

    
  </div>
  <div class="">
    <div class="popularArea mt-4 border">
      <div class="title m-3">
        <h5 class="fw-bolder">Popular</h5>
      </div>
      <div class="popularList border-top">
        <div class="popularUser d-flex border-bottom justify-content-between">
          <div class="user d-flex">
            <div class="avatar m-2">
              <img src="https://i.imgur.com/bGxaaO6.png" alt="" class="rounded-circle userImage">
            </div>
            <div class="information">
              <div class="name mt-3 ms-1 fw-bolder">Pizza Hut</div>
              <div class="account ms-1">@Pizza Hut</div>
            </div>
          </div>
          <div class="round m-3">
            <button class="orange btn text-white round">正在跟隨</button>
          </div>
        </div>
        <div class="popularUser d-flex border-bottom justify-content-between">
          <div class="user d-flex">
            <div class="avatar m-2">
              <img src="https://i.imgur.com/bGxaaO6.png" alt="" class="rounded-circle userImage">
            </div>
            <div class="information">
              <div class="name mt-3 ms-1 fw-bolder">McDonald's</div>
              <div class="account ms-1">@McDonald's</div>
            </div>
          </div>
          <div class="round m-3">
            <button class="btn followButton round">跟隨</button>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>