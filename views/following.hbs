<div class="row">
  {{> homeNavBar}}

  <div class="tweet-followfhip col d-flex flex-column mx-4">

    {{!-------------------- 姓名欄 --------------------}}
    <div class="d-flex">
      <div class="p-3">
        <a href=" /users/{{currentUserFollowings.id}}/tweets"><i class="fas fa-arrow-left me-2 mb-3" style="color: #1C1C1C;"></i></a>
      </div>
      <div class="p-2">
        <div class="home-word">{{currentUserFollowings.name}}</div>
        <div class="count">{{currentUserFollowings.Tweets.length}}&nbsp;推文</div>
      </div>
    </div>

    {{!-------------------- 切換欄 --------------------}}
    <div class="p-2">
      <ul class="nav">
        <li class="nav-item">
          <a class="nav-link text-secondary font-weight-bold" href="/users/{{currentUserFollowings.id}}/followers">跟隨者</a>
        </li>
        <li class="nav-item">
          <a class="nav-link active font-weight-bold" style="color:#FF6600; border-bottom:3px #FF6600 solid;"
            href="/users/{{currentUserFollowings.id}}/followings">正在跟隨</a>
        </li>
      </ul>
    </div>

    {{!-------------------- 追蹤者欄 --------------------}}
    <div class="tweets-scroll">
      {{#each followingsUser}}
    <div class="following d-flex">
      <div class="" style="display:flex;justify-content: center;">

        <a href="/users/{{this.id}}/tweets">
          <img src="{{this.avatar}}" alt="avatar" class="rounded-circle m-2" style="width: 50px; height:50px;">
        </a>

      </div>
      <div class="col-md-10" style="padding-left: 0px; width: 530px;">
        <div style="display: flex; justify-content:space-between">
          <div>

            <a href="/users/{{this.id}}/tweets">
              <div class="follow-name">{{this.name}}</div>
              <div class="follow-account m-0">@{{this.account}}</div>
            </a>

          </div>
          {{#if this.isFollowed}}
          <div class="follow-btn">
            <form action="/followships/{{this.id}}?_method=DELETE" method="POST">
              <button type="submit" class="rounded-pill fw-bolder m-2 common-button" style="width:90px; height:25px; border:none">正在跟隨</button>
            </form>
          </div>
          {{else}}
          <div class="follow-btn">
            <form action="/followships" method="POST">
            <input type="hidden" name="id" value="{{this.id}}">
              <button type="submit" class="btn rounded-pill fw-bolder m-2 unfollow-button-follower " style="width:70px; height:25px;">跟隨</button>
            </form>
          </div>
          {{/if}}
        </div>
        <div class="m-1"
          style="word-wrap:break-word; word-break:normal; overflow: hidden; text-overflow:  ; display: -webkit-box;-webkit-line-clamp: 2; -webkit-box-orient: vertical; width: 500px">
          <p>
            {{this.introduction}}
          </p>
        </div>
      </div>
    </div>
    {{/each}}
    </div>
    
  </div>

  {{> popular}}
</div>