<div class="container d-flex flex-column align-items-center">

  <div class="card" style="width: 38rem;">

    <div class="d-flex align-items-center">
      <a href="/" class="btn">
        <i class="fas fa-arrow-left"></i>
      </a>
      <div class="d-flex flex-column ms-4">
        <h5 class="mb-0 mt-2 fontWeight900">{{otherUser.name}}</h5>
        <p class="mt-0 mb-2" style="color:#657786;">{{totalTweet}} 推文</p>
      </div>
    </div>

    <img src="{{otherUser.cover}}" style="position:relate; height: 200px" class="" alt="...">
    <img src="{{otherUser.avatar}}" class="rounded-circle user-avatar" alt="...">
    <div class="d-flex flex-row-reverse align-items-center m-2">
      {{#if this.isMainUserFollowing }}
      <a href="#" class="btn btn-white-orange rounded-pill p-1" style="width: 90px; height: 35px;;">正在跟隨</a>
      {{else}}
      <a href="#" class="btn btn-orange-white rounded-pill p-1" style="width: 90px; height: 35px;;">跟隨</a>
      {{/if}}
      <i class="far fa-bell circle d-flex align-items-center justify-content-center me-2"></i>
      <a href="mailto:{{otherUser.email}}" style="text-decoration:none;"><i
          class=" far fa-envelope circle d-flex align-items-center justify-content-center me-2"></i></a>

    </div>
    <div class="card-body">
      <h5 class="card-title fontWeight900">{{otherUser.name}}</h5>
      <h6 style="color:#657786;">@{{otherUser.account}}</h6>
      <p class="card-text">{{otherUser.introduction}}</p>
    </div>

    <div class="d-flex mx-3">
      <a href="/users/self/following/{{otherUser.id}}" class="btn ps-0">
        <span class="fontWeight500">{{followerCount}}個</span><span style="color:#657786;">跟隨中</span>
      </a>
      <a href="/users/self/follower/{{otherUser.id}}" class="btn">
        <span class="fontWeight500">{{followingCount}}位</span><span style="color:#657786;">跟隨者</span>
      </a>
    </div>

    <ul class="nav nav-tabs mt-4">
      <li class="nav-item">
        <a class="nav-link fontWeight700 active" href="#">推文</a>
      </li>
      <li class="nav-item">
        <a class="nav-link fontWeight700" href="/users/self/reply/{{otherUser.id}}">推文與回覆</a>
      </li>
      <li class="nav-item">
        <a class="nav-link fontWeight700" href="/users/self/like/{{otherUser.id}}">喜歡的內容</a>
      </li>
    </ul>


    {{#each tweet}}
    <div class="card p-3">
      <div class="d-flex">
        <div>
          <img src="{{../otherUser.avatar}}" style="width: 3rem; height: 3rem;" class="rounded-circle me-3" alt="...">
        </div>
        <div class="col-md-8">
          <div class="userInfo d-flex">
            <h6 class="fontWeight700 me-2">{{../otherUser.name}}</h6>
            <h6 class="fontWeight500" style="color:#657786;">@{{../otherUser.account}}</h6>
            <h6 class="fontWeight500" style="color:#657786;">‧{{moment this.createdAt}}</h6>
          </div>
          <p class="card-text fontWeight500">{{this.content}}</p>
          <i class="far fa-heart me-3"></i><span class="fontWeight500 me-5">{{this.likeCount}}</span>
          <i class="far fa-comment me-3"></i><span class="fontWeight500">{{this.replyCount}}</span>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>