{{>left}}
<div class="col-6">
  <div class="col container">
    {{!-- /user/self --}}
    <div class=" card mb-3">
      <div class="row back-bar m-3">
        <div class="col-6 col-sm-1 back-image">
          <a href=" /">
            <img src="/images/back.png" alt="back" style="width:17px;hegith:14px">
          </a>
        </div>
        <div class="col-6 col-sm-1 back-user" style="width:100px;height:50px;">
          <p class="user-name m-0" style="color: #171725;font-size: 18px;">
            <string>Apple</string>
          </p>
          <p class="user-name m-0" style="color: #6C757D;font-size: 13px;">25推文</p>
        </div>
      </div>
      <img src="https://loremflickr.com/639/200/nature" class="card-img-top position-relative" alt="...">
      <div class="image position-absolute" style="top:200px">
        <a href=" /users">
          <img src="/images/logo.svg" alt="logo" class="user-avatar rounded-circles" style="width:140px;height:140px">
        </a>
      </div>
      <div class="editprofile d-flex justify-content-end m-3">
        <form action="/follower/{{this.id}}" method="POST">
          <button type="submit" class="btn btn-primary"
            style="color: #ff6600;font-size: 16px;background-color:white;border: 1px solid #FF6600;border-radius:20px; width:128px;height:40px">編輯個人資料</button>
        </form>
      </div>
      <div class="card-body" style="margin-top:8px">
        <p class="user-name m-0" style="color: #171725;font-size: 18px;">
          <string>Apple</string>
        </p>
        <p class="user-name m-0" style="color: #6C757D;font-size: 14px;">@apple</p>
        <p class="card-text mt-3">This is a wider card with supporting text below as a natural lead-in to additional
          content.
          This
          content is a little bit longer.</p>
        <div class="row card-bottom">
          <div class="col-3">
            <p class="card-text" style="color: #6C757D;font-size: 14px;">
              34個跟隨中</p>
          </div>
          <div class="col-3">
            <p class="card-text" style="color: #6C757D;font-size: 14px;">
              59個跟隨者</p>
          </div>
          </p>
        </div>
      </div>
      <table class="table align-middle">
        <thead class="thead-light">
          <tr>
            <th scope="col">推文</th>
            <th scope="col">回覆</th>
            <th scope="col">喜歡</th>
          </tr>
        </thead>
        <tbody>
          {{!-- {{#each users}} --}}


          {{!-- {{/each}} --}}
        </tbody>
      </table>
    </div>
  </div>
</div>
{{>right}}