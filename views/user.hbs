<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content" style="position: relative;height: 610px; width: 572px;border-radius: 14px;">
      <form action="/users/:id?_method=PUT" method="POST" enctype="multipart/form-data">
        <div class="modal-header p-2">
          <div class="col-4 d-flex justify-content-between">
            <button type="button" class="btn-close ms-0 mt-0 pt-0" data-bs-dismiss="modal" aria-label="Close"></button>
            <h5 class="modal-title fw-bold" id="exampleModalLabel">編輯個人資料</h5>
          </div>
          <div class="col-8 d-flex justify-content-end">
            <button type="submit" class="btn btn-primary"
              style="border-radius: 50px;background: #FF6600; border:#E6ECF0;">儲存</button>
          </div>
        </div>
        <div class="modal-body p-0">
          <div class="form-row mb-3 mx-auto" style="position: relative;">
            <img src="/images/cover.png" class="card-img-top" alt="cover"
              style="height: 200px ;width: 570px; filter: contrast(50%);object-fit:fill;">
            <label for="cover" class="btn cover-uploader" style="position:absolute; top: 90px; left: 280px;">
              <input class="d-none" type="file" id="cover" name="cover" accept="image/*">
              <i class="fa-solid fa-camera" style="font-size: 1.5em; color: white"></i>
            </label>
          </div>
          <div class="form-row mb-3">
            <img src="/images/logo.png" alt="avatar"
              style="height: 140px ;width: 141px; position:absolute; top: 124px;left: 16px;border:4px white solid; border-radius: 50%; filter: contrast(50%);">
            <label for="cover" class="btn cover-uploader" style="position:absolute; top: 175px; left: 60px;">
              <input class="d-none" type="file" id="cover" name="cover" accept="image/*">
              <i class="fa-solid fa-camera" style="font-size: 1.5em; color: white"></i>
            </label>
          </div>
          <div class="form-row mt-5 p-2">
            <label class="form-label fw-bold" for="name">名稱</label>
            <input class="form-control" type="text" name="name" id="name" placeholder="Enter name"
              value="{{restaurant.name}}" required>
            <p class="text-end text-muted now1 mb-0" style="font-size: 0.98em;">0/0</p>
          </div>
          <div class="form-row mb-3 p-2">
            <label class="form-label fw-bold" for="description">自我介紹</label>
            <textarea class="form-control" id="description" name="description"
              rows="4">{{restaurant.description}}</textarea>
            <p class="text-end text-muted now1" style="font-size: 0.98em;">0/0</p>
          </div>
        </div>
      </form>
