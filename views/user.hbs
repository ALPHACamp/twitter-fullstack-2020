<div class="d-flex align-items-center border p-3 ps-4" style="position: relative">
  <a href="javascript:history.back()">
    <img class="me-3" src="/_base/Property 2=outlined, Property 3=back.svg" style="width: 23px">
  </a>
  <div class="d-flex flex-column">
    <h5 class="m-0" style="line-height:0.9em;">{{user.name}}</h5>
    <p class="text-12px-reg color-secondary m-0">{{tweets.length}} 推文</p>
  </div>
</div>
<hr class="m-0">
<figure class="m-0 align-self-start" style="width: 100%; height: 126px; position: relative">
  <img src="{{user.cover}}" style="object-fit: cover;width:100%;height:200px">
</figure>
<div class="d-flex flex-column" style="position: relative;">
  <div class="d-flex align-items-end justify-content-between ps-4 pe-3">
    {{!-- 用戶大頭貼 --}}
    <figure class="m-0 flex-shrink-0"
      style="width: 140px; height: 140px; border-radius: 50%; overflow: hidden;border:4px solid #ffffff; position: relative;">
      <img src="{{user.avatar}}" style="object-fit: cover;width:100%;height:100%;">
    </figure>
    <button type="button" id="editProfileButton" class="pill-default pill-outline m-2 flex-shrink-1"
      data-bs-toggle="modal" data-bs-target="#editProfileModal" value="{{user.id}}">編輯個人資料</button>
  </div>
  <div class="d-flex flex-column ps-3 mt-2">
    <h5 class="mb-0">{{user.name}}</h5>
    <p class="m-0 text-14px-reg color-secondary">@{{user.account}}</p>
    <p class="m-0 mt-2 mb-2 text-14px-reg color-dark-100">{{user.intro}}</p>
    <p class="m-0 text-14px-reg color-secondary">
      <a href="/{{user.id}}/followers" style="color: #6C757D;"><span style="color: #171725;">
          {{user.followerCount}} 個</span>跟隨中</a>
      &nbsp&nbsp&nbsp
      <a href="/{{user.id}}/followings" style="color: #6C757D;"><span style="color: #171725;">
          {{user.followingCount}} 個</span>跟隨者</a>
    </p>
  </div>
</div>
<div class="d-flex mt-4">
  <div class="p-2 text-14px-med text-center"
    style="color:#ff6600;font-size: 15px; width:20%; border-bottom: 2px solid #ff6600">推文</div>
  <div class="p-2 text-14px-med text-center" style="color:#657786;font-size: 15px; width:20%">回覆</div>
  <div class="p-2 text-14px-med text-center" style="color:#657786;font-size: 15px; width:20%">喜歡的內容</div>
</div>
<hr class="mt-0">
{{#each tweets}}
{{!-- 一篇貼文 --}}
<div class="d-flex flex-row align-items-center ps-4 pe-4 p-3align-items-start" style="width: 100%">
  <div class="d-flex align-items-center">
    {{!-- 用戶大頭貼 --}}
    <a href="/users/{{this.User.id}}/tweets" class="align-self-start">
      <figure class="me-2 flex-shrink-0" style="width: 50px; height: 50px; border-radius: 50%; overflow: hidden;">
        <img src="{{this.User.avatar}}" style="object-fit: cover;width:100%;height:100%">
      </figure>
    </a>
    <div class="me-2 d-flex flex-column flex-shrink-1">
      <div class="d-flex align-items-center">
        {{!-- 用戶名稱 --}}
        <p class="m-0 text-16px-med">{{this.User.name}}</p>
        {{!-- 用戶id --}}
        <p class="m-0 text-14px-reg color-secondary">&nbsp @{{this.User.account}} ・</p>
        <p class="m-0 text-14px-reg color-secondary">{{relativeTime this.createdAt}}</p>
      </div>
      {{!-- tweets 內容 --}}
      <div class="m-0 text-16px-reg text-break mt-2">
        <a href="/tweets/{{this.id}}/replies">{{this.description}}</a>
      </div>
      <div class="d-flex mt-3">
        {{!-- 留言數 Comment --}}
        <div class="me-5 number">
          <img class="me-2" src="/_base/Property 2=outlined, Property 3=reply.svg" style="width: 13px">13
        </div>
        {{!-- 喜歡數 Like --}}
        <div class="number">
          {{#if this.isLiked}}
          <form action="/tweets/{{this.id}}/unlike" method="POST" class="me-2">
            <button type="submit">
              <img src="/_base/Property 2=filled, Property 3=like.svg" style="width: 13px">
              <span style="line-height: 14px;font-size:14px; font-weight:600; color: #6C757D;">{{this.likeCount}}</span>
            </button>
          </form>
          {{else}}
          <form action="/tweets/{{this.id}}/like" method="POST" class="me-2">
            <button type="submit">
              <img src="/_base/Property 2=outlined, Property 3=like.svg" style="width: 13px; ine-height: 14px;">
              <span style="line-height: 14px;font-size:14px; font-weight:600; color: #6C757D;">{{this.likeCount}}</span>
            </button>
          </form>
          {{/if}}
        </div>
      </div>
    </div>
  </div>
</div>
<hr>
{{/each}}