<div class="wrapper d-flex bg-white">

  {{>left-content}}

  <div class="container"
    style="margin:0px; padding:0px;  border-left: 1px solid rgb(209, 203, 203); border-right: 1px solid rgb(209, 203, 203); max-width:90%;">
    <div class="mt-1 mb-3" style="height: 2%;">
      <a class="d-flex" href="javascript:history.back()" style="align-items: center; text-decoration:none;">
        <img class="ms-3" src="https://upload.cc/i1/2022/07/29/bYiz5s.png" alt=""
          style="height: 30%; width: 4%; margin-right: 25px;">
        <div class="col">
          <span
            style="margin: 0; font-family: 'Noto Sans TC'; font-style: normal; font-weight: 700;font-size: 30px; color: #44444F;">
            {{targetUser.name}}
          </span>
          <p
            style="margin: 0; font-family: 'Noto Sans TC'; font-style: normal; font-weight: 500; font-size: 15px; color: #6C757D;">
            {{tweetsLength}} 推文
          </p>
        </div>
      </a>
    </div>
    <div class="row m-0 p-0">
      <div style="height: 50%; padding: 0%;">
        <img src="{{targetUser.banner}}" alt="cover" style="height:100%;width:100%; object-fit:cover">
      </div>
      <div class="d-flex px-3" style="margin-top:-80px;z-index:100;position:relative">
        <img src="{{targetUser.avatar}}" class="me-auto rounded-circle border border-white border-5"
          style="width:150px;height:150px">
        {{#ifCond targetUser.id currentUser.id}}
        <div class="d-flex align-items-end">
          <button type="button" class="btn rounded-pill" id="edit-btn"
            style=" background-color: #FFFFFF;color: #FF6600;border:1px solid #FF6600;">
            編輯個人資料
          </button>
        </div>
        {{else}}
        {{#if user.isFollowed}}
        <form action="/followships/{{targetUser.id}}?_method=DELETE" method="POST">
          <button type="submit" class="btn follow-bottom">正在跟隨</span>
          </button>
        </form>
        {{else}}
        <form action="/followships" method="POST">
          <button type="submit" class="btn follow-bottom removefollow" name="id" value={{targetUser.id}}>
            跟隨
          </button>
        </form>
        {{/if}}
        {{/ifCond}}
      </div>
      <div class="col">
        <span style="width:20%; white-space:pre-wrap;" class="fw-bold fs-5">{{targetUser.name}}</span><br />
        <small class="text-secondary">@{{targetUser.account}}</small>
      </div>
    </div>
    <div class="row  mx-0 px-0 ">
      <div class="col" style="max-width: 100%;">
        <p class="fs-5 mb-0" style="word-wrap: break-word; word-break: normal;">{{targetUser.introduction}}</p>
      </div>
      <div class="d-flex mb-4">
        <div style="margin-right: 20px;">
          <span class="first">{{targetUser.Followings.length}} 個</span>
          <span class="second"><a href="/users/{{targetUser.id}}/followings"
              style="text-decoration:none;color: #171725">跟隨中</a></span>
        </div>
        <div>
          <span class="first">{{targetUser.Followers.length}} 位</span>
          <span class="second"><a href="/users/{{targetUser.id}}/followers"
              style="text-decoration:none;color: #171725">跟隨者</a></span>
        </div>
      </div>
    </div>
    {{>user-tabs route='tweets'}}
    {{#if tweets}}
    <table class="table align-middle">
      <tbody>
        {{#each tweets}}
        <tr>
          <td><img src="{{../targetUser.avatar}}" alt="" style="width: 300%; hight: 300%; border-radius: 50%;"></td>
          <td>{{../targetUser.name}}
            <small>@{{../targetUser.account}}．{{relativeTimeFromNow this.createdAt}}</small>
            <p>{{this.description}}</p>
            <div>
              <small class="me-5">
                <img src="https://upload.cc/i1/2022/07/29/Os3ojA.png" alt="" style="width: 5%; hight: 5%">
                {{this.repliedCount}}
              </small>
              <small>
                <img src="https://upload.cc/i1/2022/07/29/15GUkZ.png" alt="" style="width: 5%; hight: 5%">
                {{this.likedCount}}
              </small>
            </div>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
    {{/if}}
  </div>

  {{>profile-right-content}}

</div>