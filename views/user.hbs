<div class='container'>
  <div class="row">
    <div class='col-2 left-column'>
      {{> leftColumn}}
    </div>
    <div class='col-7 border middle-column p-0'>
      {{!-- {{> middleColumn}} --}}
      <div class='userHeader p-2' style='border: 1px solid blue;'>
        <i class="fa-solid fa-arrow-left"></i>
        <span class="user-name">{{user.name}}</span>
        <span class="user-tweets">{{tweets.length}} 推文</span>
      </div>
      <div class='userInfo' style='border: 1px solid red;'>
        <img
          class="cover"
          src='{{user.cover}}'
          alt='background'
          width='100%'
          height='20%'
        />
        <img
          class='rounded-circle avatar'
          src='{{user.avatar}}'
          alt='avatar'
          width='20%'
          height='10%'
        />
        <button
          class='btn rounded-pill edit-button'
          style='border: 1px solid #FF6600; color:#FF6600;'
        >編輯個人資料</button>
        <div class='user-name'><strong>{{user.name}}</strong></div>
        <div class='user-account'>@{{user.account}}</div>
        <p class='m-0 user-introduction'>{{user.introduction}}</p>
        <a href="#" class="btn followings">
          0 位跟隨中
        </a>
        <a href="#" class="btn followers">
          0 位跟隨者
        </a>
      </div>
      {{> user-tabs}}
      {{> user-tab-contents}}
    </div>
    <div class='col-3 right-column'>
      {{> rightColumn}}
    </div>
  </div>
</div>