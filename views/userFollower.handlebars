{{> nav}}
<div class="mr-5">
  <div>
    <div>
      <a href="javascript:history.back()">回上一頁</a>
    </div>
    <div>
      <h4>{{user.name}}</h4>
      <p>{{user.TweetsCount}}</p>
    </div>
  </div>
  <ul class="nav nav-tabs">
    <li class="nav-item">
      <a class="nav-link active" href="/users/{{user.id}}/followers">跟隨者</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" href="/users/{{user.id}}/followings">正在跟隨</a>
    </li>
  </ul>
  {{#each user.Followers}}
  <div class="card mb-3 " style="width: 540px;">
    <div class="row g-0">
      <div class="col-md-2">
        <img src="{{this.avatar}}" alt="..." style="max-width:75px; max-height:75px;">
      </div>
      <div class="col-md-10">
        <div class="card-body">
          <h5 class="card-title"><a href="/users/{{this.id}}">{{this.name}}</a>
            {{#if this.isFollowed}}
            <form action="/followships/{{this.id}}?_method=DELETE" method="POST">
              <button type="submit" class="btn btn-danger">正在跟隨</button>
            </form>
            {{else}}
            <form action="/followships/" method="POST">
              <input type="hidden" name="id" value="{{this.id}}">
              <button type="submit" class="btn btn-danger">跟隨</button>
            </form>
            {{/if}}
          </h5>
          <p class="card-text">{{this.account}}</p>
          <p>{{this.introduction}}</p>
        </div>
      </div>
    </div>
  </div>
  {{/each}}
</div>

<!--================= 跟隨 ================= -->
<div calss="d-flex flex-column ml-5">
  <h4>跟隨誰</h4>
  {{#each users}}
  <div class="card mb-3" style="width: 540px;">
    <div class="row g-0">
      <div class="col-md-4">
        <img src="{{this.avatar}}" alt="..." style="max-width: 100px; max-height:100px;">
      </div>
      <div class="col-md-6">
        <div class="card-body">
          <h5 class="card-title">{{this.name}}</h5>
          <p class="card-text">{{this.account}}</p>
        </div>
      </div>
      <div calss="col-md-2">
        {{#if this.isFollowed}}
        <form action="/followships/{{this.id}}?_method=DELETE" method="POST">
          <button type="submit" class="btn btn-danger">正在跟隨</button>
        </form>
        {{else}}
        <form action="/followships/" method="POST">
          <input type="hidden" name="id" value="{{this.id}}">
          <button type="submit" class="btn btn-danger">跟隨</button>
        </form>
        {{/if}}
      </div>
    </div>
  </div>
  {{/each}}
</div>