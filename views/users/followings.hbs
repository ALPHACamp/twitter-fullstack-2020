{{>navs/user-left-column route='users'}}
<div style="position: absolute; left: 332px; width:641px;" class="border">
    {{>header route='user'}}
    {{>navs/user-followpage-tabs route='followings'}}
    {{!-- 留言 --}}
    {{#each tweets}}
        {{>contentcards/user-followpage-tweet-card}}
    {{/each}}
</div>
{{>top-users-bar}}

{{!-- tweet modal --}}
<div class="modal" id="myModalmain" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content border-white d-flex flex-column" style="width:634px; height: 300px; top:56px">
      <div class="d-flex justify-content-start">
        <button type="button" class="btn-close ms-2 mt-2" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <hr style="margin-top: 5px; margin-bottom: 5px;">

      <form action="/tweets" method="POST">
        <div style="padding: 16px 24px" class="d-flex flex-column mx-auto">
          <div class="d-flex flex-row">
            <a class="" href="/users/{{user.id}}/tweets">
              <div style="width:50px; height:50px; background-color:#FF6600" class="rounded-circle overflow-hidden">
                <img src={{#if user.avatar}}{{user.avatar}}{{else}}"/icon/avatar.jpg"{{/if}}
                  style="aspect-ratio: 1 / 1;width: 50px;object-fit: cover;object-position: center;" alt="avatar">
              </div>
            </a>
            <div style="margin-left: 8px" class="d-flex flex-column">
              <textarea class="ms-1 mt-2" name="description" id="contentInput" rows="6" placeholder="有什麼新鮮事?"
                style="border:none;width:528px"></textarea>
            </div>
          </div>
        </div>
        <div style="padding: 16px" class="d-flex flex-row-reverse align-items-center">
          <button class="btn text-end my-auto py-1 px-3"
            style="background-color:#FF6600; color:white; border-radius: 30px" type="submit" id="submitBtn">
            推文
          </button>
          {{!-- DOM render --}}
          <span id="emptyContentMessage" class="text-danger me-2 mt-2" style="font-size: 10px"></span>
        </div>
      </form>
    </div>
  </div>
</div>