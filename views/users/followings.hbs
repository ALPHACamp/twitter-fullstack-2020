<div class='d-flex justify-content-center'>
  {{! navbar }}
  {{> navbar}}

  {{!tweet-list }}
  <div class='col-7 home-page'>
    <ul class='list-group home-list'>
      <div class='user-container m-0 p-0'>
        <div class='d-flex flex-row head'>
          <span class='d-flex justify-content-start align-items-center'>
            <a href='{{previousPage}}'>
              <img src='/images/back.svg' alt='back' />
            </a>
          </span>
          <span class='ms-2'>
            <h5 class='m-0'>{{user.name}}</h5>
            <p class='m-0 tweet'>{{user.tweetsCount}} 推文</p>
          </span>
        </div>
        <ul class='nav nav-tabs'>
          <li class='nav-item'>
            <a class='nav-link {{#if followers}}active{{/if}}' aria-current='page' href='/users/{{user.id}}/followers'>追隨者</a>
          </li>
          <li class='nav-item'>
            <a class='nav-link {{#if followings}}active{{/if}}' href='/users/{{user.id}}/followings'>正在追隨</a>
          </li>
        </ul>
        <ul class='follow-list'>
          {{#each user.Followings}}
            <li class='mt-2'>
              <div class='d-flex align-items-start follow'>
                <div class='flex-shrink-1 p-0'>
                  <img src='{{this.avatar}}' alt='' class='recommend-followings-img' />
                </div>
                <div class='tweet-text flex-grow-1'>
                  <div class='head d-flex justify-content-between'>
                    <span class='tweet-name'>{{this.name}} </span>
                    {{#if this.isFollowing}}
                      <form class='' action='/followship/{{this.id}}' method='POST'>
                        <button type='submit' class='btn'>正在跟隨</button>
                      </form>
                    {{else}}
                      <form class='' action='/followship/{{this.id}}' method='POST'></form>
                        <button type='submit' class='btn btn-unfollow'>跟隨</button>
                      </form>
                    {{/if}}
                  </div>
                  <p class='tweet-description' style='white-space:break-spaces;'>{{this.introduction}}</p>
                </div>
              </div>
              <hr />
            </li>
          {{/each}}
        </ul>
        {{#if pagination.hasManyPages}}
          {{> pagination route = route }}
        {{/if}}
      </div>
    </ul>
  </div>
  {{! recommend-followings }}
  {{> recommend-followings}}
</div>