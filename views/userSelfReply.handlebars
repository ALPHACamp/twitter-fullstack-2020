<div class="row grid">
  <div>
    <nav class="userSidebar fixed">
      <div class="logo">
        <img src="https://i.imgur.com/ZUJriDp.png" alt="" id="ac-logo">
      </div>
      <div class="buttonList mt-5">
        <div class="navItem index d-flex mb-4 ">
          <div class="icon d-flex align-items-center">
            <i class="fas fa-home my-auto"></i>
          </div>
          <a href="/tweets" class="btn sidebarItem">
            <span class="fs-5 fw-bolder">首頁</span>
          </a>
        </div>
        <div class="navItem userProfile d-flex mb-4 ">
          <div class="icon d-flex align-items-center {{#ifCond user.id tweetUser.id}}color-orange{{/ifCond}}">
            <i class="fas fa-users"></i>
          </div>
          <a href="/user/{{user.id}}/tweets" class="btn sidebarItem">
            <span class="fs-5 fw-bolder">個人資料</span>
          </a>
        </div>
        <div class="navItem setting d-flex mb-4">
          <div class="icon d-flex align-items-center">
            <i class="fas fa-cog"></i>
          </div>
          <a href="/setting" class="btn sidebarItem">
            <span class="sidebar-item fs-5 fw-bolder">設定</span>
          </a>
        </div>
      </div>
      <div class="d-grid gap-2 col-9 round">
        <button type="button" class="orange btn text-white round" data-bs-toggle="modal"
          data-bs-target="#newTwitModal">推文</button>
      </div>
      <div class="logout d-flex">
        <div class="logoutLogo me-3 d-flex align-items-center">
          <i class="fas fa-sign-out-alt"></i>
        </div>
        <a href="/logout" class="btn">
          <span class="fs-5 fw-bolder">登出</span>
        </a>
      </div>
    </nav>
  </div>

  <div class="userProfileSection ">
    {{>message}}
    <div class="title border d-flex">
      <a href="/tweets" class="arrow me-3 d-flex align-items-center btn">
        <i class="fas fa-arrow-left fs-4"></i>
      </a>
      <div>
        <h4 class="fw-bolder m-0">{{tweetUser.name}}</h4>
        <p class="m-0">{{tweets.length}}推文</p>
      </div>
    </div>
    <div class="cover">
      <img
        src="https://image.cache.storm.mg/styles/smg-800x533-fp/s3/media/image/2020/11/07/20201107-092915_U13380_M651499_4ac4.jpg?itok=6KFZde7p"
        alt="" class="userBackgroundImg">
    </div>
    <span class="avatar m-2">
      <img src="{{noImage tweetUser.avatar}}" alt="" class="rounded-circle userProfileImg">
    </span>
    <div class="profileInformation mt-5 pt-2 ms-2">
      <div class="name m-1 fw-bolder mt-2">
        <h5> {{tweetUser.name}}</h5>
      </div>
      <div class="account m-1">@{{tweetUser.account}}</div>
      <div class="m-2">
        <p>{{tweetUser.description}}</p>
      </div>
    </div>
    <div class="d-flex">
    </div>
    <div class="d-flex m-3">
      <div class="replies me-5 d-flex">
        <div class="repliesAmount fw-bolder me-2">34</div>
        <div>個跟隨中</div>
      </div>
      <div class="likes d-flex">
        <div class="likesAmount fw-bolder me-2">59</div>
        <div>位跟隨者</div>
      </div>
    </div>
    {{#ifCond theUser this.id}}
    <div class="d-grid gap-2 col-9 round">
      <button type="button" class="orange btn text-white round" data-bs-toggle="modal"
        data-bs-target="#userProfileSetting">編輯個人資料</button>
    </div>
    {{/ifCond}}
    <ul class="nav nav-tabs">
      <li class="nav-item">
        <a class="nav-link text-secondary" href="/user/{{tweetUser.id}}/tweets">推文</a>
      </li>
      <li class="nav-item">
        <a class="nav-link text-secondary active" href="/user{{tweetUser.id}}/replies">推文與回覆</a>
      </li>
      <li class="nav-item">
        <a class="nav-link text-secondary" href="/=">喜歡的內容</a>
      </li>
    </ul>
    {{#each replies}}
    <div class="comment d-flex border">
      <div class="avatar m-3">
        <img src="{{noImage this.User.avatar}}" alt="" class="rounded-circle userImage">
      </div>
      <div>
        <div class="d-flex">
          <div class="name m-1 fw-bolder">{{this.User.name}}</div>
          <div class="account m-1">@{{this.User.account}}</div>
          <div class="timefrom m-1">{{moment this.createdAt}}</div>
        </div>
        <div>
          <div class="d-flex">
            <div class="m-1">回覆</div>
            <div class="m-1 color-orange">@{{this.Tweet.User.name}}</div>
          </div>
          <div>
            <p>{{this.comment}}</p>
          </div>
        </div>
      </div>
    </div>
    {{/each}}

  </div>
  <div class="">
    <div class="popularArea fixed mt-4 border">
      <div class="title m-3">
        <h5 class="fw-bolder">Popular</h5>
      </div>
      <div class="popularList border-top">
        <div class="popularUser d-flex border-bottom justify-content-between">
          <div class="user d-flex">
            <div class="avatar m-2">
              <img src="https://i.imgur.com/bGxaaO6.png" alt="" class="rounded-circle userImage">
            </div>
            <div class="information">
              <div class="name mt-3 ms-1 fw-bolder">Pizza Hut</div>
              <div class="account ms-1">@Pizza Hut</div>
            </div>
          </div>
          <div class="round m-3">
            <button class="orange btn text-white round">正在跟隨</button>
          </div>
        </div>
        <div class="popularUser d-flex border-bottom justify-content-between">
          <div class="user d-flex">
            <div class="avatar m-2">
              <img src="https://i.imgur.com/bGxaaO6.png" alt="" class="rounded-circle userImage">
            </div>
            <div class="information">
              <div class="name mt-3 ms-1 fw-bolder">McDonald's</div>
              <div class="account ms-1">@McDonald's</div>
            </div>
          </div>
          <div class="round m-3">
            <button class="btn followButton round">跟隨</button>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>