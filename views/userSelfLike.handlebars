<!-- Modal -->
{{>newTweet}}

<div class="row grid">
  {{>leftSidebar}}

  <div class="userProfileSection ">
    {{>message}}

    {{>userProfile}}
    <ul class="nav nav-tabs">
      <li class="nav-item">
        <a class="nav-link text-secondary" href="/users/{{tweetUser.id}}/tweets">推文</a>
      </li>
      <li class="nav-item">
        <a class="nav-link text-secondary" href="/users/{{tweetUser.id}}/replies">推文與回覆</a>
      </li>
      <li class="nav-item">
        <a class="nav-link text-secondary active" href="/users/{{tweetUser.id}}/likes">喜歡的內容</a>
      </li>
    </ul>


    {{#each data}}
    <div class="comment d-flex border">
      <div class="avatar m-3">
        <img src="{{noImage this.avatar}}" alt="" class="rounded-circle userImage">
      </div>
      <div>
        <div class="d-flex">
          <div class="name m-1 fw-bolder">{{this.name}}</div>
          <div class="account m-1">@{{this.account}}</div>
          <div class="timefrom m-1">{{moment this.createdAt}}</div>
        </div>
        <div>
          <div>
            <p>{{this.description}}</p>
          </div>
        </div>
        <div class="d-flex mb-2">
          <a href="/tweets/{{this.id}}" class="comment d-flex me-2 btn">
            <span class="commentIcon me-2">
              <i class="far fa-comment"></i>
            </span>
            <span class="commentAmount">{{this.RepliesLength}}</span>
          </a>
          <a href="" class="like d-flex btn">
            {{#if this.isLiked}}
            <form action="/like/{{this.id}}?_method=DELETE" method="POST">
              <button type="submit" class="btn">
                <i class="fas fa-heart"></i>
              </button>
            </form>
            {{else}}
            <form action="/like/{{this.id}}" method="POST">
              <button type="submit" class="btn">
                <i class="far fa-heart"></i>
              </button>
            </form>
            {{/if}}
            <span class="likeAmount">{{this.LikedUsersLength}}</span>
          </a>
        </div>
      </div>
    </div>
    {{/each}}

  </div>

  <div class="topUser">
    <div class="popularArea fixed mt-4 border">
      <div class="title m-3">
        <h5 class="fw-bolder">Popular</h5>
      </div>
      {{>popular}}
    </div>
  </div>
</div>
</div>