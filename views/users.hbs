<div class="container d-flex">
  <!--left bar-->
  <div class="col-2 nav">
    {{> nav userPage=users}}
  </div>
  <!--middle bar-->
  <div class="col-7 user-profile" style="width: 639px;">
    <div class="tweets-container"
      style="width: 639px;height:100%; border-right:1px solid #C4C4C4; border-left:1px solid #C4C4C4;">
      <!--head-->
      <div class="card-header col-12 row" style="height: 75px;margin-left:1px; background-color:#FFFFFF; border-right:1px solid #C4C4C4;">
        <a href="javascript:history.back()" style="color: #000000; text-decoration: none;"
          class="col-auto d-flex align-items-center ms-0 ps-0">
          <i class="fas fa-arrow-left" style="width:17pxl height:14px;"></i>
        </a>
        <a href="/users/{{users.id}}/tweets"
          class="col-auto d-flex flex-column align-items-start justify-content-center link-dark"
          style="text-decoration: none; ">
          <span class="h5" style="line-height: 26px; color: #000000; font-size: 18px; font-weight: 700;">{{users.name}}</span>
          <span style="color: #6C757D; font-size: 13px; line-height: 19px;font-weight: 500;">{{user.Tweets.length}}推文</span>
        </a>
      </div>
      <!--cover & avatar & Edit button-->
      <div class="card-body col-12 m-0 p-0 position-relative">

        <div class="bg-holder" style="height: 280px;">
          <img src="{{#if users.cover}}{{users.cover}}{{else}}https://i.imgur.com/ndXEE6d.jpg{{/if}}"
            class="card-img-top" alt="..." class="img-fluid" id="bgImage"
            style="height:100%;width:100%;object-fit:cover">
          <img src="{{#if users.avatar}}{{users.avatar}}{{else}}https://loremflickr.com/200/200/avatar{{/if}}"class="rounded-circle" alt="user_Aavtar" height="130px" width="130px"
            style="border: 2px solid white; position: absolute; object-fit: cover; top: 55%; left: 3%;">
        </div>

        <div class="card-body col-12 d-flex justify-content-end">
          <button type="submit" class="btn user-edit-button" data-bs-toggle="modal" data-bs-target="#editModal"
            style="background: #FFFFFF; border-radius: 100px; border:1px solid #FF6600;">
            <span style="color: #FF6600;font-size: 16px; line-height: 24px;">編輯個人資料</span></button>
        </div>
      </div>
      <!--profile-->
      <div class="card-body col-12">
        <div class="card-text ps-2">
          <h4 style="font-weight: 900; line-height: 18px">{{users.name}}</h4>
          <span class="text-muted" style="font-size: 0.93em; line-height: 18px;">@{{users.account}}</span>
          <p class="my-2" style="font-size: 0.96em; line-height: 25px">{{#if
            users.introduction}}{{users.introduction}}{{else}}Lorem example text example text for AC simple twitter
            project practice{{/if}}</p>
          <a href="/users/{{users.id}}/followers" style="text-decoration:none;">
            <span class="fw-bold text-dark">{{user.Followers.length}}</span><span
              class="text-muted text-dark me-3">跟隨中</span>
          </a>
          <a href="/users/{{users.id}}/followings" style="text-decoration:none;">
            <span class="fw-bold text-dark">{{user.Followings.length}}</span><span class="text-muted">跟隨者</span>
          </a>
        </div>
      </div>
      <!--profile nav-->
      <div class="profile-head col-12">
        <nav>
          <div class="nav nav-tabs " id="nav-tab" role="tablist">
            <a class="nav-link active" id="nav-home-tab" data-toggle="tab" href="/tweets/{{user.id}}"
              style="color: #FF6600; border: none; border-bottom: 1px solid #ff6600;" role="tab"
              aria-controls="nav-home" aria-selected="true">推文 </a>
            <a class="nav-link" id="nav-profile-tab" data-toggle="tab" href="/reply/{{user.id}}"
              style="color: #657786; border: none;" role="tab" aria-controls="nav-profile" aria-selected="false">回覆</a>
            <a class="nav-link" id="nav-contact-tab" data-toggle="tab" href="/likes/{{user.id}}"
              style="color: #657786; border: none;" role="tab" aria-controls="nav-contact"
              aria-selected="false">喜歡的內容</a>
          </div>
        </nav>
      </div>
      <!--tweet-->
      <div class="tweets-container">
        {{#each tweet }}
        <div class="tweets d-flex mt-3" style="border-bottom: 1px solid #C4C4C4;">
          <div class="avatar ps-3">
            <a href="/users/{{../users.id}}" style="text-decoration:none;">
              <img src="{{../users.avatar}}" class="rounded-circle me-3"
                style="width: 50px;height: 50px;background: #C4C4C4;">
            </a>
          </div>
          <div class="tweet-content">
            <div class="name">
              <span style="font-size: 16px;font-weight:700;">{{../users.name}}</span>
              <span style="font-size: 14px;color:#C4C4C4">@{{../users.account}}． {{relativeTimeFromNow
                this.createdAt}}</span>
            </div>
            <div class="content mt-3">
              {{this.description}}
            </div>
            <div class="footer d-flex">
              <div class="replies d-flex align-items-center">
                <button type="button" class="mt-4 mb-4 btn" data-bs-toggle="modal"
                  data-bs-target="#tweetReplyModal{{this.id}}">
                  <i class="far fa-comment"></i>&ensp;{{this.Replies.length}}
                </button>
              </div>
              <div class="likes d-flex align-items-center">
                {{#if this.isLiked}}
                <form action="/like/{{this.id}}?_method=DELETE" method="post">
                  <button type="submit" class="btn" ><i
                      class="fa-solid fa-heart" style="color: #fc5a5a;">&ensp;</i><span>{{this.LikedUsers.length}}</span></button>
                </form>
                {{else}}
                <form action="/like/{{this.id}}" method="post">
                  <button type="submit" class="btn"><i class="fa-regular fa-heart"> &ensp;</i><span>{{this.LikedUsers.length}}</span></button>
                </form>
                {{/if}}
              </div>
            </div>
          </div>
        </div>
        {{!--tweetReply modal --}}
        <div class="modal fade" id="tweetReplyModal{{this.id}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <div class="tweet-title btn"><button type="button" class="btn-close" data-bs-dismiss="modal"
                    aria-label="Close" style="color: #FF6600;"></button></div>
              </div>
              <div class="tweets d-flex mt-3">
                <div class="avatar ps-3">
                  <a href="/tweets/{{../users.id}}" style="text-decoration:none;">
                    <img src="{{../users.avatar}}" class="rounded-circle me-3"
                      style="width: 50px;height: 50px;background: #C4C4C4;">
                  </a>
                </div>
                <div class="tweet-content">
                  <div class="name">
                    <span style="font-size: 16px;font-weight:700;">{{../users.name}}</span>
                    <span style="font-size: 14px;color:#C4C4C4">@{{../users.account}}．{{relativeTimeFromNow
                      this.createdAt}}</span>
                  </div>
                  <div class="content mt-3">
                    {{this.description}}
                  </div>
                  <p style="color: #657786;">回覆給<strong style="color:#FF6600;">@FakeAccount{{this.account}}</strong></p>
                </div>
              </div>
              <div class="modal-body" class="d-flex">
                <div class="body-avatar d-flex align-items-stretch">
                  <div class="left">
                    <a href="/tweets/{{user.id}}">
                      <img src="{{user.avatar}}" class="rounded-circle me-3"
                        style="width: 50px;height: 50px;background: #C4C4C4;">
                    </a>
                  </div>
                  <div class="right" class="d-flex">
                    <form method="POST" action="/tweets/{{this.user.id}}">
                      <textarea name="description" cols="40" rows="10"
                        style="background: #FFFFFF;border: 0px solid #E6ECF0;box-sizing: border-box;"
                        placeholder="推你的回覆"></textarea>
                      <div class="button d-flex justify-content-end">
                        <button type="submit" class="btn" style="background: #FF6600;border-radius: 50px;">
                          <span style="color: #FFFFFF;">推文</span>
                        </button>
                      </div>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  <!--Edit modal-->
  <div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" >
    <div class="modal-dialog">
      <div class="modal-content" style="width:634px; height:650px;">
        <!--修改的PUT先寫來放-->
        <form action="/users/{{user.id}}?_method=PUT" method="post" enctype="multipart/form-data">
          <div class="modal-header">
            <div class="d-flex align-items-center">
              <button type="button" class="btn" data-bs-dismiss="modal" aria-label="Close" style="color: #FF6600;">
                <i class="fas fa-times"></i>
              </button>
              <span class="modal-title h5 fw-bold ps-3" id="ModalLabel">編輯個人資料</span>
            </div>
            <button type="submit" class="badge btn rounded-pill" style="font-size:1.0rem; background: #FF6600;">
              <span style="color: #FFFFFF;">儲存</span>
            </button>
          </div>
  
          <div class="modal-body row">
            <div class="col-12 m-0 p-0 position-relative mb-1">
                         
              <div class="bg-holder" style="height: 170px;">
                <img src="{{#if users.cover}}{{users.cover}}{{else}}https://i.imgur.com/ndXEE6d.jpg{{/if}}"class="card-img-top" alt="..." class="img-fluid" id="bgImage" style="height:100%;width:100%;object-fit:cover">
              </div>
                <div class="form-row mb-3">
                  <label for="cover" class="btn form-label">
                    <input class="d-none" type="file" id="cover" name="cover" accept="image/*" style="display: none">
                    <i class="fa-solid fa-camera" style="position: absolute; object-fit: cover; top: 40%; left: 40%;; width:20; height:20px; color: #FFFFFF"></i>
                    {{!--<i class="fa-solid fa-xmark" style="position: absolute; object-fit: cover; top: 40%; left: 60%;; width:20; height:20px; color: #FFFFFF"></i>--}}
                  </label>
                </div>


                <div class="avatar-holder">
                  <img src="{{#if users.avatar}}{{users.avatar}}{{else}}https://loremflickr.com/300/300/avator{{/if}}"
                    class="rounded-circle" alt="user_Aavtor" height="140px" width="140px"
                    style="border: 2px solid white; position: absolute; object-fit: cover; top: 40%; left: 3%;">
                </div>
                <label for="avatar" class="btn avator-uploader">
                  <input class="d-none" type="file" id="avatar" name="avatar" accept="image/*">
                  <i class="fas fa-camera" style="color: white;"></i>
                </label>
              </div>
              <div class="form-row mb-1">
             <label for="avatar" class="btn form-label">
              <input class="form-control-file" type="file" id="avatar" name="avatar" accept="image/*" style="display: none">
                <i class="fa-solid fa-camera" style="position: absolute; object-fit: cover; top: 55%; left: 14.5%;; width:20; height:20px; color:#FFFFFF"> 
                </i>
              </label>
                {{!--<label class="form-label" for="avatar"></label>
                <input class="form-control" type="file" class="form-control-file" id="avatar" name="avatar">
                <button type="submit" class="btn btn-primary">Submit</button>--}}
              </div>

            </div>
            <div class="col-12 ms-2" style="width: 600px; background-color:#F5F8FA; height:54px;">
              <label for="name" style="font-size:14px; ">名稱</label>
              <input type="text" class="form-control pt-0" id="name" name="name" maxlength="50"
                style="width: 600px; border:none;outline: none; background-color:#F5F8FA; border-bottom:1px solid #657786;font-size:14px" aria-describedby="nameHelp" value="{{users.name}}" />
              <p class="text-end text-muted now1" style="font-size: 12px;">{{users.name.length}}/50</p>
            </div>
            <div class="col-12 mt-4 ms-2" style=" width: 600px;background-color:#F5F8FA;">
              <label for="introduction" style="margin-left: 8px; font-size: 0.8em;">自我介紹</label>
              <textarea class="form-control" id="introduction" name="introduction"
                style="border:none; border-bottom:1px solid #657786; outline: none; background-color:#F5F8FA; font-size:16px;" maxlength="160" aria-describedby="descriptionHelp">{{users.introduction}}</textarea>
              <p class="text-end text-muted now2" style="font-size:12px;">{{users.introduction.length}}/160</p>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
  </div>
  <!--right bar-->
  <div class="col-3 followship">
    {{> followship}}
  </div>
  </div>