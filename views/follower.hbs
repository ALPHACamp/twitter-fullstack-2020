{{> leftbar}}
<div class="middle right-line-2 left-line-2">
  <div>
    <div class="row">
      {{user-nav}}
      {{> followship-tabs route='follower'}}

      <div class="d-flex flex-column">
        {{#each followings}}
        <div style="border-bottom:2px solid #E6ECF0; padding:16px 23px;">

          <div class="d-flex">
            <div class="d-flex justify-content-end align-items-center">
              <img class="follower-avatar" src="{{this.avatar}}" width="50px" height="50px" onload="this.style.opacity=1">
              <div class="follower-name p-2" style="font-weight: 700;">{{this.name}}</div>
              {{#if this.isFollowed}}
              <form action="/followships/{{this.id}}?_method=DELETE" method="POST" style="display: contents;">
                <button type="submit" class="unFollow-button" style="margin-left: 330px; width: 96px;height: 40px;background-color: #FF6600; border:none; border-radius: 50px; font-family: 'Noto Sans TC';font-style: normal; font-weight: 400;font-size: 16px;line-height: 24px;color: #FFFFFF;">正在跟隨</button>
              </form>
              {{else}}
              <form action="/followships" method="POST" style="display: contents;">
                <input type="hidden" name="id" value="{{this.id}}" />
                <button type="submit" class="btn follow-button" style="margin-left: 360px; width: 64px;height: 40px;background: #FFFFFF;border: 1px solid #FF6600;border-radius: 50px;font-family: 'Noto Sans TC';font-style: normal;font-weight: 400;font-size: 16px;line-height: 24px;color: #FF6600;">跟隨</button>
              </form>
              {{/if}}
            </div>  
          </div>
            <div style=" margin-left:65px" style="font-weight:400px; font-size:16px">{{this.introduction}}</div>
        </div>
        {{/each}}
      </div>

    </div>
  </div>
</div>
{{> rightbar}}
