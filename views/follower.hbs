{{!-- left bar --}}
<div class="container d-flex">
  <div id="left-nav" >
    {{> nav}}
   <!--</div>-->

  <!--middle bar-->
  <div class="col-7 user-profile">
    <div class="tweets-container"
      style="width: 639px;height:1200px;border-right:1px solid #C4C4C4; border-left:1px solid #C4C4C4;">
      <!--head-->
      <div class="card-header col-12 row m-0" style="height: 75px; background-color:#FFFFFF;">
        <a href="javascript:history.back()" style="color: #000000; text-decoration: none;"
          class="col-auto d-flex align-items-center">
          <i class="fas fa-arrow-left" style="font-size: 1.8em;"></i>
        </a>
        <a href="/users/{{user.id}}"
          class="col-auto d-flex flex-column align-items-start justify-content-center link-dark"
          style="text-decoration: none;">
          <span class="h5"
            style="line-height: 15px; color: #000000; font-size: 19px; font-weight: 700;">{{user.name}}</span>
          <span style="color: #657786; font-size: 13px; line-height: 15px;">{{user.Tweets.length}}推文</span>
        </a>
      </div>
      <!--profile nav-->
      <div class="profile-head col-12">
        <nav>
          <div class="nav nav-tabs " id="nav-tab" role="tablist">
            <a class="nav-link active" id="nav-home-tab" data-toggle="tab" href="/users/1{{users.id}}/followers"
              style="color: #FF6600; border: none; border-bottom: 1px solid #ff6600;" role="tab"
              aria-controls="nav-home" aria-selected="true">追隨者 </a>
            <a class="nav-link" id="nav-profile-tab" data-toggle="tab" href="/users/1{{users.id}}/followings"
              style="color: #657786; border: none;" role="tab" aria-controls="nav-profile"
              aria-selected="false">正在追隨</a>
          </div>
        </nav>
      </div>

      <!--follower-->
      <div class="tweets-container">
        {{#each follow}}
        <div class="tweets d-flex mt-3" style="border-bottom: 1px solid #C4C4C4;">
          <div class="avatar ps-3">
            <a href="/users/{{this.follower.id}}/tweets" style="text-decoration:none;">
              <img src="{{this.follower.avatar}}" class="rounded-circle me-3"
                style="width: 50px;height: 50px;background: #C4C4C4;">
            </a>
          </div>
          <div class="tweet-content">
            <div class="name-container d-flex justify-content-between pe-3" style="width: 555px;">
              <div class="name">
                <span style="font-size: 16px;font-weight:700;">{{this.follower.name}}</span>
              </div>
              {{#if this.isFollowed }}
              <div class="follow-btn d-flex justify-content-end" style="width: 96px;height: 40px">
                <form action="/followships/{{this.follower.id}}?_method=DELETE" method="POST">
                  <button type="submit" class="btn"
                    style="width: 95px; font-size: 16px; white-space:nowrap; background: #FF6600;border-radius: 100px;color:#ffffff;">正在跟隨</button>
                </form>
              </div>
              {{else}}
              <div class="follow-btn d-flex justify-content-end" style="width: 90px;height: 40px">
                <form action="/followships" method="POST">
                  <input type="hidden" name="id" value="{{this.followerId}}" />
                  <button type="submit" class="btn"
                    style="width: 64px;height: 40px; background: #FFFFFF;white-space:nowrap; border-radius: 50px;border:1px solid #FF6600;color:#FF6600; font-size: 16px;">跟隨</button>
                </form>
              </div>
              {{/if}}
            </div>
            <div class="content mt-3 mb-3">
              {{this.follower.introduction}}
            </div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>

  <!--right bar-->
  <div class="col-3 followship">
    {{> followship}}
  </div>
</div>
