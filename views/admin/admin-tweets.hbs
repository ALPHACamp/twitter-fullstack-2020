<div class="user-list d-flex align-items-center pt-4 ps-4 pe-4 pb-1">
  <div class="col-9">
    <h4>推文清單</h4>
  </div>
  <div class="align-self-start">{{> messages}}</div>
</div>
<hr>
<div class="user-panel d-flex flex-column" style="overflow: hidden;">
  {{#each tweets}}
  {{!-- 一篇貼文 --}}
  <div class="d-flex flex-row align-items-center ps-4 pe-2 justify-content-between" style="width: 100%">
    <div class="d-flex align-items-center">
      {{!-- 用戶大頭貼 --}}
      <figure class="me-2 flex-shrink-0" style="width: 50px; height: 50px; border-radius: 50%; overflow: hidden;">
        <img src="{{this.User.avatar}}" style="object-fit: cover;width:100%;height:100%">
      </figure>
      <div class="me-2 d-flex flex-column flex-shrink-1">
        <div class="d-flex align-items-center">
          {{!-- 用戶名稱 --}}
          <p class="m-0 text-16px-med">{{this.User.name}}</p>
          {{!-- 用戶id --}}
          <p class="m-0 text-14px-reg color-secondary">&nbsp @{{this.User.account}} ・</p>
          <p class="m-0 text-14px-reg color-secondary">{{relativeTime this.createdAt}}</p>
        </div>
        {{!-- tweets 內容 --}}
        <div class="m-0 text-16px-reg text-break mt-1">
          {{this.description}}
        </div>
      </div>
    </div>
    <button class="deleteTweetButton align-self-start" data-bs-toggle="modal" data-bs-target="#deleteTweetModal"
      value="{{this.id}}">
      <img class="svg-fill-dark-80" src="/_base/Property 2=outlined, Property 3=close.svg" style="width: 17px">
    </button>
  </div>
  <hr>
  {{/each}}
</div>