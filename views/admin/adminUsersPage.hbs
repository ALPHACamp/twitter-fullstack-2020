    {{!-- 右側-設定頁面 --}}
    <div class="col-9 p-0 border-left">
      {{!-- 上方title --}}
      <div class="border-bottom p-0">
        <h5 class="m-0 ml-4 py-3">使用者列表</h5>
      </div>
      {{!-- 下方使用者列表 --}}
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 container m-0 p-2">
        {{#each users}}
          <div class="col mb-2 px-0">
            <div class="card mx-2 h-100">
              <div style="max-height: 140px; overflow:hidden;">
                <img src="{{this.cover}}" class="card-img-top" alt="cover">
              </div>
              <img src="{{this.avatar}}" class="rounded-circle" alt="avatar" width="100" height="100"
                style="position:absolute; border: 4px solid #FFFFFF; top:95px; left:80px;">
              <div class=" card-body d-flex flex-column flex-nowrap align-items-center" style="background: #F6F7F8;">
                <span class="mt-5 font-weight-bold">{{this.name}}</span>
                <span class="text-muted">{{this.account}}</span>
                <div class="mt-2">
                  <i class="far fa-comment mr-1"></i><span class="mr-3">{{this.tweetsCountByThousand}}k</span><i
                    class="far fa-heart mr-1"></i><span>{{this.likesCount}}k</span>
                </div>
                <div class="mt-2">
                  <span class="mr-2">{{this.followingCount}} 個<span class="text-muted">跟隨中</span></span>
                  <span>{{this.followerCount}} 個<span class="text-muted">跟隨者</span></span>
                </div>
              </div>
            </div>
          </div>
        {{/each}}
      </div>
