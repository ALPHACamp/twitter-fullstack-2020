<div class="row mt-3">
  <div class="col-md-3 d-flex justify-content-center">

    {{> adminLeftColumn}}

  </div>
  <div class="col-md-9 pl-0">
    <ul class="list-group">
      <li class="list-group-item header"><strong>推文清單</strong></li>
      {{#each tweets}}
      <li class="list-group-item">
        <div class="d-flex justify-content-between">
          <div class="d-flex">
            <div class="mr-2">
              <img src="https://meethub.bnext.com.tw/wp-content/uploads/2019/03/medium_alpha-logo-square-89-300x300.png"
                alt="avatar" style="width:55px">
            </div>
            <div>
              <div class="d-flex">
                <strong>{{this.Uer.name}}&ensp;</strong>
                <p>{{this.User.account}}&ensp;</p>
                <p>&bull;&ensp;{{moment this.createdAt}}</p>
              </div>
              <p class="ml-2">{{this.description}}</p>
            </div>
          </div>
          <div>
            <form action="/admin/tweets/{{this.id}}?_method=DELETE" method="POST">
              <button type="submit" class="close">
                <span aria-hidden="true">&times;</span>
              </button>
            </form>
          </div>
      </li>
      {{/each}}
    </ul>

    <nav aria-label="Page navigation example">
      <ul class="pagination">
        <li class="page-item"><a class="page-link" href="/admin/tweets?page={{prev}}">Previous</a></li>
        {{#each totalPage}}
        {{#ifCond this ../page}}
        <li class="page-item active"><a class="page-link" href="#">{{this}}</a></li>
        {{else}}
        <li class="page-item"><a class="page-link" href="/admin/tweets?page={{this}}">{{this}}</a></li>
        {{/ifCond}}
        {{/each}}
        <li class="page-item"><a class="page-link" href="/admin/tweets?page={{next}}">Next</a></li>
      </ul>
    </nav>

  </div>

</div>