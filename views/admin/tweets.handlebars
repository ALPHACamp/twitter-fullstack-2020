<div class="row mt-3">
  <div class="col-md-3 pl-0">

    <div class="left-zone">
      <div class="AC-icon">
        <img src="https://meethub.bnext.com.tw/wp-content/uploads/2019/03/medium_alpha-logo-square-89-300x300.png"
          style="width:75px">
      </div>

      </br>
      </br>

      <div class="home" name="home">
        <a class="left-zone-items" href="/admin/tweets" style="text-decoration: none"><i
            class="fas fa-home"></i>&ensp;推文清單</a>
      </div>

      </br>
      </br>

      <div class="profile" name="profile">
        <a class="left-zone-items" href="/admin/users" style="text-decoration: none"><i
            class="far fa-user"></i>&ensp;使用者列表</a>
      </div>

      </br>
      </br>
      </br>
      </br>
      </br>
      </br>
      </br>
      </br>
      </br>
      </br>
      </br>
      </br>
      </br>
      </br>
      </br>
      </br>


      <a href="/logout" class="logout" style="text-decoration: none"><i class="fas fa-sign-out-alt"></i>&ensp;LogOut</a>

    </div>
  </div>
  <div class="col-md-9 pl-0 border-left">
    <h3 class="ml-3 font-weight-bold">推文清單</h3>
    <hr>
    {{#each tweets}}
    <div class="row justify-content-between">
      <div class="row col-11">
        <div class="avatar mt-2 ml-4">
          <img src="{{this.User.dataValues.avatar}}" alt=" image" class="border rounded-circle"
            style="width: 60px; height: 60px">
        </div>
        <div class="information d-flex flex-column mt-2 col">
          <div class="d-flex">
            <div class="name" name="name">
              <a><strong>{{this.User.dataValues.name}}&ensp;</strong></a>
            </div>
            <div class="account" name="account">
              <a style="color: #7B7B7B">{{this.User.dataValues.account}} </a>
            </div>
            <div class="createdAt" name="createdAt" style="color: #7B7B7B">
              &ensp;·&ensp;{{moment this.createdAt}}
            </div>
          </div>
          <div class="description text-wrap" name="description" style="word-break:break-all; word-wrap:break-all;">
            {{this.description}}
          </div>
        </div>
      </div>
      <form action="/admin/tweets/{{this.id}}?_method=DELETE" method="POST" class="col-1 mr-2">
        <button type="submit" class="close" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </form>
    </div>
    <hr>
    {{/each}}
  </div>
</div>