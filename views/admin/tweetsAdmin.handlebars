<div class="row mt-5">

  {{!-- 左邊區域 --}}

  <div class="col-md-3" style="width:auto; height:auto;">
    <img class="" style="position: relative; top: 8px; margin-left: 130px;" width="40px"
      src="https://static.accupass.com/org/2008250550226683301600.jpg">

    <ul class="nav flex-column py-5" style="margin-left: 120px;">
      <li class="nav-item">
        <a class="nav-link"
          style="font-family: Noto Sans TC; font-size: 18px; font-style: normal; font-weight: 700; line-height:26px; letter-spacing: 0px; color:#FF6600; "
          href="/admin/tweets"><i class="fas fa-home"></i> 推文清單</a>
      </li>
      <li class="nav-item">
        <a class="nav-link text-dark"
          style="font-family: Noto Sans TC; font-size: 18px; font-style: normal; font-weight: 700; line-height: 26px; letter-spacing: 0px;"
          href="/admin/users"><i class="fas fa-user"></i> 使用者列表</a>
      </li>
    </ul>
  </div>
  {{!-- 登出鈕 --}}
  <div class="ml-3" style=" position:fixed; bottom:0px; left: 120px;">
    <a class="text-dark font-weight-bold" style="border-radius: 40px; width:150px;" href="/logout"><i class="fas
            fa-sign-out-alt"></i> 登出</a>
  </div>
  {{!-- 中間區域 --}}
  <div class="col-md-9" style="position: relative; border:0px #DEE2E6  solid; ">
    <div class="row align-items-center mt-2" style="border-bottom:#dee2e6 1px solid;">
      <div>
        <div class="h5 ml-3">推文清單</div>
      </div>
    </div>


    {{!-- 留言區域 --}}

    {{#each tweets}}
    <div class="row  border" style="padding-top:8px; padding-bottom:10px;">
      <div class="col-md-2" style="padding-right: 0px; ">
        <img src="{{this.avatar}}" alt="..." class="rounded-circle" style="width: 50px; height:50px;">
      </div>
      <div class="col-md-10" style="padding-left: 0px;">
        <form action="/admin/tweets/{{this.id}}?_method=DELETE" method="POST" style="float: right;">
          <button type="submit" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </form>
        <div class="h6">{{this.userName}} <span class="text-secondary">{{this.User.account}} ．{{moment
            this.createdAt}}</span>
        </div>
        <div>{{this.description}}</div>
      </div>
    </div>
    {{/each}}

    <nav aria-label="Page navigation example" class="mt-3">
      <ul class="pagination">
        <li class="page-item">
          <a class="page-link" href="/admin/tweets?page={{prev}}" aria-label="Previous">
            <span aria-hidden="true">&laquo;</span>
          </a>
        </li>
        {{#each totalPage}}
        {{#ifCond this ../page}}
        <li class="page-item active"><a class="page-link" href="/admin/tweets?page={{this}}">{{this}}</a></li>
        {{else}}
        <li class="page-item"><a class="page-link" href="/admin/tweets?page={{this}}">{{this}}</a>
        </li>
        {{/ifCond}}

        {{/each}}
        <li class="page-item"><a class="page-link" href="/admin/tweets?page={{next}}" aria-label="Next">
            <span aria-hidden="true">&raquo;</span>
          </a>
        </li>
      </ul>
    </nav>
  </div>