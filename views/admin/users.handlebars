<h2>使用者清單</h2>
<hr />
<div class="row">
  {{#each users}}
    <div class="col-md-4">
      <div class="card mb-4 shadow-sm">
        <img class="card-img-top" src="{{this.cover}}" alt="/" width="286px" height="180px">
        <img src="{{ this.avatar }}" class="rounded-circle" alt="no avatar" width="50" height="50">
        <div class="card-body">
          <h5>{{ this.name }}</h5>
          <h7>@{{this.account}}</h7>
          <br>
          <i class="far fa-comment-dots">推文:{{this.Tweets.length}}則</i>
          <i class="fas fa-heart">喜歡的推文:{{this.LikedTweets.length}}</i>
          <br>
          <i class="fas fa-running">{{this.Followings.length}}個跟隨中</i>
          <i class="fas fa-walking">{{this.Followers.length}}位跟隨者</i>
        </div>
      </div>
    </div>
  {{/each}}
</div>

