<div class="row mt-3">
    <div class="col-3 border-right">main.hbs
        <a href="/admin/tweets">tweets page</a>
    </div>
    <div class="col-md-9 pl-0">
        <h3 class="ml-2">使用者列表</h3>
        <hr>
        <div class="row ml-1 mr-1">
            {{#each user}}
            <div class="col col-lg-3 col-md-4 col-sm-6 mt-2">
                <div class="card" style="border-radius: 15px">
                    <img src="{{this.dataValues.avatar}}" alt="image" class="rounded-circle"
                        style="position: absolute; width: 50%; top:25%; left:25%;border: 5px solid white;">
                    <img class="card-img-top" src="{{this.dataValues.cover}}" alt="Card image cap"
                        style="border-radius: 15px 15px 0 0">
                    <div class="card-body" style="border-radius: 0 0 15px 15px; background-color: #F5F5F5;">
                        <h5 class="card-title text-center mt-3 mb-0">{{this.name}}</h5>
                        <p class="card-text text-center ">{{this.dataValues.account}}</p>
                        <div class="row justify-content-center">
                            <i class="far fa-comment mr-2">&ensp;{{this.dataValues.Tweets.length}}</i>
                            <i class="far fa-heart ml-2">&ensp;{{this.dataValues.LikedTweets.length}}</i>
                        </div>
                        <div class="row justify-content-center mt-2">
                            <p class="mr-2">{{this.dataValues.Followings.length}}個跟隨中</p>
                            <p class="ml-2">{{this.dataValues.Followers.length}}位跟隨者</p>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>