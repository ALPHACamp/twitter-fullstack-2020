<div class="admin-header">
  <h4 class="title">使用者列表</h4>
</div>

<div class="admin-container">
  {{#each users}}
    <div class="card admin-user-card" >
      <div>
        <img src="{{checkBanner this.banner}}" class="banner">
      </div>

      <div class="card-center">
        <img src="{{checkAvatar this.avatar}}" class="user-avatar">
        <h5 class="card-title user-name">{{this.name}}</h5>
        <p class="user-account">@{{this.account}}</p>
      </div>

      <div class="card-body d-flex flex-column align-items-center" style="height: 100%;">
        <div>
          <span>
            <img src="/images/icon-black-post.png">
            {{numberformat this.tweetCounts}}
          </span>
          <span>
            <img src="/images/icon-black-unlike.png">
            {{numberformat this.likeCounts}}
          </span>
        </div>
        
        <div class="user-follow">
          <span style="color: var(--secondary); ">
            <strong style="color: #171725;">{{numberformat this.followingCounts}}個</strong>跟隨中
          </span>

          <span style="color: var(--secondary);">
            <strong style="color: #171725; margin-left: 8px;">{{numberformat this.followerCounts}}位</strong>跟隨者
          </span>
        </div>
      </div>

    </div>
  {{/each}}
</div>