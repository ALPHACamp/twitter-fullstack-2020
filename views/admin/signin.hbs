<div class="container album py-5 " style="width: 40%;">
  <form class="form-signin" action="/signin" method="POST" style="width: 100%;">
    <div class="text-center mb-4">
      <img class="style-f7df5c62-org-avatar-img" width="50px" height="50px"
        src="https://static.accupass.com/org/2008250550226683301600.jpg">
    </div>
    <div class="text-center mb-4 ">
      <h1 class="h3 mb-3 font-weight-bold">後台登入</h1>
    </div>
    <div class="form-label-group">
      <label for="inputEmail"></label>
      <input type="text" name="email" class="form-control bg-light font-weight-bold" placeholder="帳號" required autofocus>
    </div>
    <div class="form-label-group">
      <label for="inputPassword"></label>
      <input type="password" name="password" class="form-control bg-light font-weight-bold" placeholder="密碼" required>
    </div>
    <br />
    <div style="height:70px">
      <button class="btn btn-block text-light font-weight-bold" style="border-radius: 40px;background-color:#FF6600"
        type="submit">登入</button>
    </div>
    <div>
      <div style="width:65px;height:20px;float:right;">
        <p><a class="font-weight-bold" href="/signup">前台登入</a></p>
      </div>
    </div>
  </form>
</div>