<div style="display: flex; justify-content: center;">
  <div style="
    box-sizing: border-box;
    position: relative;
    width: 1400px;
    height: 1200px;
    background: #FFFFFF;
    border-radius: 4px;
    border: 1px solid #D5D5DC;">
    {{> messages}}
    <form class="signin-form" action="/admin/signin" method="POST" style="display: flex; flex-direction: column; align-items:
    center">
      <div style="position: absolute; width: 50px; height: 50px; top: 64px;">
        <img src="/images/logo.png" alt="login" style="height: 50px; width: 50px;">
      </div>
      <div style="position: absolute; width: 112px; height: 26px;
          top: 138px; left: 608;">
        <h1 class="h3 font-weight-normal mb-3">後台登入</h1>
      </div>
      <div style="display: inline-block; position: absolute; height: 54px; width: 356px; top: 204px;
      border-radius: 2px;">
        <div style="display: flex; flex-direction: column">
          <label class="input-form-label-admin" for="admin-account">帳號</label>
          <input class="input-form-admin" id="admin-account" type="text" name="account" placeholder="請輸入帳號" required>
          <span class="admin-account-message">
            {{error_messages}}
          </span>
        </div>
      </div>
      <div
        style="display: inline-block; position: absolute; height: 54px; width: 356px; top: 290px; border-radius: 2px;">
        <div style="display: flex; flex-direction: column">
          <label class="input-form-label-admin" for="signin-admin-password">密碼</label>
          <input class="input-form-admin" id="admin-password" type="password" name="password" placeholder="請輸入密碼"
            required>
          <span class="admin-password-message">
            {{error_messages}}
          </span>
        </div>
      </div>
      <button class="btn btn-primary btn-block" type="submit"
        style="display: inline-block; width: 356px; height: 46px; position: absolute; top: 384px; background: #FF6600; border-radius: 50px;">登入</button>
      <div style="position: absolute; top: 452px; margin-left: 200px;">
        <a class="signin-href" href="/signin">前台登入頁</a>
      </div>
    </form>
  </div>
</div>