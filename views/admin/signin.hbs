<div class="col-6 container mt-4" style="background-color:white">
  <div class="icon text-center">
    <img src="/images/logo.svg" alt="icon" style="width:50px;height:50px">
  </div>
  <div class="mb-4 text-center">
    <p class="mt-3 mb-4" style='color: black;font-size: 28px;'>登入 Alphitter</p>
  </div>
  <div class="d-flex justify-content-center">
    <form action="/signin" method="POST">
      <div class="form-group form-floating m-4">
        <input type="text" name="account" id="account" class="form-control font-weight-bold" placeholder="帳號"
          value="{{account}}" style="background-color:#F5F8FA; border-bottom: 2px solid #657786;width:356px;height:54px"
          required autofocus>
        <label for="account">帳號</label>
      </div>
      <div class="form-group form-floating m-4">
        <input type="password" name="password" id="password" class="form-control font-weight-bold" placeholder="請設定密碼"
          value="{{password}}"
          style="background-color:#F5F8FA; border-bottom: 2px solid #657786;width:356px;height:54px" required autofocus>
        <label for="password">密碼</label>
      </div>
      <div class="mb-4 text-center ">
        <button class="btn col-sm-2 m-2" type="submit"
          style='color: white;background-color:#ff6600;margin-left:60px; border-radius: 20px;width:356px;height:45px'>登入</button>
      </div>
    </form>
  </div>
  <div class="mb-4 text-center">
    <a href="/signup">註冊</a>
    <span>•</span>
    <a href="/signin">前台登入</a>
  </div>
</div>