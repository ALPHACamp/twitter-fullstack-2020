<form class="form-signin" action="/admin/signin" method="POST" style="width: 60%;">
  <div class="logo">
    <img src="https://i.imgur.com/8DjhHxL.png">
  </div>
  <div class="text-center ">
    <div class="sign-title">後台登入</div>
  </div>
  <div class="form-label-group">
    <input type="text" name="account" id="account" class="form-control" placeholder="帳號" required autofocus>
    <div class="invalid-feedback"></div>
  </div>
  <div class="form-label-groups">
    <input type="password" name="password" id="password" class="form-control" placeholder="密碼" required>
    <div class="invalid-feedback"></div>
  </div>
  <br>
  <button class="btn siginin-button" type="submit">登入</button>
  <div class="text-center-signup mt-4">
    <a href="/signin">前台登入</a>
  </div>
</form>