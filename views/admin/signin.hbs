<div class="row my-5 justify-content-center">
  <div class="col-9 col-md-5 col-lg-4 my-2">
    <img
      src="https://cdn4.iconfinder.com/data/icons/social-media-icons-the-circle-set/48/twitter_circle-8192.png"
      alt=""
      class="img-fluid my-3"
      style="display: block; margin: auto; width: 50px;"
    />
    <div class="text-center my-4">
      <h3><strong>{{#if signup}}新增管理員{{else}}後台登入{{/if}}</strong></h3>
    </div>
    {{> message}}
    <form action="/admin/{{#if signup}}signup{{else}}signin{{/if}}" method="post">
      <div class="mb-3">
        <label for="account" style="margin-bottom: -30px; margin-left: 8px;">帳號</label>
        <input
          type="text"
          class="form-control pt-4"
          id="account"
          name="account"
          style="border:none; border-bottom:2px solid rgb(75, 82, 85);outline: none;background-color:#f4f8fb"
          aria-describedby="accountHelp"
          value="{{account}}"
        />
        {{#if signup}}
        <div id="status"></div>
        {{/if}}
      </div>
      {{#if signup}}
      <div class="mb-3">
        <label for="name" style="margin-bottom: -30px; margin-left: 8px;">名稱</label>
        <input
          type="text"
          class="form-control pt-4"
          id="name"
          name="name"
          style="border:none; border-bottom:2px solid rgb(75, 82, 85);outline: none;background-color:#f4f8fb"
          aria-describedby="nameHelp"
          value="{{name}}"
        />
      </div>
      <div class="mb-3">
        <label for="email" style="margin-bottom: -30px; margin-left: 8px;">Email</label>
        <input
          type="email"
          class="form-control pt-4"
          id="email"
          name="email"
          style="border:none; border-bottom:2px solid rgb(75, 82, 85);outline: none;background-color:#f4f8fb"
          aria-describedby="emailHelp"
          value="{{email}}"
        />
      </div>
      {{/if}}
      <div class="mb-2">
        <label for="password" style="margin-bottom: -30px; margin-left: 8px;">密碼</label>
        <input
          type="password"
          class="form-control pt-4"
          id="password"
          name="password"
          style="border:none; border-bottom:2px solid rgb(75, 82, 85);outline: none;background-color:#f4f8fb"
          aria-describedby="passwordHelp"
          value="{{password}}"
        />
      </div>
      {{#if signup}}
      <div class="mb-2">
        <label for="passwordConfirm" style="margin-bottom: -30px; margin-left: 8px;">密碼確認</label>
        <input
          type="password"
          class="form-control pt-4"
          id="passwordConfirm"
          name="passwordConfirm"
          style="border:none; border-bottom:2px solid rgb(75, 82, 85);outline: none;background-color:#f4f8fb"
          aria-describedby="passwordConfirmHelp"
          value="{{passwordConfirm}}"
        />
      </div>
      {{/if}}
      <br />
      <button
        class="col-12 btn btn-primary btn-block"
        style="border-radius: 30px;"
        type="submit"
      >{{#if signup}}註冊{{else}}登入{{/if}}</button>
      <div class="{{#if signup}}text-center{{else}}text-end{{/if}} my-4">
        <p>
          {{#if signup}}
          <a href="javascript:history.back()">取消</a>
          {{else}}
          <a href="/signin">前台登入</a>
          {{/if}}
        </p>
      </div>
    </form>
  </div>
</div>