<div class="container">
  <div class="mb-4 text-center">
    <img class="logo mb-5" alt="logo"
      src="https://meethub.bnext.com.tw/wp-content/uploads/2019/03/medium_alpha-logo-square-89.png"
      style="height:50px;">
    <h3 class="fw-bold mb-3">後台登入</h3>
  </div>
  <form class="form-signin" action="/admin/signin" method="POST" style="width: 100%;">
    <div class="mb-3 bg-light" style="margin-top: 40px;">
      <label class="form-label" for="account">帳號</label>
      <input class="form-control bg-light border-0 border-bottom border-secondary" id="account" type="text" name="account"
        placeholder="請輸入帳號" required autofocus>
    </div>
    <div class="mb-3 bg-light" style="margin-top: 32px;">
      <label class="form-label" for="password">密碼</label>
      <input class="form-control bg-light border-0 border-bottom border-secondary" id="password" type="password" name="password"
        placeholder="請輸入密碼" required>
    </div>
    <div class="row justify-content-center">

      <button class="btn btn-primary btn-block rounded-pill border-0" type="submit"
        style="background-color:#FF6600; width: width: 100%; margin-top: 40px;">登入</button>

    </div>
  </form>
  <div class="row text-end" style="margin-top: 22px;">
    <p><a href="/signin">前台登入</a></p>
  </div>
</div>