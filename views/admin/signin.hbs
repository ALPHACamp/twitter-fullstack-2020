<div class="mt-5">
	<form class="form-style form-signin" action="/admin/signin" method="POST">
		{{!-- logo --}}
		<div class="logo text-center">
			<img src="/images/ac@2x.png" alt="" />
		</div>
		{{!-- 後台登入 --}}
		<div class="tittle-text mb-4 text-center">
			<h1 class="h3 font-weight-normal mb-4">後台登入</h1>
		</div>
		{{!-- 帳號 --}}
		<div class="form-content mb-3">
			<label class="form-label mb-0 p-2 pb-0" for="account">帳號</label>
			<input class="form-control p-2 pb-0 pt-0" id="account" type="text" name="account" placeholder="請輸入帳號"
				required autofocus>
		</div>
		{{!-- 密碼 --}}
		<div class="form-content mb-0">
			<label class="form-label mb-0 p-2 pb-0" for="password">密碼</label>
			<input class="form-control p-2 pb-0 pt-0" id="password" type="password" name="password" placeholder="請輸入密碼"
				required>
		</div>
		{{!-- 登入 --}}
		<button class="submit btn btn-primary btn-block " type="submit">登入</button>

		{{!-- 註冊 前台 --}}
		<div class="sub-login m-3">
			<p><a href="/signin" class="m-2">前台登入</a></p>
		</div>
	</form>
</div>
