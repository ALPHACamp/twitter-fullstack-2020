<div class="container">
  <div class="d-flex flex-column justify-content-center">
    <div class="mb-0 text-center">
      <img class="logo mb-5" alt="logo"
        src="https://meethub.bnext.com.tw/wp-content/uploads/2019/03/medium_alpha-logo-square-89.png"
        style="height:50px;">
      <h3 class="fw-bold mb-0">後台登入</h3>
    </div>
    <div class="mb-4 d-flex justify-content-center">
      <form class="form-signin" action="/admin/signin" method="POST" style="width: 550px;">
        <div class="mb-0 bg-light" style="margin-top: 40px;">
          <label class="form-label" for="account" style="padding-left: 10.55px;">帳號</label>
          <input class="form-control bg-light border-0 border-secondary" id="account" type="text" name="account"
            placeholder="請輸入帳號" required>
        </div>
        <hr class="my-0" style="height: 2px;">
        <div class="mb-0 bg-light" style="margin-top: 32px;">
          <label class="form-label" for="password" style="padding-left: 10.55px;">密碼</label>
          <input class="form-control bg-light border-0 border-secondary" id="password" type="password" name="password"
            placeholder="請輸入密碼" required>
        </div>
        <hr class="my-0" style="height: 2px;">
        <div class="row justify-content-center">
          <button class="btn btn-primary btn-block rounded-pill border-0" type="submit"
            style="background-color:#FF6600; width: 96%; margin-top: 40px;">登入</button>
        </div>
      </form>
    </div>
    <div class="d-flex justify-content-center">
      <div class="col-6 d-flex justify-content-end" style="width: 550px;">
        <a href="/signin">前台登入</a>
      </div>
    </div>
  </div>
</div>