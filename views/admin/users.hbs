<div class="container d-flex " style="width:1400px; height:1200px; margin-top:0;">
  <div class="col-2 nav">
    {{> admin-nav}}
  </div>
  <div class="tweets-container" style="width:1075px; height:1200px;border:1px solid #E6ECF0;">
    {{!-- <div class="tweets-container"
      style="width:1075px; height:1200px;border:1px solid #E6ECF0; margin-right:131px;">--}}
      <div>
        <h4 class="pt-3 ps-3" style="font-weight:700;font-family: Noto Sans TC;">使用者列表</h4>
      </div>

      <div class="tweets-container mt-3" style="border-top:1px solid #E6ECF0; margin-right:90px;">
        <div class="row justify-content-start ms-2">
          {{!-- {{#each users}} --}}
          <div class="col-3 mt-3">
            <div class="card" style="width:210px; height:314px; border-radius:10px;">
              <img src="http://img7.3png.com/124534900529f5edc6a573457dc937932bc9.jpg/p{{user.cover}}"
                class="cover card-img-top" style="width:210px; height:140px;" alt="cover">
              <img
                src="http://img01.yohoboys.com/contentimg/2018/11/22/13/0187be5a52edcdc999f749b9e24c7815fb.jpg{{user.avatar}}"
                style="position: absolute; margin-top:64px; margin-left: 55px; :width:100px; height:100px; border-radius:50px; border: 4px solid #FFFFFF;">
              <div class="card-body d-flex flex-column align-items-center">
                <div class="d-flex justify-content-center mt-3 pb-0" style="width:100px; height:26px;">
                  <h5 class="card-title"
                    style="font-size:16px; font-weight: 700; color: #171725; line-height: 26px; font-family:'Noto Sans TC';">
                    John Doe</h5>
                </div>
                <div class="d-flex justify-content-center pt-0">
                  <p class="card-text"
                    style="font-family: 'Noto Sans TC'; font-size:14px; color:#6C757D; line-height: 22px;">@heyjohn</p>
                </div>
              </div>
              <div class="d-flex justify-content-center ms-2 mb-1">
                <div class="d-flex justify-content-center">
                  <i class="fa-regular fa-comment mt-1" style="color: #696974; font-size:16px;"></i>
                  <div class="ms-1">
                    <p style="font-size:16px; font-family: 'Montserrat';">1.5k{{this.tweets.length}}</p>
                  </div>
                </div>
                <div class="d-flex justify-content-center ms-3">
                  <i class="fa-regular fa-heart mt-1" style="color: #6C757D; font-size:16px;"></i>
                  <div class="ms-1">
                    <p style="font-size:16px; font-family: 'Montserrat';">20k{{this.likes.length}}</p>
                  </div>
                </div>
              </div>

              <div class="d-flex justify-content-center mb-2">
                <div class="ms-1" style="width:75px; height:22px;">
                  <p style="font-size: 14px; color: #171725; font-family: 'Noto Sans TC';">
                    {{this.following.length}}34個跟隨中</p>
                </div>
                <div class="ms-1" style="width:75px; height:22px;">
                  <p style="font-size: 14px; color: #171725; font-family: 'Noto Sans TC';">
                    {{this.follower.length}}59個跟隨者</p>
                </div>
              </div>
            </div>
          </div>
          {{!-- {{/each}} --}}
        </div>
      </div>
    </div>
  </div>
</div>