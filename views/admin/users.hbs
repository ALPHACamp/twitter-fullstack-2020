{{#each users}}
  <div class="col-3 mr-2 my-2">
    <div class="card admin-users-card" style="width: 18rem; background-color: rgb(247, 247, 247)">
      <img class="card-img-top rounded-top admin-users-cover" src="{{this.cover}}" alt="Card image cap">
      <img src="{{this.avatar}}" class="border-avatar" style="border-radius: 50%; height: 120px; width: 120px;" alt="">
      <div class="card-body text-center">
        <h5 class="card-title mt-2">{{this.name}}</h5>
        <p class="card-text" style="color: grey">
          @{{this.account}}
        </p>
        <i class="far fa-comment mr-3" style="color: grey;"> {{this.Tweets.length}}</i>
        <i class="far fa-heart" style="color: grey;"> {{this.Likes.length}}</i>
        <br />
        <br />
        {{this.Followings.length}}個<span style="color:grey">跟隨中</span> {{this.Followers.length}}位<span
          style="color: grey">跟隨者</span>
      </div>
    </div>
  </div>
{{/each}}