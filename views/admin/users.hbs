{{!-- 標題 --}}
<div class="mb-3">使用者列表</div>

<div class="row row-cols-1 row-cols-md-4 g-4" style="width: 1000px;">

  {{#each users }}
  <div class="col">
    <div class="card">
      <img src="{{ this.avatar }}" class="card-img-top" alt="user-avatar">
      <div class="card-body d-flex flex-column align-items-center">
        <h5 class="card-title">{{this.name }}</h5>
        <p class="card-test" style="color: cornflowerblue;">{{ this.account }}</p>
      </div>
    </div>
  </div>
  {{/each}}
</div>