<div id="column1" style="float:left; width:20%; position: fixed; top:15px; left:5%">{{> adminNavigation}}</div>

<div class="d-flex justify-content-center">
  <div id="column3" class="float-right" style="float:left;width:80%; position: fixed; left:20%; border-left:1px solid #dee2e6;">
    <div class="page-header">
      使用者列表
    </div>
    <div class="d-flex justify-content-start align-content-start flex-wrap admin-user-container">
      {{#each users}}
        <div class="admin-user-card">
          <div>
            <img class="admin-user-cover" src='{{this.cover}}'></img>
            <img class="admin-user-avatar " src='{{this.avatar}}'></img>
          </div>
          <div class="admin-user-data-container">
            <div>
              <span class="admin-user-data-name">{{this.name}}</span>
            </div>
            <div>
              <span class="admin-user-data-account">@{{this.account}}</span>
            </div>
            <div class="d-flex justify-content-center">
              <div style="margin-right:6px;">
                <svg width="21" height="20" viewBox="0 0 21 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M12.8461 0.241934L8.69812 0.231934H8.69612C4.32212 0.231934 0.896118 3.65893 0.896118 8.03393C0.896118 12.1319 4.08212 15.2399 8.36112 15.4039V19.2319C8.36112 19.3399 8.40512 19.5179 8.48112 19.6349C8.62312 19.8599 8.86512 19.9819 9.11312 19.9819C9.25112 19.9819 9.39012 19.9439 9.51512 19.8639C9.77912 19.6959 15.9881 15.7239 17.6031 14.3579C19.5051 12.7479 20.6431 10.3879 20.6461 8.04593V8.02893C20.6401 3.66193 17.2161 0.241933 12.8461 0.240933V0.241934ZM16.6331 13.2139C15.4991 14.1739 11.7711 16.6189 9.86112 17.8569V14.6699C9.86112 14.2559 9.52612 13.9199 9.11112 13.9199H8.71512C5.05512 13.9199 2.39712 11.4439 2.39712 8.03393C2.39712 4.49993 5.16512 1.73193 8.69712 1.73193L12.8441 1.74193H12.8461C16.3781 1.74193 19.1461 4.50793 19.1481 8.03793C19.1451 9.94793 18.2061 11.8819 16.6341 13.2139H16.6331Z" fill="#657786"/>
                </svg>
                <span>{{this.tweetCount}}</span>
              </div>
              <div style="margin-left:6px;">
                <svg width="21" height="20" viewBox="0 0 21 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M10.8 19.6379H10.786C8.203 19.5899 0.75 12.8559 0.75 6.47788C0.75 3.41388 3.275 0.723877 6.153 0.723877C8.443 0.723877 9.983 2.30388 10.799 3.45388C11.613 2.30588 13.153 0.723877 15.444 0.723877C18.324 0.723877 20.848 3.41388 20.848 6.47888C20.848 12.8549 13.394 19.5889 10.811 19.6359H10.8V19.6379ZM6.154 2.22488C4.074 2.22488 2.251 4.21288 2.251 6.47988C2.251 12.2199 9.285 18.0759 10.801 18.1379C12.319 18.0759 19.351 12.2209 19.351 6.47988C19.351 4.21288 17.528 2.22488 15.448 2.22488C12.92 2.22488 11.508 5.16088 11.496 5.18988C11.266 5.75188 10.34 5.75188 10.109 5.18988C10.095 5.15988 8.684 2.22488 6.155 2.22488H6.154Z" fill="#657786"/>
                </svg>
                <span>{{this.likeCount}}</span>
              </div>
            </div>
            <div class="d-flex justify-content-center">
              <div style="margin-right:6px;">
                <span class="admin-user-data-followingValue">{{this.followingCount}}個</span>
                <span class="admin-user-data-followingPostfix">跟隨中</span>
              </div>
              <div style="margin-left:6px;">
                <span class="admin-user-data-followerValue">{{this.followerCount}}位</span>
                <span class="admin-user-data-followerPostfix">跟隨者</span>
              </div>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</div>