{{> adminLeft}}


<div class="col-sm-8 admin_page">
  <div class="row row-cols-1 row-cols-md-1">
    {{!-- lodo --}}
    <div class="col">
      <div class="card admintitle_card">
        <div class="card-body">
          <p class="admintitle_title">
            使用者列表
          </p>
        </div>
      </div>
    </div>


    {{!-- 使用者列表 --}}
<div class="card admintweets_card">

<div class="row row-cols-1 row-cols-md-4 g-3 p-1">

  {{#each user}}
  <div class="card-group">
    <div class="card mb-2 mr-1" style="background-color: rgb(247, 247, 247);border-color: white;">

      <img class="card-img-top" style="height: 150px" src="{{ this.cover }}" alt="{{ this.name }}">

      <img src="{{ this.avatar }}" class="border-avatar" style="border-radius: 50%; height: 100px; width: 100px;"
        alt="{{ this.name }}">

      <div class="card-body text-center">

        <h6 class="mt-3 mb-1" style="font-weight: 700;letter-spacing: .5px;">
          {{ this.name }}
        </h6>

        <p class="mb-3" style="color: grey">
          @{{ this.account }}
        </p>

        <div>
          <span class=" me-1">
            <i style="color: grey;">
              <img src="/images/留言數.svg" alt="">
            </i>
            {{#if this.tweetCount}}
            {{ this.tweetCount}}
            {{else}}
            0
            {{/if}}
          </span>
          <span class=" me-1">
            <i style="color: grey;">
              <img src="/images/案讚數.svg" alt="">
            </i>
            {{#if this.likeCount}}
            {{ this.likeCount}}
            {{else}}
            0
            {{/if}}
          </span>
        </div>

        <div class="mt-3">
          {{ this.followingCount }} 個<span>跟隨中</span>
          {{ this.followerCount }} 位<span>跟隨者</span>
        </div>

      </div>
    </div>
  </div>
  {{/each}}
</div>
</div>
  </div>
</div>