<style>
  p {
    margin: 0;
  }

  .main-name {
    border-bottom: 1px solid #E6ECF0
  }

  .main-name h1 {
    font-weight: 700;
    font-size: 24px;
    margin: 1.5rem
  }

  .cards-group {
    padding-left: 8px;
    padding-bottom: 8px;
    display: flex;
    flex-wrap: wrap;
  }

  .card-container {
    margin: 8px;
    width: 210px;
    height: 314px;
    background-color: #F6F7F8;
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    border-radius: 10px;
  }

  .background-img {
    width: 210px;
    height: 140px;
    background-size: cover;
    background-repeat: no-repeat;
    border-radius: 10px 10px 0 0
  }

  .avatar-img {
    width: 100px;
    height: 100px;
    background-size: cover;
    background-repeat: no-repeat;
    border: 4px solid #FFFFFF;
    border-radius: 50%;
  }

  .name {
    margin: 8px 0 0 0;
    font-size: 16px;
    font-weight: 700;
    color: #171725;
    text-align: center;
    height: 26px;
  }

  .account {
    font-size: 14px;
    font-weight: 400;
    color: #6C757D;
    text-align: center;
    height: 22px;
  }

  .card-center {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
    /* 如果需要居中文本 */
  }

  .follower-content {
    margin-right: 16px;
  }

  .followingCount,
  .followerCount {
    font-size: 14px;
    align-items: center;
  }

  span {
    color: #6C757D;
  }

  .followingCount {
    margin-right: 8px;
  }
</style>

<main class="d-flex justify-content-center">
  {{> admin-sidebar route='users'}}
  <section style="width:937px; border:1px solid #E6ECF0">

    <div class="main-name">
      <h1>使用者列表</h1>
    </div>
    <div class="cards-group">
      {{#each users}}
      <div class="card-container">

        <div class="background">
          <img class="background-img" src="{{this.background}}" alt="">
        </div>

        <div class="card-center">
          <div class="avatar">
            <img class="avatar-img" src="{{this.avatar}}" alt="">
          </div>
          <div>
            <p class="name">{{this.name}}</p>
            <p class="account">@{{this.account}}</p>
          </div>
        </div>

        <div style="margin-bottom: 1rem;">
          <div class="d-flex justify-content-center">
            <div class="follower-content d-flex">
              <img src="/images/admin/following.svg" alt="">
              <p>{{this.tweetCount}}</p>
            </div>
            <div class="like-content d-flex">
              <img src="/images/like.svg" alt="">
              <p>{{this.likeCount}}</p>
            </div>
          </div>
          <div class="d-flex justify-content-center">
            <p class="followingCount">{{this.followingCount}}個<span>跟隨中</span></p>
            <p class="followerCount">{{this.followerCount}}位<span>跟隨者</span></p>
          </div>
        </div>

      </div>
      {{/each}}
    </div>
  </section>
</main>