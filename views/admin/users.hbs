<div class="d-flex mt-5">
  {{!-- 左側欄位 --}}



  <div style="width: 780px;" class="me-5">
    {{!-- 標題 --}}
    <div class="mb-3">使用者列表</div>

    <div class="row row-cols-1 row-cols-md-4 g-4" style="width: 1000px;">

      {{#each data }}
      <div class="col">
        <div class="card d-flex flex-column align-items-center">
          {{!-- 首頁照片跟大頭貼 --}}
          <img src="{{ this.cover }}" class="card-img-top" alt="user-avatar">
          <img src="{{ this.avatar }}" class="card-img-top" alt="user-avatar" style="
      width:50%;border-radius:50%;margin-top:-53px;border: solid 5px white">
          {{!-- 下面的文字 --}}
          <div class="card-body d-flex flex-column align-items-center">
            <h5 class="card-title mb-0">{{this.name }}</h5>
            <p class="card-text mt-0" style="color: rgb(94, 94, 94);">{{ this.account }}</p>
            {{!-- 喜歡跟追蹤 --}}
            <div class="d-flex">
              <p class="card-text me-3" style="color: rgb(63, 107, 203);">
                <i class="fas fa-comment"></i> {{ this.reply.count }}
              </p>
              <p class="card-text" style="color: rgb(230, 116, 75);">
                <i class="fas fa-heart"></i> {{ this.like.count }}
              </p>
            </div>
            <div class="d-flex" style="color: rgb(70, 70, 70);">
              <p class="card-text me-3">
                {{ this.following.count }} 個追蹤中
              </p>
              <p class="card-text">
                {{ this.follower.count }} 位追蹤者
              </p>
            </div>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>