<div class="container">
  <div class="row">
    <!-- title -->
    <div class="border-bottom">
      <h5 class="p-3 font-weight-bold mb-0">使用者列表</h5>
    </div>

    <div class="container mt-3">
      <div class="row">

        {{#each users}}
        <div class="col-xl-3 col-lg-4 col-md-5 col-sm-7 col-8">
          <a href="/admin/users/{{this.id}}" class="text-decoration-none">
            <div class="card my-3 rounded-4 shadow">
              <div class="position-relative">
                <img src="{{#if this.cover}}{{this.cover}}{{else}}https://loremflickr.com/800/550/landscape{{/if}}"
                  class="position-absolute rounded-3" style="width: 100%; z-index:0;" alt="background">
                <img src="{{#if this.avatar}}{{this.avatar}}{{else}}https://loremflickr.com/250/250/people{{/if}}"
                  class="position-absolute rounded-circle mt-4"
                  style="width: 70px; height: 70px; left: 33%; top: 60px; border: white 3px solid; z-index: 1"
                  alt="face">
              </div>
              <div class="card-body bg-light" style="padding-top: 88%;">
                <h5 class="card-title text-center text-dark" style="font-weight: 900;">{{this.name}}</h5>
                <h5 class="card-title text-center" style="color: #6c757d; font-size: 0.95em; font-weight: 500">
                  @{{this.account}}
                </h5>
                <div class="text-center mt-3 text-dark">
                  <span class="mr-3">
                    {{#if this.TweetsCount}}
                    推文{{ this.TweetsCount }}
                    {{else}}
                    推文0
                    {{/if}}
                  </span>
                  <span>
                    {{#if this.LikedCount}}
                    Like{{ this.LikedCount }}
                    {{else}}
                    Like0
                    {{/if}}
                  </span>
                </div>
                <div class="text-center mt-2 text-dark">
                  {{ this.Followings.length }} 個<span class="mr-2" style="color:grey">跟隨中</span>
                  {{ this.Followers.length }} 位<span style="color: grey">跟隨者</span>
                </div>
              </div>
            </div>
          </a>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>
