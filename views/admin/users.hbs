<div class="row h-100 me-0">

  <div class="col-3">
    <div class="row position-relative h-100">
      <div class="mt-3 ms-5">
        {{> nav-admin-btn route='users'}}
      </div>

      <div class="border-line position-absolute"
        style=" width:1px; background-color:#E6ECF0; padding: 0; right: 0; top:0; bottom: 0;">
      </div>
    </div>
  </div>

  <div class="col p-0">

    <div class="container-admin-tweets" style="height: 100%;border:1px solid #E6ECF0; ">

      <div style="border-bottom: 1px solid #E6ECF0;">
        <h4 class="pt-3 ps-3 pb-3 mb-0"
          style="display:flex; justify-content:start; align-iten:center; height: 75px;font-weight: 700;font-size: 24px;line-height: 26px;color: #171725;">
          使用者列表
        </h4>
      </div>

      <div class="row mt-3 me-5">
        {{#each users}}
        <div class="col-md-3">
          <div class="card mb-4 ms-3" style="border-radius: 15px; overflow:hidden; background-color:#F6F7F8;">
            <div class="container-cover">
              <img id="img-users-cover-admin" src="{{this.cover}}" alt="cover image">
            </div>
            <div class="container-avatar">
              <img id="img-users-avatar-admin" src="{{this.avatar}}" alt="avatar image">
            </div>
            <div class="container-name" style="text-align: center;">
              <p id="p-users-name-admin" class="mb-0">{{this.name}}</p>
              <p id="p-users-account-admin" class="mb-2">@{{this.account}}</p>
            </div>
            <div class="container-reply mb-1" style="text-align: center;">
              <img id="ac-tweet-icon-admin" src="/images/users/tweet.png" alt="">
              <span>{{this.tweetsCounts}}</span>
              <img id="ac-like-icon-admin" src="/images/users/like.png" alt="">
              <span>{{this.LikesCounts}}</span>
            </div>
            <div class="container-follow mb-3" style="text-align: center;">
              <span id="span-follow-start-admin">{{this.followingCounts}}個</span><span
                id="span-follow-end-admin">跟隨中</span>
              <span id="span-follow-start-admin">{{this.followerCounts}}位</span><span
                id="span-follow-end-admin">跟隨者</span>
            </div>
          </div>
        </div>
        {{/each}}

      </div>




    </div>

  </div>

</div>