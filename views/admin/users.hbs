<div class="row">

  {{#each users}}
    <div class="card m-3" style="width: 250px;">
      <img class="card-img-top" src="https://ppt.cc/fAvApx" alt="Card image cap" style="width: 100%; height: 150px;">
      <img class="card-img mx-auto" src="https://ppt.cc/fAvApx" style="width: 100px; height: 100px; border-radius: 50%; margin-top: -60px; border: 4px solid white;">
      <div class="card-body">
        <h5 class="card-title text-center mb-n1">{{this.name}}</h5>
        <div class="text-center"><small class="text-muted">{{this.account}}</small></div>
        <p class="card-title text-center">
          <i class="far fa-comment-alt">{{this.Tweets.length}}</i>
          <i class="far fa-heart">{{this.Likes.length}}</i>
        </p>
        <p class="card-title text-center">
          {{this.Followings.length}}位跟隨中
          {{this.Followers.length}}位跟隨者
        </p>
      </div>
    </div>
  {{/each}}

</div>