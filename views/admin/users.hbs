<div class="row" style="text-align: center;">
  {{#each users}}
  <div class="col-md-4">
    <div class="card mb-4 shadow-sm">
      <img class="card-img-top" src="{{this.avatar}}" alt="Card image cap" width="286px" height="180px">
      <div class="card-body">
        <p class="card-text">{{this.name}}</p>
        <p class="card-text">@{{this.account}}</p>
        <p class="card-text">Replies:{{this.RepliesCount}}</p>
        <p class="card-text">Liked：{{this.LikedCount}}</p>
        <p class="card-text">{{this.FollowingsCount}}個跟隨中</p>
        <p class="card-text">追蹤人數：{{this.FollowersCount}}位跟隨者</p>
      </div>
    </div>
  </div>
  {{/each}}
</div>
<br />
