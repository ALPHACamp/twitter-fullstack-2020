{{> sidebar-layouts-admin}}
<div class="adminUsersListContainer">
  <div class="adminUsersHeaderContainer">
    <h4 class="adminUsersHeader">使用者列表</h4>
  </div>
  <div class="card-group-admin">
    {{#each users}}
    <div class="card adminUserContainer">
      <img src="{{this.banner}}" class="card-img-top" alt="User Banner Image">
      <img src="{{this.avatar}}" class="userAvatar" alt="User Avatar">
      <span class="userNameOnCard">{{this.name}}</span>
      <span class="userHandleOnCard">@{{this.account}}</span>
      <img class="userTweetsCountIcon" src="https://i.imgur.com/doggECG.png" alt="User Tweet Counts">
      <span class="userTweetsCountOnCard">{{this.tweetsCount}}</span>
      <img class="userLikesCountIcon" src="https://i.imgur.com/ne7Ly3J.png" alt="User Like Counts">
      <span class="userLikesCountOnCard">{{this.likesCount}}</span>
      <span class="userFollowingsCountOnCard"><strong class="strongOne">{{this.followingsCount}} 個</strong>跟隨中</span>
      <span class="userFollowersCountOnCard"><strong class="strongTwo">{{this.followersCount}} 個</strong>跟隨者</span>
    </div>
    {{/each}}
  </div>
</div>

<nav class="mt-3 adminUsersPagination" aria-label="page navigation">
  <ul class="pagination">
    <li class="page-item {{#ifCond pagination.currentPage 1}}disabled{{/ifCond}}">
      <a class="page-link" href="/admin/users?page={{pagination.prev}}" aria-label="Previous">
        <span aria-hidden="true">&laquo;</span>
      </a>
    </li>

    {{#each pagination.pages}}
    {{#ifCond this ../pagination.currentPage}}
    <li class="page-item active"><a class="page-link" href="#">{{this}}</a></li>
    {{else}}
    <li class="page-item">
      <a class="page-link" href="/admin/users?page={{this}}">{{this}}</a>
    </li>
    {{/ifCond}}
    {{/each}}
    <li class="page-item {{#ifCond pagination.currentPage pagination.totalPage}}disabled{{/ifCond}}">
      <a class="page-link" href="/admin/users?page={{pagination.next}}" aria-label="Next">
        <span aria-hidden="true">&raquo;</span>
      </a>
    </li>
  </ul>
</nav>