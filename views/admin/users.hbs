<div class="container-fluid">
  <div class="left-content">
    <div class="navbar-content">
      <div class="nav-top">
        <div class="icons">
          <i class="icon icon-ac-mark"></i>
        </div>
      </div>
      <div class="nav-item">
        <div class="icons">
          <i class="icon-home"></i>
        </div>
        <a href="/admin/tweets">
          貼文清單
        </a>
      </div>
      <div class="nav-item">
        <div class="icons">
          <i class="icon-people"></i>
        </div>
        <a href="/admin/users">
          使用者列表
        </a>
      </div>
    </div>
    <div class="navbar-footer">
      <a href="/signout">
        <svg width="18" height="18" viewBox="0 0 20 22" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path
            d="M9 13L5 9M5 9L9 5M5 9H19M14 13V14C14 14.7956 13.6839 15.5587 13.1213 16.1213C12.5587 16.6839 11.7956 17 11 17H4C3.20435 17 2.44129 16.6839 1.87868 16.1213C1.31607 15.5587 1 14.7956 1 14V4C1 3.20435 1.31607 2.44129 1.87868 1.87868C2.44129 1.31607 3.20435 1 4 1H11C11.7956 1 12.5587 1.31607 13.1213 1.87868C13.6839 2.44129 14 3.20435 14 4V5"
            stroke="black" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
        </svg>
        登出
      </a>
    </div>
  </div>
  <div class="admin-right-list">
    <div class="admin-users-title">
      使用者列表
    </div>
    <div class="admin-users-list">
      {{#each userByFind}}
      <div class="user-list-item">
        <div class="user-list-item-cover"
          style="background: url({{this.dataValues.cover}});background-repeat:no-repeat;background-position: center;background-size: cover;">
        </div>
        <div class="user-list-item-avatar">
          <img src="{{this.dataValues.avatar}}" class="rounded-circle" style="width: 100px;height:100px;">
        </div>
        <div class="user-list-item-info">
          <a href="">
            {{this.dataValues.name}}
          </a>
          <div class="user-list-item-account" style="color: #657786; font-wight:500">@{{this.dataValues.account}}</div>
          <div class="user-list-item-icons mt-2">
            <div class="reply-data mr-4">
              <i class="icon-reply" style="font-size: 18px;color: #657786"></i>
              <span>{{this.dataValues.Tweets.length}}</span>
            </div>
            <div class="like-data">
              <i class="icon-like" style="font-size: 18px;color: #657786;"></i>
              <span>{{this.dataValues.Likes.length}}</span>
            </div>
          </div>
          <div class="user-list-item-follow mt-2">
            <div class="user-list-item-following mr-3">
              {{this.dataValues.Followings.length}} <span>個跟隨中</span>
            </div>
            <div class="user-list-item-follower ">
              {{this.dataValues.Followers.length}} <span>個跟隨者</span>
            </div>
          </div>
        </div>
      </div>
      {{/each }}

    </div>
  </div>
</div>