<div class="container-fluid">
  <div class="row">

    <!-- left side bar -->
    <div class="col-2 m-0 p-0">
      <div class="list-group rounded-0 sticky-top vh-100 border-right">
        <div class="list-group-item mb-4 border-0">
          <img src="/images/AC.png" alt="AC" width="35" height="35">
        </div>
        <a href="/admin/tweets"
          class="list-group-item list-group-item-action border-0 {{#isEqual currentPath '/admin/tweets'}}custom-link-active{{/isEqual}}">
          <i class="fas fa-home"></i>
          <span class="ml-2">推文清單</span>
        </a>
        <a href="/admin/users"
          class="list-group-item list-group-item-action border-0 {{#isEqual currentPath '/admin/users'}}custom-link-active{{/isEqual}}">
          <i class="far fa-user"></i>
          <span class="ml-2">使用者列表</span>
        </a>
        <a href="/logout"
          class="list-group-item list-group-item-action border-0 mt-auto">
          <i class="fas fa-sign-out-alt"></i>
          <span class="ml-2">登出</span>
        </a>
      </div>
    </div>

    <!-- right side bar -->
    <div class="col-10 m-0 p-0">

      <!-- title -->
      <div class="border-bottom">
        <h5 class="p-3 font-weight-bold mb-0">使用者列表</h5>
      </div>

      <!-- users -->
      <div class="container mt-3">
        <div class="row">

          {{#each user}}
            <div class="col-3 p-1" style="border-radius: 5px;">

              <div class="card mb-2 mr-1"
                style="width: 100%; background-color: rgb(247, 247, 247);border-color: white;">

                <img class="card-img-top" style="height: 150px"
                  src="{{ this.cover }}" alt="{{ this.name }}">

                <img src="{{ this.avatar }}" class="border-avatar"
                  style="border-radius: 50%; height: 100px; width: 100px;"
                  alt="{{ this.name }}">

                <div class="card-body text-center">

                  <h6 class="mt-3 mb-1"
                    style="font-weight: 700;letter-spacing: .5px;">
                    {{ this.name }}
                  </h6>

                  <p class="mb-3" style="color: grey">
                    @{{ this.account }}
                  </p>

                  <div>
                    <span class="mr-3">
                      <i class="far fa-comment mr-1" style="color: grey;"></i>
                      {{#if this.Tweets.length}}
                        {{ this.Tweets.length }}
                      {{else}}
                        0
                      {{/if}}
                    </span>
                    <span>
                      <i class="far fa-heart mr-1" style="color: grey;"></i>
                      {{#if this.Likes.length}}
                        {{ this.Likes.length }}
                      {{else}}
                        0
                      {{/if}}
                    </span>
                  </div>

                  <div class="mt-3">
                    {{ this.Followings.length }} 個<span class="mr-2"
                      style="color:grey">跟隨中</span>
                    {{ this.Followers.length }} 位<span
                      style="color: grey">跟隨者</span>
                  </div>

                </div>
              </div>
            </div>
          {{/each}}
        </div>
      </div>

    </div>
  </div>

</div>
