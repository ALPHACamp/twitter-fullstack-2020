<div class="font-weight-bold h4 ml-3 mt-3">使用者清單</div>
<br />
<br />
<hr>
<div class="row ml-3 pt-3">
    {{#each users}}
    <div class="col-md-4 col-lg-3">
        <div class="card mb-4 shadow-sm">
            <img class="card-img-top" src="{{this.cover}}" height="140px">
            <div class="card-body d-flex flex-column align-items-center">
                <div class="position-relative col-12 d-flex justify-content-center">
                    <img class="rounded-circle position-absolute " width="85px" height="85px"
                        style="top: -85px; border: 5px solid white" src="{{this.avatar}}">
                </div>
                <div class="d-flex flex-column align-items-center mt-4">
                    <p class="card-text m-0 h5 font-weight-bold"> {{this.name}} </p>
                    <p class="card-text text-secondary"> ＠{{this.account}} </p>
                </div>
                <div class="d-flex mt-2">
                    <p href="" class=" mr-5 text-dark">
                        <svg width="1.2em" height="1.2em" viewBox="0 0 16 16" class="bi bi-chat ml-1"
                            fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd"
                                d="M2.678 11.894a1 1 0 0 1 .287.801 10.97 10.97 0 0 1-.398 2c1.395-.323 2.247-.697 2.634-.893a1 1 0 0 1 .71-.074A8.06 8.06 0 0 0 8 14c3.996 0 7-2.807 7-6 0-3.192-3.004-6-7-6S1 4.808 1 8c0 1.468.617 2.83 1.678 3.894zm-.493 3.905a21.682 21.682 0 0 1-.713.129c-.2.032-.352-.176-.273-.362a9.68 9.68 0 0 0 .244-.637l.003-.01c.248-.72.45-1.548.524-2.319C.743 11.37 0 9.76 0 8c0-3.866 3.582-7 8-7s8 3.134 8 7-3.582 7-8 7a9.06 9.06 0 0 1-2.347-.306c-.52.263-1.639.742-3.468 1.105z" />
                        </svg>
                        <span>
                            {{this.TweetCount}}
                        </span>
                    </p>
                    <p lass="p-0 ml-1">
                        <svg width="1.2em" height="1.2em" viewBox="0 0 16 16" class="bi bi-heart " fill="currentColor"
                            xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd"
                                d="M8 2.748l-.717-.737C5.6.281 2.514.878 1.4 3.053c-.523 1.023-.641 2.5.314 4.385.92 1.815 2.834 3.989 6.286 6.357 3.452-2.368 5.365-4.542 6.286-6.357.955-1.886.838-3.362.314-4.385C13.486.878 10.4.28 8.717 2.01L8 2.748zM8 15C-7.333 4.868 3.279-3.04 7.824 1.143c.06.055.119.112.176.171a3.12 3.12 0 0 1 .176-.17C12.72-3.042 23.333 4.867 8 15z" />
                        </svg>
                        <span>
                            {{this.LikeCount}}
                        </span>
                    </p>
                </div>
                <div class="d-flex">
                    <p class="mr-2"> {{this.FollowerCount}} 位
                        <span class="text-secondary">追隨者</span>
                    </p>
                    <p> {{this.FollowingCount}} 位
                        <span class="text-secondary">跟隨者</span>
                    </p>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>