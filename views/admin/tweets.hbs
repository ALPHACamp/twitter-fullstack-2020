
<div class="d-flex mt-5">
  {{!-- 左側欄位 --}}
  <div class="row" style="height: 500px;width: 300px;">
    {{!-- 上 --}}
    <div class="col-12">
      <p>Twitter</p>
    </div>
    {{!-- 中 --}}
    <div class="col-12 pt-0">
      <a href="/admin/tweets" style=" text-decoration:none;color:rgb(179, 123, 50)">
        <p>推文清單</p>
      </a>
      <a href="/admin/users" style=" text-decoration:none;color:rgb(0, 0, 0)">
        <p>使用者列表</p>
      </a>
    </div>
    {{!-- 下 --}}
    <div class="col-12">
      <p>登出</p>
    </div>
  </div>

  <div style="width: 800px;">
    {{!-- 標題 --}}
    <div>推文清單</div>

    <div class="d-flex flex-column align-items-center">

      <div>
        {{#each tweets }}
        <div class="d-flex align-items-center">
          {{!-- 大頭貼 --}}
          <div>
            <img src="{{ this.User.avatar }}" style="border-radius: 100%;width: 60px">
          </div>
          {{!-- 右側文字 --}}
          <div class="ms-3" style="height: 80px;">
            {{!-- 發文者 --}}
            <div class="d-flex align-items-center mb-0">
              <p class="fs-5 me-2 mb-0">{{ this.User.name }}</p>
              <p class="mb-0" style="color: darkseagreen;">{{ this.User.account }}・{{momentCH this.createdAt}}</p>
            </div>
            {{!-- 推文內容 --}}
            <p class="mt-0" style="font-size: small;">
              {{ this.description }}
            </p>
          </div>
        </div>
        {{!-- 右側刪除 --}}
        <form action="/admin/tweets/{{ this.id }}?_method=DELETE" method="post">
          <button type="submit" class="btn btn-outline-secondary">delete</button>
        </form>
        <hr>
        {{/each}}
      </div>
      <div>
        {{!-- 分頁 --}}
        <nav aria-label="Page navigation example">
          <ul class="pagination">
            <li class="page-item">
              <a class="page-link" href="/admin/tweets?page={{ prev }}" aria-label="Previous"
                style="color: darkseagreen;">
                <span aria-hidden="true">&laquo;</span>
                <span class="sr-only">Previous</span>
              </a>
            </li>
            {{#each totalPage }}
            {{!-- {{ifCont this ../page}}
            <li class="page-item active"><a class="page-link" href="#" style="color: darkseagreen;">{{
                this }}</a></li>
            {{else}} --}}
            <li class="page-item"><a class="page-link" href="/admin/tweets?page={{ this }}"
                style="color: darkseagreen;">{{
                this }}</a></li>
            {{!-- {{ifCont}} --}}
            {{/each}}
            <li class="page-item">
              <a class="page-link" href="/admin/tweets?page={{ next }}" aria-label="Next" style="color: darkseagreen;">
                <span aria-hidden="true">&raquo;</span>
                <span class="sr-only">Next</span>
              </a>
            </li>
          </ul>
        </nav>
      </div>


    </div>
  </div>
</div>