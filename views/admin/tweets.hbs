<div class="center container">
  <div class="left-bar">
    <nav class="container">
      <div class="logo-wrapper">
        <img src="../images/logo.svg" alt="">
      </div>
      <div class="navbar-wrapper">
        <a class="navbar-action active" href="/admin/tweets">
          <div class="icon-wrapper">
            <img src="../images/home.svg" alt="">
          </div>
          推文清單
        </a>
        <a class="navbar-action" href="/admin/users">
          <div class="icon-wrapper">
            <img src="../images/profile.svg" alt="">
          </div>
          使用者列表
        </a>
      </div>
      <a href="/logout" class="button-submit" style="width: 210px;"><i class="far fa-sign-out"></i>登出</a>
    </nav>
  </div>

  <div class="list-tweet mt-2">
    <div class="list-group-item px-3 d-flex align-items-start justify-content-start list-top">
      <p class="font-weight-bold d-inline">推文清單</p>
    </div>
    <div>
      <ul class="list-group">
        {{#each tweets}}
        <li class="list-group-item px-3 d-flex align-items-start justify-content-start">
            <img class="mr-3 thumbnail" src="{{this.User.avatar}}" alt="">
          <div class="content-wrapper w-100">
            <div class="mb-2">
              <p class="font-weight-bold d-inline">{{this.User.name}}</p>
              <p class="light-color d-inline">@{{this.User.account}}．{{moment this.createdAt}}</p>
            </div>
              <p>{{this.description}}</p>
          </div>
          <div>
            <form action="/admin/tweets/{{this.id}}?_method=DELETE" method="POST" style="float: right;">
              <button type="submit" class="btn"><i class="fas fa-times"></i></button>
            </form>
          </div>
        </li>
        {{/each}}
      </ul>
    </div>
  </div>
</div>
