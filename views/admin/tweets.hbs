{{!-- left-bar --}}
<div style="display: flex; justify-content: center;">
<div>
  <div style="
  display: inline-block; 
  box-sizing: border-box;
  position: relative;
  width: 1400px;
  height: 1200px;
  background: #FFFFFF;
  border: 1px solid #D5D5DC;
  border-radius: 4px;">
    <div style="position: absolute; width: 178px; height: 1200px; left: 130px;">
      <div style="position: relative;">
        <div style="width: 50px; height: 50px; position: absolute; top: 13px; left: 13px;">
          <img src="/images/logo.png" alt="login" style="height: 50px; width: 50px;">
        </div>
        <ul class="nav flex-column">
          <li class="nav-item" style="display:flex; align-items: center; position: absolute; top: 85px; left: 17px;">
            <i class="fas fa-home" style="color: coral;"></i>
            <a class="nav-link active" aria-current="page" href="/admin/tweets" style="color: coral;">推文清單</a>
          </li>
          <li class="nav-item" style="display:flex; align-items: center; position: absolute; top: 148px; left: 17px;">
            <i class="fas fa-user" style="color:black;"></i>
            <a class="nav-link" href="/admin/users" style="color:black;">使用者列表</a>
          </li>
          <li class="nav-item" style="display:flex; align-items: center; position: absolute; top: 1158px; left: 17px;">
            <i class="fa-solid fa-arrow-right-from-bracket mx-1"></i>
            <a class="nav-link" href="/admin/logout" style="color:black;">登出</a>
          </li>
        </ul>
      </div>
    </div>
    {{!-- tweets --}}
    <div style="position: absolute; right: 131px; width: 937px; height: 1200px; border: 1px solid #E6ECF0;">
      <div style="height: 49px; width: 937px; border-bottom: 1px solid #E6ECF0;">
        <h5 style="margin-left: 21px; margin-top: 24px;">推文清單</h5>
      </div>
      {{#each result}}
      <div style="position: relative; height: 118px; width: 937px; border-bottom: 1px solid #E6ECF0;">
        <div style="position: absolute; top: 16px; left: 23px; width: 50px; height: 50px;">
          <img src="{{this.User.avatar}}" alt="login" style="height: 50px; width: 50px; border-radius:50%;">
        </div>
        <h7 style="position: absolute; top: 16px; left: 81px">{{this.User.name}}</h7>
        <h7 style="position: absolute; top: 16px; left: 135px; font-size: 14px; color: gray;">
          @{{this.User.account}}。{{relativeTimeFromNow this.createdAt}}</h7>
        <p style="position: absolute; top: 50px; left: 81px">{{this.description}}</p>
        <form action="/admin/tweets/{{this.id}}?_method=DELETE" method="POST"
          style="display: inline; position: absolute; top: 21.5px; right: 5px">
          <button type="submit" class="btn-close" aria-label="Close" onclick="return confirm(`確定要刪除此留言嗎？`)"></button>
        </form>
      </div>
      {{/each}}
      <nav class="mt-3" aria-label="page navigation" style="position: absolute; left: 350px; bottom: 0px;">
        <ul class="pagination">
          <li class="page-item {{#ifCond pagination.currentPage 1}}disabled{{/ifCond}}">
            <a class="page-link" href="/admin/tweets?page={{pagination.prev}}" aria-label="Previous">
              <span aria-hidden="true">&laquo;</span>
            </a>
          </li>
          {{#each pagination.pages}}
          {{#ifCond this ../pagination.currentPage}}
          <li class="page-item active"><a class="page-link" href="#">{{this}}</a></li>
          {{else}}
          <li class="page-item">
            <a class="page-link" href="/admin/tweets?page={{this}}">{{this}}</a>
          </li>
          {{/ifCond}}
          {{/each}}
          <li class="page-item {{#ifCond pagination.currentPage pagination.totalPage}}disabled{{/ifCond}}">
            <a class="page-link" href="/admin/tweets?page={{pagination.next}}" aria-label="Next">
              <span aria-hidden="true">&raquo;</span>
            </a>
          </li>
        </ul>
      </nav>
    </div>
  </div>
</div>