<h3 class="my-2 fw-bold">推文清單</h3>
<br />
<div class="list-group list-group-flush">
  {{#each tweets}}
   <div class="list-group-item d-flex justify-content-between align-items-center my-1">
     <div class="d-flex">
      <div class="me-3">
        {{#if this.avatar}}
          <img src="{{this.avatar}}" width="50px" height="50px" style="transition: opacity 0.5s; opacity:0;"
          onload="this.style.opacity=1;" class="rounded-circle" />
        {{else}}
          <img src="https://via.placeholder.com/50" width="50px" height="50px" class="rounded-circle" />
        {{/if}}
      </div>
      <div class="d-flex flex-column">
        <div class="mb-1">
          <span class="fw-bold me-1">{{this.User.name}}</span>
          <span class="text-secondary fw-bold">@{{this.User.account}}．{{relativeTimeFromNow this.User.createdAt}}</span>
        </div>
        <div><p>{{this.content}}</p></div>
      </div>
     </div>
     <div>
       <form action="/admin/tweets/{{this.id}}?_method=DELETE" method="POST">
        <button type="submit" class="btn btn-light"><i class="fa-solid fa-xmark text-secondary"></i></button>
       </form>
     </div>
   </div>
  {{/each}}
</div>