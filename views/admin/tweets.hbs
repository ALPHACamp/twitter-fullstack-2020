<div class="container d-flex">
  <div class="col-2 nav">
    {{> admin-nav}}
  </div>
  <div class="col-7 tweets">
    <div class="tweets-container" style="width:936px; height:1200px;border:1px solid #E6ECF0; margin-right:131px;">
      <div>
        <h4 class="pt-3 ps-3" style="font-weight:700; size:24px; font-family: Noto Sans TC;">推文清單</h4>
      </div>
      <hr>

      <div class="tweets-container">
        {{!-- {{#each tweets}} --}}
        <div class="tweets d-flex mt-3" style="border-bottom: 1px solid #E6ECF0; ">
          <div class="avatar ps-3">
            <a href="/tweets/{{user.id}}" style="text-decoration:none;">
              <img src="{{user.avatar}}" class="rounded-circle me-3"
                style="width: 50px;height: 50px;background: #E6ECF0;">
            </a>
          </div>
          <div class="tweet-content" style="margin-bottom:16px;">
            <div class="name">
              <span
                style="font-family:'Noto Sans TC' font-size: 16px;font-weight:700;">FakeName{{comments.user.name}}</span>
              <span
                style="font-size:14px; color:#6C757D">@FakeAccount{{comments.user.account}}．3小時{{comments.times}}</span>
            </div>
            <div class="content mt-2" style="font-size:16px; font-weight:400; color:#171725;">
              Lorem ipsum dolor sit amet, consectetur adipiscing elit. Ut posuere sed justo sit amet imperdiet.
              Curabitur bibendum
              scelerisque hendrerit. Ma
            </div>
          </div>
        </div>
        {{!-- {{/each}} --}}
      </div>
    </div>
  </div>
</div>