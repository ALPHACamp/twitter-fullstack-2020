{{!-- 標題 --}}
<div>推文清單</div>

<div class="d-flex flex-column align-items-center">

  <div>
    {{#each tweets }}
    <div class="d-flex align-items-center">
      {{!-- 大頭貼 --}}
      <div>
        <img src="{{ this.User.avatar }}" style="border-radius: 100%;width: 60px">
      </div>
      {{!-- 右側文字 --}}
      <div class="ms-3" style="height: 80px;">
        {{!-- 發文者 --}}
        <div class="d-flex align-items-center mb-0">
          <p class="fs-5 me-2 mb-0">{{ this.User.name }}</p>
          <p class="mb-0" style="color: darkseagreen;">{{ this.User.account }}・{{moment this.createdAt}}</p>
        </div>
        {{!-- 推文內容 --}}
        <p class="mt-0" style="font-size: small;">
          {{ this.description }}
        </p>
      </div>
    </div>

    <hr>
    {{/each}}
  </div>
</div>