<div class="container-fluid">
  <div class="left-content">
    <div class="navbar-content">
      <div class="ac-icon mb-4">
        <a href=""><img class="ac-img" width="50px" , height="50px" src="/images/AC-icon@2x.png" alt="AC icon"></a>
      </div>
      <div class="home mb-3">
        <img class="left-bar-icon" src="/images/home-filled@2x.png" alt="home">
        <a href="/admin/tweets">
          <span><strong>貼文清單</strong></span>
        </a>
      </div>

      <div class="personal-info mb-3">
        <img class="left-bar-icon" src="/images/user-filled@2x.png" alt="user">
        <a href="/admin/users">
          <span><strong>使用者列表</strong></span>
        </a>
      </div>
      <div class="mt-3">
        {{> message}}
      </div>

      <div class="logout">
        <img class="left-bar-icon" src="/images/logout@2x.png" alt="setting">
        <a href="/logout">
          <span><strong>登出</strong></span>
        </a>
      </div>
    </div>
  </div>
  <div class="admin-tweets-list" style="height: 100vh;">
    <div class="admin-tweets-title">
      推文清單
    </div>
    {{#each tweets}}
    <div class="admin-list-item">
      <div class="admin-list-left">
        <img src="{{this.User.avatar}}" class="rounded-circle" style="width: 50px;height:50px;">
        <div class="right-list-item">
          <div class="list-item-info">
            <div class="list-name">
              <a>{{this.User.name}}</a>
              <span>@{{this.User.account}} · {{moment this.updatedAt}}</span>
            </div>
            <p>{{subText this.description}}</p>
          </div>
        </div>
      </div>
      <div class="admin-list-right">
        <button type="button" class="delete-btn" data-bs-toggle="modal" data-bs-target="#e{{this.id}}">
          &times;
        </button>
      </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="e{{this.id}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <div class="row align-items-center mx-0">
              <i class="fa fa-exclamation-triangle mr-2" aria-hidden="" style="color:red;"></i>
              <h5 class="modal-title" id="exampleModalLabel">warning!!!</h5>
            </div>

            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            請確認是否刪除這則推文:
            <div>{{subText this.description}}</div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <form action="/admin/tweets/{{this.id}}?_method=DELETE" method="POST">
              <button type="submit" class="delete-btn btn btn-danger">Delete</button>
            </form>
          </div>
        </div>
      </div>
    </div>
    {{/each}}
    {{!-- <div class="card-footer text-muted follow-footer">
      顯示更多
    </div> --}}
  </div>
</div>