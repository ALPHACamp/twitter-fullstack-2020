<div class="container">
    <div class="row d-flex justify-content-center">
        <div class="col-9 col-md-8 col-lg-5">
            <div class="img mt-5 d-flex flex-column align-items-center">
                <img src="https://uploads-ssl.webflow.com/60d29cc33f302e62731cf0e1/60d29cc33f302ede181cf183_AC%20nav%20logo.png"
                    style="width: 200px" />
                <strong class="mt-3 mb-2" style="font-size:23px">後台登入</strong>
            </div>

            <form action="/admin/signin" method="POST">

                <div class="form-group">
                    <input type="text" class="form-control" id="account" name="account" placeholder="帳號" required>
                </div>

                <div class="form-group mt-4">
                    <input type="password" class="form-control" id="password" name="password" placeholder="密碼" required>
                </div>

                <button class="btn btn-block mt-4" style="border-radius: 30px; background-color:#FF6600; color: white;font-weight:700;"
                    type="submit">登入</button>

                <div class="mt-3 d-flex justify-content-end">
                    <p>
                        <a href="/signin" style="color: #FF6600;font-weight:700;">前台登入
                        </a>
                    </p>
                </div>
            </form>
        </div>
    </div>
</div>