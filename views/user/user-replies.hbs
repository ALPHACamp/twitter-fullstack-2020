<main class="d-flex justify-content-center">
  {{> sidebar-left}}
  <section style="width:636px; border:1px solid #E6ECF0">
    {{>profile-card route='user-replies'}}
    <div class="replies-list">
      <div class="li-container">
      {{#each replies}}
        <div class="reply-container d-flex pt-3 mb-3 d-flex justify-content-center"
          style="border:1px solid #E6ECF0; min-height:133px">
          <div class="avatar me-3" style="width:50px; height:50px; border-radius:50%; background-color:gray">
            <img src="" alt="" />
          </div>
          <div class="content ms-2 mb-3" style="width:528px">
            <div class="account d-dlex flex-row">
              <p style="display: inline; font-weight:700">{{this.User.account}}</p>
              <p style="display: inline; color:#6C757D">@{{this.User.name}}．{{relativeTimeFromNow this.createdAt}}</p>
              <div class="toWhom mt-1" style="color:#6C757D">回覆 <p style="display: inline; color:#FF6600">
                  @{{this.Tweet.username}}</p>
              </div>
            </div>
            <div class="text mt-2">
              <a href="/tweets/{{this.Tweet.id}}" style="text-decoration: none; color:#000000">
              {{this.comment}}
            </div>
          </div>
        </div>
      {{/each}}
      </div>
      </div>
  </section>
  {{> recommendation}}
</main>
{{> edit-modal}}
