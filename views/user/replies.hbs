<div class="d-flex h-100">
  {{> nav-column route='user'}}

  <div class="w-50">
    {{> user-info}}
    {{> user-tabs route='replies'}}

    {{!-- User Page Replies --}}
    <div class="mt-3">
      {{#each viewUser.Replies}}
        <div class="list-group-item tweet-display border-0">
          <div class="d-flex">
            <div class="me-3">
              {{#if ../viewUser.avatar}}
                <img src="{{../viewUser.avatar}}" width="50px" height="50px" style="transition: opacity 0.5s; opacity:0;"
                  onload="this.style.opacity=1;" class="rounded-circle" />
              {{else}}
                <img src="https://via.placeholder.com/50" width="50px" height="50px" class="rounded-circle" />
              {{/if}}
            </div>
            <div class="d-flex flex-column w-100">
              <div class="mb-1">
                <span class="fw-bold me-1">{{../viewUser.name}}</span>
                <span class="text-secondary">@{{../viewUser.account}}．{{relativeTimeFromNow this.createdAt}}</span>
              </div>
              <div class="mb-1 text-secondary">
                <span>回覆</span>
                <a href="/users/{{this.Tweet.User.id}}/tweets" style="text-decoration: none;">@{{this.Tweet.User.name}}</a>
              </div>
              <div>
                <p style="word-wrap: break-word;">{{this.comment}}</p>
              </div>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  </div>

  {{> popular-users}}
</div>