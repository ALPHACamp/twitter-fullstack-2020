<form class="form-signin" action="/signup" method="POST" style="width: 100%; background-color:white ;">
  <div class="container" style="display: flex; flex-direction:column; align-items:center ">
    <div class="text-center">
      <h1 class="h3 mb-3 font-weight-normal">帳戶設定</h1>
    </div>

    {{!-- 帳號 --}}
    <div class="form-label-group" style="width: 400px;">
      <label for="inputAccount"></label>
      <input type="text" name="account" class="form-control"
        style="border: none; border-bottom:2px solid rgb(173, 172, 172); background-color:rgb(245, 240, 240)"
        placeholder="{{user.account}}" required autofocus>
    </div>

    {{!-- 名稱 --}}
    <div class="form-label-group" style="width: 400px;">
      <label for="inputName"></label>
      <input type="text" name="name" class="form-control"
        style="border: none; border-bottom:2px solid rgb(173, 172, 172); background-color:rgb(245, 240, 240)"
        placeholder="{{user.name}}" required autofocus>
    </div>

    {{!-- email --}}
    <div class="form-label-group" style="width: 400px;">
      <label for="inputEmail"></label>
      <input type="text" name="email" class="form-control"
        style="border: none; border-bottom:2px solid rgb(173, 172, 172); background-color:rgb(245, 240, 240)"
        placeholder="{{user.email}}" required autofocus>
    </div>

    {{!-- 密碼 --}}
    <div class="form-label-group" style="width: 400px;">
      <label for="inputPassword"></label>
      <input type="password" name="password" class="form-control"
        style="border: none; border-bottom:2px solid rgb(173, 172, 172); background-color:rgb(245, 240, 240)"
        placeholder="密碼" required>
    </div>

    {{!-- 密碼確認 --}}
    <div class="form-label-group" style="width: 400px;">
      <label for="inputPassword"></label>
      <input type="inputPasswordCheck" name="passwordCheck" class="form-control"
        style="border: none; border-bottom:2px solid rgb(173, 172, 172); background-color:rgb(245, 240, 240)"
        placeholder="密碼確認" required>
    </div>

    <br />

    <button class="btn btn-lg btn-block" style="width: 50px;background:rgb(253, 89, 24);color:white;border-radius:30px"
      type="submit">儲存</button>


  </div>
</form>