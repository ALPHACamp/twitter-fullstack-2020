<div class="col mt-2 mx-0 px-0">
    <div class="row flex-row align-items-center my-0" style="height:40px;">
        <a href="javascript:history.back()" style="color:black;"><i class="fas fa-arrow-left"></i></a>
        <div class="col  ml-3 my-0 py-0">
            <h6 class="font-weight-bold my-0 py-0">{{profileUser.name}}</h6>
            <p class="my-0 py-0" style="font-size:0.55em;"> 推文數 {{profileUser.Tweets.length}}</p>
        </div>
    </div>

    {{#ifcond profileUser.cover "===" ""}}
    <div class="row my-0"
        style="width:100%; height:200px; background-color:#808A87; background-size:cover; background-repeat:no-repeat; background-position: center;">
        <div style="position: relative;left: 15px; top: 140px;">
            <img src="{{profileUser.avatar}}" alt=""
                style="height: 120px; width: 120px; border-radius: 50%; border: 3px solid white;">
        </div>
    </div>
    {{else}}
    <div class="row my-0"
        style="width:100%; height:200px; background-image:url({{profileUser.cover}}); background-size:cover; background-repeat:no-repeat; background-position: center;">
        <div style="position: relative;left: 15px; top: 140px;">
            <img src="{{profileUser.avatar}}" alt=""
                style="height: 120px; width: 120px; border-radius: 50%; border: 3px solid white;">
        </div>
    </div>
    {{/ifcond}}

    <div class="row my-0" style="width:100%; height:200px; background-color:white;">
        <div class="col-md-12">
            <div class="d-flex flex-row-reverse">
                {{#ifcond profileUser.id "===" user.id}}
                <button class="btn btn-lg btn-block font-weight-bold mt-2" type="submit"
                    style="color:#FF6103; background-color:white; border-radius: 25px; border: 1px solid #FF6103; width:150px; font-size:0.9em;">編輯個人資料</button>
                {{else}}
                {{#if isFollowed}}
                <button class="btn btn-lg btn-block font-weight-bold mt-2" type="submit"
                    style="color:white; background-color:#FF6103; border-radius: 25px; border: 1px solid white; width:150px; font-size:0.9em;">正在跟隨</button>
                {{else}}
                <button class="btn btn-lg btn-block font-weight-bold mt-2" type="submit"
                    style="color:#FF6103; background-color:white; border-radius: 25px; border: 1px solid #FF6103; width:150px; font-size:0.9em;">跟隨</button>
                {{/if}}
                {{/ifcond}}
            </div>
            <div class="col-md-12 mt-3">
                <h4 style="margin:0;">{{profileUser.name}}</h4>
                <h6 style="margin:0; color:#A39480;">{{profileUser.email}}</h6>
                <div style="margin-left:0;height: 44px;line-height: 22px;text-overflow: ellipsis;overflow: hidden;">
                    {{profileUser.introduction}}</div>
                <div class="my-2 font-weight-bold">{{profileUser.Followings.length}}個 <a
                        href="#">跟隨中</a>　　{{profileUser.Followers.length}}位 <a href="#">跟隨者</a></div>
            </div>
        </div>
    </div>
</div>

<ul class="nav nav-tabs mt-2">
    <li class="nav-item">
        <a class="nav-link font-weight-bold" href="#" style="color:#FF6103; border-bottom: 3px solid #FF6103;">推文</a>
    </li>
    <li class="nav-item">
        <a class="nav-link font-weight-bold" href="#" style="color:#A39480;">推文與回覆</a>
    </li>
    <li class="nav-item">
        <a class="nav-link font-weight-bold" href="#" style="color:#A39480;">喜歡的內容</a>
    </li>
</ul>

{{#each profileUser.Tweets}}
<div class="row py-2" style="border-bottom: 1px solid #C0C0C0;">
    <div class="col-md-1">
        <img src="{{this.dataValues.User.dataValues.avatar}}" alt=""
            style="height: 40px; width: 40px; border-radius: 50%;">
    </div>
    <div class="col-md-11">
        <div class="row">
            <h6 class="font-weight-bold mr-2" style="margin:0;">{{this.dataValues.User.dataValues.name}}</h6>
            <h6 style="margin:0; color:#A39480;">{{this.dataValues.User.dataValues.email}}．</h6>
        </div>
        <div style="margin-left:0;height: 66px;line-height: 22px;text-overflow: ellipsis;overflow: hidden;">
            {{this.dataValues.description}}</div>
        <div class="row">
            <a href="#"><i class="far fa-comment"></i></a> {{this.dataValues.Replies.length}}
            <a href="#"><i class="far fa-heart"></i></a> {{this.dataValues.Likes.length}}
        </div>
    </div>
</div>
{{/each}}

{{!-- sef-profile modal --}}
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#profileModal"
    data-bs-whatever="@mdo">編輯個人資料</button>

<div class="modal fade" id="profileModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <form action='/user/{{data.id}}' method="POST">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <div class="header d-flex">
                        <div class="header-left d-flex">
                            <button type="button" class="btn-close me-4" data-bs-dismiss="modal"
                                aria-label="Close"></button>
                            <h5 class="modal-title" id="exampleModalLabel">編輯個人檔案</h5>
                        </div>
                    </div>
                    <div class="header-right col-auto"><button type="submit" class="btn"
                            style="background-color:#FF6103 ; color:antiquewhite">儲存</button></div>
                </div>
                <div class="modal-body">
                    <div class="cover bg-default">
                        {{#ifcond data.cover "===" ""}}
                        <div class="cover bg-user"
                            style="width:100%; height:200px; background-color:#808A87; background-size:cover; background-repeat:no-repeat; background-position: center;">
                            <div class="cover-hover">
                                <div class="cover-mask text-center" style="width:100%; height:200px;background-size:cover;
                                                background-repeat:no-repeat; background-position: center;">
                                    <div class="icon">
                                        <a class="avatar-hover me-4" role="button" data-bs-toggle="modal"
                                            data-bs-target="#updateCoverModal"
                                            style="text-decoration: none ;color: inherit">
                                            <i class="fas fa-camera"></i>
                                        </a>
                                        <a class="avatar-hover" role="button" data-bs-toggle="modal"
                                            data-bs-target="#deleteCoverModal"
                                            style="text-decoration: none ; color: inherit">
                                            <i class="fas fa-times"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <div class="avatar" style="position:relative;left: 30px; top: 140px;">
                                <img src="{{data.avatar}}" alt=""
                                    style="height: 120px; width: 120px; border-radius: 50%; border: 3px solid white;">
                                <a class="avatar-hover" type="button" class="btn btn-primary" data-bs-toggle="modal"
                                    data-bs-target="#updateAvatarModal">
                                    <div class="avatar-mask text-center"
                                        style="height: 120px; width: 120px; border-radius: 50%; border: 3px solid white line-height:120px;">
                                        <i class="fas fa-camera" style="line-height:120px"></i>
                                    </div>
                                </a>
                            </div>
                        </div>
                        {{else}}
                        <div class="cover bg-user"
                            style="width:100%; height:200px; background-image:url({{data.cover}}); background-size:cover; background-repeat:no-repeat; background-position: center;">
                            <div class="cover-hover">
                                <div class="cover-mask text-center d-flex align-items-center justify-content-center"
                                    style="width:100%; height:200px;background-size:cover;
                            background-repeat:no-repeat; background-position: center;">

                                    <div class="icon">
                                        <a class="avatar-hover me-4" role="button" data-bs-toggle="modal"
                                            data-bs-target="#updateCoverModal"
                                            style="text-decoration: none ;color: inherit">
                                            <i class="fas fa-camera"></i>
                                        </a>
                                        <a class="avatar-hover" role="button" data-bs-toggle="modal"
                                            data-bs-target="#deleteCoverModal"
                                            style="text-decoration: none ; color: inherit">
                                            <i class="fas fa-times"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <div class="avatar" style="position:relative;left: 30px; top: 140px;">
                                <img src="{{data.avatar}}" alt=""
                                    style="height: 120px; width: 120px; border-radius: 50%; border: 3px solid white;">
                                <a class="avatar-hover" type="button" class="btn btn-primary" data-bs-toggle="modal"
                                    data-bs-target="#updateAvatarModal">
                                    <div class="avatar-mask text-center"
                                        style="height: 120px; width: 120px; border-radius: 50%; border: 3px solid white line-height:120px;">
                                        <i class="fas fa-camera" style="line-height:120px"></i>
                                    </div>
                                </a>
                            </div>
                        </div>

                        {{/ifcond}}

                        <div class="name-introduction mt-5">
                            <form>
                                <div class="name mb-3">
                                    <div class="border-bottom border-secondary bg-light">
                                        <label for="recipient-name" class="col-form-label">名稱:</label>
                                        <input type="text" class="form-control border-0 bg-light" id="recipient-name"
                                            name="name" value="{{data.name}}">
                                    </div>
                                    <div class="text-end mt-0">123/50</div>
                                </div>
                                <div class="introduction">
                                    <div class="border-bottom border-secondary bg-light">
                                        <label for="message-text" class="col-form-label" style="small">自我介紹:</label>
                                        <textarea class="form-control border-0 bg-light" id="message-text" rows='3'
                                            name="introduction">{{data.introduction}}</textarea>
                                    </div>
                                    <div class="text-end mt-0">123/160</div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
{{!-- sef-profile update-cover modal --}}

<div class="modal fade" id="updateAvatarModal" tabindex="-1" role="dialog" aria-labelledby="updateAvatarModalTitle"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <form action='/user/{{data.id}}' method="POST" enctype="multipart/form-data">
            <div class="modal-content">
                <div class="modal-header">
                    <div class="header d-flex">
                        <button type="button" class="btn-close me-4" data-bs-dismiss="modal"
                            aria-label="Close"></button>
                        <h5 class="modal-title" id="exampleModalLongTitle">更新大頭貼照</h5>
                    </div>
                </div>

                <div class="modal-body">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-4">
                                <label for="avatar" role="button" class="btn btn-primary">+上傳照片</label>
                                <input type="file" class="form-control-file" id="avatar" name="avatar">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 ml-auto">照片預覽</div>
                            <div class="col-md-2 ml-auto">XXX</div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">取消</button>
                    <button type=" submit" class="btn btn-primary">儲存變更</button>
                </div>
            </div>
        </form>
    </div>
</div>
</div>



