<div class="d-flex flex-column mr-5">
  {{#each tweets}}
  <div class="card mb-3" style="width: 540px;">
    <div class="row g-0">
      <div class="col-md-4">
        <img src="{{this.userAvatar}}" alt="...">
      </div>
      <div class="col-md-6">
        <div class="card-body">
          <h5 class="card-title"><a href="/users/{{this.userId}}">{{this.userName}}</a>{{this.userAccount}}</h5>
          <p class="card-text">{{this.description}}</p>
        </div>
      </div>
      <div calss="col-md-2">
        <div class="card-footer">
          <p>{{this.totalReplies}}</p>
          <p>{{this.totalLiked}}</p>
          {{#if this.isLiked}}
          <form action="/tweets/{{this.id}}/unlike" method="POST">
            <button type="submit" class="btn btn-danger">unlike</button>
          </form>
          {{else}}
          <form action="tweets/{{this.id}}/like" method="POST">
            <button type="submit" class="btn btn-danger">like</button>
          </form>
          {{/if}}
        </div>
      </div>
    </div>
  </div>
  {{/each}}
</div>
<div calss="d-flex flex-column ml-5">
  <h4>跟隨誰</h4>
  {{#each users}}
  <div class="card mb-3" style="width: 540px;">
    <div class="row g-0">
      <div class="col-md-4">
        <img src="{{this.avatar}}" alt="..." style="max-width: 100px; max-height:100px;">
      </div>
      <div class="col-md-6">
        <div class="card-body">
          <h5 class="card-title"><a href="/users/{{this.id}}">{{this.name}}</a></h5>
          <p class="card-text">{{this.account}}</p>
        </div>
      </div>
      <div calss="col-md-2">
        {{#if this.isFollowed}}
        <form action="/followships/{{this.id}}?_method=DELETE" method="POST">
          <button type="submit" class="btn btn-danger">正在跟隨</button>
        </form>
        {{else}}
        <form action="/followships/" method="POST">
          <input type="hidden" name="id" value="{{this.id}}">
          <button type="submit" class="btn btn-danger">跟隨</button>
        </form>
        {{/if}}
      </div>
    </div>
  </div>
  {{/each}}
</div>