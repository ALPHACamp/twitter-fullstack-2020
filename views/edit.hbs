<div class="wrapper">
  <div class='container user-homepage'>
    <div class="profile-setting d-flex flex-column justify-content-between">{{> leftColumn}}</div>
    <div class="main">
      <div class='user-header d-flex flex-row align-items-center'>
        <div class="header-text d-flex flex-column">
          <h5><b>帳戶設定</b></h5>
        </div>
      </div>
      <div class="user-info">
        <form action="#">
          <div class="form-floating">
            <input type="text" class="form-control" id="user-edit-account" placeholder="" value="{{queryUser.account}}" maxlength="50">
            <label for="user-edit-account">帳號</label>
            <p class="text-end"><span class="user-edit-account-counts">0</span>/50</p>
          </div>
          <div class="form-floating">
            <input type="text" class="form-control" id="user-edit-name" placeholder="" value="{{queryUser.name}}" maxlength="50">
            <label for="user-edit-name">名稱</label>
            <p class="text-end"><span class="user-edit-name-counts">0</span>/50</p>
          </div>
          <div class="form-floating">
            <input type="text" class="form-control" id="user-edit-email" placeholder="" value="{{queryUser.email}}" maxlength="50">
            <label for="user-edit-email">Email</label>
            <p class="text-end"><span class="user-edit-email-counts">0</span>/50</p>
          </div>
          <div class="form-floating">
            <input type="text" class="form-control" id="user-edit-password" placeholder="" value="{{queryUser.password}}" maxlength="50">
            <label for="user-edit-password">密碼</label>
            <p class="text-end"><span class="user-edit-password-counts">0</span>/50</p>
          </div>
          <div class="form-floating">
            <input type="text" class="form-control" id="user-edit-confirmPassword" placeholder="" value="{{queryUser.confirmPassword}}" maxlength="50">
            <label for="user-edit-confirmPassword">密碼再確認</label>
            <p class="text-end"><span class="user-edit-confirmPassword-counts">0</span>/50</p>
          </div>
        </form>
      </div>
    </div>
  </div> 
</div>

<script src="/javascripts/user.js"></script>