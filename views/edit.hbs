<div class="col-3">
    {{>nav}}
</div>
<div class="col-6 bg-white list-group-item">
    {{> msg}}
    <div class="row border-bottom  "><h3><strong>帳戶設定</strong></h3></div>
    <form class="row g-3 " action="/users/{{data.id}}?_method=PUT" method="POST">
        <div class="col-md-10">
            <label for="account" class="form-label">帳號</label>
            <input type="text" class="form-control" id="account" name="account" value="{{data.account}}">
        </div>
        <div class="col-md-10 ">
            <label for="name" class="form-label">名稱</label>
            <input type="text" class="form-control" id="name" name="name" value="{{data.name}}">
        </div>
        <div class="col-md-10 ">
            <label for="email" class="form-label">Email</label>
            <input type="text" class="form-control" id="email" name="email" value="{{data.email}}">
        </div>
        <div class="col-md-10 ">
            <label for="password" class="form-label">密碼</label>
            <input type="password" class="form-control" id="password" name="password">
        </div>
        <div class="col-md-10 ">
            <label for="confirmPassword" class="form-label">密碼確認</label>
            <input type="password" class="form-control" id="confirmPassword" name="confirmPassword">
        </div>
        <div class="justify-content-end d-flex">
            <button type="submit" class="btn btn-primary">儲存</button>
        </div>
        <br>

    </form>
</div>