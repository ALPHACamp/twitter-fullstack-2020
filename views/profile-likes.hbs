<div class="col-2 nav-left">
  {{> nav-left}}
</div>

<div class="col-8 nav-body" style="font-family: 'Noto Sans TC'; font-style: normal;">
  <ul class="list-group">
    {{>profile-header route='likes'}}
    {{!-- 喜歡版 --}}
    {{#each userData.Likes}}
    <li class="list-group-item d-flex align-items-start" style="border:#E6ECF0 solid 1px;">
      <a href="/users/{{this.User.id}}/likes">
        <img src="{{../user.avatar}}" alt="推文人頭像" style="width:50px; height:50px; border:#E6ECF0; border-radius:50%"
          class="me-3">
      </a>
      <div class="m-0 p-0">
        <small>
          <a class="me-2" href="/users/{{this.User.id}}/likes"
            style="font-weight: 700;font-size: 16px;line-height: 26px;color:#171725; text-decoration:none;">
            {{this.User.name}}
          </a>
          <span class="text-muted"
            style="text-decoration:none;color:#6C757D;font-weight: 400;font-size: 14px;line-height: 22px;">@{{this.User.account}}・
            <a href="/tweets/{{this.Tweet.id}}/replies"
              style="text-decoration:none;color:#6C757D; font-weight: 400;font-size: 14px;line-height: 22px;">
              {{relativeTimeFromNow this.createdAt}}
            </a>
          </span>
        </small>
        <a href="/tweets/{{this.Tweet.id}}/replies" style="text-decoration: none; color:black;">
          <p class="mt-2" style="word-wrap:break-word; width:700px;">
            {{this.Tweet.description}}
          </p>
        </a>
        <p class="m-0 p-0">
          <img class="me-2 pointer" src="/images/chat.png" data-bs-toggle="modal" data-bs-target="#post-reply"
            alt="回文圖示" style="width: 13.17px; height:13.17px;">
          {{this.Tweet.Replies.length}}
          <img class="ms-4 me-2 pointer" src="/images/love-red.png" data-bs-toggle="modal" data-bs-target="#post-reply"
            alt="喜歡圖示">
          {{this.Tweet.Likes.length}}
        </p>
      </div>
    </li>
    {{/each}}
</div>

<div class="col-2 nav-right">
  {{> nav-right}}
</div>