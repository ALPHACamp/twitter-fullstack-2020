<div class="row" >
    <div class="col">
        {{> left-nav}}
    </div>
    <div class="col-7 border-start border-end px-0">
        <h3 class="my-3 px-4 mx-0 fw-bold">首頁</h3><hr class="my-2 "/>
        <form>
            <div class="row mx-0 px-0">
                <div class="col-1 pt-1">
                    <img src="{{user.avatar}}" class="rounded-circle" style="width:50px;height:50px;">
                </div>
                <div class="col pe-0">
                    <textarea class="border-0 mt-2" style="width:100%; border: none;outline: none;resize:none" placeholder="有甚麼新鮮事?" id="floatingTextarea2" rows="4"></textarea>
                </div>
            </div>
            <div class="text-end me-1 pe-1 mb -1 pb-1">
                <button type="submit" class="btn btn-danger rounded-pill">推文</button>
            </div>
        </form>
        <hr class="mt-1"style="border: 10px solid rgb(106, 106, 106);"/>
        <div style="overflow:auto;max-height:650px">
            {{#each tweets}}
            <div class="row mx-0 px-0">
                <div class="col-1">
                    <img src="{{this.User.avatar}}" class="rounded-circle" style="width:50px;height:50px">
                </div>
                <div class="col">
                    <p>
                        ,<span>{{this.User.name}}</span>,
                        <span>@{{this.User.account}}</span>,
                        <span>{{this.updatedAt}}</span>,
                    </p>
                    <p>{{this.description}}</p>
                    <p>like:{{this.totalLike}} reply:{{this.totalReply}}</p>
                </div>
            </div>
            <hr/>
            {{/each}}
        </div>
    </div>
    <div class="col"></div>
</div>