
<div class="row my-5 justify-content-center">
  <div class="col-9 col-md-5 col-lg-4 my-2">
    <img
      src="https://cdn4.iconfinder.com/data/icons/social-media-icons-the-circle-set/48/twitter_circle-8192.png"
      alt=""
      class="img-fluid my-3"
      style="display: block; margin: auto; width: 50px;"
    />
    <div class="text-center my-4">
      <h3><strong>建立你的帳號</strong></h3>
    </div>
    {{> message}}
    <form action="/signup" method="post">
      <div class="mb-3">
        <label
          for="account"
          style="margin-bottom: -30px; margin-left: 8px;"
        >帳號</label>
        <input
          type="text"
          class="form-control pt-4"
          id="account"
          name="account"
          style="border:none; border-bottom:2px solid rgb(75, 82, 85);outline: none;background-color:#f4f8fb"
          aria-describedby="accountHelp"
          value="{{account}}"
        />
      </div>
      <div class="mb-3">
        <label
          for="name"
          style="margin-bottom: -30px; margin-left: 8px;"
        >名稱</label>
        <input
          type="text"
          class="form-control pt-4"
          id="name"
          name="name"
          style="border:none; border-bottom:2px solid rgb(75, 82, 85);outline: none;background-color:#f4f8fb"
          aria-describedby="nameHelp"
          value="{{name}}"
        />
      </div>
      <div class="mb-3">
        <label
          for="email"
          style="margin-bottom: -30px; margin-left: 8px;"
        >Email</label>
        <input
          type="email"
          class="form-control pt-4"
          id="email"
          name="email"
          style="border:none; border-bottom:2px solid rgb(75, 82, 85);outline: none;background-color:#f4f8fb"
          aria-describedby="emailHelp"
          value="{{email}}"
        />
      </div>
      <div class="mb-3">
        <label
          for="password"
          style="margin-bottom: -30px; margin-left: 8px;"
        >密碼</label>
        <input
          type="password"
          class="form-control pt-4"
          id="password"
          name="password"
          style="border:none; border-bottom:2px solid rgb(75, 82, 85);outline: none;background-color:#f4f8fb"
          aria-describedby="passwordHelp"
          value="{{password}}"
        />
      </div>
      <div class="mb-2">
        <label
          for="passwordConfirm"
          style="margin-bottom: -30px; margin-left: 8px;"
        >密碼確認</label>
        <input
          type="password"
          class="form-control pt-4"
          id="passwordConfirm"
          name="passwordConfirm"
          style="border:none; border-bottom:2px solid rgb(75, 82, 85);outline: none;background-color:#f4f8fb"
          aria-describedby="passwordConfirmHelp"
          value="{{passwordConfirm}}"
        />
      </div>
      <br />
      <button
        class="col-12 btn btn-primary btn-block"
        style="border-radius: 30px;"
        type="submit"
      >註冊</button>
      <div class="text-center my-4">
        <p><a href="/signin">取消</a></p>
      </div>
    </form>
  </div>
</div>

<form class="form-signin" action="/signup" method="POST" style="width: 100%;">
  <div class="text-center mb-4">
    <h1 class="h3 mb-3 font-weight-normal">Sign Up</h1>
  </div>
  <div class="form-label-group">
    <label for="inputAccount">Account</label>
    <input type="text" name="account" class="form-control" placeholder="account" required autofocus>
  </div>
  <div class="form-label-group">
    <label for="inputName">Name</label>
    <input type="text" name="name" class="form-control" placeholder="Name" required autofocus>
  </div>
  <div class="form-label-group">
    <label for="inputEmail">Email</label>
    <input type="text" name="email" class="form-control" placeholder="Email" required autofocus>
  </div>
  <div class="form-label-group">
    <label for="inputPassword">Password</label>
    <input type="password" name="password" class="form-control" placeholder="Password" required>
  </div>
  <div class="form-label-group">
    <label for="inputPasswordCheck">Password Check</label>
    <input type="password" name="passwordCheck" class="form-control" placeholder="Password Check" required>
  </div>
  <div class="form-label-group">
    <label for="inputDescription">description</label>
    <input type="text" name="description" class="form-control" placeholder="description" required autofocus>
  </div>
  <div class="form-label-group">
    <label for="inputImg">image</label>
    <input type="text" name="img" class="form-control" placeholder="img" required autofocus>
  </div>
  <div class="form-label-group">
    <label for="inputBgImg">BgImg</label>
    <input type="text" name="bg_img" class="form-control" placeholder="bg_img" required autofocus>
  </div>
  <br />
  <button class="btn btn-lg btn-primary btn-block" type="submit">Submit</button>
  <div class="text-center mb-4">
    <p><a href="/signin">Sign In</a></p>
  </div>
  <p class="mt-5 mb-3 text-muted text-center">© 2017-2018</p>
</form>

