<form class="form-signin" action="/signup" method="POST">
  <div class="text-center mb-4">
    <h1 class="h3 mb-3 font-weight-normal font-weight-bold">建立你的帳號</h1>
  </div>
  <div class="form-label-group py-3">
    <input type="text" name="account" class="form-control font-weight-bold" placeholder="帳號" required autofocus>
  </div>
  <div class="form-label-group py-3">
    <input type="text" name="name" class="form-control font-weight-bold" placeholder="名稱" maxlength="50" required autofocus>
  </div>
  <div class="form-label-group py-3">
    <input type="email" name="email" class="form-control font-weight-bold" placeholder="Email" required autofocus>
  </div>
  <div class="form-label-group py-3">
    <input type="password" name="password" class="form-control font-weight-bold" placeholder="密碼" required>
  </div>
  <div class="form-label-group py-3">
    <input type="password" name="passwordCheck" class="form-control font-weight-bold" placeholder="密碼確認" required>
  </div>
  <br />
  <div class="mb-4 text-center">
    <button class="btn btn-block text-light font-weight-bold mb-3" style="border-radius: 40px; background-color:#FF6600"
      type="submit">註冊</button>
    <p><a class="font-weight-bold mb-3" href="/signin">取消</a></p>
  </div>
</form>