<form class="form-signin" action="/signup" method="POST" style="width: 100%;">
  <div class="text-center mb-4">
    <h1 class="h3 mb-3 font-weight-normal">Sign Up</h1>
  </div>
  <div class="form-label-group">
    <label for="inputAccount">帳號</label>
    <input type="text" name="account" class="form-control" placeholder="Account" required autofocus>
  </div>
  <div class="form-label-group">
    <label for="inputName">名稱</label>
    <input type="text" name="name" class="form-control" maxlength="50" placeholder="Name" required autofocus>
  </div>
  <div class="form-label-group">
    <label for="inputEmail">Email</label>
    <input type="text" name="email" class="form-control" placeholder="Email" required autofocus>
  </div>
  <div class="form-label-group">
    <label for="inputPassword">密碼</label>
    <input type="password" name="password" class="form-control" placeholder="Password" required>
  </div>
  <div class="form-label-group">
    <label for="inputPasswordCheck">確認密碼</label>
    <input type="password" name="checkPassword" class="form-control" placeholder="Password Check" required>
  </div>
  <br />
  <button class="btn btn-lg btn-primary btn-block" type="submit">註冊</button>
  <div class="text-center mb-4">
    <p><a href="/signin">取消</a></p>
  </div>
</form>