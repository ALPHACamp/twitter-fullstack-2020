<div class="container  py-3 justify-content-center" style="max-width: 356px;">
  <form class="form-signin text-center" action="/signup" method="POST" style="width: 100%;">
    <img class="admin-login-logo my-4" src="/images/icons/alphitter-logo.png" alt="" style="width:50px;height:50px;">
    <div class="text-center">
      <p class="mb-2 alphitter-signin" style="font-size: 28px;">建立你的帳號</p>
    </div>

    <div class="form-label-group py-3 signin-form ">
      <input type="text" name="account" class="form-control py-3"
        style="background-color:#F5F8FA; border-bottom: 2px solid #657786;" placeholder="帳號" required>
    </div>

    <div class="form-label-group py-3 signin-form ">
      <input type="text" name="name" class="form-control py-3"
        style="background-color:#F5F8FA; border-bottom: 2px solid #657786;" placeholder="名稱" required>
    </div>

    <div class="form-label-group py-3 signin-form ">
      <input type="text" name="email" class="form-control py-3"
        style="background-color:#F5F8FA; border-bottom: 2px solid #657786;" placeholder="EMAIL" required>
    </div>

    <div class="form-label-group py-3 signin-form">
      <input type="password" name="password" class=" signpage form-control py-3"
        style="background-color:#F5F8FA; border-bottom: 2px solid #657786;" placeholder="密碼" required>
    </div>

    <div class="form-label-group py-3 signin-form">
      <input type="password" name="checkPassword" class=" signpage form-control py-3"
        style="background-color:#F5F8FA; border-bottom: 2px solid #657786;" placeholder="密碼確認" required>
    </div>

    <div class="my-3" style="height:70px">
      <button class="btn btn-block text-light form-control py-2"
        style="border-radius: 40px; background-color:#FF6600;width:100%;height:54px" type="submit">登入</button>
    </div>

    <div class="signin-link d-flex justify-content-end">
      <div>
        <a href="/signup">註冊</a>
        <span>・</span>
        <a href="/admin/signin">後台登入</a>
      </div>
    </div>
  </form>
</div>