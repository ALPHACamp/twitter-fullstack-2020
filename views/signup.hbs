<div class="w-25" style="margin: 0 auto;">
  <div class="d-flex justify-content-center">
    <img src="/images/logo.svg" alt="">
  </div>
  <h3 class="d-flex justify-content-center fw-bold">
    建立你的帳號
  </h3>
  <div class="">
    <form action="/signup" method="post">
      <div class="d-flex flex-column">
        <label for="account">帳號</label>
        <input type="text" placeholder="請輸入帳號" name="account" id="account" required>
      </div>
      <div class="d-flex flex-column">
        <label for="name">名稱</label>
        <input type="text" placeholder="請輸入使用者名稱" name="name" id="name" maxlength="50" required>
      </div>
      <div class="d-flex flex-column">
        <label for="email">Email</label>
        <input type="email" placeholder="請輸入使用者名稱" name="email" id="email" required>
      </div>
      <div class="d-flex flex-column">
        <label for="password">密碼</label>
        <input type="password" placeholder="請輸入密碼" name="password" id="password" required>
      </div>
      <div class="d-flex flex-column">
        <label for="passwordCheck">密碼確認</label>
        <input type="password" placeholder="請再次輸入密碼" name="passwordCheck" id="passwordCheck" required>
      </div>
      <div class="d-flex justify-content-center">
        <button class="w-100 rounded-pill" type="submit"
          style="height: 46px; border: none; background:#FF6600;color:#FFFFFF;">註冊</button>
      </div>
    </form>
    <div>
      <div class="d-flex justify-content-center">
        <a href="/signin">取消</a>
      </div>
    </div>
  </div>
</div>