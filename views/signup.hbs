<div class="wrapper">
  <div class='container'>
    <form action='/signup' method='POST' class="signup-form">
      <div class='text-center'>
        <img class='logo' alt='logo' src='/images/twitter_2022_logo.svg' />
        <h3 class='mt-2 signup-title'>建立你的帳號</h3>
      </div>
      <div class="secondary-text">(<span>*</span>欄位為必填)</div>
      <div class='form-label pt-2 mt-1'>
        <label for='account' class='ms-2'>帳號<span>*</span></label>
        <input id='account' name='account' type='text' class='form-control' placeholder='請輸入帳號' value='{{account}}' required/>
      </div>
      <div class='form-label pt-2 mt-4'>
        <label for='name' class='ms-2'>名稱</label>
        <input id='name' name='name' type='text' class='form-control' placeholder='請輸入使用者名稱' value='{{name}}' maxlength='50'/>
      </div>
      <div class='form-label pt-2 mt-4'>
        <label for='email' class='ms-2'>Email<span>*</span></label>
        <input id='email' name='email' type='email' class='form-control' placeholder='請輸入Email' value='{{email}}' required/>
      </div>
      <div class='form-label pt-2 mt-4'>
        <label for='password' class='ms-2'>密碼<span>*</span></label>
        <input id='password' name='password' type='password' class='form-control' placeholder='請設定密碼' value='{{password}}' required/>
      </div>
      <div class='form-label pt-2 mt-4'>
        <label for='checkPassword' class='ms-2'>密碼確認<span>*</span></label>
        <input id='checkPassword' name='checkPassword' type='password' class='form-control' placeholder='請再次輸入密碼' value='{{checkPassword}}' required/>
      </div>
      <button class='btn btn-primary mt-4 mb-3' type='submit'>註冊</button>
      <div class='text-center'>
          <a class="fs-6" href='/signin'>取消</a>
      </div>
  </form>
  </div>
</div>