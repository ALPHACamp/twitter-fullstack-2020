<form class="form-signin" action="/signup" method="POST" style="width: 100%;">
  <div class="logo">
    <img src="https://i.imgur.com/8DjhHxL.png">
  </div>
  <div class="text-center ">
    <div class="sign-title">建立你的帳號</div>
  </div>
  <div class="form-label-group">
    <input type="text" name="account" class="form-control" placeholder="帳號" required autofocus>
  </div>
  <div class="form-label-group">
    <input type="text" name="name" class="form-control" maxlength="50" placeholder="名稱" required autofocus>
  </div>
  <div class="form-label-group">
    <input type="text" name="email" class="form-control" placeholder="Email" required autofocus>
  </div>
  <div class="form-label-group">
    <input type="password" name="password" class="form-control" placeholder="密碼" required>
  </div>
  <div class="form-label-group">
    <input type="password" name="checkPassword" class="form-control" placeholder="確認密碼" required>
  </div>
  <br />
  <button class="btn signup-button" type="submit">註冊</button>
  <div class="text-center-back mt-2">
    <a href="/signin">取消</a>
  </div>
</form>