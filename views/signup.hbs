<div class="row my-5 justify-content-center">
  <div class="col-9 col-md-5 col-lg-4 my-2">
    <img
      src="https://cdn4.iconfinder.com/data/icons/social-media-icons-the-circle-set/48/twitter_circle-8192.png"
      alt=""
      class="img-fluid my-3"
      style="display: block; margin: auto; width: 50px;"
    />
    <div class="text-center my-4">
      <h3><strong>建立你的帳號</strong></h3>
    </div>

    <form action="/signup" method="post">
      <div class="mb-2">
        <label for="account" class="form-label">帳號</label>
        <input
          type="text"
          class="form-control"
          id="account"
          name="account"
          style="border:none; border-bottom:2px solid rgb(75, 82, 85);outline: none;background-color:#f4f8fb"
          aria-describedby="accountHelp"
        />
      </div>
      <div class="mb-2">
        <label for="name" class="form-label">名稱</label>
        <input
          type="text"
          class="form-control"
          id="name"
          name="name"
          style="border:none; border-bottom:2px solid rgb(75, 82, 85);outline: none;background-color:#f4f8fb"
          aria-describedby="nameHelp"
        />
      </div>
      <div class="mb-2">
        <label for="email" class="form-label">Email</label>
        <input
          type="email"
          class="form-control"
          id="email"
          name="email"
          style="border:none; border-bottom:2px solid rgb(75, 82, 85);outline: none;background-color:#f4f8fb"
          aria-describedby="emailHelp"
        />
      </div>
      <div class="mb-2">
        <label for="password" class="form-label">密碼</label>
        <input
          type="password"
          class="form-control"
          id="password"
          name="password"
          style="border:none; border-bottom:2px solid rgb(75, 82, 85);outline: none;background-color:#f4f8fb"
          aria-describedby="passwordHelp"
        />
      </div>
      <div class="mb-2">
        <label for="passwordConfirm" class="form-label">密碼確認</label>
        <input
          type="passwordConfirm"
          class="form-control"
          id="passwordConfirm"
          name="passwordConfirm"
          style="border:none; border-bottom:2px solid rgb(75, 82, 85);outline: none;background-color:#f4f8fb"
          aria-describedby="passwordConfirmHelp"
        />
      </div>
      <br />
      <button
        class="col-12 btn btn-primary btn-block"
        style="border-radius: 30px;"
        type="submit"
      >註冊</button>
      <div class="text-center mb-4 mt-2">
        <p><a href="/signin">取消</a></p>
      </div>
    </form>
  </div>
</div>