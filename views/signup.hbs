<div class="mb-4 text-center">
  {{> messages}}
  {{!-- logo --}}
  <a href="/" class="">
    <img src="/_base/icon/logo.svg">
  </a>
  <h1 class="h3 font-weight-normal mb-3">建立你的帳號</h1>
</div>
<form class="form-regist" action="/signup" method="POST" style="width: 100%;">
  <div class="form-row mb-3">
    <label class="form-label" for="account">帳號</label>
    <input type="text" id="account" name="account" class="form-control" placeholder="請輸入帳號" value="{{ account }}"
      required autofocus>
  </div>
  <div class="form-row mb-3">
    <label class="form-label" for="name">名稱</label>
    <input type="text" id="name" name="name" class="form-control" placeholder="請輸入使用者名稱" value="{{ name }}" required>
  </div>
  <div class="form-row mb-3">
    <label class="form-label" for="email">Email</label>
    <input type="text" id="email" name="email" class="form-control" placeholder="請輸入 Email" value="{{ email }}"
      required>
  </div>
  <div class="form-row mb-3">
    <label class="form-label" for="password">密碼</label>
    <input type="password" id="password" name="password" class="form-control" placeholder="請設定密碼" value="{{ password }}"
      required>
  </div>
  <div class="form-row mb-3">
    <label class="form-label" for="checkPassword">密碼確認</label>
    <input type="password" id="checkPassword" name="checkPassword" class="form-control" placeholder="請再次輸入密碼"
      value="{{ checkPassword }}" required>
  </div>
  <button class="btn btn-primary btn-block" type="submit">註冊</button>
</form>
<div class="mb-4 text-center">
  <p><a href="/signin">取消</a></p>
</div>