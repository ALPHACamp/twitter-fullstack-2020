<div class="row d-flex flex-column flex-lg-row" style="height: 100%;">
  <div class="users col-4 p-0">
    <ul class="list-group list-group-flush">
      <li class="list-group-item pb-1">
        <h5 class="m-2">上線使用者({{ usersCount }})</h5>
      </li>
      {{!-- {{#each users}} --}}

      <li class="list-group-item m-1">
        <div class="d-flex flex-column align-items-center flex-lg-row align-items-lg-center">
          <img src="{{myUser.avatar}}" alt="" width="60px" height="60px" class="rounded-circle m-0 mr-lg-3">
          <h5 class="m-0 mr-lg-2">{{myUser.name}}</h5>
          <span class="text-secondary m-0 ">@{{myUser.account}}</span>
        </div>
      </li>
      
      {{!-- {{/each}} --}}
    </ul>
  </div>
  <div class="chat col-8 p-0 border-left border-black-50 d-flex flex-column justify-content-between" style="height: 100%;">
    {{!-- <div class="d-flex flex-column justify-content-between"> --}}
      <div class="my-4 border-bottom border-black-50 d-flex">
        <h5 class="ml-3">公開聊天室</h5>
      </div>
      <div class="flex-grow-1">

      </div>
        <form action="#" method="POST" class="d-flex align-items-center border-top border-black-50 px-3" style="height: 70px;">
          <textarea name="message" id="message" row="1" class="bg-light rounded-pill pl-3 w-100" placeholder="輸入訊息..." style="height: 30px;"></textarea>
          <button type="submit" class="border-0 bg-white">
            <svg width="2em" height="2em" viewBox="0 0 16 16" class="bi bi-cursor" fill="currentColor"
              xmlns="http://www.w3.org/2000/svg">
              <path fill-rule="evenodd"
                d="M14.082 2.182a.5.5 0 0 1 .103.557L8.528 15.467a.5.5 0 0 1-.917-.007L5.57 10.694.803 8.652a.5.5 0 0 1-.006-.916l12.728-5.657a.5.5 0 0 1 .556.103zM2.25 8.184l3.897 1.67a.5.5 0 0 1 .262.263l1.67 3.897L12.743 3.52 2.25 8.184z" />
            </svg>
          </button>
        </form>
      
      
    {{!-- </div> --}}
    
    
  
  </div>
</div>