<div id="left">
	<div class="row" style="text-align: center;">
		<ul>
     		 <h1>
				<li>
					<a class="nav-link active" href="/tweets">首頁</a>
				</li>
				<li>
					<a class="nav-link" href="/users/{{user.id}}/tweets">個人資料</a>
				</li>
				<li>
					<a class="nav-link" href="/">設定</a>
				</li>
      		</h1>
		</ul> 
	</div>
	<button type="button" class="btn btn-warning btn-lg btn-block" data-toggle="modal" data-target="#tweetModal">
		推文
	</button>
</div>
{{!-- 中間區域 --}}
<h1>首頁</h1>
<hr />
<div id="main">
	<form action="/tweets" method="POST">
		<div class="form-group">
			<img src="{{ user.avatar }}" class="img-circle" alt="有什麼新鮮事?" width="100" height="100">
			<textarea class="form-control" id="text" name="text" rows="3" style="max-width: 900px;" placeholder="what's on your mind?"> </textarea>
		</div>
		<input type="hidden" name="restaurantId" value="{{tweet.description}}" />
		<button type="submit" class="btn btn-warning btn-lg">推文</button>
	</form>
	<br>
	<br>
  {{#each tweets}}
    <div class="card mb-3" style="max-width: 900px;">
      <div class="row no-gutters">
        <div class="col-md-4">
			<a href="/users/{{this.User.id}}/tweets">
          		<img src="{{ this.User.avatar }}" class="img-circle" alt="user avatar" width="100" height="100">
			</a>
        </div>
        <div class="col-md-8">
		<a href="/replylist/{{ this.id }}">
          <div class="card-body" onclick="location.href='/replylist/{{ this.id }}';">
            <h5 class="card-title">
              <a href="/users/{{ this.User.id }}/tweets">{{ this.User.name }}</a>
			  ● <small class="text-muted">{{moment this.createdAt }}</small>
            </h5>
			<a href="/replylist/{{ this.id }}">
				<p class="card-text" style="overflow: hidden; text-overflow: ellipsis; white-space:nowrap">
				{{{ this.description }}}</p>
			</a>
          </div>
		</a>
        </div>
      </div>
    </div>
    {{/each}}
</div>
{{!-- 右邊 --}}
<div id="right">
	<div class="col-md-7 column">
		<div class="panel panel-default">
			<div class="panel-heading">
				<h3 class="panel-title">
					Panel title
				</h3>
			</div>
			<div class="panel-body">
				Panel content
			</div>
		</div>
	</div>
</div>

<!-- Modal -->
<div class="modal fade" id="tweetModal" tabindex="-1" aria-labelledby="tweetModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
		<form action="/tweets" method="POST">
			<div class="form-group">
				<img src="{{ user.avatar }}" class="img-circle" alt="有什麼新鮮事?" width="100" height="100">
				<span>有什麼新鮮事?</span>
				<textarea class="form-control" id="text" name="text" rows="3" style="max-width: 900px;" placeholder="what's on your mind?"> </textarea>
			</div>
			<input type="hidden" name="restaurantId" value="{{tweet.description}}" />
			<button type="submit" class="btn btn-warning btn-lg">推文</button>
		</form>
      </div>
    </div>
  </div>
</div>
