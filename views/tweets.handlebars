<div class="d-block justify-content-center" style="margin-left: 17rem;">
    <div>
        <h4 style="padding: 1rem;">首頁</h4>
    </div>
    <div class="contener"
        style="width: 30rem; height:10rem; border-top: thin solid #e6ecf0; border-bottom: thick solid #e6ecf0; border-right: thin solid #e6ecf0;">
        <div class="card-body">
            <div class="row">
                <div class="col-2">
                    <i class="bi bi-person-square"></i>
                </div>
                <div class="col-10">
                    <form action="/tweet" method="POST" style="width: 100%;">
                        <div class="form-label-group">
                            <input type="text" id="newTweet" rows="3" placeholder="有什麼新鮮事？" class="tweet_new"
                                name="description">
                        </div>
                        <button type="submit" class="btn new_post">推文</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    {{#each tweets}}
    <div class="contener"
        style="width: 30rem; height:10rem; border-top: thin solid #e6ecf0; border-right: thin solid #e6ecf0;">
        <div class="card-body">
            <div class="row">
                <div class="col-2">
                    <i class="bi bi-person-square"></i>
                </div>
                <div class="col-10">
                    <h5 class="card-title" style="display: inline-block;">{{this.User.name}}</h5>
                    <a href="#" class="card-link" style="display: inline-block;">@{{this.User.account}}</a>
                    <p class="card-text" style="display: inline-block;"><small class="text-muted">{{this.time}}</small>
                    </p>
                    <p class="card-text">{{this.description}}</p>
                </div>
            </div>

        </div>
    </div>
    {{/each}}
</div>

{{#each tweets}}

{{/each}}

{{> message}}