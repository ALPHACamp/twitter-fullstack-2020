<div class="d-flex flex-column mr-5">
  <button class="btn" data-toggle="modal" data-target="#postTweet">
    側邊欄推文
  </button>

  <hr>
  <hr>
  <hr>

  <img src="{{cUser.avatar}}" alt="">
  <h1>{{cUser.id}}</h1>
  <h3>使用者個人圖片</h3>
  <form action="/tweets" method="post">
    <textarea name="description" placeholder="有什麼新鮮事..."></textarea>
    <button class="btn" type="submit">推文</button>
  </form>

</div>

<div class="d-flex flex-column mr-5">
  <!--推文版塊-->
  <div>
    <div>
      <h4>首頁</h4>
    </div>
    <div>
      <!--新增推文-->
    </div>
  </div>
  {{#each tweets}}
  <div class="card mb-3" style="width: 540px;">
    <div class="row g-0">


      <div class="card-body d-flex">
        <a href="/users/{{this.userId}}" style="text-decoration: none;">
          <img src="{{this.userAvatar}}" alt="..." syle="max-height:75px; max-width:75px;">
        </a>
        <a href="/tweets/{{this.id}}/replies" style="text-decoration: none;">
          <div>
            <h5 class="card-title">
              {{this.userName}}{{this.userAccount}}---{{moment_fromNow this.createdAt}}
            </h5>
            <p class="card-text">{{this.description}}</p>
          </div>
        </a>
      </div>

      <div calss="col-md-2">
        <div class="card-footer">
          <div class="d-flex">
            <div class="mr-5">
              <p>{{this.ReplyCount}}</p>
              <h5>reply ICON</h5>
            </div>
            <div>
              <p>{{this.LikedCount}}</p>
              {{#if this.isLiked}}
              <form action="/tweets/{{this.id}}/unlike" method="POST">
                <button type="submit" class="btn btn-danger">unlike</button>
              </form>
              {{else}}
              <form action="tweets/{{this.id}}/like" method="POST">
                <button type="submit" class="btn btn-danger">like</button>
              </form>
              {{/if}}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  {{/each}}
</div>
<div calss="d-flex flex-column ml-5">
  <h4>跟隨誰</h4>
  {{#each users}}
  <div class="card mb-3" style="width: 540px;">
    <div class="row g-0">
      <div class="col-md-4">
        <img src="{{this.avatar}}" alt="..." style="max-width: 100px; max-height:100px;">
      </div>
      <div class="col-md-6">
        <div class="card-body">
          <h5 class="card-title">{{this.name}}</h5>
          <p class="card-text">{{this.account}}</p>
        </div>
      </div>
      <div calss="col-md-2">
        {{#if this.isFollowed}}
        <form action="/followships/{{this.id}}?_method=DELETE" method="POST">
          <button type="submit" class="btn btn-danger">正在跟隨</button>
        </form>
        {{else}}
        <form action="/followships/" method="POST">
          <input type="hidden" name="id" value="{{this.id}}">
          <button type="submit" class="btn btn-danger">跟隨</button>
        </form>
        {{/if}}
      </div>
    </div>
  </div>
  {{/each}}
</div>

<!--================= Modal ================= -->
<div class="modal fade" id="postTweet" tabindex="-1" aria-labelledby="postTweetModalLabel" aria-hidden="true">
  <form action="/tweets" method="post">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="btn-close" data-dismiss="modal" aria-label="Close">X</button>
        </div>

        <div class="modal-body">
          <div class="row">
            <div class="col-1">
              使用者個人圖片
              <img src="" alt="">
            </div>

            <div class="col-11">
              <textarea name="description" placeholder="有什麼新鮮事..."></textarea>
              <button class="btn" type="submit">推文</button>
            </div>
          </div>
        </div>

      </div>
    </div>
  </form>
</div>