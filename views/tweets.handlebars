        <div class="d-flex align-items-center">
          <button type="button" class="btn btn-outline-light a-tomato" data-dismiss="modal" aria-label="Close">
            <i class="fas fa-times"></i>
          </button>
        </div>
      </div>
      <form action="/tweets" method="POST">
