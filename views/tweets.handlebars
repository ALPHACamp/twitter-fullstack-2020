{{> message}}
<div class="container-fluid">
  {{> modal}}
  {{> left-content}}

  <div class="main-content">
    <div class="main-title">
      首頁
    </div>
    <div class="main-text">
      <img src="{{user.avatar}}" alt="" class="avtar">
      <form method="POST" action="/tweets">
        <textarea name="description" id="description" cols="30" rows="10" placeholder="有什麼新鮮事？"
          maxlength="140"></textarea>
        <button class="tweet-post-button" type="submit">推文</button>
      </form>
    </div>
    <div class="main-tweet-list">
      {{#each tweets}}
      <div class="tweet-item" onclick="location.href='/tweets/{{this.id}}'">
        <div class="tweet-item-left">
          <a href="/users/{{this.User.id}}"><img src="{{this.User.avatar}}" alt="" class="avtar"></a>
        </div>
        <div class="tweet-item-right">
          <div class="tweet-item-title">
            <span class="mt-1 user-name"><a href="/users/{{this.User.id}}">{{this.User.name}}</a></span>
            <span class="user-account">
              {{this.User.account}}．{{moment this.createdAt}}
            </span>

          </div>
          <div class="tweet-item-text">
            <p>{{this.description}}
            </p>
          </div>
          <div class="tweet-item-footer">
            <button type="button" class="button reply-link pt-1" data-toggle="modal" data-target="#replyModal">
              <img class="icon-s" src="/images/icon-reply.svg" alt=""> {{this.Replies.length}}
            </button>
            <form action="/tweets/{{this.id}}/like" method="POST">
              <button type="submit" class="like-link button">
                <img class="icon-s" src="/images/icon-like-solid.svg" alt="">
                {{!-- <img class="icon-s" src="/images/icon-like.svg" alt=""> --}}
                {{this.likedUsers.length}}
              </button>
            </form>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>

  {{> right-content}}
</div>