<div class="row ">
  <div class="col-md-3 pl-0">

    {{> leftColumn}}

  </div>
  <div class="col-md-6 pl-0">
    <ul class="list-group">
      <li class="list-group-item right-zone-header" style="
      border-top: 1px solid #F5F5F5;
      border-right: 1px solid #F5F5F5;
      border-left: 1px solid #F5F5F5;
      color: #000000;
      font-weight: bold">
        首頁
      </li>
      <li class="list-group-item" style="border-bottom-width:8px;">
        <form action="/tweets" method="POST">
          <div class="row">
            <div class="col-2 ">
              <a href="/users/{{users.dataValues.id}}/tweets">
                <img src="{{users.dataValues.avatar}}" alt="user avatar" class="user-avatar"
                  style="border-radius: 50%; height:50px; width: 50px">
              </a>
            </div>
            <div class="col-10" style="width: 400px;">
              <textarea placeholder="有什麼新鮮事?" class="form-control" id="description" name="description" rows="3"
                style="border: none;"></textarea>
            </div>
          </div>
          <button class="btn btn-create" type="submit"
            style="background: #FF6600; border-radius: 18px; width: 60px; float: right;">
            <span style="color: #FFFFFF;">推文</span>
          </button>
        </form>
      </li>
      {{#each tweets}}

      <li class="list-group-item">
        <div class="row">
          <div class="col-2">
            <a href="/users/{{this.User.dataValues.id}}/tweets">
              <img src="{{this.User.dataValues.avatar}}" alt="user avatar" class="user-avatar"
                style="border-radius: 50%; height:50px; width: 50px">
            </a>
          </div>
          <div class="col-10">
            <a href="/users/{{this.User.dataValues.id}}/tweets"
              style="text-decoration:none; color:black"><strong>{{this.User.dataValues.name}}</strong></a>
            <font class=" text-muted">{{this.User.dataValues.account}} · {{moment this.createdAt}}</font>
            <a href="/tweets/{{this.id}}" style="text-decoration: none; color:black">
              <p>{{this.description}}</p>
            </a>
            <button type="button" class="btn" style="background: none;border: none;" data-toggle="modal"
              data-target="#replyModal">
              <i class="far fa-comment" style="color: gray; letter-spacing:10px;"></i>
            </button>
            <p style="display:inline; color: grey;letter-spacing:50px; ">{{this.Replies.length}}</p>


            {{#if isLiked}}
            <form action="/tweets/{{this.id}}/unlike?_method=DELETE" method="POST" style="display:inline;">
              <button type="submit" style="background: none;border: none;">
                <i class="fas fa-heart" style="color: red; letter-spacing:10px;"></i>
                {{else}}
                <form action="/tweets/{{this.id}}/like" method="POST" style="display:inline; ">
                  <button type="submit" style="background: none;border: none;">
                    <i class="far fa-heart" style="color: gray; letter-spacing:10px;"></i>
                    {{/if}}
                    <p style="display:inline; color: grey; ">{{this.LikedUsers.length }}</p>
                  </button>
                </form>

          </div>
      </li>
      {{/each}}
  </div>

  <!-- Modal -->
  <div class="modal fade" id="replyModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close mr-2" style="color : #FF6600;" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <div class="body-avatar row">
            <div class="col-2">
              <a href="/users/{{users.id}}/tweets">
                <img src="{{users.dataValues.avatar}}" class="rounded-circle"
                  style="width: 50px;height: 50px;background: #C4C4C4;">
              </a>
            </div>
            <div class="col-10">
              <a href="/users/{{users.dataValues.id}}/tweets"
                style="text-decoration:none; color:black"><strong>{{users.dataValues.name}}</strong></a>
              </a>
            </div>
            <form method="POST" action="/tweets/{{Tweet.dataValues.id}}/replies">
              <div class="col-10" style="width: 400px;">
                <textarea placeholder="推你的回覆" class="form-control" name="content" rows="3"
                  style="border: none;"></textarea>
              </div>
              <button class="btn btn-create" type="submit"
                style="background: #FF6600; border-radius: 18px; width: 60px; float: right;">
                <span style="color: #FFFFFF;">回覆</span>
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>



  <div class="col-md-3 pl-0">

    {{> rightColumn}}

  </div>

</div>