

<!-- 新推文Modal -->
<div class="modal fade" id="newTwitModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <button type="button" class="btn-close m-3" data-bs-dismiss="modal" aria-label="Close"></button>
      <div class="createTweet border">
        <form action="/tweets" method="POST">
          <div class="d-flex">
            <a href="" class="avatar m-2">
              <img src="{{noImage user.image}}" alt="" class="rounded-circle userImage">
            </a>
            <textarea class="whathtNew" id="description" name="description" placeholder="有甚麼新鮮事?" maxlength="140" required></textarea>
          </div>
          <div class="d-flex justify-content-end">
            <div class="round m-3">
              <button type="submit" class="orange btn text-white round" >推文</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<div class="row grid">

  <div>
    <nav class="userSidebar fixed">
      <div class="logo">
        <img src="https://i.imgur.com/ZUJriDp.png" alt="" id="ac-logo">
      </div>
      <div class="buttonList mt-5">
        <div class="navItem index d-flex mb-4 ">
          <div class="icon d-flex align-items-center color-orange">
            <i class="fas fa-home my-auto"></i>
          </div>
          <a href="/tweets" class="btn sidebarItem">
            <span class="fs-5 fw-bolder">首頁</span>
          </a>
        </div>
        <div class="navItem userProfile d-flex mb-4 ">
          <div class="icon d-flex align-items-center">
            <i class="fas fa-users"></i>
          </div>
          <a href="/userProfile" class="btn sidebarItem">
            <span class="fs-5 fw-bolder">個人資料</span>
          </a>
        </div>
        <div class="navItem setting d-flex mb-4">
          <div class="icon d-flex align-items-center">
            <i class="fas fa-cog"></i>
          </div>
          <a href="/setting" class="btn sidebarItem">
            <span class="sidebar-item fs-5 fw-bolder">設定</span>
          </a>
        </div>
      </div>
      <div class="d-grid gap-2 col-9 round">
        <button type="button" class="orange btn text-white round" data-bs-toggle="modal" data-bs-target="#newTwitModal">推文</button>
      </div>
      <div class="logout d-flex">
        <div class="logoutLogo me-3 d-flex align-items-center">
          <i class="fas fa-sign-out-alt"></i>
        </div>
        <a href="/logout" class="btn">
          <span class="fs-5 fw-bolder">登出</span>
        </a>
      </div>
    </nav>
  </div>


  <div class=" mainSection ">
    {{>message}}
    <div class="title border">
      <h5 class="fw-bolder m-3">首頁</h5>
    </div>
    <div class="createTweet border">
      <div class="d-flex">
        <a href="" class="avatar m-2">
          <img src="{{noImage user.image}}" alt="" class="rounded-circle userImage">
        </a>
        <div class="d-flex align-items-center">
          <button type="button" class="btn text-secondary" data-bs-toggle="modal"
            data-bs-target="#newTwitModal">有甚麼新鮮事?</button>
        </div>
      </div>
      <div class="d-flex justify-content-end">
        <div class="round m-3">
          <button  type="button" class="orange btn text-white round" data-bs-toggle="modal" data-bs-target="#newTwitModal">推文</button>
        </div>
      </div>
    </div>
    <div class="tweets border-top border-5">
      {{#each tweets}}
      <div class="teeet border">
        <div class="d-flex">
          <span class="avatar m-2">
            <img src="{{noImage this.User.avatar.url}}" alt="" class="rounded-circle userImage">
          </span>
          <div class="">
            <div class="d-flex">
              <div class="name m-2">{{this.User.name}}</div>
              <div class="tag m-2">@{{this.User.account}}</div>
              <div class="time m-2">{{moment this.createdAt}}</div>
            </div>
            <a href="/tweets/{{this.id}}" class="tweetContent m-2 btn">
              <p>{{this.description}}</p>
            </a>
            <div class="d-flex mb-2">
              <a href="/tweets/{{this.id}}" class="comment d-flex me-2 btn">
                <span class="commentIcon me-2">
                  <i class="far fa-comment"></i>
                </span>
                <span class="commentAmount">{{this.Replies.length}}</span>
              </a>
              <a href="" class="like d-flex btn">
                <span class="likeIcon me-1">
                  <i class="far fa-heart "></i>
                </span>
                <span class="likeAmount">30</span>
              </a>
            </div>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
  <div class="">
    <div class="popularArea fixed mt-4 border">
      <div class="title m-3">
        <h5 class="fw-bolder">Popular</h5>
      </div>
      <div class="popularList border-top">
        <div class="popularUser d-flex border-bottom justify-content-between">
          <div class="user d-flex">
            <div class="avatar m-2">
              <img src="https://i.imgur.com/bGxaaO6.png" alt="" class="rounded-circle userImage">
            </div>
            <div class="information">
              <div class="name mt-3 ms-1 fw-bolder">Pizza Hut</div>
              <div class="account ms-1">@Pizza Hut</div>
            </div>
          </div>
          <div class="round m-3">
            <button class="orange btn text-white round">正在跟隨</button>
          </div>
        </div>
        <div class="popularUser d-flex border-bottom justify-content-between">
          <div class="user d-flex">
            <div class="avatar m-2">
              <img src="https://i.imgur.com/bGxaaO6.png" alt="" class="rounded-circle userImage">
            </div>
            <div class="information">
              <div class="name mt-3 ms-1 fw-bolder">McDonald's</div>
              <div class="account ms-1">@McDonald's</div>
            </div>
          </div>
          <div class="round m-3">
            <button class="btn followButton round">跟隨</button>
          </div>
        </div>
      </div>

    </div>
  </div>

</div>

