<div class="d-block justify-content-center" style="margin-left: 17rem;">
    <div>
        {{> message}}
        <h4 style="padding: 1rem;">首頁</h4>
    </div>
    <div class="contener"
        style="width: 30rem; height:10rem; border-top: thin solid #e6ecf0; border-bottom: thick solid #e6ecf0; border-right: thin solid #e6ecf0;">
        <div class="card-body">
            <div class="row">
                <div class="col-2">
                    <i class="bi bi-person-square"></i>
                </div>
                <div class="col-10">
                    <form action="/tweets" method="POST" style="width: 100%;" id="newTweet">
                        <div class="form-label-group">
                            <textarea form="newTweet" class="tweet_new" placeholder="有什麼新鮮事？"
                                name="description"></textarea>
                        </div>
                        <button type="submit" class="btn new_post">推文</button>
                    </form>

                </div>
            </div>
        </div>
    </div>
    {{#each tweets}}
    <div class="contener"
        style="width: 30rem; height:10rem; border-top: thin solid #e6ecf0; border-right: thin solid #e6ecf0;">
        <div class="card-body">
            <div class="row">
                <div class="col-2">
                    <i class="bi bi-person-square"></i>
                </div>
                <div class="col-10">
                    <h5 class="card-title" style="display: inline-block;">{{this.User.name}}</h5>
                    &nbsp;
                    <a href="/users/{{this.User.id}}" class="card-link"
                        style="display: inline-block;">@{{this.User.account}}</a>
                    &nbsp;
                    <p class="card-text" style="display: inline-block;"><small class="text-muted">{{this.time}}</small>
                    </p>
                    <a href="/tweets/{{this.id}}" class="tweet_text">
                        <p class="card-text">{{this.description}}</p>
                    </a>
                </div>
            </div>

        </div>
    </div>
    {{/each}}
</div>