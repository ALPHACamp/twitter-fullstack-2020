<div class="col-md-9 pl-0 border-left">
  <div class="main">
    <div class="header"
      style="width: 600px;height: 55px;left: 378px;top: -1px;background: #FFFFFF;border: 1px solid #E6ECF0;box-sizing: border-box;">
      首頁</div>
    <div class="body">
      <div class="body-avatar d-flex align-items-stretch">
        <div class="right">
          <a href="/tweets/{{User.dataValues.id}}">
            <img src="{{User.dataValues.avatar}}" class="rounded-circle"
              style="width: 50px;height: 50px;background: #C4C4C4;">
          </a>
        </div>

        <div class="left" class="d-flex">
          <form method="POST" action="/tweets">
            <textarea name="description" cols="55" rows="5"
              style="background: #FFFFFF;border: 1px solid #E6ECF0;box-sizing: border-box;"
              placeholder="what's up?"></textarea>
            <button type="submit"
              style="width: 64px;height: 40px;left: 899px;top: 123px;background: #FF6600;border-radius: 100px;">
              <span style="color: #FFFFFF;">Tweet</span></button>
          </form>
        </div>
      </div>
      <div class="divider" style="width: 600px;height: 10px;left: 378px;top: 173px;background: #E6ECF0;">
      </div>

    </div>
    <div class="col">
      <div class="tweet-list" style="width: 600px;height: 136px;left: 0px;top: 0px;">
        {{#each tweets}}
        <div class="tweet">
          <div class="tweet-item-left d-flex align-items-stretch">
            <div class="tweet-left d-flex align-items-stretch">
              <a href="/user/other/{{ this.UserId }}">
                <img src="{{this.User.dataValues.avatar}}" class="rounded-circle"
                  style="background-size:cover; width: 50px;height: 50px;">
              </a>
            </div>
            <div class="tweet-item-right  ml-3">
              <div class="tweet-item-title">
                <span class="mt-1"><a href="/user/other/{{ this.UserId }}">{{this.User.dataValues.name}}</a></span>
                <span class="user-account">
                  {{this.User.dataValues.account}}．{{moment User.dataValues.createdAt}}
                </span>

              </div>
              <div class="tweet-text">
                {{this.description}}
              </div>
            </div>
          </div>
          <div class="tweet-footer ml-5">
            <!-- Button trigger modal -->
            <button type="button" class="mt-4 mb-4" data-toggle="modal" data-target="#replyModal"
              style="background: none;border: none;">
              <i class="far fa-comment"></i> {{this.Replies.length}}
            </button>
            <!-- Modal -->
            <div class="modal fade" id="replyModal" tabindex="-1" aria-labelledby="exampleModalLabel"
              aria-hidden="true">
              <div class="modal-dialog">
                <div class="modal-content">
                  <div class="modal-header">

                  </div>
                  <div class="modal-title">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                    </button>
                    <img src="{{../user.dataValues.avatar}}" class="rounded-circle"
                      style="background-size:cover; width: 50px;height: 50px;">
                    <span class="mt-1"><a href="#">{{../user.dataValues.name}}</a></span>
                    <span class="user-account">
                      {{../user.dataValues.account}}．{{moment ../user.dataValues.createdAt}}
                    </span>
                  </div>
                  <div class="modal-body" class="d-flex">
                    <div class="tweet-text d-flex align-items-stretch">
                      {{../user.dataValues.description}}
                    </div>
                    <form method="POST" action="/tweets/{{../user.dataValues.id}}/replies">
                      <textarea name="comment" cols="55" rows="5"
                        style="background: #FFFFFF;border: 1px solid #E6ECF0;box-sizing: border-box;"
                        placeholder="....."></textarea>
                      <button type="submit"
                        style="width: 64px;height: 40px;left: 899px;top: 123px;background: #FF6600;border-radius: 100px;">
                        <span style="color: #FFFFFF;">回覆</span></button>
                    </form>
                  </div>
                </div>
              </div>
            </div>


            {{!-- add like button --}}
            {{#if this.isLiked }}
            <form action="/like/{{this.id}}?_method=DELETE" method="POST" style="display:inline;"><button type="submit"
                class="button reply-link mt-4 mb-4" style="background: red;border: none;">
                <i class="far fa-heart"></i></form>
            {{else}}
            <form action="/like/{{this.id}}" method="POST" style="display:inline;"><button type="submit"
                class="button reply-link mt-4 mb-4" style="background: none;border: none;">
                <i class="far fa-heart"></i>
            </form>
            {{/if}}
            {{this.LikeUsers.length}}
            </button>
            </form>



          </div>
        </div>

        {{/each}}
      </div>
    </div>
  </div>
</div>