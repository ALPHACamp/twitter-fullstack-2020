<div class="row" style="width:100%;">
  {{!-- navbar --}}
  <div class="col-3">
    <img class="mb-4 pl-2" src="/images/logo.png">
    <div class="nav-ul-wrapper">
      <ul class="nav flex-column">
        <li class="nav-item py-2">
          <a class="nav-link" href="/tweets">
            <i class="fas fa-home"></i>
            <span class="ml-3">首頁</span>
          </a>
        </li>
        <li class="nav-item py-2">
          <a class="nav-link active" href="/users/{{loginUser.id}}/tweets">
            <i class="far fa-user"></i>
            <span class="ml-3">個人資料</span>
          </a>
        </li>
        <li class="nav-item py-2">
          <a class="nav-link" href="/users/{{ loginUser.id }}/setting/edit">
            <i class="fas fa-cog"></i>
            <span class="ml-3">設定</span>
          </a>
        </li>
        <li class="nav-item nav-btn-modal py-2">
          <a class="btn btn-modal py-2" data-toggle="modal" data-target="#tweetModal">推文</a>
        </li>
      </ul>
      <ul class="nav flex-column">
        <li class="nav-item">
          <a class="nav-link" href="/logout">
            <i class="fas fa-sign-out-alt"></i>
            <span class="ml-3">登出</span>
          </a>
        </li>
      </ul>
    </div>
  </div>

  {{!-- user profile --}}
  <div class="middle-side col-md-5">
    <div class="text-title d-flex align-items-center">
      <a href="javascript:history.back()">
        <div class="back-icon">
          <i class="fas fa-arrow-left"></i>
        </div>
      </a>
      <div class="name-info ">
        <h5 class="header1 ml-3 mb-0">{{user.name}}</h5>
        <div class="atAccount ml-3 mb-1">{{user.Tweets.length}}推文</div>
      </div>
    </div>
    {{!-- user-photos --}}
    <div class="image-wrapper mb-4">
      {{!-- cover --}}
      <div class="cover-wrapper">
        {{#if user.cover}}
        <img class="cover" src="{{ user.cover }}" alt="">
        {{ else }}
        <div class="cover none"></div>
        {{/if}}
      </div>
      {{!-- avatar --}}
      <div class="avatar-wrapper">
        {{#if user.avatar }}
        <img class="avatar large" src="{{ user.avatar }}">
        {{else}}
        <div class="avatar-none-large"></div>
        {{/if}}
      </div>
      {{!-- edit-user-button --}}
      <div class="d-flex justify-content-end mt-1 pr-1">
        {{#if isUser}}
        <button type="button" class="btn btn-outline ml-2" data-toggle="modal" data-target="#editUserModal">
          編輯個人資料
        </button>
        {{else}}
        <div class="icon-outline pt-1">
          <a href="{{ user.email }}"><i class="far fa-envelope"></i></a>
          {{#if isFollowed}}
          <form action="/followships/{{user.id}}?_method=DELETE" method="POST">
            <button type="submit" class="btn followings-button">正在跟隨</button>
          </form>
          {{else}}
          <form action="/followships" method="POST">
            <button type="submit" class="btn followers-button">跟隨</button>
            <input type="hidden" name="id" value="{{user.id}}">
          </form>
          {{/if}}
        </div>
        {{/if}}
      </div>
    </div>
    {{!-- user-intro --}}
    <div class="text-info-users">
      <div class="info-text">
        <h5 class="name header1">{{user.name}}</h5>
        <h6 class="atAccount">@{{user.account}}</h6>
        {{#if user.introduction}}
        <div class="introduction mt-2">{{ user.introduction }}</div>
        {{else}}
        <div class="introduction mt-2">目前沒有自我介紹!</div>
        {{/if}}
        <div class="follow d-flex">
          <div class="followship d-flex m-0 mt-2">
            <a href="/users/{{user.id}}/followings" class="d-flex">
              <div class="follow-title">{{user.Followings.length}} 個</div>
              <div class="following-body">跟隨中</div>
            </a>
            <a href="/users/{{user.id}}/followers" class="d-flex ml-3">
              <div class="follow-title">{{user.Followers.length}} 個</div>
              <div class="follower-body">跟隨者</div>
            </a>
          </div>
        </div>
      </div>
      {{!-- tab-area --}}
      <br>
      <ul class="nav nav-tabs">
        <li class="nav-item">
          <a class="nav-link active" href="/users/{{user.id}}/tweets">推文</a>
        </li>
        <li class="nav-item">
          <a class="nav-link " href="/users/{{user.id}}/replies">推文與回覆</a>
        </li>
        <li class="nav-item">
          <a class="nav-link " href="/users/{{user.id}}/likes">喜歡的內容</a>
        </li>
      </ul>
      <div class="user-tweet">
        {{#each userTweets}}
        <div class="tweet col-md-12">
          <div class="d-flex">
            <div class="mt-2 mr-2 col-md-2" style="padding: 0%;"><a href="/users/{{../user.id}}/tweets"
                class="text-muted">
                <img class="avatar small" src="{{../this.user.avatar}}">
              </a>
            </div>
            <div class="col-md-10 mt-2">
              <div class="account-info d-flex" style="flex-auto">
                <div class="user-name">{{../this.user.name}}</div>
                <div class="atAccount mb-2 ml-2">@{{../this.user.account}}•{{moment
                  this.createdAt}}</div>
              </div>
              <a href="/tweets/{{this.id}}/replies" class="text-muted">
                <div class="post-text d-flex mt-1" style="flex-auto">{{this.description}}</div>
              </a>
              <div class="reply-like d-flex mt-2">
                <div>
                  <i class="far fa-comment mr-2"></i>
                  {{this.replyCounts}}
                </div>
                {{#if this.isLiked }}
                <form action="/tweets/{{this.id}}/unlike" method="POST">
                  <div class="push-button ml-4">
                    <button type="submit" class="like-button">
                      <i class="fas fa-heart"></i>
                    </button>
                    {{this.likeCounts}}
                  </div>
                </form>
                {{else}}
                <form action="/tweets/{{this.id}}/like" method="POST">
                  <div class="like-button ml-4">
                    <button type="submit" class="like-button">
                      <i class="far fa-heart"></i>
                    </button>
                    {{this.likeCounts}}
                  </div>
                </form>
                {{/if}}
              </div>
            </div>
          </div>
        </div>
        <hr />
        {{/each}}
      </div>
    </div>
  </div>

  {{!-- popular --}}
  <div class="col-3 tweet-right">
    <div class="card border-light popular">
      <div class="card-header" style="font-weight: bold;">
        Popular
      </div>
      <ul class="list-group list-group-flush">
        {{#each topUser}}
        <li class="list-group-item d-flex">
          <div class="mr-2">
            <img class="avatar small" src="{{this.topUserAvatar}}">
          </div>
          <div class="mr-5">
            <p class="user-name mb-0">{{this.topUserName}}</p>
            <p class="atAccount">@{{this.topUserAccount}}</p>
          </div>
          <div class="pt-2">
            {{#if this.isFollowed}}
            <form action="/followships/{{this.id}}?_method=DELETE" method="POST">
              <button type="submit" class="btn followings-button">正在跟隨</button>
            </form>
            {{else}}
            <form action="/followships" method="POST">
              <button type="submit" class="btn py-2">跟隨</button>
              <input type="hidden" name="id" value="{{this.id}}">
            </form>
            {{/if}}
          </div>
        </li>
        {{/each}}
      </ul>
    </div>
  </div>
</div>